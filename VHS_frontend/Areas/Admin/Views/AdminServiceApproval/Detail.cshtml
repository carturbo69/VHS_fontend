            max-width: none !important;
            overflow: visible !important;
            text-overflow: clip !important;
            display: block !important;
            -webkit-line-clamp: none !important;
            -webkit-box-orient: initial !important;
            max-height: none !important;
            white-space: pre-wrap !important; /* Giữ nguyên xuống dòng và khoảng trắng */
            word-wrap: break-word !important; /* Tự động xuống dòng khi quá dài */
            line-height: 1.6 !important;
            color: #6b7280;
            text-indent: 0 !important; /* Không thụt vào */
            padding-left: 0 !important; /* Không padding trái */
            margin-left: 0 !important; /* Không margin trái */
        }
        
        /* Đảm bảo thẻ del bên trong không gây thụt vào */
        .admin-service-management .service-description del {
            text-indent: 0 !important;
            padding-left: 0 !important;
            margin-left: 0 !important;
            display: block !important;
            white-space: pre-wrap !important; /* Giữ nguyên format */
            word-wrap: break-word !important;
        }
        
        /* Đảm bảo title trong phần "Nội dung hiện tại" không bị canh giữa */
        .admin-service-management .card-x.border-secondary .card-body h5,
        .admin-service-management .card-x.border-secondary .card-body h4 {
            text-align: left !important;
        }
        
        /* Đảm bảo khoảng cách trong card-body giống nhau giữa "Nội dung mới" và "Nội dung hiện tại" */
