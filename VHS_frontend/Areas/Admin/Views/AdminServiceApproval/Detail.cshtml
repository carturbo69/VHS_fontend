@model VHS_frontend.Services.Admin.AdminServiceApprovalService.ServiceDetail
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-service-management.css" asp-append-version="true" />
    <style>
        /* Override service-description để hiển thị đầy đủ với format đúng */
