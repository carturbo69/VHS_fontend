        }
        
        .dark .admin-service-management .service-description del {
            color: #6b7280 !important;
        }
        
        /* Dark mode cho card-body */
        .dark .admin-service-management .card-x.border-success .card-body,
        .dark .admin-service-management .card-x.border-secondary .card-body {
            background-color: var(--card, #1f2937) !important;
            color: var(--fg, #f3f4f6) !important;
        }
        
        /* Dark mode cho title */
        .dark .admin-service-management .card-x.border-success .card-body h4 {
            color: var(--fg, #f3f4f6) !important;
        }
        
        .dark .admin-service-management .card-x.border-secondary .card-body h5 {
            color: #9ca3af !important;
        }
        
        /* Dark mode cho bg-light trong options */
        .dark .admin-service-management .card-x .card-body .bg-light {
            background-color: rgba(55, 65, 81, 0.5) !important; /* Màu nền tối hơn, trong suốt một chút */
            border-color: rgba(107, 114, 128, 0.5) !important;
        }
        
        /* Dark mode cho border-start trong options */
        .dark .admin-service-management .card-x .card-body [style*="border-left"] {
            border-left-color: rgba(107, 114, 128, 0.6) !important;
        }
        
        /* Dark mode cho text trong options */
        .dark .admin-service-management .card-x .card-body .text-muted {
            color: #9ca3af !important;
        }
        
        .dark .admin-service-management .card-x .card-body .fw-semibold {
            color: var(--fg, #e5e7eb) !important;
        }
        
        /* Dark mode cho textarea options (không có border) */
        .dark .admin-service-management .card-x .card-body .text-start[style*="white-space: pre-wrap"] {
            color: #d1d5db !important;
