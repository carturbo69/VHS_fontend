            background-color: rgba(30, 58, 138, 0.2) !important;
        }
        
        /* Dark mode cho border màu xanh lá (select) */
        .dark .admin-service-management .card-x .card-body [style*="border-left: 4px solid #198754"] {
            border-left-color: rgba(34, 197, 94, 0.6) !important;
            background-color: rgba(20, 83, 45, 0.2) !important;
        }
        
        /* Dark mode cho border màu tím (checkbox) */
        .dark .admin-service-management .card-x .card-body [style*="border-left: 4px solid #6f42c1"] {
            border-left-color: rgba(147, 51, 234, 0.6) !important;
            background-color: rgba(76, 29, 149, 0.2) !important;
        }
        
        /* Dark mode cho border màu vàng (default) */
        .dark .admin-service-management .card-x .card-body [style*="border-left: 4px solid #ffc107"] {
            border-left-color: rgba(234, 179, 8, 0.6) !important;
            background-color: rgba(113, 63, 18, 0.2) !important;
        }
    </style>
}

@{
    // Xác định có pending update không
    var isPendingUpdate = Model.Status == "PendingUpdate" && !string.IsNullOrEmpty(Model.PendingTitle);
    
    // Phân tích ảnh để hiển thị
    var currentImgs = string.IsNullOrEmpty(Model.CurrentImages) 
        ? new List<string>() 
        : Model.CurrentImages.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
            .Select(x => x.Trim())
            .ToList();
    
    var pendingImgs = string.IsNullOrEmpty(Model.PendingImages) 
        ? new List<string>() 
        : Model.PendingImages.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
            .Select(x => x.Trim())
            .ToList();
    
    // Xác định avatar và desc images
    var pendingAvatar = pendingImgs.FirstOrDefault();
    var currentAvatar = currentImgs.FirstOrDefault();
    var pendingDescImgs = pendingImgs.Skip(1).ToList();
    var currentDescImgs = currentImgs.Skip(1).ToList();
    
    // Avatar để hiển thị (ưu tiên pending nếu có)
    var avatar = isPendingUpdate && !string.IsNullOrEmpty(pendingAvatar) ? pendingAvatar : currentAvatar;
    var descImgs = isPendingUpdate && pendingDescImgs.Any() ? pendingDescImgs : currentDescImgs;
    
    // Xác định dữ liệu để hiển thị
    var displayTitle = isPendingUpdate && !string.IsNullOrEmpty(Model.PendingTitle) ? Model.PendingTitle : Model.Title;
    var displayDescription = isPendingUpdate && !string.IsNullOrEmpty(Model.PendingDescription) ? Model.PendingDescription : Model.Description;
    var displayPrice = isPendingUpdate && Model.PendingPrice.HasValue ? Model.PendingPrice.Value : Model.Price;
    var displayUnitType = isPendingUpdate && !string.IsNullOrEmpty(Model.PendingUnitType) ? Model.PendingUnitType : Model.UnitType;
    var displayBaseUnit = isPendingUpdate && Model.PendingBaseUnit.HasValue ? Model.PendingBaseUnit.Value : Model.BaseUnit;
    // Tags và Options để hiển thị (ưu tiên pending nếu có)
    var displayTagsList = new List<string>();
    if (isPendingUpdate && Model.PendingTags != null && Model.PendingTags.Any())
    {
        // Nếu có pending tags, dùng pending tags
        displayTagsList = Model.PendingTags.Select(t => t.Name).ToList();
    }
    else if (Model.Tags != null && Model.Tags.Any())
    {
        // Nếu không có pending, dùng tags hiện tại
        displayTagsList = Model.Tags.Select(t => t.Name).ToList();
    }
    
    var displayOptions = isPendingUpdate && Model.PendingOptions != null && Model.PendingOptions.Any() 
        ? Model.PendingOptions 
        : Model.Options;
    
    // Hàm chuyển đổi path thành full URL
    string ToUrl(string? p)
    {
        if (string.IsNullOrEmpty(p)) return string.Empty;
        if (p.StartsWith("http")) return p;
        var backendBase = ViewBag.BackendBase as string ?? "http://localhost:5154";
        var path = p.TrimStart('/');
        return $"{backendBase.TrimEnd('/')}/{path}";
    }
    
    // Hàm chuyển đổi UnitType sang tiếng Việt
    string GetUnitTypeVietnamese(string? unitType)
    {
        if (string.IsNullOrEmpty(unitType)) return unitType ?? "";
        return unitType switch
        {
            "Hour" => "Giờ",
            "Day" => "Ngày",
            "Visit" => "Lần",
            "Apartment" => "Căn",
            "Room" => "Phòng",
            "SquareMeter" => "Mét vuông (m²)",
            "Person" => "Người",
            "Package" => "Gói",
            "Event" => "Sự kiện",
            _ => unitType
        };
    }
}

<div class="admin-service-management">
    <!-- Header -->
    <div class="admin-service-management__header">
        <h3><i class="bi bi-info-circle-fill"></i>Chi tiết dịch vụ</h3>
        @if (!string.IsNullOrWhiteSpace(ViewBag.ReturnUrl as string))
        {
            <a href="@ViewBag.ReturnUrl" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        }
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            @if (isPendingUpdate && !string.IsNullOrEmpty(Model.PendingImages))
            {
                <!-- Hiển thị ảnh với so sánh khi có pending update -->
                <div class="card-x">
                    <div class="card-header">
                        <span class="badge bg-info me-2">Mới (chờ duyệt)</span>
                        <i class="bi bi-image me-2"></i>Ảnh đại diện
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(pendingAvatar))
                        {
                            var isNewAvatar = string.IsNullOrEmpty(currentAvatar) || !string.Equals(pendingAvatar, currentAvatar, StringComparison.OrdinalIgnoreCase);
                            <div class="position-relative">
                                <img src="@ToUrl(pendingAvatar)" class="img-fluid rounded @(isNewAvatar ? "border border-success border-3" : "")" style="max-height:320px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger\'>Không thể tải ảnh</div>';" />
                                @if (isNewAvatar)
                                {
                                    <span class="badge bg-success position-absolute top-0 start-0 m-2">
                                        <i class="bi bi-plus-circle me-1"></i>Mới
                                    </span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(currentAvatar) && isNewAvatar)
                            {
                                <div class="mt-3">
                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-arrow-down me-1"></i>
                                        <strong>Ảnh cũ (sẽ bị thay thế):</strong>
                                    </small>
                                    <div class="position-relative" style="opacity: 0.6; border: 2px dashed #ccc; border-radius: 0.5rem; padding: 4px;">
                                        <img src="@ToUrl(currentAvatar)" class="img-fluid rounded" style="max-height:200px;object-fit:cover;filter: grayscale(50%);" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger small\'>Lỗi ảnh</div>';" />
                                        <span class="badge bg-secondary position-absolute top-0 start-0 m-2">
                                            <i class="bi bi-x-circle me-1"></i>Cũ
                                        </span>
                                        <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(220,53,69,0.2) 10px, rgba(220,53,69,0.2) 20px); pointer-events: none; border-radius: 0.375rem;"></div>
                                    </div>
                                </div>
                            }
                        }
                        else if (!string.IsNullOrEmpty(currentAvatar))
                        {
                            <div class="position-relative">
                                <img src="@ToUrl(currentAvatar)" class="img-fluid rounded" style="max-height:320px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger\'>Không thể tải ảnh</div>';" />
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">Không có ảnh</div>
                        }
                    </div>
                </div>
                <div class="card-x mt-3">
                    <div class="card-header">
                        <span class="badge bg-info me-2">Mới (chờ duyệt)</span>
                        <i class="bi bi-images me-2"></i>Ảnh mô tả
                    </div>
                    <div class="card-body">
                        @if (pendingDescImgs.Any())
                        {
                            <div class="row g-2">
                                @foreach (var p in pendingDescImgs)
                                {
                                    var isNewImg = !currentDescImgs.Contains(p, StringComparer.OrdinalIgnoreCase);
                                    <div class="col-4 position-relative">
                                        <img src="@ToUrl(p)" class="img-thumbnail @(isNewImg ? "border border-success border-3" : "")" style="height:100px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger small\'>Lỗi ảnh</div>';" />
                                        @if (isNewImg)
                                        {
                                            <span class="badge bg-success position-absolute top-0 start-0 m-1" style="font-size: 0.7rem;">
                                                <i class="bi bi-plus-circle"></i> Mới
                                            </span>
                                        }
                                    </div>
                                }
                            </div>
                            @if (currentDescImgs.Any())
                            {
                                var oldDescImgs = currentDescImgs.Where(c => !pendingDescImgs.Contains(c, StringComparer.OrdinalIgnoreCase)).ToList();
                                @if (oldDescImgs.Any())
                                {
                                    <div class="mt-3">
                                        <small class="text-muted d-block mb-2">
                                            <i class="bi bi-arrow-down me-1"></i>
                                            <strong>Ảnh mô tả cũ (sẽ bị xóa):</strong>
                                        </small>
                                        <div class="row g-2">
                                            @foreach (var oldImg in oldDescImgs)
                                            {
                                                <div class="col-4 position-relative" style="opacity: 0.6; border: 2px dashed #ccc; border-radius: 0.375rem; padding: 4px;">
                                                    <img src="@ToUrl(oldImg)" class="img-thumbnail" style="height:100px;object-fit:cover;filter: grayscale(50%);" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger small\'>Lỗi ảnh</div>';" />
                                                    <span class="badge bg-secondary position-absolute top-0 start-0 m-1" style="font-size: 0.7rem;">
                                                        <i class="bi bi-x-circle"></i> Cũ
                                                    </span>
                                                    <div style="position: absolute; top: 4px; left: 4px; right: 4px; bottom: 4px; background: repeating-linear-gradient(45deg, transparent, transparent 5px, rgba(220,53,69,0.2) 5px, rgba(220,53,69,0.2) 10px); pointer-events: none; border-radius: 0.25rem;"></div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        }
                        else if (currentDescImgs.Any())
                        {
                            <div class="row g-2">
                                @foreach (var p in currentDescImgs)
                                {
                                    <div class="col-4">
                                        <img src="@ToUrl(p)" class="img-thumbnail" style="height:100px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger small\'>Lỗi ảnh</div>';" />
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">Không có ảnh mô tả</div>
                        }
                    </div>
                </div>
            }
            else
            {
                <!-- Hiển thị ảnh bình thường khi không có pending update -->
                <div class="card-x">
                    <div class="card-header">
                        <i class="bi bi-image me-2"></i>Ảnh đại diện
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(avatar))
                        {
                            <img src="@ToUrl(avatar)" class="img-fluid rounded" style="max-height:320px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger\'>Không thể tải ảnh</div>';" />
                        }
                        else
                        {
                            <div class="text-muted">Không có ảnh</div>
                        }
                    </div>
                </div>
                <div class="card-x mt-3">
                    <div class="card-header">
                        <i class="bi bi-images me-2"></i>Ảnh mô tả
                    </div>
                    <div class="card-body">
                        @if (descImgs.Any())
                        {
                            <div class="row g-2">
                                @foreach (var p in descImgs)
                                {
                                    <div class="col-4">
                                        <img src="@ToUrl(p)" class="img-thumbnail" style="height:100px;object-fit:cover" onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'text-danger small\'>Lỗi ảnh</div>';" />
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted">Không có ảnh mô tả</div>
                        }
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-8">
            @if (isPendingUpdate)
            {
                <div class="alert alert-info mb-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            <strong>Dịch vụ đang chờ duyệt chỉnh sửa</strong>
                            @if (Model.PendingUpdatedAt.HasValue)
                            {
                                <div class="small mt-1">Cập nhật lúc: @Model.PendingUpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
                            }
                        </div>
                    </div>
                </div>
            }
            
            @if (isPendingUpdate)
            {
                <!-- Comparison View: Vertical Stack -->
                <div class="row g-4">
                    <!-- New Content (Pending) -->
                    <div class="col-12">
                        <div class="card-x border-success border-2 mb-4">
                            <div class="card-header bg-success bg-opacity-10">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span class="fw-bold text-success">
                                        <i class="bi bi-check-circle-fill me-2"></i>Nội dung mới (Chờ duyệt)
                                    </span>
                                    <span class="badge bg-success">Mới</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h4 class="mb-2 fw-bold">@displayTitle</h4>
                                <div class="mb-3">
                                    <span class="fw-semibold me-2">Danh mục:</span>
                                    <span class="badge bg-primary fs-6 px-3 py-2" style="background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%) !important; box-shadow: 0 2px 8px rgba(13, 110, 253, 0.3);">@Model.CategoryName</span>
                                </div>
                                <div class="service-description mb-3 text-start">@(displayDescription ?? "")</div>
                                
                                <div class="row g-2 mb-3">
                                    <div class="col-md-4">
                                        <div class="p-3 bg-light rounded text-center">
                                            <small class="text-muted d-block mb-2"><i class="bi bi-currency-exchange me-1"></i>Giá</small>
                                            <div class="fs-5 fw-bold text-success">@displayPrice.ToString("N0") VNĐ</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 bg-light rounded text-center">
                                            <small class="text-muted d-block mb-2"><i class="bi bi-rulers me-1"></i>Đơn vị</small>
                                            <div class="fw-semibold">@GetUnitTypeVietnamese(displayUnitType)</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="p-3 bg-light rounded text-center">
                                            <small class="text-muted d-block mb-2"><i class="bi bi-hash me-1"></i>Cơ bản</small>
                                            <div class="fw-semibold">@displayBaseUnit</div>
                                        </div>
                                    </div>
                                </div>
                                
                                
                                
                                @if (displayOptions != null && displayOptions.Any())
                                {
                                    // Nhóm options theo Family
                                    var groupedOptions = displayOptions
                                        .Where(o => o.Family.HasValue)
                                        .GroupBy(o => o.Family.Value)
                                        .ToList();
                                    var ungroupedOptions = displayOptions
                                        .Where(o => !o.Family.HasValue)
                                        .ToList();
                                    
                                    // Sắp xếp các nhóm theo type (radio, select, checkbox)
                                    var sortedGroups = groupedOptions.OrderBy(g => {
                                        var type = g.FirstOrDefault()?.Type?.ToLower() ?? "";
                                        return type switch {
                                            "radio" => 1,
                                            "select" => 2,
                                            "checkbox" => 3,
                                            _ => 4
                                        };
                                    }).ToList();
                                    
                                    <div class="mt-2 text-start">
                                        <small class="text-muted d-block mb-2 fw-semibold"><i class="bi bi-list-check me-1"></i>Tùy chọn:</small>
                                        
                                        @* Hiển thị các nhóm (Family) *@
                                        @foreach (var group in sortedGroups)
                                        {
                                            var firstOption = group.FirstOrDefault();
                                            var groupType = firstOption?.Type?.ToLower() ?? "";
                                            var typeLabel = groupType switch {
                                                "radio" => "Chọn một",
                                                "select" => "Danh sách chọn",
                                                "checkbox" => "Chọn nhiều",
                                                "text" => "Văn bản",
                                                "textarea" => "Nhập văn bản",
                                                _ => "Tùy chọn"
                                            };
                                            
                                            // Màu sắc theo loại nhóm
                                            var borderColor = "#ffc107"; // default (yellow)
                                            var bgColor = "#fffbf0"; // default
                                            if (groupType == "radio")
                                            {
                                                borderColor = "#0d6efd"; // blue
                                                bgColor = "#e7f3ff";
                                            }
                                            else if (groupType == "select")
