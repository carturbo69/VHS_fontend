    <script>
        window.__initAdminChatRealtime = function () {
          var pageMain = document.querySelector('main.chat-main[data-selected-conv]');
          if (!pageMain) { console.debug('[admin-chat] no selection, skip signalR'); return; }

          const me = '@(Model.CurrentAccount?.AccountId.ToString())';
          const selectedConversationId = '@Model.SelectedConversationId';
          const GUID_EMPTY = '00000000-0000-0000-0000-000000000000';
          if (!me || me.toLowerCase() === GUID_EMPTY) {
            console.warn('[admin-chat] me is empty GUID, skip signalR init');
            return;
          }

          function parseIso(s){ return s ? new Date(s) : null; }
          function statusHtml(status){
            let icon = '', text = '';
            switch(status){
              case 'Pending':   icon = '<i class="bi bi-clock-history"></i>'; text = 'Đang gửi'; break;
              case 'Sent':      icon = '<i class="bi bi-check"></i>';         text = 'Đã gửi';   break;
              case 'Delivered': icon = '<i class="bi bi-check2-all"></i>';    text = 'Đã nhận';  break;
              case 'Seen':      icon = '<i class="bi bi-check2-all"></i>';    text = 'Đã xem';   break;
            }
            return '<span class="msg-status" data-status="'+status+'">'+icon+'<span class="status-text">'+text+'</span></span>';
          }
          function setBubbleStatus(bubble, status){
            if (!bubble) return;
            bubble.setAttribute('data-status', status);
            const meta = bubble.querySelector('.msg-meta');
            if (!meta) return;
            let statusEl = meta.querySelector('.msg-status');
            if (!statusEl){
              if (bubble.dataset.isMine === 'true'){
                meta.insertAdjacentHTML('beforeend', statusHtml(status));
              }
            } else {
              statusEl.outerHTML = statusHtml(status);
            }
          }
          function applyReadUpTo(lastReadAtIso){
            const lastReadAt = parseIso(lastReadAtIso);
            if (!lastReadAt) return;
            document.querySelectorAll('.bubble[data-is-mine="true"]').forEach(b => {
              const created = parseIso(b.getAttribute('data-created-at'));
              if (created && created <= lastReadAt){ setBubbleStatus(b, 'Delivered'); }
            });
          }

          // ===== Chèn tham chiếu reply khi nhận tin mới từ server =====
          function attachReplyRefIfAny(bubbleEl, msg){
            if (!msg || !msg.replyToMessageId) return;

            // ✅ Sửa: KHÔNG .toLowerCase() — giữ định dạng GUID đúng với data-message-id render từ Razor
            var refId = String(msg.replyToMessageId);
            var parent = document.querySelector('.bubble[data-message-id="'+refId+'"]');

            var name = parent?.getAttribute('data-sender-name') || (msg.replyToSenderName || '—');
            var sn   = parent?.getAttribute('data-snippet')      || (msg.replyToSnippet || '(Không có nội dung)');

            var wrap = document.createElement('div');
            wrap.className = 'reply-ref';

            var nameEl = document.createElement('div');
            nameEl.className = 'reply-ref-name';
            nameEl.textContent = name;

            var snEl = document.createElement('div');
            snEl.className = 'reply-ref-text';
            snEl.textContent = sn;

            wrap.appendChild(nameEl);
            wrap.appendChild(snEl);
            bubbleEl.insertAdjacentElement('afterbegin', wrap);
          }

          // ===== SignalR =====
          const connection = new signalR.HubConnectionBuilder()
            .withUrl('/chathub')
            .withAutomaticReconnect()
            .configureLogging(signalR.LogLevel.Information)
            .build();

          connection.on('conversation:readUpTo', payload => {
            if (!payload) return;
            if (String(payload.conversationId).toLowerCase() !== String(selectedConversationId).toLowerCase()) return;
            applyReadUpTo(payload.lastReadAt);
          });

          connection.on('message:created', msg => {
            // Lưu avatar từ sender vào storage nếu có
            if (msg.conversationId && msg.sender && msg.sender.avatarUrl && window.chatAvatarManager) {
              window.chatAvatarManager.save(msg.conversationId, msg.sender.avatarUrl);
              // Cập nhật avatar trong list ngay lập tức
              var convItem = document.querySelector('.conv-item[data-conversation-id="' + msg.conversationId + '"]');
              if (convItem) {
                window.chatAvatarManager.update(convItem, msg.sender.avatarUrl);
              }
            }
            if (!msg) return;
            if (String(msg.conversationId).toLowerCase() !== String(selectedConversationId).toLowerCase()) return;

            const list = document.getElementById('msgList');
            if (!list) return;

            const isMine = String(msg.senderAccountId).toLowerCase() === String(me).toLowerCase();

            const wrap = document.createElement('div');
            wrap.className = 'msg-wrapper ' + (isMine ? 'msg-me' : 'msg-other');

            const bubble = document.createElement('div');
            bubble.className = 'bubble ' + (isMine ? 'me' : 'other');
            bubble.setAttribute('data-message-id', msg.messageId); // giữ nguyên
            bubble.setAttribute('data-created-at', msg.createdAt);
            bubble.setAttribute('data-is-mine', isMine ? 'true' : 'false');
            bubble.setAttribute('data-status', msg.status || 'Sent');

            const senderName = isMine ? 'Bạn' : (msg.senderName || 'Đối tác');
            const snippetThis = msg.body ? msg.body : (msg.imageUrl ? '[Ảnh]' : '(Không có nội dung)');
            bubble.setAttribute('data-sender-name', senderName);
            bubble.setAttribute('data-snippet', snippetThis);

            attachReplyRefIfAny(bubble, msg);

            if (msg.body){
              const bodyEl = document.createElement('div');
              bodyEl.className = 'msg-body';
              bodyEl.textContent = msg.body;
              bubble.appendChild(bodyEl);
            }
            if (msg.imageUrl){
              const img = document.createElement('img');
              // Giống ServiceShop: dùng trực tiếp imageUrl, backend đã xử lý domain rồi
              img.src = msg.imageUrl;
              img.className = 'msg-image';
              img.loading = 'lazy';
              img.decoding = 'async';
              img.referrerPolicy = 'no-referrer';
              img.onerror = function() {
                this.onerror = null;
                this.src = '@fallbackImg';
              };
              bubble.appendChild(img);
            }

            const meta = document.createElement('div');
            meta.className = 'msg-meta';
                   const fmtVN = new Intl.DateTimeFormat('vi-VN', {
          hour: '2-digit',
          minute: '2-digit',
          hour12: false,
          timeZone: 'Asia/Ho_Chi_Minh'
        });
        const d = new Date(msg.createdAt);   // ISO-UTC từ server
        const hhmm = isNaN(d) ? '' : fmtVN.format(d);

        meta.innerHTML =
          '<button type="button" class="reply-btn" title="Trả lời"><i class="bi bi-reply"></i> <span class="reply-text">Reply</span></button>'
          + '<span class="msg-time">' + hhmm + '</span>'
          + (isMine ? statusHtml(msg.status || 'Sent') : '');

            bubble.appendChild(meta);

            wrap.appendChild(bubble);
            list.appendChild(wrap);
            // Scroll xuống tin nhắn mới nhất với smooth scroll
            setTimeout(function() {
            list.scrollTop = list.scrollHeight;
            }, 50);
          });

          // reconnect lifecycle
          connection.onreconnecting((err) => { console.info('[admin-chat] reconnecting...', err); });
          connection.onreconnected(async (connectionId) => {
            console.info('[admin-chat] reconnected as', connectionId, '— re-registering…');
            try { await connection.invoke('Register', me); }
            catch (e) { console.error('[admin-chat] re-register failed', e); }
          });
          connection.onclose(async (err) => {
            console.warn('[admin-chat] connection closed, restarting…', err);
            try { await connection.start(); await connection.invoke('Register', me); }
            catch (e) { console.error('[admin-chat] restart failed', e); }
          });

          (async function startAndRegister(){
            try { await connection.start(); await connection.invoke('Register', me); }
            catch (e) { console.error('[admin-chat] initial start failed, retrying in 2s…', e); setTimeout(startAndRegister, 2000); }
          })();
        };

        // Nạp/khởi tạo SignalR
        (function ensureSignalRReady(){
          if (window.signalR?.HubConnectionBuilder) {
            window.__initAdminChatRealtime();
            return;
          }
          var s = document.createElement('script');
          s.src = 'https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.5/signalr.min.js';
          s.defer = true;
          s.onload = function(){ window.__initAdminChatRealtime(); };
          s.onerror = function(){ console.error('[admin-chat] failed to load signalr.min.js'); };
          document.head.appendChild(s);
        })();
    </script>

