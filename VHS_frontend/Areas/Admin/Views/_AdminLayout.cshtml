<!DOCTYPE html>
<html lang="vi" class="preload">
 <!-- Thêm .preload để chặn transition khi khởi động -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin_Client</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Áp trạng thái sidebar RẤT SỚM để tránh FOUC/reflow -->
    <script>
        (function () {
          try {
            if (localStorage.getItem('vhs-sidebar') === 'collapsed') {
              document.body.classList.add('sidebar-collapsed');
            }
          } catch (e) {}
        })();
    </script>

    <!-- Sidebar (fixed) -->
    <aside id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-grid-1x2-fill brand-icon"></i>
            <span class="brand-text">Service Admin</span>
        </div>

        <nav class="sidebar-nav">
            <a asp-controller="AdminDashboard" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminDashboard" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminDashboard" ? "page" : null)">
                <i class="bi bi-house-door"></i><span>Tổng quan</span>
            </a>

            <a asp-controller="AdminCustomer" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminCustomer" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminCustomer" ? "page" : null)">
                <i class="bi bi-people"></i><span>Quản lí customer</span>
            </a>

            <a asp-controller="AdminProvider" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminProvider" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminProvider" ? "page" : null)">
                <i class="bi bi-buildings"></i><span>Quản lí provider</span>
            </a>

            <a asp-controller="AdminRegisterProvider" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminRegisterProvider" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminRegisterProvider" ? "page" : null)">
                <i class="bi bi-clipboard-check"></i><span>Quản lí đăng kí provider</span>
            </a>


            @* <a asp-controller="Category" asp-action="Index" *@
            @*    class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Category" ? "active" : "")" *@
            @*    aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Category" ? "page" : null)"> *@
            @*     <i class="bi bi-clipboard-check"></i><span>Quản lí danh mục</span> *@
            @* </a> *@

            <!-- Link có Area: so sánh cả Area để active chính xác -->
             @{ 
                 var isCategoryActive = 
                (ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategory") && 
                 (ViewContext.RouteData.Values["area"]?.ToString() == "Admin"); 
             } 
             <a asp-area="Admin" asp-controller="Category" asp-action="Index" 
                class="nav-link @(isCategoryActive ? "active" : "")" 
               aria-current="@(isCategoryActive ? "page" : null)"> 
                 <i class="bi bi-collection"></i><span>Quản lí danh mục</span> 
             </a> 

            <a asp-controller="Service" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Service" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Service" ? "page" : null)">
                <i class="bi bi-tools"></i><span>Quản lí dịch vụ</span>
            </a>

            <a asp-controller="AdPayment" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdPayment" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdPayment" ? "page" : null)">
                <i class="bi bi-credit-card-2-front"></i><span>Quản lí thanh toán</span>
            </a>

            <a asp-controller="Order" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" ? "page" : null)">
                <i class="bi bi-receipt"></i><span>Quản lí order</span>
            </a>

            <a asp-controller="AdminFeedback" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminFeedback" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminFeedback" ? "page" : null)">
                <i class="bi bi-chat-dots"></i><span>Quản lí feedback</span>
            </a>

            <a asp-controller="AdminVoucher" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminVoucher" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminVoucher" ? "page" : null)">
                <i class="bi bi-ticket-perforated"></i><span>Quản lí voucher</span>
            </a>

            <a asp-controller="Complaint" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Complaint" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Complaint" ? "page" : null)">
                <i class="bi bi-flag"></i><span>Quản lí phản ánh</span>
            </a>

            <a asp-controller="AdminNotification" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminNotification" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminNotification" ? "page" : null)">
                <i class="bi bi-bell"></i><span>Quản lí thông báo</span>
            </a>
        </nav>
    </aside>

    <!-- Page content -->
    <div id="page">
        <!-- Topbar -->
        <header class="topbar">
            <div class="left">
                <button id="btnSidebarToggle"
                        class="btn btn-outline-secondary btn-toggle"
                        aria-label="Toggle sidebar"
                        aria-pressed="false">
                    <!-- thêm aria-pressed -->
                    <i class="bi bi-list"></i>
                </button>
                <h5 class="page-title mb-0">@ViewData["Title"]</h5>
            </div>

            <div class="right">
                <!-- Notifications -->
                <div class="notif">
                    <button id="notificationBtn" class="btn btn-link notif-btn" aria-expanded="false" aria-label="Notifications">
                        <i class="bi bi-bell fs-5"></i>
                        <span id="notificationBadge" class="badge-dot" style="display:none">0</span>
                    </button>
                    <ul id="notificationMenu" class="notif-menu">
                        <li class="text-center text-muted py-2">Loading…</li>
                    </ul>
                </div>

                <!-- Theme -->
                <button type="button" class="icon-btn" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                    <span class="theme-icon"></span>
                </button>

                <!-- User -->
                <div class="user">
                    <i class="bi bi-person-circle fs-5"></i>
                    <span class="ms-1">@Context.Session.GetString("Username")</span>
                </div>

                <!-- Logout -->
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm rounded-pill">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </header>

        <main class="content">
            @RenderBody()
        </main>

        <footer class="footer">
            &copy; 2025 Viet Home Service — Admin Dashboard
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // =========================
        // Sidebar: giữ trạng thái + chống giật khi load
        // =========================
        (function () {
          const SIDEBAR_KEY = 'vhs-sidebar';
          const btn = document.getElementById('btnSidebarToggle');

          function applySidebarState(state) {
            const collapsed = state === 'collapsed';
            document.body.classList.toggle('sidebar-collapsed', collapsed);
            if (btn) {
              btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
              btn.classList.toggle('is-active', collapsed);
            }
          }

          function currentState() {
            return document.body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded';
          }

          // Khởi tạo theo localStorage (fallback expanded)
          document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem(SIDEBAR_KEY) || 'expanded';
            applySidebarState(saved);

            // Bỏ .preload sau khi frame đầu đã áp xong trạng thái → không giật
            requestAnimationFrame(() => {
              requestAnimationFrame(() => {
                document.documentElement.classList.remove('preload');
              });
            });
          });

          // Toggle + lưu
          if (btn) {
            btn.addEventListener('click', () => {
              const next = currentState() === 'collapsed' ? 'expanded' : 'collapsed';
              localStorage.setItem(SIDEBAR_KEY, next);
              applySidebarState(next);
            });
          }
        })();

        // =========================
        // Theme sync + toggle
        // =========================
        (function () {
          const KEY = "vhs-theme";
          const root = document.documentElement;
          const icon = document.querySelector(".theme-icon");

          const apply = (t) => {
            root.classList.toggle("dark", t === "dark");
            if (icon) {
              icon.innerHTML = root.classList.contains("dark")
                ? '<i class="bi bi-moon-stars-fill fs-5"></i>'
                : '<i class="bi bi-brightness-high-fill fs-5"></i>';
            }
          };

          const saved = localStorage.getItem(KEY);
          if (saved === "light" || saved === "dark") apply(saved);
          else apply(matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

          window.__toggleTheme = () => {
            const next = root.classList.contains("dark") ? "light" : "dark";
            localStorage.setItem(KEY, next);
            apply(next);
          };
        })();

        // =========================
        // Notifications
        // =========================
        (function () {
          const proxyBase = '/notification-proxy';
          const notifBtn   = document.getElementById('notificationBtn');
          const notifMenu  = document.getElementById('notificationMenu');
          const notifBadge = document.getElementById('notificationBadge');

          async function loadUnreadCount() {
            try {
              const res = await fetch(`${proxyBase}/unread-count`);
              const dto = await res.json();
              if (dto.count > 0) {
                notifBadge.textContent = dto.count;
                notifBadge.style.display = 'inline-flex';
              } else {
                notifBadge.style.display = 'none';
              }
            } catch (e) { console.error(e); }
          }

          async function loadNotifications() {
            try {
              const res = await fetch(`${proxyBase}/unread-list`);
              const list = await res.json();
              notifMenu.innerHTML = '';
              if (!list.length) {
                notifMenu.innerHTML = '<li class="text-center text-muted py-2">No notifications</li>';
                return;
              }
              list.forEach(n => {
                const li = document.createElement('li');
                li.innerHTML = `
                  <a href="#" class="d-block text-decoration-none px-2 py-1" onclick="markRead('${n.notificationId}')">
                    <div class="small text-muted">${new Date(n.createdAt).toLocaleString()}</div>
                    <div>${n.content}</div>
                    <div><strong>Booking Status:</strong> ${n.bookingStatus}</div>
                  </a>`;
                notifMenu.appendChild(li);
              });
              const hr = document.createElement('hr');
              notifMenu.appendChild(hr);
              const all = document.createElement('li');
              all.innerHTML = `<a href="#" class="d-block text-center text-decoration-none py-1" onclick="markAllRead()">Mark all as read</a>`;
              notifMenu.appendChild(all);
            } catch (e) { console.error(e); }
          }

          async function markRead(id) {
            try {
              await fetch(`${proxyBase}/mark-read/${id}`, { method: 'PUT' });
              await loadUnreadCount();
              await loadNotifications();
            } catch (e) { console.error(e); }
          }

          async function markAllRead() {
            try {
              const res = await fetch(`${proxyBase}/unread-list`);
              const list = await res.json();
              for (const n of list) {
                await fetch(`${proxyBase}/mark-read/${n.notificationId}`, { method: 'PUT' });
              }
              await loadUnreadCount();
              await loadNotifications();
            } catch (e) { console.error(e); }
          }

          // Gắn vào window để onclick trong HTML dùng được
          window.markRead = markRead;
          window.markAllRead = markAllRead;

          // Toggle popup
          if (notifBtn && notifMenu) {
            notifBtn.addEventListener('click', async (e) => {
              e.stopPropagation();
              const open = notifMenu.style.display === 'block';
              if (open) {
                notifMenu.style.display = 'none';
                notifBtn.setAttribute('aria-expanded', 'false');
              } else {
                await loadNotifications();
                notifMenu.style.display = 'block';
                notifBtn.setAttribute('aria-expanded', 'true');
              }
            });

            document.addEventListener('click', (e) => {
              if (!notifBtn.contains(e.target) && !notifMenu.contains(e.target)) {
                notifMenu.style.display = 'none';
                notifBtn.setAttribute('aria-expanded', 'false');
              }
            });
          }

          // Khởi chạy
          document.addEventListener('DOMContentLoaded', () => {
            loadUnreadCount();
            setInterval(loadUnreadCount, 30000);
          });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
