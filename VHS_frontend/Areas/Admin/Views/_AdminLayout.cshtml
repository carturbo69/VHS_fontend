    <script>
        // =========================
        // Sidebar: giữ trạng thái + chống giật khi load + mobile support
        // =========================
        (function () {
          const SIDEBAR_KEY = 'vhs-sidebar';
          const btn = document.getElementById('btnSidebarToggle');
          const isMobile = () => window.innerWidth <= 992;

          function applySidebarState(state) {
            const collapsed = state === 'collapsed';
            
            if (isMobile()) {
              // Mobile: toggle class mobile-open thay vì collapsed
              if (collapsed) {
                document.body.classList.remove('sidebar-mobile-open');
              } else {
                document.body.classList.add('sidebar-mobile-open');
              }
              document.body.classList.remove('sidebar-collapsed');
            } else {
              // Desktop: dùng collapsed như cũ
              document.body.classList.toggle('sidebar-collapsed', collapsed);
              document.body.classList.remove('sidebar-mobile-open');
            }
            
            if (btn) {
              btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
              btn.classList.toggle('is-active', collapsed);
            }
          }

          function currentState() {
            if (isMobile()) {
              return document.body.classList.contains('sidebar-mobile-open') ? 'expanded' : 'collapsed';
            } else {
              return document.body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded';
            }
          }

          // Khởi tạo theo localStorage (fallback expanded)
          document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem(SIDEBAR_KEY) || 'expanded';
            applySidebarState(saved);

            // Bỏ .preload sau khi frame đầu đã áp xong trạng thái → không giật
            requestAnimationFrame(() => {
              requestAnimationFrame(() => {
                document.documentElement.classList.remove('preload');
              });
            });
          });

          // Toggle + lưu
          if (btn) {
            btn.addEventListener('click', () => {
              const next = currentState() === 'collapsed' ? 'expanded' : 'collapsed';
              localStorage.setItem(SIDEBAR_KEY, next);
              applySidebarState(next);
            });
          }

          // Đóng sidebar khi click vào overlay trên mobile
          document.addEventListener('click', (e) => {
            if (isMobile() && document.body.classList.contains('sidebar-mobile-open')) {
              const sidebar = document.getElementById('sidebar');
              const overlay = e.target;
              
              // Nếu click vào overlay (body::before) hoặc bên ngoài sidebar
              if (sidebar && !sidebar.contains(e.target) && !btn.contains(e.target)) {
                document.body.classList.remove('sidebar-mobile-open');
                localStorage.setItem(SIDEBAR_KEY, 'collapsed');
              }
            }
          });

          // Đóng sidebar khi resize từ mobile sang desktop
          window.addEventListener('resize', () => {
            if (!isMobile() && document.body.classList.contains('sidebar-mobile-open')) {
              document.body.classList.remove('sidebar-mobile-open');
              const saved = localStorage.getItem(SIDEBAR_KEY) || 'expanded';
              applySidebarState(saved);
            }
          });
        })();

                  async function updateAdminChatUnreadCount() {
          try {
            const url = '@Url.Action("UnreadTotal", "ChatAdmin", new { area = "Admin" })';
            const resp = await fetch(url, { credentials: 'same-origin' });
            if (!resp.ok || resp.redirected) return;

            const contentType = resp.headers.get('content-type') || '';
            if (!contentType.includes('application/json')) return;

            const data = await resp.json();
            const badge = document.querySelector('[data-chat-count]');
            if (badge) {
              const total = Number(data?.total ?? 0);
              badge.textContent = total;
              if (total > 0) {
                badge.style.display = 'inline-flex';
                badge.classList.remove('is-empty');
              } else {
                badge.style.display = 'none';
                badge.classList.add('is-empty');
              }
            }

          } catch (e) {
            console.error('Không thể tải số tin nhắn chưa đọc (Admin):', e);
          }
        }

        document.addEventListener('DOMContentLoaded', () => {
          updateAdminChatUnreadCount();
          setInterval(updateAdminChatUnreadCount, 30000);
        });


        // =========================
        // Theme sync + toggle
        // =========================
        (function () {
          const KEY = "vhs-theme";
          const root = document.documentElement;
          const icon = document.querySelector(".theme-icon");

          const apply = (t) => {
            root.classList.toggle("dark", t === "dark");
            if (icon) {
              icon.innerHTML = root.classList.contains("dark")
                ? '<i class="bi bi-moon-stars-fill fs-5"></i>'
                : '<i class="bi bi-brightness-high-fill fs-5"></i>';
            }
          };

          const saved = localStorage.getItem(KEY);
          if (saved === "light" || saved === "dark") apply(saved);
          else apply(matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

          window.__toggleTheme = () => {
            const next = root.classList.contains("dark") ? "light" : "dark";
            localStorage.setItem(KEY, next);
            apply(next);
          };
        })();

        // =========================
        // Notifications - Sử dụng API thật
        // =========================
        (function () {
          const notifBtn   = document.getElementById('notificationBtn');
          const notifMenu  = document.getElementById('notificationMenu');
          const notifBadge = document.getElementById('notificationBadge');

          async function loadUnreadCount() {
            if (!notifBadge) {
              console.warn('Notification badge element not found');
              return;
            }
            try {
              console.log('🔔 Loading unread count...');
              const res = await fetch('/Admin/AdminNotification/GetUnreadCount');
              if (!res.ok) {
                console.warn('❌ Failed to load unread count:', res.status, res.statusText);
                notifBadge.style.display = 'none';
                return;
              }
              const dto = await res.json();
              console.log('📬 Unread count response:', dto);
              
              // Thử nhiều cách để lấy count
              let count = 0;
              if (typeof dto === 'number') {
                count = dto;
              } else if (dto?.count !== undefined) {
                count = dto.count;
              } else if (dto?.Count !== undefined) {
                count = dto.Count;
              } else if (dto?.data?.count !== undefined) {
                count = dto.data.count;
              }
              
              console.log('✅ Parsed count:', count);
              
              if (count > 0) {
                notifBadge.textContent = count;
                
                // Force hiển thị badge - xóa tất cả style ẩn và thêm style hiển thị
                notifBadge.style.removeProperty('display');
                notifBadge.style.removeProperty('visibility');
                notifBadge.style.removeProperty('opacity');
                notifBadge.removeAttribute('hidden');
                notifBadge.classList.remove('d-none');
                
                // Set style hiển thị với !important
                notifBadge.style.setProperty('display', 'inline-flex', 'important');
                notifBadge.style.setProperty('visibility', 'visible', 'important');
                notifBadge.style.setProperty('opacity', '1', 'important');
                
                console.log('✅ Badge displayed with count:', count);
                console.log('✅ Badge computed display:', window.getComputedStyle(notifBadge).display);
                console.log('✅ Badge computed visibility:', window.getComputedStyle(notifBadge).visibility);
              } else {
                // Ẩn badge hoàn toàn khi không còn thông báo chưa đọc
                notifBadge.style.setProperty('display', 'none', 'important');
                notifBadge.style.setProperty('visibility', 'hidden', 'important');
                notifBadge.style.setProperty('opacity', '0', 'important');
                notifBadge.textContent = '0';
                console.log('ℹ️ No unread notifications, badge hidden');
              }
            } catch (e) { 
              console.error('❌ Error loading unread count:', e);
              notifBadge.style.display = 'none';
            }
          }

          async function loadNotifications() {
            try {
              const res = await fetch('/Admin/AdminNotification/GetNotificationsPartial');
              const html = await res.text();
              notifMenu.innerHTML = html;
            } catch (e) { 
              console.error('Error loading notifications:', e);
              notifMenu.innerHTML = '<li class="text-center text-muted py-2">Không thể tải thông báo</li>';
            }
          }

          async function markRead(id) {
            try {
              const res = await fetch(`/Admin/AdminNotification/MarkRead/${id}`, { 
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
              });
              const result = await res.json();
              if (result.success) {
                // Cập nhật UI ngay lập tức
                const notificationItem = notifMenu.querySelector(`[data-notification-id="${id}"]`);
                if (notificationItem) {
                  notificationItem.classList.remove('unread');
                  notificationItem.classList.add('read');
                  
                  // Xóa indicator dot
                  const indicator = notificationItem.querySelector('.notification-indicator');
                  if (indicator) {
                    indicator.remove();
                  }
                  
                  // Cập nhật badge trong header nếu cần
                  const headerBadge = notifMenu.querySelector('.badge-unread-count');
                  if (headerBadge) {
                    const currentCount = parseInt(headerBadge.textContent) || 0;
                    const newCount = Math.max(0, currentCount - 1);
                    if (newCount === 0) {
                      headerBadge.remove();
                      // Ẩn badge trên chuông nếu không còn thông báo chưa đọc
                      if (notifBadge) {
                        notifBadge.style.setProperty('display', 'none', 'important');
                        notifBadge.style.setProperty('visibility', 'hidden', 'important');
                        notifBadge.style.setProperty('opacity', '0', 'important');
                      }
                    } else {
                      headerBadge.textContent = newCount;
                    }
                  }
                }
                
                // Cập nhật từ server để đồng bộ
                await loadUnreadCount();
                await loadNotifications();
                
                // Thông báo cho trang notification nếu đang mở
                notifyNotificationPage('markRead', { id: id });
              }
            } catch (e) { 
              console.error('Error marking as read:', e);
            }
          }

          async function markAllRead() {
            try {
              const res = await fetch('/Admin/AdminNotification/MarkAllRead', { 
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
              });
              const result = await res.json();
              if (result.success) {
                // Cập nhật UI ngay lập tức không cần reload
                // 1. Ẩn badge trên chuông hoàn toàn
                if (notifBadge) {
                  notifBadge.style.setProperty('display', 'none', 'important');
                  notifBadge.style.setProperty('visibility', 'hidden', 'important');
                  notifBadge.style.setProperty('opacity', '0', 'important');
                  notifBadge.textContent = '0';
                }
                
                // 2. Cập nhật tất cả notification items thành "read"
                const notificationItems = notifMenu.querySelectorAll('.notification-item.unread');
                notificationItems.forEach(item => {
                  item.classList.remove('unread');
                  item.classList.add('read');
                  
                  // Xóa indicator dot nếu có
                  const indicator = item.querySelector('.notification-indicator');
                  if (indicator) {
                    indicator.remove();
                  }
                });
                
                // 3. Ẩn badge trong header của dropdown
                const headerBadge = notifMenu.querySelector('.badge-unread-count');
                if (headerBadge) {
                  headerBadge.remove();
                }
                
                // 4. Cập nhật lại từ server để đồng bộ
                await loadUnreadCount();
                await loadNotifications();
                
                // Thông báo cho trang notification nếu đang mở
                notifyNotificationPage('markAllRead', {});
              }
            } catch (e) { 
              console.error('Error marking all as read:', e);
            }
          }
          
          // Function để thông báo cho trang notification khi có thay đổi
          function notifyNotificationPage(action, data) {
            console.log('[AdminLayout] Notifying notification page:', action, data);
            
            // Nếu đang ở trang notification, trigger custom event để trang notification lắng nghe
            if (window.location.pathname.includes('/Admin/AdminNotification')) {
              console.log('[AdminLayout] Same page, dispatching custom event');
              window.dispatchEvent(new CustomEvent('notificationMarkedRead', {
                detail: { action: action, data: data }
              }));
            }
            
            // Sử dụng BroadcastChannel để sync giữa các tabs/windows
            try {
              const channel = new BroadcastChannel('admin_notification_sync');
              channel.postMessage({
                action: action,
                data: data,
                timestamp: Date.now()
              });
              console.log('[AdminLayout] Sent via BroadcastChannel');
              channel.close();
            } catch (e) {
              console.log('[AdminLayout] BroadcastChannel not supported, using localStorage fallback');
              // Fallback: sử dụng localStorage event
              localStorage.setItem('admin_notification_update', JSON.stringify({
                action: action,
                data: data,
                timestamp: Date.now()
              }));
              localStorage.removeItem('admin_notification_update');
            }
          }

          // Gắn vào window để onclick trong HTML dùng được
          window.markRead = markRead;
          window.markAllRead = markAllRead;
          window.deleteAdminNotification = async function(id) {
            try {
              const res = await fetch(`/Admin/AdminNotification/Delete/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                  'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) {
              console.error('Error deleting notification:', e);
            }
          }

          // Toggle / Hover popup
          function isOpen() {
            return notifMenu.style.display === 'block';
          }
          async function openMenu() {
            if (!isOpen()) {
              // Check if we have latest HTML from real-time update
              const latestHtml = notifMenu.getAttribute('data-latest-html');
              if (latestHtml) {
                notifMenu.innerHTML = latestHtml;
                notifMenu.removeAttribute('data-latest-html');
              } else {
                await loadNotifications();
              }
              notifMenu.style.display = 'block';
              notifBtn.setAttribute('aria-expanded', 'true');
            }
          }
          function closeMenu() {
            if (isOpen()) {
              notifMenu.style.display = 'none';
              notifBtn.setAttribute('aria-expanded', 'false');
            }
          }

          if (notifBtn && notifMenu) {
            // Hover to open/close
            let hoverTimer;
            notifBtn.addEventListener('mouseenter', async () => {
              clearTimeout(hoverTimer);
              await openMenu();
            });
            notifBtn.addEventListener('mouseleave', () => {
              // Delay nhẹ để cho phép di chuột sang menu mà không đóng ngay
              hoverTimer = setTimeout(() => {
                if (!notifMenu.matches(':hover')) closeMenu();
              }, 120);
            });
            notifMenu.addEventListener('mouseleave', () => {
              closeMenu();
            });
            notifMenu.addEventListener('mouseenter', () => {
              clearTimeout(hoverTimer);
            });

            // Click outside để đóng (desktop/mobile)
            document.addEventListener('click', (e) => {
              if (!notifBtn.contains(e.target) && !notifMenu.contains(e.target)) {
                closeMenu();
              }
            });
          }

          // Khởi chạy
          document.addEventListener('DOMContentLoaded', () => {
            if (notifBadge) {
              loadUnreadCount();
              // Cập nhật mỗi 30 giây
              setInterval(loadUnreadCount, 30000);
            }
          });
        })();

        // ===== SignalR Real-time Notifications for Dropdown =====
        (function() {
          let notificationConnection = null;

          async function initNotificationSignalR() {
            try {
              // Load SignalR if not already loaded
              if (typeof signalR === 'undefined') {
                await new Promise((resolve, reject) => {
                  const script = document.createElement('script');
                  script.src = 'https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js';
                  script.onload = resolve;
                  script.onerror = reject;
                  document.head.appendChild(script);
                });
              }

              // Get backend URL from meta tag or default
              const metaBackendUrl = document.querySelector('meta[name="backend-url"]')?.getAttribute('content');
              const backendUrl = metaBackendUrl || 'http://localhost:5154';
              const hubUrl = `${backendUrl}/hubs/notification`;

              // Create connection
              notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl(hubUrl, {
                  skipNegotiation: false,
                  transport: signalR.HttpTransportType.WebSockets | signalR.HttpTransportType.ServerSentEvents | signalR.HttpTransportType.LongPolling
                })
                .withAutomaticReconnect({
                  nextRetryDelayInMilliseconds: retryContext => {
                    if (retryContext.elapsedMilliseconds < 60000) {
                      return 2000;
                    } else {
                      return 10000;
                    }
                  }
                })
                .configureLogging(signalR.LogLevel.Warning)
                .build();

              // Handle connection events
              notificationConnection.onreconnecting(() => {
                console.log('[NotificationHub] Reconnecting...');
              });

              notificationConnection.onreconnected(() => {
                console.log('[NotificationHub] Reconnected');
                if (notificationConnection.state === signalR.HubConnectionState.Connected) {
                  notificationConnection.invoke('JoinAdminGroup').catch(err => {
                    console.error('[NotificationHub] Error joining admin group:', err);
                  });
                }
              });

              notificationConnection.onclose(() => {
                console.log('[NotificationHub] Connection closed');
              });

              // Listen for new notifications - GỌI NGAY LẬP TỨC
              notificationConnection.on('ReceiveNotification', (notification) => {
                console.log('[NotificationHub] Received notification in dropdown:', notification);
                // Gọi ngay lập tức, không delay
                handleNewNotification(notification);
              });
              
              // Cũng listen cho event khác nếu có
              notificationConnection.on('NewNotification', (notification) => {
                console.log('[NotificationHub] NewNotification event:', notification);
                handleNewNotification(notification);
              });

              // Start connection
              await notificationConnection.start();
              console.log('[NotificationHub] Connected successfully for dropdown');

              // Join admin group
              await notificationConnection.invoke('JoinAdminGroup');
              console.log('[NotificationHub] Joined admin group for dropdown');

            } catch (error) {
              console.error('[NotificationHub] Error initializing SignalR for dropdown:', error);
            }
          }

          // Throttle để tránh spam nhưng vẫn update nhanh
          let lastUpdateTime = 0;
          const UPDATE_THROTTLE = 100; // Chỉ 100ms throttle

          // Hàm update từ server (gọi ngay lập tức)
          function updateNotificationsFromServer() {
            const now = Date.now();
            if (now - lastUpdateTime < UPDATE_THROTTLE) {
              // Nếu vừa update gần đây, bỏ qua
              return;
            }
            lastUpdateTime = now;

            const notifMenu = document.getElementById('notificationMenu');
            const notifBadge = document.getElementById('notificationBadge');
            
            // Gọi song song: GetUnreadCount và GetNotificationsPartial
            Promise.all([
              fetch('/Admin/AdminNotification/GetUnreadCount').then(r => r.json()).catch(() => ({ count: 0 })),
              fetch('/Admin/AdminNotification/GetNotificationsPartial').then(r => r.text()).catch(() => '')
            ])
            .then(([countData, html]) => {
              // Update badge với số đếm chính xác từ server
              if (notifBadge) {
                const serverCount = countData?.count || 0;
                if (serverCount > 0) {
                  notifBadge.textContent = serverCount;
                  notifBadge.style.setProperty('display', 'inline-flex', 'important');
                  notifBadge.style.setProperty('visibility', 'visible', 'important');
                  notifBadge.style.setProperty('opacity', '1', 'important');
                } else {
                  notifBadge.style.setProperty('display', 'none', 'important');
                }
              }

              // Update notificationMenu với HTML mới nhất
              if (html && notifMenu) {
                if (notifMenu.style.display === 'block' || notifMenu.offsetParent !== null) {
                  notifMenu.innerHTML = html;
                }
                notifMenu.setAttribute('data-latest-html', html);
              }
            })
            .catch(err => {
              console.error('Error updating notifications:', err);
            });
          }

          function handleNewNotification(notification) {
            if (!notification) return;

            // Update unread count badge immediately - KHÔNG CHỜ SERVER
            const notifBadge = document.getElementById('notificationBadge');
            if (notifBadge) {
              const currentCount = parseInt(notifBadge.textContent) || 0;
              const newCount = currentCount + 1;
              notifBadge.textContent = newCount;
              notifBadge.style.setProperty('display', 'inline-flex', 'important');
              notifBadge.style.setProperty('visibility', 'visible', 'important');
              notifBadge.style.setProperty('opacity', '1', 'important');
            }

            // Show toast notification immediately
            showNotificationToast(notification);

            // Gọi server NGAY LẬP TỨC (không debounce)
            updateNotificationsFromServer();
          }

          function showNotificationToast(notification) {
            // Create toast notification
            const toast = document.createElement('div');
            toast.className = 'notification-toast';
            toast.innerHTML = `
              <div class="toast-content">
                <div class="toast-icon">
                  <i class="bi bi-bell-fill"></i>
                </div>
                <div class="toast-body">
                  <div class="toast-title">Thông báo mới</div>
                  <div class="toast-message">${escapeHtml(notification.content || notification.Content || '')}</div>
                </div>
                <button class="toast-close" onclick="this.parentElement.parentElement.remove()">
                  <i class="bi bi-x"></i>
                </button>
              </div>
            `;
            
            document.body.appendChild(toast);
            
            // Animate in
            setTimeout(() => toast.classList.add('show'), 100);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
              toast.classList.remove('show');
              setTimeout(() => toast.remove(), 300);
            }, 3000);
          }

          function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
          }

          // Initialize SignalR when page loads
          document.addEventListener('DOMContentLoaded', () => {
            initNotificationSignalR();
            
            // Polling fallback: Cập nhật mỗi 2 giây để đảm bảo không bỏ sót notification
            // Chạy ngay cả khi SignalR đã kết nối (backup)
            setInterval(() => {
              updateNotificationsFromServer();
            }, 2000); // Mỗi 2 giây
          });

          // Cleanup on page unload
          window.addEventListener('beforeunload', () => {
            if (notificationConnection) {
              notificationConnection.stop();
            }
          });
        })();
    </script>

    <script>
        (function () {
            const hubUrl = '@chatHubUrl';
            const currentAccountId = '@accId';

            // Hàm apply badge dùng chung cho realtime
            function applyAdminChatBadge(total) {
                const badge = document.querySelector('[data-chat-count]');
                if (!badge) {
                    console.warn('[Admin ChatHub] Không tìm thấy badge chat');
                    return;
                }

                const num = Number(total ?? 0);
                badge.textContent = num;

                if (num > 0) {
                    badge.style.display = 'inline-flex';
                    badge.classList.remove('is-empty');
                } else {
                    badge.style.display = 'none';
                    badge.classList.add('is-empty');
                }
            }

            async function initAdminChatHub() {
                if (!currentAccountId) {
                    console.warn('[Admin ChatHub] Không có AccountId -> không khởi tạo SignalR');
                    return;
                }

                if (!window.signalR) {
                    console.error('[Admin ChatHub] signalR chưa load');
                    return;
                }

                if (!window.__chatHub) {
                    console.error('[Admin ChatHub] __chatHub wrapper chưa load (file ~/js/chat-hub-signalr.js)');
                    return;
                }

                // Tránh khởi tạo 2 lần
                if (window.__adminChatHubInitialized) return;
                window.__adminChatHubInitialized = true;

                try {
                    // Kết nối tới /chathub và register accountId
                    await window.__chatHub.start(hubUrl, currentAccountId);
                    console.log('[Admin ChatHub] ✅ Connected & Registered');

                    const conn = (window.__chatHub.getConnection && window.__chatHub.getConnection()) || null;

                    const handleTotalUnread = payload => {
                        const total = (payload && typeof payload.total === 'number')
                            ? payload.total
                            : (typeof payload === 'number' ? payload : 0);

                        console.log('[Admin ChatHub] totalUnread:update =', total);
                        applyAdminChatBadge(total);
                    };

                    const handleConversationListUpdate = async item => {
                        console.log('[Admin ChatHub] conversationList:update', item);
                        // Gọi lại API cũ để sync chính xác
                        if (typeof updateAdminChatUnreadCount === 'function') {
                            await updateAdminChatUnreadCount();
                        }
                    };

                    if (conn) {
                        conn.on('totalUnread:update', handleTotalUnread);
                        conn.on('conversationList:update', handleConversationListUpdate);
                    } else {
                        // Fallback: vẫn dùng wrapper nếu không lấy được conn
                        window.__chatHub.on('totalUnread:update', handleTotalUnread);
                        window.__chatHub.on('conversationList:update', handleConversationListUpdate);
                    }
                } catch (e) {
                    console.error('[Admin ChatHub] Lỗi khởi tạo SignalR:', e);
                }
            }

            document.addEventListener('DOMContentLoaded', () => {
                // Polling cũ của bạn vẫn chạy (updateAdminChatUnreadCount + setInterval)
                // Bây giờ thêm realtime qua SignalR
                initAdminChatHub();
            });
        })();
    </script>

    <!-- Settings Dropdown Script -->
    <script>
        // Settings dropdown toggle
        (function() {
            const settingsBtn = document.getElementById('settingsBtn');
            const settingsMenu = document.getElementById('settingsMenu');
            
            if (settingsBtn && settingsMenu) {
                // Toggle menu khi click vào settings button
                settingsBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const isOpen = settingsMenu.style.display !== 'none';
                    settingsMenu.style.display = isOpen ? 'none' : 'block';
                });
                
                // Đóng menu khi click bên ngoài
                document.addEventListener('click', function(e) {
                    if (!settingsBtn.contains(e.target) && !settingsMenu.contains(e.target)) {
                        settingsMenu.style.display = 'none';
                    }
                });
                
                // Đóng menu khi click vào item trong menu
                settingsMenu.addEventListener('click', function(e) {
                    if (e.target.closest('.settings-item')) {
                        // Không đóng menu ngay, để user có thể thấy feedback
                        setTimeout(() => {
                            settingsMenu.style.display = 'none';
                        }, 200);
                    }
                });
            }
        })();
    </script>

