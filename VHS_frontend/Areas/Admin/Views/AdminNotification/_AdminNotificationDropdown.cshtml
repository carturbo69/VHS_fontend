@model List<VHS_frontend.Areas.Admin.Models.Notification.AdminNotificationDTO>

<li class="notif-header">
    <div class="d-flex align-items-center">
        <span>Thông báo</span>
    </div>
</li>

@if (Model == null || !Model.Any())
{
    <li class="notif-empty">
        <div class="text-center py-4">
            <i class="bi bi-bell-slash" style="font-size: 2rem; opacity: 0.3;"></i>
            <p class="mb-0 mt-2 text-muted">Không có thông báo nào</p>
        </div>
    </li>
}
else
{
    @foreach (var notification in Model)
    {
        <li class="notification-item @(notification.IsRead == true ? "read" : "unread")" data-notification-id="@notification.NotificationId">
            <a href="#" class="notification-link" onclick="markRead('@notification.NotificationId'); return false;">
                <div class="notification-content">
                    <div class="notification-text">@notification.Content</div>
                    <div class="notification-meta">
                        <small class="text-muted">
                            <i class="bi bi-clock me-1"></i>
                            @(notification.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                        </small>
                        @if (!string.IsNullOrEmpty(notification.NotificationType))
                        {
                            <span class="badge type-badge">@notification.NotificationType</span>
                        }
                    </div>
                </div>
            </a>
        </li>
    }
    
    <li class="notif-divider"></li>
    <li class="notif-action">
        <a href="#" onclick="markAllRead(); return false;">
            <i class="bi bi-check-circle me-2"></i>
            <span>Đánh dấu tất cả đã đọc</span>
        </a>
    </li>
    <li class="notif-action">
        <a href="/Admin/AdminNotification?tab=inbox">
            <i class="bi bi-arrow-right-circle me-2"></i>
            <span>Xem tất cả thông báo</span>
        </a>
    </li>
}

