@model VHS_frontend.Areas.Admin.Models.Complaint.PaginatedAdminComplaintDTO
@{
    ViewData["Title"] = "Quản lý Khiếu nại";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-service-management.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-complaint.css" asp-append-version="true" />
}

<div class="admin-service-management">
    <!-- Header -->
    <div class="admin-service-management__header">
        <h3><i class="bi bi-exclamation-triangle-fill"></i>Quản lý Khiếu nại</h3>
        <button class="btn btn-secondary btn-sm" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
        </button>
    </div>

    <!-- Filter Section -->
    <div class="card-x mb-4 filter-card">
        <div class="card-body p-4">
            <form method="get" class="filter-form">
                <!-- Row 1: Trạng thái, Số lượng, Lọc -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <label for="Status" class="form-label filter-label">
                            <i class="bi bi-funnel-fill me-2"></i>Trạng thái
                        </label>
                        <div class="filter-input-wrapper">
                            <select name="Status" id="Status" class="form-select filter-select">
                                <option value="">Tất cả</option>
                                <option value="Pending" selected="@(ViewBag.Filter?.Status == "Pending")">Chờ xử lý</option>
                                <option value="InReview" selected="@(ViewBag.Filter?.Status == "InReview")">Đang xem xét</option>
                                <option value="Resolved" selected="@(ViewBag.Filter?.Status == "Resolved")">Đã giải quyết</option>
                                <option value="Rejected" selected="@(ViewBag.Filter?.Status == "Rejected")">Đã từ chối</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="PageSize" class="form-label filter-label">
                            <i class="bi bi-list-ol me-2"></i>Số lượng
                        </label>
                        <div class="filter-input-wrapper">
                            <select name="PageSize" id="PageSize" class="form-select filter-select">
                                <option value="5" selected="@(ViewBag.Filter?.PageSize == 5)">5</option>
                                <option value="10" selected="@(ViewBag.Filter?.PageSize == 10)">10</option>
                                <option value="20" selected="@(ViewBag.Filter?.PageSize == 20)">20</option>
                                <option value="50" selected="@(ViewBag.Filter?.PageSize == 50)">50</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label filter-label d-block">&nbsp;</label>
                        <button type="submit" class="btn btn-filter w-100">
                            <i class="bi bi-funnel-fill me-2"></i>Lọc
                        </button>
                    </div>
                </div>
                <!-- Row 2: Loại, Tìm kiếm, Reset -->
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="Type" class="form-label filter-label">
                            <i class="bi bi-tags-fill me-2"></i>Loại
                        </label>
                        <div class="filter-input-wrapper">
                            <select name="Type" id="Type" class="form-select filter-select">
                                <option value="">Tất cả</option>
                                <option value="ServiceQuality" selected="@(ViewBag.Filter?.Type == "ServiceQuality")">Chất lượng dịch vụ</option>
                                <option value="ProviderBehavior" selected="@(ViewBag.Filter?.Type == "ProviderBehavior")">Hành vi nhà cung cấp</option>
                                <option value="PriceIssue" selected="@(ViewBag.Filter?.Type == "PriceIssue")">Vấn đề giá</option>
                                <option value="Delay" selected="@(ViewBag.Filter?.Type == "Delay")">Trễ hẹn</option>
                                <option value="Other" selected="@(ViewBag.Filter?.Type == "Other")">Khác</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label for="Search" class="form-label filter-label">
                            <i class="bi bi-search me-2"></i>Tìm kiếm
                        </label>
                        <div class="filter-input-wrapper">
                            <input type="text" name="Search" id="Search" class="form-control filter-input" 
                                   placeholder="Tên khách hàng, email..." 
                                   value="@ViewBag.Filter?.Search">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label filter-label d-block">&nbsp;</label>
                        <a href="@Url.Action("Index")" class="btn btn-reset w-100">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);">
                    <i class="bi bi-receipt"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@Model.TotalCount</div>
                    <div class="stat-card__label">Tổng khiếu nại</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@Model.Complaints.Count(c => c.Status == "Pending")</div>
                    <div class="stat-card__label">Chờ xử lý</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #a78bfa 100%);">
                    <i class="bi bi-search"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@Model.Complaints.Count(c => c.Status == "InReview")</div>
                    <div class="stat-card__label">Đang xem xét</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@Model.Complaints.Count(c => c.Status == "Resolved")</div>
                    <div class="stat-card__label">Đã giải quyết</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Complaints List -->
    <div class="card-x">
        <div class="card-header">
            <span><i class="bi bi-list-ul me-2"></i>Danh sách khiếu nại (@Model.TotalCount)</span>
        </div>
        <div class="card-body">
            @if (Model.Complaints.Any())
            {
                @foreach (var complaint in Model.Complaints)
                    {
                        <div class="complaint-item">
                            <div class="complaint-header">
                                <div class="complaint-meta">
                                    <div class="complaint-id">
                                        <span class="badge bg-secondary">#@complaint.ComplaintId.ToString().Substring(0, 8)</span>
                                    </div>
                                    <div class="complaint-date">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        <small>@(complaint.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</small>
                                    </div>
                                </div>
                                <div class="complaint-status">
                                    @switch(complaint.Status)
                                    {
                                        case "Pending":
                                            <span class="status-badge status-pending">
                                                <i class="bi bi-hourglass-split"></i><span> Chờ xử lý</span>
                                            </span>
                                            break;
                                        case "InReview":
                                            <span class="status-badge status-processing">
                                                <i class="bi bi-search"></i><span> Đang xem xét</span>
                                            </span>
                                            break;
                                        case "Resolved":
                                            <span class="status-badge status-completed">
                                                <i class="bi bi-check-circle"></i><span> Đã giải quyết</span>
                                            </span>
                                            break;
                                        case "Rejected":
                                            <span class="status-badge status-canceled">
                                                <i class="bi bi-x-circle"></i><span> Đã từ chối</span>
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@complaint.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            <div class="complaint-content">
                                <div class="complaint-title">
                                    <h5 class="mb-2">@complaint.Title</h5>
                                    <span class="badge bg-info">@complaint.ComplaintType</span>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(complaint.Description))
                                {
                                    <div class="complaint-description">
                                        <p class="text-muted mb-3" title="@complaint.Description">@complaint.Description</p>
                                    </div>
                                }

                                <div class="complaint-details">
                                    <div class="detail-item">
                                        <div class="info-icon-wrapper"><i class="bi bi-person-circle"></i></div>
                                        <div class="info-content">
                                            <strong>Khách hàng</strong>
                                            <div class="info-value">@complaint.CustomerName</div>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(complaint.ProviderName))
                                    {
                                        <div class="detail-item">
                                            <div class="info-icon-wrapper"><i class="bi bi-briefcase"></i></div>
                                            <div class="info-content">
                                                <strong>Nhà cung cấp</strong>
                                                <div class="info-value">@complaint.ProviderName</div>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(complaint.ServiceName))
                                    {
                                        <div class="detail-item">
                                            <div class="info-icon-wrapper"><i class="bi bi-gear"></i></div>
                                            <div class="info-content">
                                                <strong>Dịch vụ</strong>
                                                <div class="info-value">@complaint.ServiceName</div>
                                            </div>
                                        </div>
                                    }
                                    @if (complaint.DaysSinceCreated > 0)
                                    {
                                        <div class="detail-item">
                                            <div class="info-icon-wrapper"><i class="bi bi-clock-history"></i></div>
                                            <div class="info-content">
                                                <strong>Thời gian</strong>
                                                <div class="info-value">@complaint.DaysSinceCreated ngày trước</div>
                                            </div>
                                        </div>
                                    }
                                </div>

                                @if (complaint.AttachmentUrls != null && complaint.AttachmentUrls.Any())
                                {
                                    <div class="complaint-attachments mt-3">
                                        <i class="bi bi-paperclip me-2"></i>
                                        <span class="text-muted">@complaint.AttachmentUrls.Length tệp đính kèm</span>
                                    </div>
                                }
                            </div>

                            <div class="complaint-actions">
                                <a href="@Url.Action("Details", new { id = complaint.ComplaintId })" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    }
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                    <h3 class="mt-3 mb-0">Chưa có khiếu nại nào</h3>
                    <p class="mt-2 mb-0">Hiện tại không có khiếu nại nào trong hệ thống.</p>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination mb-0 justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { Page = Model.Page - 1, 
                                    Status = ViewBag.Filter?.Status, 
                                    Type = ViewBag.Filter?.Type, 
                                    Search = ViewBag.Filter?.Search,
                                    PageSize = ViewBag.Filter?.PageSize })">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.Page)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else if (i == 1 || i == Model.TotalPages || (i >= Model.Page - 2 && i <= Model.Page + 2))
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { Page = i, 
                                        Status = ViewBag.Filter?.Status, 
                                        Type = ViewBag.Filter?.Type, 
                                        Search = ViewBag.Filter?.Search,
                                        PageSize = ViewBag.Filter?.PageSize })">@i</a>
                                </li>
                            }
                            else if (i == Model.Page - 3 || i == Model.Page + 3)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { Page = Model.Page + 1, 
                                    Status = ViewBag.Filter?.Status, 
                                    Type = ViewBag.Filter?.Type, 
                                    Search = ViewBag.Filter?.Search,
                                    PageSize = ViewBag.Filter?.PageSize })">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto refresh every 60 seconds
        setInterval(() => {
            location.reload();
        }, 60000);

        // Highlight filter inputs
        document.querySelectorAll('.filter-select, .filter-input').forEach(input => {
            input.addEventListener('change', function() {
                // Border color will be handled by CSS focus state
            });
        });
    </script>
}

