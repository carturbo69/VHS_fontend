@model List<VHS_frontend.Areas.Admin.Models.Provider.ProviderDTO>
@{
    ViewData["Title"] = "Quản lý dịch vụ theo Provider";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    
    // Thống kê
    var totalProviders = Model?.Count ?? 0;
    var providersWithPendingServices = Model?.Count(p => p.PendingUpdateCount > 0) ?? 0;
    var totalPendingServices = Model?.Sum(p => p.PendingUpdateCount) ?? 0;
    var providersWithoutPending = totalProviders - providersWithPendingServices;
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-service-management.css" asp-append-version="true" />
}

<div class="admin-service-management">
    <div class="admin-service-management__header">
        <h3><i class="bi bi-briefcase-fill"></i>Quản lý dịch vụ theo Nhà cung cấp</h3>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value" id="statTotalProviders">@totalProviders</div>
                    <div class="stat-card__label">Tổng nhà cung cấp</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value" id="statProvidersWithPending">@providersWithPendingServices</div>
                    <div class="stat-card__label">Có dịch vụ chờ duyệt</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value" id="statTotalPendingServices">@totalPendingServices</div>
                    <div class="stat-card__label">Tổng dịch vụ chờ duyệt</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value" id="statProvidersWithoutPending">@providersWithoutPending</div>
                    <div class="stat-card__label">Không có dịch vụ chờ</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-x">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-ul me-2"></i>Danh sách Nhà cung cấp</span>
            <span class="badge bg-secondary" id="providerCount">@totalProviders nhà cung cấp</span>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <!-- Search Box -->
                <div class="mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" 
                               id="searchInput" 
                               class="form-control" 
                               placeholder="Tìm kiếm theo tên tài khoản, tên nhà cung cấp hoặc email..." 
                               autocomplete="off" />
                        <button class="btn btn-outline-secondary" type="button" id="clearSearchBtn" style="display: none;">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>

                <!-- No results message (hidden by default) -->
                <div id="noResultsMessage" class="alert alert-info" style="display: none;">
                    <i class="bi bi-info-circle me-2"></i>Không tìm thấy nhà cung cấp nào phù hợp với từ khóa tìm kiếm.
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="providerTable">
                        <thead>
                            <tr>
                                <th><i class="bi bi-person me-2"></i>Tên tài khoản</th>
                                <th><i class="bi bi-building me-2"></i>Tên nhà cung cấp</th>
                                <th><i class="bi bi-envelope me-2"></i>Email</th>
                                <th><i class="bi bi-bell me-2"></i>Thông báo</th>
                                <th class="text-end"><i class="bi bi-gear me-2"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="providerTableBody">
                        @foreach (var p in Model)
                        {
                            <tr data-account-name="@p.AccountName.ToLower()" 
                                data-provider-name="@(string.IsNullOrEmpty(p.ProviderName) ? "" : p.ProviderName.ToLower())" 
                                data-email="@p.Email.ToLower()"
                                data-pending-count="@p.PendingUpdateCount">
                                <td><strong>@p.AccountName</strong></td>
                                <td>
                                    @if (string.IsNullOrEmpty(p.ProviderName))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else
                                    {
                                        @p.ProviderName
                                    }
                                </td>
                                <td>@p.Email</td>
                                <td>
                                    @if (p.PendingUpdateCount > 0)
                                    {
                                        <span class="badge bg-warning" title="Có @p.PendingUpdateCount dịch vụ đang chờ admin duyệt">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                            @p.PendingUpdateCount dịch vụ chờ duyệt
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@p.Id" asp-route-name="@p.AccountName" class="btn btn-sm btn-primary">
                                        <i class="bi bi-eye me-1"></i>Xem dịch vụ
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>    
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="mt-3 mb-0">Không có nhà cung cấp nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clearSearchBtn = document.getElementById('clearSearchBtn');
            const providerTableBody = document.getElementById('providerTableBody');
            const noResultsMessage = document.getElementById('noResultsMessage');
            const providerTable = document.getElementById('providerTable');

            if (!searchInput || !clearSearchBtn || !providerTableBody) {
                return; // Exit if elements don't exist
            }

            function filterProviders() {
                const searchTerm = searchInput.value.trim().toLowerCase();
                const rows = providerTableBody.querySelectorAll('tr');
                let visibleCount = 0;
                let visibleWithPending = 0;
                let visibleTotalPending = 0;

                rows.forEach(row => {
                    const accountName = row.getAttribute('data-account-name') || '';
                    const providerName = row.getAttribute('data-provider-name') || '';
                    const email = row.getAttribute('data-email') || '';
                    const pendingCount = parseInt(row.getAttribute('data-pending-count') || '0') || 0;
                    
                    const isVisible = searchTerm === '' || 
                        accountName.includes(searchTerm) || 
                        providerName.includes(searchTerm) || 
                        email.includes(searchTerm);

                    if (isVisible) {
                        row.style.display = '';
                        visibleCount++;
                        if (pendingCount > 0) {
                            visibleWithPending++;
                            visibleTotalPending += pendingCount;
                        }
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update UI
                clearSearchBtn.style.display = searchTerm ? 'inline-block' : 'none';

                if (visibleCount === 0) {
                    noResultsMessage.style.display = 'block';
                    if (providerTable) providerTable.style.display = 'none';
                } else {
                    noResultsMessage.style.display = 'none';
                    if (providerTable) providerTable.style.display = '';
                }

                // Cập nhật statistics
                updateStatistics(visibleCount, visibleWithPending, visibleTotalPending);
            }

            function updateStatistics(total, withPending, totalPending) {
                const statTotalProviders = document.getElementById('statTotalProviders');
                const statProvidersWithPending = document.getElementById('statProvidersWithPending');
                const statTotalPendingServices = document.getElementById('statTotalPendingServices');
                const statProvidersWithoutPending = document.getElementById('statProvidersWithoutPending');
                const providerCount = document.getElementById('providerCount');

                if (statTotalProviders) statTotalProviders.textContent = total;
                if (statProvidersWithPending) statProvidersWithPending.textContent = withPending;
                if (statTotalPendingServices) statTotalPendingServices.textContent = totalPending;
                if (statProvidersWithoutPending) statProvidersWithoutPending.textContent = total - withPending;
                if (providerCount) providerCount.textContent = total + ' nhà cung cấp';
            }

            // Search input event (live search)
            searchInput.addEventListener('input', filterProviders);

            // Clear search button
            clearSearchBtn.addEventListener('click', function() {
                searchInput.value = '';
                filterProviders();
                searchInput.focus();
            });

            // Allow Escape key to clear search
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    searchInput.value = '';
                    filterProviders();
                    searchInput.focus();
                }
            });
        });
    </script>
}

    