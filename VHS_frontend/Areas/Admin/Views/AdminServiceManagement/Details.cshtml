@model List<VHS_frontend.Areas.Provider.Models.Service.ServiceProviderReadDTO>
@{
    var providerName = ViewBag.ProviderName as string ?? "Provider";
    var providerId = ViewBag.ProviderId as Guid?;
    ViewData["Title"] = $"Dịch vụ của {providerName}";
    Layout = "~/Areas/Admin/Views/_AdminLayout.cshtml";
    
    // Thống kê
    var totalServices = Model?.Count ?? 0;
    var pendingServices = Model?.Count(s => s.Status == "Pending") ?? 0;
    var activeServices = Model?.Count(s => s.Status == "Active") ?? 0;
    var pendingUpdateServices = Model?.Count(s => s.Status == "PendingUpdate") ?? 0;
    var otherServices = totalServices - pendingServices - activeServices - pendingUpdateServices;
    
    // Hàm chuyển đổi UnitType sang tiếng Việt
    string GetUnitTypeVietnamese(string? unitType)
    {
        if (string.IsNullOrEmpty(unitType)) return unitType ?? "";
        return unitType switch
        {
            "Hour" => "Giờ",
            "Day" => "Ngày",
            "Visit" => "Lần",
            "Apartment" => "Căn",
            "Room" => "Phòng",
            "SquareMeter" => "Mét vuông (m²)",
            "Person" => "Người",
            "Package" => "Gói",
            "Event" => "Sự kiện",
            _ => unitType
        };
    }
    
    // Hàm lấy ảnh đầu tiên
    string? GetFirstImage(string? images)
    {
        if (string.IsNullOrEmpty(images)) return null;
        var imageList = images.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
        return imageList.FirstOrDefault()?.Trim();
    }
    
    // Hàm convert URL
    string ToUrl(string? path)
    {
        if (string.IsNullOrEmpty(path)) return "/images/VeSinh.jpg";
        if (path.StartsWith("http")) return path;
        var backendBase = "http://localhost:5154";
        return $"{backendBase.TrimEnd('/')}/{path.TrimStart('/')}";
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-service-management.css" asp-append-version="true" />
}

<div class="admin-service-management">
    <!-- Header -->
    <div class="admin-service-management__header">
        <h3><i class="bi bi-briefcase-fill"></i>Dịch vụ của @providerName</h3>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                    <i class="bi bi-briefcase"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@totalServices</div>
                    <div class="stat-card__label">Tổng dịch vụ</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@pendingServices</div>
                    <div class="stat-card__label">Chờ duyệt</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@pendingUpdateServices</div>
                    <div class="stat-card__label">Chờ duyệt chỉnh sửa</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card-x stat-card">
                <div class="stat-card__icon" style="background: linear-gradient(135deg, #10b981 0%, #34d399 100%);">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card__content">
                    <div class="stat-card__value">@activeServices</div>
                    <div class="stat-card__label">Đã duyệt</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Search -->
    <div class="card-x mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label"><i class="bi bi-search me-2"></i>Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" 
                               id="searchInput" 
                               class="form-control" 
                               placeholder="Tìm theo tên, mô tả, danh mục..." 
                               autocomplete="off" />
                        <button class="btn btn-outline-secondary" type="button" id="clearSearchBtn" style="display: none;">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label"><i class="bi bi-funnel me-2"></i>Lọc theo trạng thái</label>
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Pending">Chờ duyệt</option>
                        <option value="Active">Đã duyệt</option>
                        <option value="PendingUpdate">Chờ duyệt chỉnh sửa</option>
                        <option value="Other">Khác</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Table -->
    <div class="card-x">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list-ul me-2"></i>Danh sách dịch vụ</span>
            <span class="badge bg-secondary" id="serviceCount">@totalServices dịch vụ</span>
        </div>
        <div class="card-body">
            <!-- No results message -->
            <div id="noResultsMessage" class="alert alert-info" style="display: none;">
                <i class="bi bi-info-circle me-2"></i>Không tìm thấy dịch vụ nào phù hợp với bộ lọc.
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="servicesTable">
                        <thead>
                            <tr>
                                <th style="width: 80px;"><i class="bi bi-image me-2"></i>Ảnh</th>
                                <th><i class="bi bi-tag me-2"></i>Tên dịch vụ</th>
                                <th><i class="bi bi-folder me-2"></i>Danh mục</th>
                                <th><i class="bi bi-currency-dollar me-2"></i>Giá</th>
                                <th><i class="bi bi-rulers me-2"></i>Đơn vị</th>
                                <th><i class="bi bi-info-circle me-2"></i>Trạng thái</th>
                                <th class="text-end"><i class="bi bi-gear me-2"></i>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="servicesTableBody">
                        @foreach (var s in Model)
                        {
                            var firstImage = GetFirstImage(s.Images);
                            var serviceStatus = s.Status ?? "Unknown";
                            <tr data-service-title="@s.Title.ToLower()" 
                                data-service-description="@(s.Description?.ToLower() ?? "")" 
                                data-service-category="@s.CategoryName.ToLower()"
                                data-service-status="@serviceStatus.ToLower()">
                                <td>
                                    @if (!string.IsNullOrEmpty(firstImage))
                                    {
                                        <img src="@ToUrl(firstImage)" 
                                             alt="@s.Title" 
                                             class="img-thumbnail service-thumbnail" 
                                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;"
                                             onerror="this.src='/images/VeSinh.jpg';" />
                                    }
                                    else
                                    {
                                        <div class="service-thumbnail-placeholder">
                                            <i class="bi bi-image"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@s.Title</strong>
                                   
                                    @if (s.Tags != null && s.Tags.Any())
                                    {
                                        <div class="mt-1">
                                            @foreach (var tag in s.Tags.Take(3))
                                            {
                                                <span class="badge bg-info me-1" style="font-size: 0.7rem;">@tag.Name</span>
                                            }
                                            @if (s.Tags.Count > 3)
                                            {
                                                <span class="text-muted small">+@(s.Tags.Count - 3)</span>
                                            }
                                        </div>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@s.CategoryName</span></td>
                                <td><strong class="text-success">@s.Price.ToString("N0") VNĐ</strong></td>
                                <td>@GetUnitTypeVietnamese(s.UnitType) (@s.BaseUnit)</td>
                                <td>
                                    @if (string.Equals(s.Status, "Pending", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-warning">Đăng ký</span>
                                    }
                                    else if (string.Equals(s.Status, "Active", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (string.Equals(s.Status, "PendingUpdate", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge bg-info">Chờ duyệt chỉnh sửa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@s.Status</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex gap-2 justify-content-end align-items-center flex-wrap">
                                        @{
                                            var detailReturnUrl = Context.Request?.Path + Context.Request?.QueryString;
                                            var detailUrl = Url.Action("Detail", "AdminServiceApproval", new { area = "Admin", id = s.ServiceId, returnUrl = detailReturnUrl });
                                            var currentUrl = Context.Request?.Path + Context.Request?.QueryString;
                                        }
                                        <a href="@detailUrl" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-eye me-1"></i>Xem chi tiết
                                        </a>
                                        @if (string.Equals(s.Status, "Pending", StringComparison.OrdinalIgnoreCase) || string.Equals(s.Status, "PendingUpdate", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <form asp-area="Admin" asp-controller="AdminServiceApproval" asp-action="Approve" method="post" class="d-inline m-0">
                                                <input type="hidden" name="id" value="@s.ServiceId" />
                                                <input type="hidden" name="returnUrl" value="@currentUrl" />
                                                <button type="submit" class="btn btn-approval btn-approval-approve btn-sm">
                                                    <i class="bi bi-check2 me-1"></i>@(string.Equals(s.Status, "PendingUpdate", StringComparison.OrdinalIgnoreCase) ? "Duyệt chỉnh sửa" : "Duyệt")
                                                </button>
                                            </form>
                                            <button class="btn btn-approval btn-approval-reject btn-sm" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#rejectModal_@s.ServiceId" 
                                                    data-id="@s.ServiceId" 
                                                    data-status="@s.Status">
                                                <i class="bi bi-x-lg me-1"></i>Từ chối
                                            </button>
                                            
                                            <!-- Reject Modal for each service -->
                                            <div class="modal fade" id="rejectModal_@s.ServiceId" tabindex="-1" aria-labelledby="rejectModalLabel_@s.ServiceId" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="rejectModalLabel_@s.ServiceId">
                                                                <i class="bi bi-x-circle me-2"></i>Lý do từ chối
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <form asp-area="Admin" asp-controller="AdminServiceApproval" asp-action="Reject" method="post">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="id" value="@s.ServiceId" />
                                                                <input type="hidden" name="returnUrl" value="@currentUrl" />
                                                                <label class="form-label">Lý do từ chối (tuỳ chọn)</label>
                                                                <textarea class="form-control" name="reason" rows="4" placeholder="Nhập lý do từ chối dịch vụ này..."></textarea>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                    <i class="bi bi-x me-1"></i>Hủy
                                                                </button>
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="bi bi-check-lg me-1"></i>Xác nhận từ chối
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="mt-3 mb-0">Nhà cung cấp này chưa có dịch vụ nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clearSearchBtn = document.getElementById('clearSearchBtn');
            const statusFilter = document.getElementById('statusFilter');
            const servicesTableBody = document.getElementById('servicesTableBody');
            const noResultsMessage = document.getElementById('noResultsMessage');
            const servicesTable = document.getElementById('servicesTable');
            const serviceCount = document.getElementById('serviceCount');

            if (!searchInput || !statusFilter || !servicesTableBody) return;

            function filterServices() {
                const searchTerm = searchInput.value.trim().toLowerCase();
                const statusValue = statusFilter.value;
                const rows = servicesTableBody.querySelectorAll('tr');
                let visibleCount = 0;

                rows.forEach(row => {
                    const title = row.getAttribute('data-service-title') || '';
                    const description = row.getAttribute('data-service-description') || '';
                    const category = row.getAttribute('data-service-category') || '';
                    const status = row.getAttribute('data-service-status') || '';

                    // Search filter
                    const matchesSearch = searchTerm === '' || 
                        title.includes(searchTerm) || 
                        description.includes(searchTerm) || 
                        category.includes(searchTerm);

                    // Status filter
                    let matchesStatus = true;
                    if (statusValue) {
                        if (statusValue === 'Other') {
                            matchesStatus = status !== 'pending' && status !== 'active' && status !== 'pendingupdate';
                        } else {
                            matchesStatus = status === statusValue.toLowerCase();
                        }
                    }

                    if (matchesSearch && matchesStatus) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update UI
                clearSearchBtn.style.display = searchTerm ? 'inline-block' : 'none';
                serviceCount.textContent = visibleCount + ' dịch vụ';

                if (visibleCount === 0) {
                    noResultsMessage.style.display = 'block';
                    if (servicesTable) servicesTable.style.display = 'none';
                } else {
                    noResultsMessage.style.display = 'none';
                    if (servicesTable) servicesTable.style.display = '';
                }
            }

            // Event listeners
            searchInput.addEventListener('input', filterServices);
            statusFilter.addEventListener('change', filterServices);
            
            clearSearchBtn.addEventListener('click', function() {
                searchInput.value = '';
                filterServices();
                searchInput.focus();
            });

            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    searchInput.value = '';
                    filterServices();
                    searchInput.focus();
                }
            });
        });
    </script>
}

