            const msg = await readJsonMessage(res);
            if (res.status === 409) {
              showNotice(msg || 'Mã voucher đã tồn tại, vui lòng nhập mã khác.', 'error', 3000);
              vCode.classList.add('is-invalid');
            } else if (res.status === 400 || res.status === 422) {
              showNotice(msg || 'Dữ liệu không hợp lệ. Vui lòng kiểm tra lại các trường.', 'error', 3000);
            } else if (res.status === 404) {
              showNotice(msg || 'Không tìm thấy voucher để cập nhật.', 'error', 3000);
            } else {
              showNotice(msg || 'Có lỗi xảy ra. Vui lòng thử lại.', 'error', 3000);
            }

          } catch (err) {
            const errorMsg = 'Không thể gửi yêu cầu. Vui lòng thử lại.';
            showNotice(errorMsg, 'error', 3000);
          }
        });

        // Refresh trạng thái thời gian khi trang load xong
        // Sử dụng nhiều cách để đảm bảo chạy
        function initTimeStateRefresh() {
          function runRefresh() {
            setTimeout(function() {
              refreshAllTimeStates();
            }, 200); // Đợi 200ms để đảm bảo DOM đã render xong
          }
          
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', runRefresh);
          } else {
            // DOM đã sẵn sàng, chạy ngay
            runRefresh();
          }
          
          window.addEventListener('load', function() {
            setTimeout(refreshAllTimeStates, 300);
          });
        }
        
        initTimeStateRefresh();

        // Refresh lại trạng thái sau mỗi phút để cập nhật real-time
        setInterval(function() {
          refreshAllTimeStates();
        }, 60000); // Mỗi 60 giây
        
        // Expose function để có thể gọi từ console để test
        window.refreshVoucherStates = refreshAllTimeStates;
    </script>
