@model List<VHS_frontend.Areas.Admin.Models.Payment.PendingProviderPaymentDTO>

<div class="provider-payments-content">
    <div class="section-header">
        <h2>Đã phê duyệt thanh toán</h2>
        <p>Danh sách các booking đã được phê duyệt thanh toán cho nhà cung cấp</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="payments-list">
            @foreach (var payment in Model)
            {
                <div class="payment-card">
                    <div class="payment-header">
                        <div class="payment-id">
                            <span class="badge">Booking #@payment.BookingId.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="payment-status">
                            <span class="status-badge status-completed">
                                <i class="bi bi-check-circle"></i>
                                Đã phê duyệt
                            </span>
                        </div>
                    </div>

                    <div class="payment-content">
                        <div class="payment-info-row">
                            <div class="info-item">
                                <i class="bi bi-building"></i>
                                <div>
                                    <strong>Nhà cung cấp:</strong>
                                    <div>@payment.ProviderName</div>
                                    <small>@payment.ProviderEmail</small>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-gear"></i>
                                <div>
                                    <strong>Dịch vụ:</strong>
                                    <div>@payment.ServiceName</div>
                                </div>
                            </div>
                        </div>

                        <div class="payment-info-row">
                            <div class="info-item">
                                <i class="bi bi-calendar3"></i>
                                <div>
                                    <strong>Ngày đặt:</strong>
                                    <div>@payment.BookingDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-check-circle"></i>
                                <div>
                                    <strong>Hoàn thành:</strong>
                                    <div>@payment.CompletionDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>

                        <div class="payment-amounts">
                            <div class="amount-item">
                                <span class="amount-label">Tổng doanh thu:</span>
                                <span class="amount-value">@payment.ServiceAmount.ToString("N0") VNĐ</span>
                            </div>
                            <div class="amount-item highlight">
                                <span class="amount-label">Đã thanh toán cho provider:</span>
                                <span class="amount-value">@payment.ProviderCommission.ToString("N0") VNĐ</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3>Chưa có thanh toán nào đã được phê duyệt</h3>
            <p>Danh sách các booking đã được phê duyệt thanh toán cho provider sẽ hiển thị ở đây.</p>
        </div>
    }
</div>

