@model List<VHS_frontend.Areas.Admin.Models.Payment.UnconfirmedBookingRefundDTO>

<div class="refunds-content">
    <div class="section-header">
        <h2>Đã hoàn tiền</h2>
        <p>Danh sách các đơn hàng đã được hoàn tiền thành công</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="bookings-list">
            @foreach (var booking in Model)
            {
                <div class="booking-card">
                    <div class="booking-header">
                        <div class="booking-id">
                            <span class="badge">Đơn hàng #@booking.BookingId.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="booking-status">
                            <span class="status-badge status-completed">
                                <i class="bi bi-check-circle"></i>
                                Đã hoàn tiền
                            </span>
                        </div>
                    </div>

                    <div class="booking-content">
                        <div class="booking-info-row">
                            <div class="info-item">
                                <i class="bi bi-person-circle"></i>
                                <div>
                                    <strong>Khách hàng:</strong>
                                    <div>@booking.CustomerName</div>
                                    <small>@booking.CustomerEmail</small>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-gear"></i>
                                <div>
                                    <strong>Dịch vụ:</strong>
                                    <div>@booking.ServiceName</div>
                                </div>
                            </div>
                        </div>

                        <div class="booking-info-row">
                            <div class="info-item">
                                <i class="bi bi-calendar3"></i>
                                <div>
                                    <strong>Ngày đặt:</strong>
                                    <div>@booking.BookingDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-cash-stack"></i>
                                <div>
                                    <strong>Số tiền đã hoàn:</strong>
                                    <div class="amount highlight">@booking.PaymentAmount.ToString("N0") VNĐ</div>
                                </div>
                            </div>
                        </div>

                        @if (booking.PaymentCreatedAt.HasValue)
                        {
                            <div class="payment-info">
                                <small>
                                    <i class="bi bi-clock"></i>
                                    Ngày hoàn tiền: @booking.PaymentCreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(booking.CancelReason))
                        {
                            <div class="cancel-info mt-2 p-2 bg-light rounded">
                                <strong><i class="bi bi-info-circle"></i> Lý do hủy:</strong>
                                <div>@booking.CancelReason</div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(booking.BankAccount))
                        {
                            <div class="bank-info mt-2 p-2 bg-light rounded">
                                <strong><i class="bi bi-bank"></i> Thông tin ngân hàng:</strong>
                                <div>
                                    <div>STK: @booking.BankAccount</div>
                                    <div>Ngân hàng: @booking.BankName</div>
                                    @if (!string.IsNullOrWhiteSpace(booking.AccountHolderName))
                                    {
                                        <div>Chủ tài khoản: @booking.AccountHolderName</div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3>Chưa có đơn hàng nào được hoàn tiền</h3>
            <p>Danh sách các đơn hàng đã được hoàn tiền sẽ hiển thị ở đây.</p>
        </div>
    }
</div>

