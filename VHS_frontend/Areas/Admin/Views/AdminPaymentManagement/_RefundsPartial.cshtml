@model List<VHS_frontend.Areas.Admin.Models.Payment.UnconfirmedBookingRefundDTO>

<div>
    <div class="card-x mb-4">
        <div class="card-header">
            <span><i class="bi bi-arrow-counterclockwise me-2"></i>Hoàn tiền cho đơn hàng</span>
        </div>
        <div class="card-body">
            <p class="text-muted mb-0">Danh sách các đơn hàng đã bị hủy hoặc đang chờ xác nhận cần được hoàn tiền</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div>
            @foreach (var booking in Model)
            {
                var statusText = booking.BookingStatus == "Canceled" ? "Đã hủy" : 
                                booking.BookingStatus == "Pending" ? "Chờ xác nhận" : 
                                booking.BookingStatus == "Completed" ? "Đã hoàn thành" :
                                booking.BookingStatus;
                var statusClass = booking.BookingStatus == "Canceled" ? "status-canceled" : 
                                 booking.BookingStatus == "Completed" ? "status-completed" :
                                 "status-pending";
                var statusIcon = booking.BookingStatus == "Canceled" ? "bi-x-circle" : 
                               booking.BookingStatus == "Completed" ? "bi-check-circle" :
                               "bi-clock-history";
                var methodText = booking.PaymentMethod == "CreditCard" ? "Thẻ tín dụng" :
                               booking.PaymentMethod == "BankTransfer" ? "Chuyển khoản ngân hàng" :
                               booking.PaymentMethod == "Cash" ? "Tiền mặt" :
                               booking.PaymentMethod == "VnPay" ? "VnPay" :
                               booking.PaymentMethod == "MoMo" ? "Ví MoMo" :
                               booking.PaymentMethod == "ZaloPay" ? "Ví ZaloPay" :
                               booking.PaymentMethod == "Wallet" ? "Ví điện tử" :
                               booking.PaymentMethod == "E-Wallet" ? "Ví điện tử" :
                               booking.PaymentMethod == "Refund" ? "Hoàn tiền" :
                               !string.IsNullOrWhiteSpace(booking.PaymentMethod) ? booking.PaymentMethod : "Chưa xác định";
                var paymentStatusText = booking.PaymentStatus == "Pending" ? "Chờ xử lý" :
                                      booking.PaymentStatus == "Completed" ? "Đã thanh toán" :
                                      booking.PaymentStatus == "Failed" ? "Thất bại" :
                                      booking.PaymentStatus == "Refunded" ? "Đã hoàn tiền" : booking.PaymentStatus;
                <div class="booking-card booking-card-collapsible">
                    <div class="booking-header booking-header-toggle" onclick="toggleBookingCard(this)">
                        <div class="booking-id">
                            <div class="booking-id-icon"><i class="bi bi-receipt-cutoff"></i></div>
                            <div class="booking-id-content">
                                <span class="booking-id-label">Mã đơn hàng</span>
                                <span class="badge booking-id-badge">#@booking.BookingId.ToString().Substring(0, 8)</span>
                            </div>
                        </div>
                        <div class="booking-header-right">
                            <div class="booking-status">
                                <span class="status-badge @statusClass">
                                    <i class="bi @statusIcon"></i>
                                    <span>@statusText</span>
                                </span>
                            </div>
                            <div class="booking-amount-preview">
                                <span class="amount-preview-label">Số tiền</span>
                                <span class="amount-preview-value">@booking.PaymentAmount.ToString("N0") VNĐ</span>
                            </div>
                            <i class="bi bi-chevron-down booking-chevron"></i>
                        </div>
                    </div>

                    <div class="booking-content booking-content-collapsible collapsed">
                        <div class="booking-info-row">
                            <div class="info-item">
                                <div class="info-icon-wrapper"><i class="bi bi-person-circle"></i></div>
                                <div class="info-content">
                                    <strong>Khách hàng</strong>
                                    <div class="info-value">@(!string.IsNullOrWhiteSpace(booking.CustomerName) ? booking.CustomerName : (!string.IsNullOrWhiteSpace(booking.CustomerEmail) ? booking.CustomerEmail.Split('@')[0] : "Không xác định"))</div>
                                    <small>@(!string.IsNullOrWhiteSpace(booking.CustomerEmail) ? booking.CustomerEmail : "N/A")</small>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-icon-wrapper"><i class="bi bi-gear"></i></div>
                                <div class="info-content">
                                    <strong>Dịch vụ</strong>
                                    <div class="info-value">@booking.ServiceName</div>
                                </div>
                            </div>
                        </div>

                        <div class="booking-info-row">
                            <div class="info-item">
                                <div class="info-icon-wrapper"><i class="bi bi-calendar3"></i></div>
                                <div class="info-content">
                                    <strong>Ngày đặt</strong>
                                    <div class="info-value">@booking.BookingDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <div class="info-icon-wrapper"><i class="bi bi-cash-stack"></i></div>
                                <div class="info-content">
                                    <strong>Số tiền cần hoàn</strong>
                                    <div class="amount highlight">@booking.PaymentAmount.ToString("N0") VNĐ</div>
                                </div>
                            </div>
                        </div>

                        <div class="payment-info-section">
                            <div class="payment-method-info">
                                <div class="payment-info-icon-wrapper"><i class="bi bi-credit-card-2-front"></i></div>
                                <div class="payment-info-content">
                                    <strong>Phương thức thanh toán</strong>
                                    <div class="payment-info-value">@methodText</div>
                                </div>
                            </div>
                            <div class="payment-status-info">
                                <div class="payment-info-icon-wrapper"><i class="bi bi-info-circle"></i></div>
                                <div class="payment-info-content">
                                    <strong>Trạng thái thanh toán</strong>
                                    <div class="payment-info-value">@paymentStatusText</div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(booking.CancelReason))
                        {
                            <div class="cancel-info">
                                <div class="cancel-info-header">
                                    <div class="cancel-info-header-icon"><i class="bi bi-exclamation-triangle"></i></div>
                                    <strong>Lý do hủy đơn hàng</strong>
                                </div>
                                <div class="cancel-info-content">@booking.CancelReason</div>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(booking.BankAccount))
                        {
                            <div class="bank-info">
                                <div class="bank-info-header bank-info-toggle" onclick="toggleBankInfo(this)">
                                    <div class="bank-info-header-icon"><i class="bi bi-bank"></i></div>
                                    <strong>Thông tin ngân hàng nhận hoàn tiền</strong>
                                    <i class="bi bi-chevron-down bank-info-chevron"></i>
                                </div>
                                <div class="bank-info-content bank-info-collapsible collapsed">
                                    <div class="bank-detail-item">
                                        <span class="bank-detail-label">Số tài khoản:</span>
                                        <span class="bank-detail-value">@booking.BankAccount</span>
                                    </div>
                                    <div class="bank-detail-item">
                                        <span class="bank-detail-label">Ngân hàng:</span>
                                        <span class="bank-detail-value">@booking.BankName</span>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(booking.AccountHolderName))
                                    {
                                        <div class="bank-detail-item">
                                            <span class="bank-detail-label">Chủ tài khoản:</span>
                                            <span class="bank-detail-value">@booking.AccountHolderName</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <div class="booking-actions" onclick="event.stopPropagation()">
                        <button class="btn btn-approval btn-approval-approve" onclick="event.stopPropagation(); approveRefund('@booking.BookingId')">
                            <i class="bi bi-check-circle me-1"></i>
                            Chấp nhận hoàn tiền
                        </button>
                        <button class="btn btn-approval btn-approval-reject" onclick="event.stopPropagation(); rejectRefund('@booking.BookingId')">
                            <i class="bi bi-x-circle me-1"></i>
                            Từ chối hoàn tiền
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card-x">
            <div class="card-body text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                <h3 class="mt-3 mb-0">Không có đơn hàng nào cần hoàn tiền</h3>
                <p class="mt-2 mb-0">Tất cả các đơn hàng đã được xử lý hoặc không có đơn hàng nào ở trạng thái chờ xác nhận.</p>
            </div>
        </div>
    }
</div>
