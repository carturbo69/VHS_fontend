@model List<VHS_frontend.Areas.Admin.Models.Payment.ProviderWithdrawalDTO>

<div class="withdrawals-content">
    <div class="section-header">
        <h2>Yêu cầu rút tiền từ nhà cung cấp</h2>
        <p>Danh sách các yêu cầu rút tiền đang chờ phê duyệt</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="withdrawals-list">
            @foreach (var withdrawal in Model)
            {
                <div class="withdrawal-card">
                    <div class="withdrawal-header">
                        <div class="withdrawal-id">
                            <span class="badge">#@withdrawal.WithdrawalId.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="withdrawal-status">
                            <span class="status-badge status-pending">Chờ phê duyệt</span>
                        </div>
                    </div>

                    <div class="withdrawal-content">
                        <div class="withdrawal-info-row">
                            <div class="info-item">
                                <i class="bi bi-building"></i>
                                <div>
                                    <strong>Nhà cung cấp:</strong>
                                    <div>@withdrawal.ProviderName</div>
                                    <small>@withdrawal.ProviderEmail</small>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-cash-stack"></i>
                                <div>
                                    <strong>Số tiền yêu cầu:</strong>
                                    <div class="amount highlight">@withdrawal.Amount.ToString("N0") VNĐ</div>
                                </div>
                            </div>
                        </div>

                        <div class="withdrawal-info-row">
                            <div class="info-item">
                                <i class="bi bi-bank"></i>
                                <div>
                                    <strong>Ngân hàng:</strong>
                                    <div>@withdrawal.BankName</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-credit-card"></i>
                                <div>
                                    <strong>Số tài khoản:</strong>
                                    <div>@withdrawal.BankAccount</div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(withdrawal.Note))
                        {
                            <div class="withdrawal-note">
                                <i class="bi bi-sticky"></i>
                                <strong>Ghi chú từ provider:</strong>
                                <p>@withdrawal.Note</p>
                            </div>
                        }

                        <div class="withdrawal-date">
                            <small>
                                <i class="bi bi-calendar3"></i>
                                Ngày yêu cầu: @withdrawal.RequestDate.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>

                    <div class="withdrawal-actions">
                        <button class="btn btn-success" onclick="handleWithdrawal('@withdrawal.WithdrawalId', 'Approve')">
                            <i class="bi bi-check-circle"></i>
                            Phê duyệt
                        </button>
                        <button class="btn btn-danger" onclick="handleWithdrawal('@withdrawal.WithdrawalId', 'Reject')">
                            <i class="bi bi-x-circle"></i>
                            Từ chối
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3>Không có yêu cầu rút tiền nào</h3>
            <p>Hiện tại không có yêu cầu rút tiền nào đang chờ phê duyệt.</p>
        </div>
    }
</div>




