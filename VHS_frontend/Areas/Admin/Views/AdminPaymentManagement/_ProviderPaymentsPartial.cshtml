@model List<VHS_frontend.Areas.Admin.Models.Payment.PendingProviderPaymentDTO>

<div class="provider-payments-content">
    <div class="section-header">
        <h2>Phê duyệt thanh toán cho nhà cung cấp</h2>
        <p>Danh sách các booking đã hoàn thành cần phê duyệt thanh toán cho provider</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="payments-list">
            @foreach (var payment in Model)
            {
                <div class="payment-card">
                    <div class="payment-header">
                        <div class="payment-id">
                            <span class="badge">Booking #@payment.BookingId.ToString().Substring(0, 8)</span>
                        </div>
                        <div class="payment-status">
                            <span class="status-badge status-completed">Đã hoàn thành</span>
                        </div>
                    </div>

                    <div class="payment-content">
                        <div class="payment-info-row">
                            <div class="info-item">
                                <i class="bi bi-building"></i>
                                <div>
                                    <strong>Nhà cung cấp:</strong>
                                    <div>@payment.ProviderName</div>
                                    <small>@payment.ProviderEmail</small>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-gear"></i>
                                <div>
                                    <strong>Dịch vụ:</strong>
                                    <div>@payment.ServiceName</div>
                                </div>
                            </div>
                        </div>

                        <div class="payment-info-row">
                            <div class="info-item">
                                <i class="bi bi-calendar3"></i>
                                <div>
                                    <strong>Ngày đặt:</strong>
                                    <div>@payment.BookingDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-check-circle"></i>
                                <div>
                                    <strong>Hoàn thành:</strong>
                                    <div>@payment.CompletionDate.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>

                        <div class="payment-amounts">
                            <div class="amount-item">
                                <span class="amount-label">Tổng doanh thu:</span>
                                <span class="amount-value">@payment.ServiceAmount.ToString("N0") VNĐ</span>
                            </div>
                            <div class="amount-item highlight">
                                <span class="amount-label">Số tiền thanh toán cho provider:</span>
                                <span class="amount-value">@payment.ProviderCommission.ToString("N0") VNĐ</span>
                            </div>
                        </div>
                    </div>

                    <div class="payment-actions">
                        <button class="btn btn-primary" onclick="approveProviderPayment('@payment.BookingId')">
                            <i class="bi bi-check-circle"></i>
                            Phê duyệt thanh toán
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-check-circle"></i>
            </div>
            <h3>Không có thanh toán nào chờ phê duyệt</h3>
            <p>Tất cả các booking đã hoàn thành đã được thanh toán cho provider.</p>
        </div>
    }
</div>


