        // Chart period controls
        document.querySelectorAll('[data-period]').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('[data-period]').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                // Here you would update the chart data based on the selected period
            });
        });

        // Additional functions
        function refreshDashboard() {
            const btn = document.querySelector('.btn-refresh');
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-arrow-clockwise spin"></i> Đang tải...';
            btn.disabled = true;
            
            // Simulate data refresh
            setTimeout(() => {
                // Update stats with new values
                updateStats();
                // Update charts
                updateCharts();
                
                btn.innerHTML = originalContent;
                btn.disabled = false;
                showNotice('Dữ liệu đã được cập nhật!', 'success');
            }, 2000);
        }

        function updateStats() {
            // Simulate updating stat values
            const statValues = document.querySelectorAll('.stat-value');
            statValues.forEach((value, index) => {
                const currentValue = value.textContent;
                // Add some random variation
                const variation = (Math.random() - 0.5) * 0.1;
                if (currentValue.includes('₫')) {
                    const numValue = parseInt(currentValue.replace(/[₫,]/g, ''));
                    const newValue = Math.round(numValue * (1 + variation));
                    value.textContent = '₫' + newValue.toLocaleString('vi-VN');
                } else if (currentValue.includes('%')) {
                    const numValue = parseFloat(currentValue.replace('%', ''));
                    const newValue = Math.round((numValue * (1 + variation)) * 10) / 10;
                    value.textContent = newValue + '%';
                } else if (currentValue.includes('/')) {
                    // Rating format
                    const numValue = parseFloat(currentValue.split('/')[0]);
                    const newValue = Math.round((numValue * (1 + variation)) * 10) / 10;
                    value.textContent = newValue + '/5';
                } else {
                    const numValue = parseInt(currentValue.replace(/,/g, ''));
                    const newValue = Math.round(numValue * (1 + variation));
                    value.textContent = newValue.toLocaleString('vi-VN');
                }
            });
        }

        function updateCharts() {
            // Update revenue chart with new data
            if (typeof revenueChart !== 'undefined') {
                const newData = Array.from({length: 7}, () => Math.floor(Math.random() * 2000000) + 1000000);
                revenueChart.data.datasets[0].data = newData;
                revenueChart.update('active');
            }
            
            // Update orders chart
            if (typeof ordersChart !== 'undefined') {
                const newData = Array.from({length: 6}, () => Math.floor(Math.random() * 20) + 1);
                ordersChart.data.datasets[0].data = newData;
                ordersChart.update('active');
            }
        }

        function exportChart() {
            showNotice('Đang xuất biểu đồ...', 'info');
            
            // Simulate chart export
            setTimeout(() => {
                // Create a temporary canvas for export
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                canvas.width = 800;
                canvas.height = 400;
                
                // Fill with white background
                ctx.fillStyle = '#ffffff';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                // Add title
                ctx.fillStyle = '#333333';
                ctx.font = '24px Arial';
                ctx.fillText('Dashboard Export', 50, 50);
                
                // Add timestamp
                ctx.font = '16px Arial';
                ctx.fillStyle = '#666666';
                ctx.fillText(new Date().toLocaleString('vi-VN'), 50, 80);
                
                // Convert to blob and download
                canvas.toBlob(function(blob) {
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'dashboard-export-' + new Date().getTime() + '.png';
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    URL.revokeObjectURL(url);
                });
                
                showNotice('Biểu đồ đã được xuất thành công!', 'success');
            }, 1000);
        }

        function toggleLegend() {
            if (typeof serviceChart !== 'undefined') {
                const currentOptions = serviceChart.options.plugins.legend;
                serviceChart.options.plugins.legend.display = !currentOptions.display;
                serviceChart.update();
                showNotice('Chế độ hiển thị đã được chuyển đổi', 'info');
