              } else {
                optionErr.textContent = translatedError || 'Dữ liệu không hợp lệ. Vui lòng kiểm tra lại.';
              }
            } else if (res.status === 403) {
              // Forbidden - thường là do đang được sử dụng
              optionModal.hide();
              showNotice(translatedError || 'Không thể cập nhật tùy chọn này vì đang có dịch vụ đang sử dụng.', 'error', 5000);
            } else if (res.status === 404) {
              optionErr.textContent = 'Không tìm thấy tùy chọn hoặc tag. Vui lòng thử lại.';
            } else {
              // Các lỗi khác - kiểm tra xem có phải lỗi đang được sử dụng không
              if (isInUseError) {
                optionModal.hide();
                showNotice(translatedError || 'Không thể cập nhật tùy chọn này vì đang có dịch vụ đang sử dụng.', 'error', 5000);
              } else {
                optionErr.textContent = translatedError || 'Có lỗi xảy ra. Vui lòng thử lại sau.';
              }
            }
          }
        });

        async function reloadOptions(tagId, optionsBox){
          const res = await fetch(routes.optionsByTag + `?tagId=${tagId}`);
          if (!res.ok) return;
          const list = await res.json();
          updateOptionCountBadges(tagId, list?.length ?? 0);
          renderOptionList(optionsBox.querySelector('.option-list'), list, tagId, optionsBox);
