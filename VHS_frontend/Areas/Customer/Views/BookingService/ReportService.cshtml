@model VHS_frontend.Areas.Customer.Models.ReportDTOs.ReportServiceViewModel
@{
    ViewData["Title"] = "Báo cáo/Hoàn tiền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<!-- CSS đã tách -->
<link href="~/css/report-service.css" rel="stylesheet" />

<div class="container my-4 complaint-container">
    @if (TempData["ToastSuccess"] != null || TempData["ToastError"] != null)
    {
        <div class="alert @(TempData["ToastSuccess"] != null ? "alert-success" : "alert-danger")" role="alert">
            @(TempData["ToastSuccess"] ?? TempData["ToastError"])
        </div>
    }

    @* Modal thông báo lỗi duplicate report *@
    @if (TempData["DuplicateReportError"] != null)
    {
        <div class="modal fade show" id="duplicateReportModal" tabindex="-1" style="display:block; background: rgba(0,0,0,0.5);" aria-modal="true" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header border-0 bg-warning bg-opacity-10">
                        <h5 class="modal-title d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-2 fs-4"></i>
                            <span class="fw-bold">Không thể gửi báo cáo</span>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="closeDuplicateModal()"></button>
                    </div>
                    <div class="modal-body py-4">
                        <p class="mb-3 fs-5">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            @TempData["DuplicateReportError"]
                        </p>
                        <div class="alert alert-info d-flex align-items-start mb-0">
                            <i class="bi bi-lightbulb-fill me-2 mt-1"></i>
                            <div>
                                <strong>Gợi ý:</strong> Bạn có thể kiểm tra trạng thái báo cáo đã gửi trong mục 
                                <a href="@Url.Action("ListHistoryBooking", "BookingService", new { area = "Customer" })" class="alert-link">
                                    <i class="bi bi-clock-history"></i> Lịch sử đơn hàng
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0 bg-light">
                        <button type="button" class="btn btn-secondary" onclick="closeDuplicateModal()">
                            <i class="bi bi-x-circle me-1"></i> Đóng
                        </button>
                        <a href="@Url.Action("ListHistoryBooking", "BookingService", new { area = "Customer" })" class="btn btn-primary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Về lịch sử đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Sản phẩm đã chọn -->
    <div class="card-block mb-3">
        <h5 class="fw-bold mb-3">Sản phẩm đã chọn</h5>
        <div class="product">
            <img class="product-cover" src="@Model.ServiceImage" alt="service"
                 onerror="this.onerror=null;this.src='/images/placeholder.png';" />
            <div class="flex-grow-1">
                <div class="fw-bold product-title">@Model.ServiceTitle</div>
                <div class="text-muted">@Model.ProviderName</div>
            </div>
            <div class="text-end">
                @if (Model.OriginalPrice > 0 && Model.OriginalPrice > Model.Price)
                {
                    <div class="text-strike">@Model.OriginalPrice.ToString("N0") đ</div>
                }
                <div class="price-now">@Model.Price.ToString("N0") đ</div>
            </div>
        </div>
    </div>

    <!-- Form báo cáo -->
    <div class="card-block">
        <h5 class="fw-bold mb-3">Báo cáo dịch vụ</h5>

        <form asp-area="Customer" asp-controller="BookingService" asp-action="SubmitReport" method="post" enctype="multipart/form-data" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" name="BookingId" value="@Model.BookingId" />
            <input type="hidden" name="ProviderId" value="@Model.ProviderId" />

            <div class="mb-3">
                <label class="form-label fw-bold">* Loại báo cáo</label>
                <select class="form-select form-control-elevated" name="ReportType" required>
                    <option value="">Chọn Loại Báo Cáo</option>
                    @foreach (var reportType in Model.ReportTypes)
                    {
                        <option value="@((int)reportType.Key)">@reportType.Value</option>
                    }
                </select>
                <div class="invalid-feedback">Vui lòng chọn loại báo cáo.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">* Tiêu đề</label>
                <input type="text" class="form-control form-control-elevated" name="Title" maxlength="100" 
                       placeholder="Tiêu đề ngắn gọn về vấn đề" required />
                <div class="invalid-feedback">Vui lòng nhập tiêu đề.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả chi tiết</label>
                <textarea class="form-control form-control-elevated" name="Description" rows="5" maxlength="1000"
                          placeholder="Chi tiết vấn đề bạn gặp phải"></textarea>
                <div class="d-flex justify-content-between mt-1">
                    <small class="text-muted">Tối đa 1000 ký tự</small>
                    <small class="text-muted"><span id="desc-count">0</span>/1000</small>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Hình ảnh đính kèm (tùy chọn)</label>
                <div class="d-flex gap-2 mb-2">
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('file-attachments').click()">
                        <i class="bi bi-camera"></i> Thêm hình ảnh
                    </button>
                    <small class="text-muted align-self-center">Tối đa 5 ảnh</small>
                </div>
                <input id="file-attachments"
                       name="Attachments"
                       type="file"
                       class="d-none"
                       accept="image/*"
                       multiple
                       onchange="handleFileSelect(this.files)" />
                
                <div id="file-preview" class="d-flex flex-wrap gap-2"></div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-area="Customer" asp-controller="BookingService" asp-action="ListHistoryBooking" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-submit">
                    <i class="bi bi-send"></i> Gửi báo cáo
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <script>
        (() => {
          // Đếm ký tự
          const ta = document.querySelector('textarea[name="Description"]');
          const counter = document.getElementById('desc-count');
          if (ta && counter) {
            const update = () => counter.textContent = ta.value.length;
            ta.addEventListener('input', update);
            update();
          }

          // Boosted client validation UX
          const form = document.querySelector('form[asp-action="SubmitReport"]');
          if (form) {
            form.addEventListener('submit', (e) => {
              if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
              }
              form.classList.add('was-validated');
            });
          }
        })();

        // File preview handler
        let selectedFiles = new DataTransfer();

        function handleFileSelect(files) {
            const maxFiles = 5;
            const preview = document.getElementById('file-preview');
            const input = document.getElementById('file-attachments');
            
            // Thêm files mới vào DataTransfer (giới hạn 5 files)
            Array.from(files).forEach(file => {
                if (selectedFiles.files.length < maxFiles && file.type.startsWith('image/')) {
                    selectedFiles.items.add(file);
                }
            });

            // Cập nhật input với files đã chọn
            input.files = selectedFiles.files;

            // Render preview
            renderPreview();
        }

        function removeFile(index) {
            const newDT = new DataTransfer();
            Array.from(selectedFiles.files).forEach((file, i) => {
                if (i !== index) {
                    newDT.items.add(file);
                }
            });
            selectedFiles = newDT;
            
            const input = document.getElementById('file-attachments');
            input.files = selectedFiles.files;
            
            renderPreview();
        }

        function renderPreview() {
            const preview = document.getElementById('file-preview');
            preview.innerHTML = '';

            Array.from(selectedFiles.files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'position-relative';
                    div.style.width = '100px';
                    div.style.height = '100px';
                    div.innerHTML = `
                        <img src="${e.target.result}" class="img-thumbnail" style="width:100%;height:100%;object-fit:cover;" />
                        <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0" 
                                onclick="removeFile(${index})" style="padding:2px 6px;">
                            <i class="bi bi-x"></i>
                        </button>
                    `;
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        // Function to close duplicate report modal
        function closeDuplicateModal() {
            const modal = document.getElementById('duplicateReportModal');
            if (modal) {
                modal.style.display = 'none';
                modal.classList.remove('show');
            }
        }
    </script>
}
