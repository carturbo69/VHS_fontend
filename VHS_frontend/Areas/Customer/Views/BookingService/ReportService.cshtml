@model VHS_frontend.Areas.Customer.Models.BookingServiceDTOs.ComplaintDTO
@{
    ViewData["Title"] = "Báo cáo/Hoàn tiền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<!-- CSS đã tách -->
<link href="~/css/report-service.css" rel="stylesheet" />

<div class="container my-4 complaint-container">
    @if (TempData["ToastSuccess"] != null || TempData["ToastError"] != null)
    {
        <div class="alert @(TempData["ToastSuccess"] != null ? "alert-success" : "alert-danger")" role="alert">
            @(TempData["ToastSuccess"] ?? TempData["ToastError"])
        </div>
    }

    <!-- Sản phẩm đã chọn -->
    <div class="card-block mb-3">
        <h5 class="fw-bold mb-3">Sản phẩm đã chọn</h5>
        <div class="product">
            <img class="product-cover" src="@Model.ServiceImage" alt="service"
                 onerror="this.onerror=null;this.src='/images/placeholder.png';" />
            <div class="flex-grow-1">
                <div class="fw-bold product-title">@Model.ServiceTitle</div>
                <div class="text-muted">@Model.ProviderName</div>
            </div>
            <div class="text-end">
                @if (Model.OriginalPrice > 0 && Model.OriginalPrice > Model.Price)
                {
                    <div class="text-strike">@Model.OriginalPrice.ToString("N0") đ</div>
                }
                <div class="price-now">@Model.Price.ToString("N0") đ</div>
            </div>
        </div>
    </div>

    <!-- Form báo cáo -->
    <div class="card-block">
        <h5 class="fw-bold mb-3">Báo cáo dịch vụ</h5>

        <form asp-area="Customer" asp-controller="BookingService" asp-action="SubmitReport" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" name="BookingId" value="@Model.BookingId" />

            <div class="mb-3">
                <label class="form-label fw-bold">* Lý do</label>
                <select class="form-select form-control-elevated" name="ComplaintType" required>
                    <option value="">Chọn Lý Do</option>
                    <option value="Không đúng mô tả">Không đúng mô tả</option>
                    <option value="Chất lượng dịch vụ kém">Chất lượng dịch vụ kém</option>
                    <option value="Thái độ phục vụ">Thái độ phục vụ</option>
                    <option value="Trễ lịch hẹn">Trễ lịch hẹn</option>
                    <option value="Khác">Khác</option>
                </select>
                <div class="invalid-feedback">Vui lòng chọn một lý do.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả</label>
                <textarea class="form-control form-control-elevated" name="Description" rows="5" maxlength="2000"
                          placeholder="Chi tiết vấn đề bạn gặp phải" required></textarea>
                <div class="d-flex justify-content-between mt-1">
                    <small class="text-muted">Tối đa 2000 ký tự</small>
                    <small class="text-muted"><span id="desc-count">0</span>/2000</small>
                </div>
                <div class="invalid-feedback">Vui lòng nhập mô tả.</div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-area="Customer" asp-controller="BookingService" asp-action="History" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-submit">
                    <i class="bi bi-send"></i> Hoàn thành
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <script>
        (() => {
          // Đếm ký tự
          const ta = document.querySelector('textarea[name="Description"]');
          const counter = document.getElementById('desc-count');
          if (ta && counter) {
            const update = () => counter.textContent = ta.value.length;
            ta.addEventListener('input', update);
            update();
          }

          // Boosted client validation UX
          const form = document.querySelector('form[asp-action="SubmitReport"]');
          if (form) {
            form.addEventListener('submit', (e) => {
              if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
              }
              form.classList.add('was-validated');
            });
          }
        })();
    </script>
}
