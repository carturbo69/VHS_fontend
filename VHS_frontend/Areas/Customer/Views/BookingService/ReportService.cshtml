@model VHS_frontend.Areas.Customer.Models.ReportDTOs.ReportServiceViewModel
@{
    ViewData["Title"] = "Báo cáo/Hoàn tiền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

<!-- CSS đã tách -->
<link href="~/css/report-service.css" rel="stylesheet" />

<div class="container my-4 complaint-container">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <h1 class="page-title">
            <span class="page-title-icon">📋</span>
            Báo cáo dịch vụ
        </h1>
        <p class="page-subtitle">Báo cáo vấn đề cho dịch vụ đã đặt</p>
    </div>

    @if (TempData["ToastError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ToastError"]
        </div>
    }
    @* Không hiển thị ToastSuccess ở đây vì có thể chứa thông báo VNPAY không liên quan *@

    @* Modal thông báo lỗi duplicate report *@
    @if (TempData["DuplicateReportError"] != null)
    {
        <div class="modal fade show" id="duplicateReportModal" tabindex="-1" style="display:block; background: rgba(0,0,0,0.5);" aria-modal="true" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg">
                    <div class="modal-header border-0 bg-warning bg-opacity-10">
                        <h5 class="modal-title d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-2 fs-4"></i>
                            <span class="fw-bold">Không thể gửi báo cáo</span>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="closeDuplicateModal()"></button>
                    </div>
                    <div class="modal-body py-4">
                        <p class="mb-3 fs-5">
                            <i class="bi bi-info-circle text-primary me-2"></i>
                            @TempData["DuplicateReportError"]
                        </p>
                        <div class="alert alert-info d-flex align-items-start mb-0">
                            <i class="bi bi-lightbulb-fill me-2 mt-1"></i>
                            <div>
                                <strong>Gợi ý:</strong> Bạn có thể kiểm tra trạng thái báo cáo đã gửi trong mục 
                                <a href="@Url.Action("ListHistoryBooking", "BookingService", new { area = "Customer" })" class="alert-link">
                                    <i class="bi bi-clock-history"></i> Lịch sử đơn hàng
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0 bg-light">
                        <button type="button" class="btn btn-secondary" onclick="closeDuplicateModal()">
                            <i class="bi bi-x-circle me-1"></i> Đóng
                        </button>
                        <a href="@Url.Action("ListHistoryBooking", "BookingService", new { area = "Customer" })" class="btn btn-primary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Về lịch sử đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    @{
        var fallbackImg = Url.Content("~/images/VeSinh.jpg");
        
        // Helper để lấy ảnh đầu tiên từ images (có thể là JSON array hoặc comma-separated string)
        string? FirstImageOrDefault(string? images)
        {
            if (string.IsNullOrWhiteSpace(images)) return null;
            try
            {
                var arr = System.Text.Json.JsonSerializer.Deserialize<List<string>>(images);
                if (arr != null && arr.Count > 0) return arr[0];
            }
            catch { }
            if (images.Contains(','))
            {
                var first = images.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).FirstOrDefault();
                if (!string.IsNullOrWhiteSpace(first)) return first;
            }
            return images;
        }

        // Helper để lấy logo provider
        string GetProviderLogo(string? providerImages)
        {
            if (string.IsNullOrWhiteSpace(providerImages))
                return "/images/VeSinh.jpg";
            var logo = FirstImageOrDefault(providerImages);
            return !string.IsNullOrWhiteSpace(logo) ? logo : "/images/VeSinh.jpg";
        }

        // Helper để lấy ảnh service
        string GetServiceImage(string? serviceImages)
        {
            if (string.IsNullOrWhiteSpace(serviceImages))
                return fallbackImg;
            var img = FirstImageOrDefault(serviceImages);
            return !string.IsNullOrWhiteSpace(img) ? img : fallbackImg;
        }

        string toCurrency(decimal v) => v.ToString("N0") + "đ";
    }

    <!-- Provider Info & Dịch vụ -->
    <div class="card-block mb-3">
        <!-- Provider Info -->
        <div class="d-flex align-items-center gap-3 mb-3 pb-3" style="border-bottom: 2px solid var(--border);">
            <img src="@GetProviderLogo(Model?.ProviderImages)" 
                 width="60" 
                 height="60" 
                 alt="@Model.ProviderName" 
                 class="rounded" 
                 style="object-fit:cover;border:2px solid var(--border);" 
                 onerror="this.src='/images/VeSinh.jpg';" />
            <div>
                <h5 class="fw-bold mb-0">@Model.ProviderName</h5>
                <small class="text-muted">Nhà cung cấp dịch vụ</small>
            </div>
        </div>
        
        <!-- Dịch vụ -->
        <div class="item-body">
            <img class="order-cover"
                 src="@GetServiceImage(Model?.ServiceImages ?? Model?.ServiceImage)"
                 onerror="this.onerror=null;this.src='@fallbackImg';" />
            <div class="flex-grow-1">
                <div class="order-title">@Model.ServiceTitle</div>
                @if (Model.Options?.Any() == true)
                {
                    @* Hiển thị danh sách options phẳng (không có nhóm) cho Customer *@
                    <div class="opt-section mt-1">
                        @foreach (var opt in Model.Options)
                        {
                            var isTextarea = opt.Type?.ToLower() == "textarea" || opt.Type?.ToLower() == "text";
                            <div class="opt-row">
                                <div class="opt-name" style="flex: 1; min-width: 0;">
                                    <div style="font-weight: 500; margin-bottom: 8px;">
                                        <span>✓</span>
                                        <span>@opt.OptionName</span>
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(opt.Value))
                                    {
                                        <div style="margin-top: 8px;">
                                                       
                                            @if (isTextarea)
                                            {
                                                <div class="option-value-text" style="white-space: pre-wrap; word-wrap: break-word; margin-top: 4px; font-size: 0.9em; line-height: 1.5;">@opt.Value</div>
                                            }
                                            else
                                            {
                                                <span class="text-muted" style="margin-left: 4px;">@opt.Value</span>
                                            }
                                        </div>
                                    }
                                    else if (isTextarea)
                                    {
                                        <div style="margin-top: 8px; color: #6c757d; font-size: 0.875em;">
                                            <i class="bi bi-info-circle" style="margin-right: 4px;"></i>Chưa có
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Cột giá bên phải: tóm tắt gọn -->
            <div class="price-summary">
                <div class="price-row">
                    <span class="price-label">Giá dịch vụ:</span>
                    <span class="price-value">@toCurrency(Model.ServicePrice)</span>
                </div>
                @if (Model.OptionTotal > 0)
                {
                    <div class="price-row">
                        <span class="price-label">Tuỳ chọn:</span>
                        <span class="price-value">@toCurrency(Model.OptionTotal)</span>
                    </div>
                }
                <div class="price-row subtotal">
                    <span class="price-label">Tổng cộng:</span>
                    <span class="price-value">@toCurrency(Model.SubTotal)</span>
                </div>
                @if (Model.VoucherDiscount > 0)
                {
                    <div class="price-row discount">
                        <span class="price-label">Giảm giá:</span>
                        <span class="price-value">-@toCurrency(Model.VoucherDiscount)</span>
                    </div>
                }
            </div>
        </div>

        <!-- Tổng tiền -->
        <div class="price-line">
            <div class="d-flex flex-column align-items-end gap-2">
                <div>Thành tiền: <span class="fw-bold price-now">@toCurrency(Model.GrandTotal)</span></div>
                @{
                    var statusClass = "text-warning";
                    var statusIcon = "bi-clock-history";
                    var paymentStatus = Model.PaymentStatus ?? string.Empty;
                    if (paymentStatus == "Đã thanh toán")
                    {
                        statusClass = "text-success";
                        statusIcon = "bi-check-circle-fill";
                    }
                    else if (paymentStatus == "Đã hoàn tiền")
                    {
                        statusClass = "text-info";
                        statusIcon = "bi-arrow-counterclockwise";
                    }
                    else if (paymentStatus == "Chờ thanh toán")
                    {
                        statusClass = "text-warning";
                        statusIcon = "bi-hourglass-split";
                    }
                }
                <span class="payment-status @statusClass">
                    <i class="bi @statusIcon"></i>
                    @Model.PaymentStatus
                </span>
            </div>
        </div>
    </div>

    <!-- Form báo cáo -->
    <div class="card-block">
        <h5 class="fw-bold mb-3">Báo cáo dịch vụ</h5>

        <form asp-area="Customer" asp-controller="BookingService" asp-action="SubmitReport" method="post" enctype="multipart/form-data" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" name="BookingId" value="@Model.BookingId" />
            <input type="hidden" name="ProviderId" value="@Model.ProviderId" />

            <div class="mb-3">
                <label class="form-label fw-bold">* Loại báo cáo</label>
                <select class="form-select form-control-elevated" name="ReportType" required>
                    <option value="">Chọn Loại Báo Cáo</option>
                    @foreach (var reportType in Model.ReportTypes)
                    {
                        <option value="@((int)reportType.Key)">@reportType.Value</option>
                    }
                </select>
                <div class="invalid-feedback">Vui lòng chọn loại báo cáo.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">* Tiêu đề</label>
                <input type="text" class="form-control form-control-elevated" name="Title" maxlength="100" 
                       placeholder="Tiêu đề ngắn gọn về vấn đề" required />
                <div class="invalid-feedback">Vui lòng nhập tiêu đề.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả chi tiết</label>
                <textarea class="form-control form-control-elevated" name="Description" rows="5" maxlength="1000"
                          placeholder="Chi tiết vấn đề bạn gặp phải"></textarea>
                <div class="d-flex justify-content-between mt-1">
                    <small class="text-muted">Tối đa 1000 ký tự</small>
                    <small class="text-muted"><span id="desc-count">0</span>/1000</small>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Hình ảnh đính kèm (tùy chọn)</label>
                <div class="d-flex gap-2 mb-2">
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('file-attachments').click()">
                        <i class="bi bi-camera"></i> Thêm hình ảnh
                    </button>
                    <small class="text-muted align-self-center">Tối đa 5 ảnh</small>
                </div>
                <input id="file-attachments"
                       name="Attachments"
                       type="file"
                       class="d-none"
                       accept="image/*"
                       multiple
                       onchange="handleFileSelect(this.files)" />
                
                <div id="file-preview" class="d-flex flex-wrap gap-2"></div>
            </div>

            <div class="d-flex justify-content-center gap-2">
                <a asp-area="Customer" asp-controller="BookingService" asp-action="ListHistoryBooking" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-submit">
                    <i class="bi bi-send"></i> Gửi báo cáo
                </button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@section Scripts {
    <script>
        (() => {
          // Đếm ký tự
          const ta = document.querySelector('textarea[name="Description"]');
          const counter = document.getElementById('desc-count');
          if (ta && counter) {
            const update = () => counter.textContent = ta.value.length;
            ta.addEventListener('input', update);
            update();
          }

          // Boosted client validation UX
          const form = document.querySelector('form[asp-action="SubmitReport"]');
          if (form) {
            form.addEventListener('submit', (e) => {
              if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
              }
              form.classList.add('was-validated');
            });
          }
        })();

        // File preview handler
        let selectedFiles = new DataTransfer();

        function handleFileSelect(files) {
            const maxFiles = 5;
            const preview = document.getElementById('file-preview');
            const input = document.getElementById('file-attachments');
            
            // Thêm files mới vào DataTransfer (giới hạn 5 files)
            Array.from(files).forEach(file => {
                if (selectedFiles.files.length < maxFiles && file.type.startsWith('image/')) {
                    selectedFiles.items.add(file);
                }
            });

            // Cập nhật input với files đã chọn
            input.files = selectedFiles.files;

            // Render preview
            renderPreview();
        }

        function removeFile(index) {
            const newDT = new DataTransfer();
            Array.from(selectedFiles.files).forEach((file, i) => {
                if (i !== index) {
                    newDT.items.add(file);
                }
            });
            selectedFiles = newDT;
            
            const input = document.getElementById('file-attachments');
            input.files = selectedFiles.files;
            
            renderPreview();
        }

        function renderPreview() {
            const preview = document.getElementById('file-preview');
            preview.innerHTML = '';

            Array.from(selectedFiles.files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'position-relative';
                    div.style.width = '100px';
                    div.style.height = '100px';
                    div.innerHTML = `
                        <img src="${e.target.result}" class="img-thumbnail" style="width:100%;height:100%;object-fit:cover;" />
                        <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0" 
                                onclick="removeFile(${index})" style="padding:2px 6px;">
                            <i class="bi bi-x"></i>
                        </button>
                    `;
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        // Function to close duplicate report modal
        function closeDuplicateModal() {
            const modal = document.getElementById('duplicateReportModal');
            if (modal) {
                modal.style.display = 'none';
                modal.classList.remove('show');
            }
        }
    </script>
}
