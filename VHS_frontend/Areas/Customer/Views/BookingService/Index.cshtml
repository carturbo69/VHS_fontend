                            </label>
                            <input type="datetime-local"
                                   id="booking-time-@i"
                                   form="@placeOrderFormId"
                                   name="Items[@i].BookingTime"
                                   value="@it.BookingTime.ToString("yyyy-MM-ddTHH:mm")"
                                   class="booking-input"
                                   data-provider-id="@it.ProviderId"
                                   onchange="validateBookingTime(this, @i)" />
