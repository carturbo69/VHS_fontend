<script>
    // Định nghĩa hàm modal địa chỉ trong global scope NGAY SAU KHI modal được định nghĩa
    // Điều này đảm bảo hàm có sẵn khi button onclick được gọi
    if (typeof window.openAddressModal === 'undefined') {
        window.openAddressModal = function() {
            const modal = document.getElementById('addressModal');
            if (!modal) {
                console.error('Address modal not found');
                return;
            }
