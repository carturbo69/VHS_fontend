                            <div>
                                <div><strong>@it.ServiceName</strong></div>
                                <div class="service-price-info">
                                    <span class="price-label">Đơn giá:</span>
                                    <span class="price-value">@Money(it.UnitPrice)</span>
                                </div>
                            </div>

