                } else {
                  // Fallback nếu không tìm thấy trong danh sách
                  CURRENT_VOUCHER = { 
                    VoucherId: firstId, 
                    DiscountPercent: percent||0, 
                    DiscountMaxAmount: maxAmount||0,
                    Code: '' // để updateVoucherUI không bị lỗi
                  };
                }
              } catch (e) {
                console.error('Failed to load voucher details:', e);
                // Fallback
                CURRENT_VOUCHER = { 
                  VoucherId: firstId, 
                  DiscountPercent: percent||0, 
                  DiscountMaxAmount: maxAmount||0,
