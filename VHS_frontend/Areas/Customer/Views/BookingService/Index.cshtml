                        </div>

                        i++;

                        <!-- nhớ tăng i sau mỗi item -->
                    }


                    @* ====== Ô tích + link mở điều khoản theo Provider ====== *@
                    @{
                        var firstItem = shop.FirstOrDefault();
                        var providerId = firstItem?.ProviderId ?? Guid.Empty;
                    }
