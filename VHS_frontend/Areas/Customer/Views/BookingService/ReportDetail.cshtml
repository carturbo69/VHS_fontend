@model VHS_frontend.Areas.Customer.Models.BookingServiceDTOs.ComplaintDTO
@{
    ViewData["Title"] = "Báo cáo/Hoàn tiền";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string FmtMoney(decimal v) => string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:#,0}", v);

    var serviceImg = string.IsNullOrWhiteSpace(Model?.ServiceImage)
        ? Url.Content("~/images/VeSinh.jpg")
        : Model!.ServiceImage;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/report-detail.css" asp-append-version="true" />

<div class="kb container py-4">

    <!-- Header -->
    <div class="kb-header d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center gap-2">
            <h2 class="kb-title mb-0">Báo cáo / Hoàn tiền</h2>
            <span class="kb-badge kb-badge-warning">
                <i class="bi bi-shield-exclamation me-1"></i>Đang xử lý báo cáo
            </span>
        </div>
        <div class="d-flex gap-2">
            <a asp-area="Customer" asp-controller="BookingService" asp-action="ListHistoryBooking" class="btn btn-ghost">
                <i class="bi bi-clock-history me-1"></i>Lịch sử đơn
            </a>
            <a href="javascript:history.back()" class="btn btn-brand">
                <i class="bi bi-arrow-left-short me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <!-- Service / Product -->
    <div class="kb-card mb-4">
        <div class="kb-card-header">
            <i class="bi bi-bag me-2"></i>Sản phẩm / Dịch vụ
        </div>
        <div class="kb-card-body">
            <div class="row g-3 align-items-start">
                <div class="col-auto">
                    <img src="@serviceImg" alt="Ảnh dịch vụ" class="kb-thumb" loading="lazy" decoding="async"
                         onerror="this.onerror=null;this.src='@Url.Content("~/images/VeSinh.jpg")'" />
                </div>
                <div class="col">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <div class="fw-bold fs-6">@Model?.ServiceTitle</div>
                        @if (!string.IsNullOrWhiteSpace(Model?.ProviderName))
                        {
                            <span class="kb-chip"><i class="bi bi-shop me-1"></i>@Model.ProviderName</span>
                        }
                    </div>

                    <div class="text-muted small mt-1 d-flex flex-wrap gap-3">
                        <span>Giá niêm yết: <strong>@FmtMoney(Model?.OriginalPrice ?? 0) đ</strong></span>
                        <span>Giá thanh toán: <strong class="text-brand">@FmtMoney(Model?.Price ?? 0) đ</strong></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Complaint Details -->
    <div class="kb-card mb-4">
        <div class="kb-card-header">
            <i class="bi bi-flag me-2"></i>Nội dung báo cáo
        </div>
        <div class="kb-card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="kb-label">Lý do</div>
                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(Model?.ComplaintType) ? Model!.ComplaintType : "—")</div>
                </div>
                <div class="col-md-8">
                    <div class="kb-label">Mô tả chi tiết</div>
                    <div class="text-muted">@(!string.IsNullOrWhiteSpace(Model?.Description) ? Model!.Description : "—")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Finance / Refund summary (tùy chọn hiển thị) -->
    <div class="kb-card mb-4">
        <div class="kb-card-header">
            <i class="bi bi-cash-coin me-2"></i>Thông tin tài chính
        </div>
        <div class="kb-card-body">
            <div class="table-responsive">
                <table class="table table-borderless table-sm align-middle mb-0">
                    <tbody>
                        <tr>
                            <td class="text-muted">Giá gốc</td>
                            <td class="text-end fw-semibold">@FmtMoney(Model?.OriginalPrice ?? 0) đ</td>
                        </tr>
                        <tr>
                            <td class="text-muted">Giá thanh toán</td>
                            <td class="text-end fw-semibold">@FmtMoney(Model?.Price ?? 0) đ</td>
                        </tr>
                        <tr class="border-top">
                            <td class="fw-bold">Giá trị yêu cầu hoàn</td>
                            <td class="text-end fw-bold fs-5 text-brand">
                                @FmtMoney(Model?.Price ?? 0) đ
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-muted small mt-2">
                * Giá trị hoàn chỉ là dự kiến và có thể thay đổi sau khi đối soát.
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="kb-card">
        <div class="kb-card-body d-flex flex-wrap gap-2 justify-content-end">
            <a asp-area="Customer"
               asp-controller="Support"
               asp-action="Chat"
               asp-route-bookingId="@Model?.BookingId"
               class="btn btn-outline-secondary">
                <i class="bi bi-chat-dots me-1"></i>Liên hệ hỗ trợ
            </a>

            <a asp-area="Customer"
               asp-controller="BookingService"
               asp-action="CancelComplaint"
               asp-route-bookingId="@Model?.BookingId"
               class="btn btn-ghost"
               onclick="return confirm('Bạn chắc chắn muốn hủy báo cáo này?');">
                <i class="bi bi-x-circle me-1"></i>Hủy báo cáo
            </a>

            <a asp-area="Customer"
               asp-controller="BookingService"
               asp-action="EditComplaint"
               asp-route-bookingId="@Model?.BookingId"
               class="btn btn-brand">
                <i class="bi bi-pencil-square me-1"></i>Cập nhật báo cáo
            </a>
        </div>
    </div>

</div>
