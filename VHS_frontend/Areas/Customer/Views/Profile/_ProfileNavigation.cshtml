@* Profile Navigation Partial *@
<nav class="profile-nav" aria-label="Profile navigation">
    <div class="container">
        <div class="profile-nav-content">
            <div class="profile-nav-brand">
                <a asp-area="Customer" asp-controller="Profile" asp-action="Index" class="nav-brand-link">
                    <i class="bi bi-person-circle"></i>
                    <span>Thông tin cá nhân</span>
                </a>
            </div>
            
            <div class="profile-nav-menu">
                <a asp-area="Customer" asp-controller="Profile" asp-action="Index" 
                   class="nav-menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-person"></i>
                    <span>Tổng quan</span>
                </a>
                
                <a asp-area="Customer" asp-controller="Profile" asp-action="Edit" 
                   class="nav-menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "Edit" ? "active" : "")">
                    <i class="bi bi-pencil-square"></i>
                    <span>Chỉnh sửa</span>
                </a>
                
                <a asp-area="Customer" asp-controller="Profile" asp-action="ChangePassword" 
                   class="nav-menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ChangePassword" ? "active" : "")">
                    <i class="bi bi-shield-lock"></i>
                    <span>Đổi mật khẩu</span>
                </a>
                
                <a asp-area="Customer" asp-controller="Profile" asp-action="ChangeEmail" 
                   class="nav-menu-item @(ViewContext.RouteData.Values["Action"]?.ToString() == "ChangeEmail" ? "active" : "")">
                    <i class="bi bi-envelope"></i>
                    <span>Đổi email</span>
                </a>
            </div>
            
            <div class="profile-nav-actions">
                <a asp-area="Customer" asp-controller="BookingService" asp-action="ListHistoryBooking" 
                   class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-clock-history"></i>
                    <span class="d-none d-md-inline">Lịch sử</span>
                </a>
                
                <a asp-area="Customer" asp-controller="ReviewCustomer" asp-action="Index" 
                   class="btn btn-outline-success btn-sm">
                    <i class="bi bi-star"></i>
                    <span class="d-none d-md-inline">Đánh giá</span>
                </a>
            </div>
        </div>
    </div>
</nav>
