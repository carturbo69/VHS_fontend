@using VHS_frontend.Areas.Customer.Models.ChatDemo
@model ChatPageVm

@{
    ViewData["Title"] = "Chat";
    ViewData["HideFooter"] = true; // Ẩn footer ở trang chat
    var me = Model.CurrentAccount?.AccountId ?? Guid.Empty;

    // Lấy participant còn lại của cuộc trò chuyện đang chọn (để hiện tên/avatar ở header)
    Func<ConversationDto, ConversationParticipantDto?> other = conv =>
        conv?.Participants?.FirstOrDefault(p => p.AccountId != me);

    var selected = Model.SelectedConversation;
    var otherInSelected = other(selected);

    // Ảnh dự phòng khi ảnh lỗi
    var fallbackImg = Url.Content("~/images/VeSinh.jpg");
}

<link rel="stylesheet" href="~/css/chat-customer.css?v=@DateTime.Now.Ticks" />

<div class="container-fluid chat-wrapper">
    <div class="row h-100 g-0">
        <!-- Sidebar: Tất cả người chat -->
        <aside class="col-12 col-md-4 col-lg-3 border-end chat-col d-flex flex-column">
            <div class="p-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" placeholder="Tìm theo tên hoặc nội dung…" />
                </div>
                <div class="d-flex align-items-center mt-2 small text-muted">
                    <span class="fw-semibold">Tất cả cuộc trò chuyện</span>
                    <span class="ms-auto">(@Model.Conversations.Count)</span>
                </div>
            </div>

            <div class="chat-scroll px-2">
                @foreach (var c in Model.Conversations
                                .OrderByDescending(x => x.IsPinned)
                                .ThenByDescending(x => x.LastMessageAt))

                {
                    var isActive = c.ConversationId == Model.SelectedConversationId;

                    <a class="d-flex align-items-start gap-2 p-2 rounded conv-item @(isActive ? "bg-light" : "")"
                       href="@Url.Action("Index", "ChatCustomer", new { area = "Customer", id = c.ConversationId })">
                        <img class="avatar"
                             src="@((string.IsNullOrWhiteSpace(c.AvatarUrl) ? fallbackImg : c.AvatarUrl))"
                             alt=""
                             loading="lazy" decoding="async" referrerpolicy="no-referrer"
                             onerror="this.onerror=null;this.src='@fallbackImg';" />

                        <div class="flex-grow-1">
                            <div class="d-flex">
                                <div class="fw-semibold text-ellipsis-1">@c.Title</div>
                                <div class="ms-auto small text-muted">@c.LastMessageAt?.ToString("HH:mm")</div>
                            </div>
                            <div class="small text-muted text-ellipsis-1">@c.LastMessageSnippet</div>
                        </div>

                        @if (c.UnreadCount > 0)
                        {
                            <span class="badge rounded-pill bg-danger ms-2">@c.UnreadCount</span>
                        }
                    </a>
                }
            </div>
        </aside>

        <!-- Khung chat: nội dung cuộc trò chuyện đang chọn -->
        <main class="col-12 col-md-8 col-lg-9 chat-col d-flex flex-column">
            <!-- Header -->
            <div class="border-bottom p-3 d-flex align-items-center">
                <img class="avatar me-2"
                     src="@((string.IsNullOrWhiteSpace(otherInSelected?.Account?.AvatarUrl) ? fallbackImg : otherInSelected?.Account?.AvatarUrl))"
                     alt=""
                     loading="lazy" decoding="async" referrerpolicy="no-referrer"
                     onerror="this.onerror=null;this.src='@fallbackImg';" />

                <div class="chat-header-content">
                    <div class="fw-semibold">
                        @(otherInSelected?.Account?.AccountName ?? "Chọn một cuộc trò chuyện")
                    </div>
                </div>
            </div>

            <!-- Danh sách tin nhắn -->
            <div id="msgList" class="msg-list">
                @if (selected?.Messages?.Count > 0)
                {
                    foreach (var m in selected.Messages.OrderBy(x => x.CreatedAt))
                    {
                        var isMe = m.SenderAccountId == me;

                        <div class="d-flex @(isMe ? "justify-content-end" : "justify-content-start")">
                            <div class="bubble @(isMe ? "me" : "other")">
                                @if (!string.IsNullOrWhiteSpace(m.Body))
                                {
                                    <div>@m.Body</div>
                                }

                                @* Hiển thị ảnh nếu có; nếu không có hoặc lỗi => fallback *@
                                @if (!string.IsNullOrWhiteSpace(m.ImageUrl))
                                {
                                    <img src="@m.ImageUrl"
                                         class="mt-2 rounded"
                                         style="max-width:220px;"
                                         loading="lazy" decoding="async" referrerpolicy="no-referrer"
                                         onerror="this.onerror=null;this.src='@fallbackImg';" />
                                }

                                <!-- Meta: Giờ + Trạng thái (chỉ hiện cho tin mình gửi) -->
                                <div class="msg-meta text-end small mt-1 d-flex align-items-center justify-content-end gap-2">
                                    <span class="text-muted">@m.CreatedAt.ToString("HH:mm")</span>

                                    @if (isMe)
                                    {
                                        var otherAcc = otherInSelected?.Account;
                                        var rcpt = m.Receipts?.FirstOrDefault(r => r.RecipientAccountId == otherAcc?.AccountId);

                                        if (rcpt?.IsRead == true)
                                        {
                                            <span class="status-label read">
                                                Đã xem @(rcpt?.ReadAt?.ToString("HH:mm"))
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-label sent">Đã gửi</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="h-100 d-flex align-items-center justify-content-center text-muted">
                        Hãy chọn một cuộc trò chuyện ở cột bên trái để xem nội dung.
                    </div>
                }
            </div>

            <!-- Ô soạn tin -->
            <div class="msg-input p-3">
                @* NOTE: cần enctype để upload file *@
                <form method="post"
                      action='@Url.Action("Send", "ChatCustomer", new { area = "Customer" })'
                      class="w-100"
                      enctype="multipart/form-data">

                    <input type="hidden" name="conversationId" value="@Model.SelectedConversationId" />

                    @* Khung xem trước ảnh đính kèm - multiple images *@
                    <div id="attachPreview" class="d-none">
                        <div id="imageGrid" class="image-grid">
                            @* Images will be added here dynamically *@
                        </div>
                        
                        @* Nút + để thêm ảnh *@
                        <button type="button" id="addMoreBtn" class="add-more-btn" title="Thêm ảnh">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>

                    <div class="msg-input-row">
                        <input type="text"
                               name="body"
                               class="form-control"
                               placeholder="Nhập tin nhắn…"
                               autocomplete="off" />

                        @* Input file ẩn - multiple *@
                        <input type="file"
                               id="fileInput"
                               name="image"
                               class="d-none"
                               accept="image/*"
                               multiple />

                        @* Nút mở thư mục chọn ảnh *@
                        <button type="button"
                                id="pickFileBtn"
                                class="btn"
                                title="Đính kèm ảnh">
                            <i class="bi bi-paperclip"></i>
                        </button>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        // Tự cuộn xuống cuối khi mở cuộc trò chuyện
        (function () {
          var el = document.getElementById('msgList');
          if (el) el.scrollTop = el.scrollHeight;
        })();

        // Quản lý nhiều ảnh
        (function () {
            var pickBtn = document.getElementById('pickFileBtn');
            var fileInput = document.getElementById('fileInput');
            var previewWrap = document.getElementById('attachPreview');
            var imageGrid = document.getElementById('imageGrid');
            var addMoreBtn = document.getElementById('addMoreBtn');
            var selectedFiles = [];
            var dataTransfer = new DataTransfer();

            if (!pickBtn || !fileInput) return;

            function updatePreview() {
                imageGrid.innerHTML = '';
                
                if (selectedFiles.length === 0) {
                    previewWrap.classList.add('d-none');
                    return;
                }

                previewWrap.classList.remove('d-none');
                
                selectedFiles.forEach(function(fileData, index) {
                    var imgContainer = document.createElement('div');
                    imgContainer.className = 'image-thumb-container';
                    
                    var img = document.createElement('img');
                    img.src = fileData.url;
                    img.alt = fileData.file.name;
                    img.className = 'image-thumb';
                    
                    var removeBtn = document.createElement('button');
                    removeBtn.type = 'button';
                    removeBtn.className = 'remove-thumb-btn';
                    removeBtn.innerHTML = '×';
                    removeBtn.title = 'Xóa ảnh';
                    removeBtn.onclick = function() {
                        removeImage(index);
                    };
                    
                    imgContainer.appendChild(img);
                    imgContainer.appendChild(removeBtn);
                    imageGrid.appendChild(imgContainer);
                });
            }

            function removeImage(index) {
                if (selectedFiles[index]) {
                    URL.revokeObjectURL(selectedFiles[index].url);
                }
                selectedFiles.splice(index, 1);
                
                // Update DataTransfer
                dataTransfer = new DataTransfer();
                selectedFiles.forEach(function(fileData) {
                    dataTransfer.items.add(fileData.file);
                });
                fileInput.files = dataTransfer.files;
                
                updatePreview();
            }

            pickBtn.addEventListener('click', function () {
                fileInput.click();
            });

            addMoreBtn.addEventListener('click', function () {
                fileInput.click();
            });

            fileInput.addEventListener('change', function () {
                if (!fileInput.files || fileInput.files.length === 0) return;

                for (var i = 0; i < fileInput.files.length; i++) {
                    var file = fileInput.files[i];
                    
                    if (!file.type || !file.type.startsWith('image/')) {
                        continue;
                    }

                    var url = URL.createObjectURL(file);
                    selectedFiles.push({
                        file: file,
                        url: url
                    });
                    dataTransfer.items.add(file);
                }

                fileInput.files = dataTransfer.files;
                updatePreview();
            });
        })();
    </script>

       <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
   
}
