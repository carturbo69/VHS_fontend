          connection.onreconnecting((err) => { console.info('[chat] reconnecting...', err); });
          connection.onreconnected(async (connectionId) => {
            console.info('[chat] reconnected as', connectionId, '— re-registering…');
            try { await connection.invoke('Register', me); } catch (e) { console.error('[chat] re-register failed', e); }
          });
          connection.onclose(async (err) => {
            console.warn('[chat] connection closed, restarting…', err);
            try { await connection.start(); await connection.invoke('Register', me); } catch (e) { console.error('[chat] restart failed', e); }
          });

          (async function startAndRegister(){
            try { await connection.start(); await connection.invoke('Register', me); }
            catch (e) { console.error('[chat] initial start failed, retrying in 2s…', e); setTimeout(startAndRegister, 2000); }
          })();
        };

        // Luôn khởi tạo Reply UI ngay
        (function initUiEarly(){
          // đợi chút cho DOM section này render xong
          if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', window.__initReplyUi, { once:true });
          } else {
            window.__initReplyUi();
          }
        })();

        // Realtime: như cũ — nếu có sẵn signalR thì init ngay, nếu chưa thì nạp CDN rồi init
        (function ensureSignalRReady(){
          if (window.signalR?.HubConnectionBuilder) {
            window.__initChatRealtime();
            return;
          }
          var s = document.createElement('script');
          s.src = 'https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.5/signalr.min.js';
          s.defer = true;
          s.onload = function(){ window.__initChatRealtime(); };
          s.onerror = function(){ console.error('[chat] failed to load signalr.min.js'); };
          document.head.appendChild(s);
        })();
