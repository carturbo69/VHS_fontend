    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>

         // --- üì® C·∫≠p nh·∫≠t t·ªïng tin nh·∫Øn ch∆∞a ƒë·ªçc (Provider) ---
          async function updateProviderChatUnreadCount() {
          try {
            const url = '@Url.Action("UnreadTotal", "ChatProvider", new { area = "Provider" })';
            const resp = await fetch(url, { credentials: 'same-origin' });

            // N·∫øu b·ªã redirect v·ªÅ trang login, resp.redirected s·∫Ω true
            if (!resp.ok || resp.redirected) return;

            const contentType = resp.headers.get('content-type') || '';
            if (!contentType.includes('application/json')) return;

            const data = await resp.json();
            const badge = document.querySelector('[data-chat-count]');

                    if (badge) {
          const total = Number(data?.total ?? 0);
          // lu√¥n hi·ªÉn th·ªã
          badge.style.display = 'inline-flex';
          // ƒë·ªïi m√†u theo tr·∫°ng th√°i (v√≠ d·ª•)
          badge.classList.toggle('is-empty', total === 0);
          badge.textContent = total;
        }


            if (badge) {
              const total = Number(data?.total ?? 0);
              badge.textContent = total;
              badge.style.display = total > 0 ? 'inline-flex' : 'none';
            }

          } catch (e) {
            console.error('Kh√¥ng th·ªÉ t·∫£i s·ªë tin nh·∫Øn ch∆∞a ƒë·ªçc (Provider):', e);
          }
        }


  document.addEventListener('DOMContentLoaded', () => {
    updateProviderChatUnreadCount();            // g·ªçi ngay khi load
    setInterval(updateProviderChatUnreadCount, 30000); // 30s/l·∫ßn
  });
                // =========================
        // Sidebar: gi·ªØ tr·∫°ng th√°i + ch·ªëng gi·∫≠t khi load
        // =========================
        (function () {
          const SIDEBAR_KEY = 'vhs-sidebar';
          const btn = document.getElementById('btnSidebarToggle');

          function applySidebarState(state) {
            const collapsed = state === 'collapsed';
            document.body.classList.toggle('sidebar-collapsed', collapsed);
            if (btn) {
              btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
              btn.classList.toggle('is-active', collapsed);
            }
          }

          function currentState() {
            return document.body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded';
          }

          // Kh·ªüi t·∫°o theo localStorage (fallback expanded)
          document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem(SIDEBAR_KEY) || 'expanded';
            applySidebarState(saved);

            // B·ªè .preload sau khi frame ƒë·∫ßu ƒë√£ √°p xong tr·∫°ng th√°i ‚Üí kh√¥ng gi·∫≠t
            requestAnimationFrame(() => {
              requestAnimationFrame(() => {
                document.documentElement.classList.remove('preload');
              });
            });
          });

          // Toggle + l∆∞u
          if (btn) {
            btn.addEventListener('click', () => {
              const next = currentState() === 'collapsed' ? 'expanded' : 'collapsed';
              localStorage.setItem(SIDEBAR_KEY, next);
              applySidebarState(next);
            });
          }
        })();

        // =========================
        // Theme sync + toggle
        // =========================
        (function () {
          const KEY = "vhs-theme";
          const root = document.documentElement;
          const icon = document.querySelector(".theme-icon");

          const apply = (t) => {
            root.classList.toggle("dark", t === "dark");
            if (icon) {
              icon.innerHTML = root.classList.contains("dark")
                ? '<i class="bi bi-moon-stars-fill fs-5"></i>'
                : '<i class="bi bi-brightness-high-fill fs-5"></i>';
            }
          };

          const saved = localStorage.getItem(KEY);
          if (saved === "light" || saved === "dark") apply(saved);
          else apply(matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

          window.__toggleTheme = () => {
            const next = root.classList.contains("dark") ? "light" : "dark";
            localStorage.setItem(KEY, next);
            apply(next);
          };
        })();

        // =========================
        // Notifications - S·ª≠ d·ª•ng API th·∫≠t
        // =========================
        (function () {
          const notifBtn   = document.getElementById('notificationBtn');
          const notifMenu  = document.getElementById('notificationMenu');
          const notifBadge = document.getElementById('notificationBadge');

          async function loadUnreadCount() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetUnreadCount');
              const dto = await res.json();
              if (dto.count > 0) {
                notifBadge.textContent = dto.count;
                notifBadge.style.display = 'inline-flex';
              } else {
                notifBadge.style.display = 'none';
              }
            } catch (e) {
              console.error('Error loading unread count:', e);
              notifBadge.style.display = 'none';
            }
          }

          async function loadNotifications() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetNotificationsPartial');
              const html = await res.text();
              notifMenu.innerHTML = html;
            } catch (e) {
              console.error('Error loading notifications:', e);
              notifMenu.innerHTML = '<li class="text-center text-muted py-2">Kh√¥ng th·ªÉ t·∫£i th√¥ng b√°o</li>';
            }
          }

          async function markProviderRead(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/MarkAsRead/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) {
              console.error('Error marking as read:', e);
            }
          }

          async function markProviderAllRead() {
            try {
              const res = await fetch('/Provider/ProviderNotification/MarkAllAsRead', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) {
              console.error('Error marking all as read:', e);
            }
          }

          // G·∫Øn v√†o window ƒë·ªÉ onclick trong HTML d√πng ƒë∆∞·ª£c
          window.markProviderRead = markProviderRead;
          window.markProviderAllRead = markProviderAllRead;
          window.deleteProviderNotification = async function(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/Delete/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) {
              console.error('Error deleting notification:', e);
            }
          }

          // Toggle / Hover popup
          function isOpen() {
            return notifMenu.style.display === 'block';
          }
          async function openMenu() {
            if (!isOpen()) {
              await loadNotifications();
              notifMenu.style.display = 'block';
              notifBtn.setAttribute('aria-expanded', 'true');
            }
          }
          function closeMenu() {
            if (isOpen()) {
              notifMenu.style.display = 'none';
              notifBtn.setAttribute('aria-expanded', 'false');
            }
          }

          if (notifBtn && notifMenu) {
            // Hover to open/close
            let hoverTimer;
            notifBtn.addEventListener('mouseenter', async () => {
              clearTimeout(hoverTimer);
              await openMenu();
            });
            notifBtn.addEventListener('mouseleave', () => {
              // Delay nh·∫π ƒë·ªÉ cho ph√©p di chu·ªôt sang menu m√† kh√¥ng ƒë√≥ng ngay
              hoverTimer = setTimeout(() => {
                if (!notifMenu.matches(':hover')) closeMenu();
              }, 120);
            });
            notifMenu.addEventListener('mouseleave', () => {
              closeMenu();
            });
            notifMenu.addEventListener('mouseenter', () => {
              clearTimeout(hoverTimer);
            });

            // Click outside ƒë·ªÉ ƒë√≥ng (desktop/mobile)
            document.addEventListener('click', (e) => {
              if (!notifBtn.contains(e.target) && !notifMenu.contains(e.target)) {
                closeMenu();
              }
            });
          }

          // Kh·ªüi ch·∫°y
          document.addEventListener('DOMContentLoaded', () => {
            loadUnreadCount();
            // C·∫≠p nh·∫≠t m·ªói 30 gi√¢y
            setInterval(loadUnreadCount, 30000);
          });
        })();
    </script>

    @RenderSection("Scripts", required: false)
