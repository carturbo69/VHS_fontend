<!DOCTYPE html>
<html lang="vi" class="preload">
 <!-- Thêm .preload để chặn transition khi khởi động -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Provider_Client</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/provider.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/provider-notification.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Áp trạng thái sidebar RẤT SỚM để tránh FOUC/reflow -->
    <script>
        (function () {
          try {
            if (localStorage.getItem('vhs-sidebar') === 'collapsed') {
              document.body.classList.add('sidebar-collapsed');
            }
          } catch (e) {}
        })();
    </script>

    <!-- Sidebar (fixed) -->
    <aside id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-grid-1x2-fill brand-icon"></i>
            <span class="brand-text">Service Provider</span>
        </div>

        <nav class="sidebar-nav">
            <a asp-area="Provider" asp-controller="ProviderDashboard" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderDashboard" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderDashboard" ? "page" : null)">
                <i class="bi bi-house-door"></i><span>Tổng quan</span>
            </a>

            <a asp-area="Provider" asp-controller="Service" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Service" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Service" ? "page" : null)">
                <i class="bi bi-tools"></i><span>Quản lí dịch vụ</span>
            </a>

            <a asp-area="Provider" asp-controller="Order" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" ? "page" : null)">
                <i class="bi bi-receipt"></i><span>Quản lí đơn hàng</span>
            </a>

            <a asp-area="Provider" asp-controller="Booking" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Booking" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Booking" ? "page" : null)">
                <i class="bi bi-calendar-check"></i><span>Quản lí lịch hẹn</span>
            </a>

            <a asp-area="Provider" asp-controller="Staff" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Staff" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Staff" ? "page" : null)">
                <i class="bi bi-people"></i><span>Quản lí nhân viên</span>
            </a>

            <a asp-area="Provider" asp-controller="ProviderFeedback" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderFeedback" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderFeedback" ? "page" : null)">
                <i class="bi bi-chat-dots"></i><span>Phản hồi khách hàng</span>
            </a>

            <a asp-area="Provider" asp-controller="Revenue" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Revenue" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Revenue" ? "page" : null)">
                <i class="bi bi-graph-up"></i><span>Báo cáo doanh thu</span>
            </a>

            <a asp-area="Provider" asp-controller="ProviderNotification" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderNotification" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderNotification" ? "page" : null)">
                <i class="bi bi-bell"></i><span>Thông báo</span>
            </a>

            <a asp-area="Provider" asp-controller="Profile" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Profile" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Profile" ? "page" : null)">
                <i class="bi bi-person-gear"></i><span>Thông tin cá nhân</span>
            </a>

        </nav>
    </aside>

    <!-- Page content -->
    <div id="page">
        <!-- Topbar -->
        <header class="topbar">
            <div class="left">
                <button id="btnSidebarToggle"
                        class="btn btn-outline-secondary btn-toggle"
                        aria-label="Toggle sidebar"
                        aria-pressed="false">
                    <!-- thêm aria-pressed -->
                    <i class="bi bi-list"></i>
                </button>
                <h5 class="page-title mb-0">@ViewData["Title"]</h5>
            </div>

            <div class="right">
                <!-- Notifications -->
                <div class="notif">
                    <a href="/Provider/ProviderNotification/Index" id="notificationBtn" class="btn btn-link notif-btn" aria-label="Notifications">
                        <i class="bi bi-bell fs-5"></i>
                        <span id="notificationBadge" class="badge-dot" style="display:none">0</span>
                    </a>
                    <ul id="notificationMenu" class="notif-menu">
                        <li class="text-center text-muted py-2">Loading…</li>
                    </ul>
                </div>

                <!-- Theme -->
                <button type="button" class="icon-btn" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                    <span class="theme-icon"></span>
                </button>

                <!-- User -->
                <div class="user">
                    <i class="bi bi-person-circle fs-5"></i>
                    <span class="ms-1">@Context.Session.GetString("Username")</span>
                </div>

                <!-- Logout -->
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm rounded-pill">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </header>

        <main class="content">
            @RenderBody()
        </main>

        <footer class="footer">
            &copy; 2025 Viet Home Service — Provider Dashboard
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // =========================
        // Sidebar: giữ trạng thái + chống giật khi load
        // =========================
        (function () {
          const SIDEBAR_KEY = 'vhs-sidebar';
          const btn = document.getElementById('btnSidebarToggle');

          function applySidebarState(state) {
            const collapsed = state === 'collapsed';
            document.body.classList.toggle('sidebar-collapsed', collapsed);
            if (btn) {
              btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
              btn.classList.toggle('is-active', collapsed);
            }
          }

          function currentState() {
            return document.body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded';
          }

          // Khởi tạo theo localStorage (fallback expanded)
          document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem(SIDEBAR_KEY) || 'expanded';
            applySidebarState(saved);

            // Bỏ .preload sau khi frame đầu đã áp xong trạng thái → không giật
            requestAnimationFrame(() => {
              requestAnimationFrame(() => {
                document.documentElement.classList.remove('preload');
              });
            });
          });

          // Toggle + lưu
          if (btn) {
            btn.addEventListener('click', () => {
              const next = currentState() === 'collapsed' ? 'expanded' : 'collapsed';
              localStorage.setItem(SIDEBAR_KEY, next);
              applySidebarState(next);
            });
          }
        })();

        // =========================
        // Theme sync + toggle
        // =========================
        (function () {
          const KEY = "vhs-theme";
          const root = document.documentElement;
          const icon = document.querySelector(".theme-icon");

          const apply = (t) => {
            root.classList.toggle("dark", t === "dark");
            if (icon) {
              icon.innerHTML = root.classList.contains("dark")
                ? '<i class="bi bi-moon-stars-fill fs-5"></i>'
                : '<i class="bi bi-brightness-high-fill fs-5"></i>';
            }
          };

          const saved = localStorage.getItem(KEY);
          if (saved === "light" || saved === "dark") apply(saved);
          else apply(matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

          window.__toggleTheme = () => {
            const next = root.classList.contains("dark") ? "light" : "dark";
            localStorage.setItem(KEY, next);
            apply(next);
          };
        })();

        // =========================
        // Notifications - Sử dụng API thật
        // =========================
        (function () {
          const notifBtn   = document.getElementById('notificationBtn');
          const notifMenu  = document.getElementById('notificationMenu');
          const notifBadge = document.getElementById('notificationBadge');

          async function loadUnreadCount() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetUnreadCount');
              const dto = await res.json();
              if (dto.count > 0) {
                notifBadge.textContent = dto.count;
                notifBadge.style.display = 'inline-flex';
              } else {
                notifBadge.style.display = 'none';
              }
            } catch (e) { 
              console.error('Error loading unread count:', e);
              notifBadge.style.display = 'none';
            }
          }

          async function loadNotifications() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetNotificationsPartial');
              const html = await res.text();
              notifMenu.innerHTML = html;
            } catch (e) { 
              console.error('Error loading notifications:', e);
              notifMenu.innerHTML = '<li class="text-center text-muted py-2">Không thể tải thông báo</li>';
            }
          }

          async function markProviderRead(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/MarkAsRead/${id}`, { 
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) { 
              console.error('Error marking as read:', e);
            }
          }

          async function markProviderAllRead() {
            try {
              const res = await fetch('/Provider/ProviderNotification/MarkAllAsRead', { 
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) { 
              console.error('Error marking all as read:', e);
            }
          }

          // Gắn vào window để onclick trong HTML dùng được
          window.markProviderRead = markProviderRead;
          window.markProviderAllRead = markProviderAllRead;
          window.deleteProviderNotification = async function(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/Delete/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                await loadUnreadCount();
                await loadNotifications();
              }
            } catch (e) {
              console.error('Error deleting notification:', e);
            }
          }

          // Toggle / Hover popup
          function isOpen() {
            return notifMenu.style.display === 'block';
          }
          async function openMenu() {
            if (!isOpen()) {
              await loadNotifications();
              notifMenu.style.display = 'block';
              notifBtn.setAttribute('aria-expanded', 'true');
            }
          }
          function closeMenu() {
            if (isOpen()) {
              notifMenu.style.display = 'none';
              notifBtn.setAttribute('aria-expanded', 'false');
            }
          }

          if (notifBtn && notifMenu) {
            // Hover to open/close
            let hoverTimer;
            notifBtn.addEventListener('mouseenter', async () => {
              clearTimeout(hoverTimer);
              await openMenu();
            });
            notifBtn.addEventListener('mouseleave', () => {
              // Delay nhẹ để cho phép di chuột sang menu mà không đóng ngay
              hoverTimer = setTimeout(() => {
                if (!notifMenu.matches(':hover')) closeMenu();
              }, 120);
            });
            notifMenu.addEventListener('mouseleave', () => {
              closeMenu();
            });
            notifMenu.addEventListener('mouseenter', () => {
              clearTimeout(hoverTimer);
            });

            // Click outside để đóng (desktop/mobile)
            document.addEventListener('click', (e) => {
              if (!notifBtn.contains(e.target) && !notifMenu.contains(e.target)) {
                closeMenu();
              }
            });
          }

          // Khởi chạy
          document.addEventListener('DOMContentLoaded', () => {
            loadUnreadCount();
            // Cập nhật mỗi 30 giây
            setInterval(loadUnreadCount, 30000);
          });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
