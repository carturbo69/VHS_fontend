            }

            document.addEventListener('DOMContentLoaded', () => {
                // Polling c≈© c·ªßa b·∫°n v·∫´n ch·∫°y
                // B√¢y gi·ªù th√™m realtime qua SignalR
                initProviderChatHub();
            });
        })();
    </script>

