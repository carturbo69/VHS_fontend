@using Microsoft.Extensions.Configuration
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="vi" class="preload">
 <!-- Thêm .preload để chặn transition khi khởi động -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Provider_Client</title>
    <link rel="icon" type="image/png" href="~/images/vhs_logo.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/provider.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/provider-profile.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Áp trạng thái sidebar RẤT SỚM để tránh FOUC/reflow -->
    <script>
        (function () {
          try {
            if (localStorage.getItem('vhs-sidebar') === 'collapsed') {
              document.body.classList.add('sidebar-collapsed');
            }
          } catch (e) {}
        })();
    </script>

    <!-- Sidebar (fixed) -->
    <aside id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-grid-1x2-fill brand-icon"></i>
            <span class="brand-text">Nhà cung cấp dịch vụ</span>
        </div>

        <nav class="sidebar-nav">
            <a asp-area="Provider" asp-controller="ProviderDashboard" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderDashboard" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderDashboard" ? "page" : null)">
                <i class="bi bi-house-door"></i><span>Tổng quan</span>
            </a>


            <a asp-area="Provider" asp-controller="RevenueReport" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="RevenueReport" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="RevenueReport" ? "page" : null)">
                <i class="bi bi-graph-up"></i><span>Báo cáo doanh thu</span>
            </a>

            <a asp-area="Provider" asp-controller="ProviderProfile" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderProfile" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderProfile" ? "page" : null)">
                <i class="bi bi-person-gear"></i><span>Thông tin cá nhân</span>
            </a>

            <a asp-area="Provider" asp-controller="ServiceManagement" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ServiceManagement" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ServiceManagement" ? "page" : null)">
                <i class="bi bi-tools"></i><span>Quản lí dịch vụ</span>
            </a>

            <a asp-area="Provider" asp-controller="StaffManagement" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="StaffManagement" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="StaffManagement" ? "page" : null)">
                <i class="bi bi-people"></i><span>Quản lí nhân viên</span>
            </a>

            <a asp-area="Provider" asp-controller="ProviderSchedule" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderSchedule" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderSchedule" ? "page" : null)">
                <i class="bi bi-calendar-week"></i><span>Lịch làm việc</span>
            </a>

            <a asp-area="Provider" asp-controller="Order" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" && ViewContext.RouteData.Values["action"]?.ToString()=="Index" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" && ViewContext.RouteData.Values["action"]?.ToString()=="Index" ? "page" : null)">
                <i class="bi bi-receipt"></i><span>Quản lí đơn hàng</span>
            </a>

            <a asp-area="Provider" asp-controller="Order" asp-action="History"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" && ViewContext.RouteData.Values["action"]?.ToString()=="History" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Order" && ViewContext.RouteData.Values["action"]?.ToString()=="History" ? "page" : null)">
                <i class="bi bi-clock-history"></i><span>Lịch sử đơn hàng</span>
            </a>


            <a asp-area="Provider" asp-controller="ProviderFeedback" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderFeedback" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderFeedback" ? "page" : null)">
                <i class="bi bi-star-fill"></i><span>Phản hồi khách hàng</span>
            </a>


            <a asp-area="Provider" asp-controller="ProviderWithdrawal" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderWithdrawal" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderWithdrawal" ? "page" : null)">
                <i class="bi bi-bank"></i><span>Rút tiền</span>
            </a>

            <a asp-area="Provider" asp-controller="ProviderNotification" asp-action="Index"
               class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderNotification" ? "active" : "")"
               aria-current="@(ViewContext.RouteData.Values["controller"]?.ToString()=="ProviderNotification" ? "page" : null)">
                <i class="bi bi-bell"></i><span>Thông báo</span>
            </a>
        </nav>
    </aside>

    <!-- Page content -->
    <div id="page">
        <!-- Topbar -->
        <header class="topbar">
            <div class="left">
                <button id="btnSidebarToggle"
                        class="btn btn-outline-secondary btn-toggle"
                        aria-label="Toggle sidebar"
                        aria-pressed="false">
                    <!-- thêm aria-pressed -->
                    <i class="bi bi-list"></i>
                </button>
                <h5 class="page-title mb-0">@ViewData["Title"]</h5>
            </div>

            <div class="right">

                <!-- Chat -->
                <div>
                <a asp-area="Provider" asp-controller="ChatProvider" asp-action="Index"
                   class="icon-btn chat-btn" aria-label="Chat">
                    <i class="bi bi-chat-dots fs-5"></i>
                    <span class="chat-badge" data-chat-count>0</span>
                </a>
                </div>
                <!-- Notifications -->
                <div class="notif">
                    <a asp-area="Provider" asp-controller="ProviderNotification" asp-action="Index" 
                       id="notificationBtn" class="btn btn-link notif-btn" aria-expanded="false" aria-label="Notifications">
                        <i class="bi bi-bell fs-5"></i>
                        <span id="notificationBadge" class="badge-dot" style="display:none">0</span>
                    </a>
                    <ul id="notificationMenu" class="notif-menu">
                        <li class="text-center text-muted py-2">Loading…</li>
                    </ul>
                </div>

                <!-- Settings dropdown (Theme + Translate) -->
                <div class="settings-dropdown">
                    <button type="button" class="icon-btn settings-btn" id="settingsBtn" aria-label="Cài đặt">
                        <i class="bi bi-gear-fill"></i>
                    </button>
                    <div class="settings-menu" id="settingsMenu" style="display: none;">
                        <!-- Theme toggle -->
                        <button type="button" class="settings-item" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                            <span class="theme-icon"></span>
                            <span class="settings-text">Chế độ sáng tối</span>
                        </button>
                        <!-- Translate toggle -->
                        <button type="button" class="settings-item" id="translateToggleBtn" aria-label="Dịch">
                            <i class="bi bi-translate"></i>
                            <span class="settings-text">Tiếng Anh / Tiếng Việt</span>
                        </button>
                    </div>
                </div>

                <!-- User -->
                <div class="user">
                    <i class="bi bi-person-circle fs-5"></i>
                    <span class="ms-1">@{
                        var username = Context.Session.GetString("Username");
                        var displayName = !string.IsNullOrEmpty(username) && username.Contains("@") 
                            ? username.Split('@')[0] 
                            : username ?? "";
                        @displayName
                    }</span>
                </div>

                <!-- Logout -->
                <a asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-sm rounded-pill">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </header>

        <main class="content">
            @RenderBody()
        </main>

        <footer class="footer">
            &copy; 2025 Viet Home Service — Provider Dashboard
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/js/chat-hub-signalr.js" asp-append-version="true"></script>

    @{
        var accIdClaim = User.FindFirst("AccountID")?.Value;
        var accIdSession = Context.Session.GetString("AccountID");
        var accId = !string.IsNullOrWhiteSpace(accIdClaim) ? accIdClaim : accIdSession;
        var chatHubUrl = (Configuration["Apis:Backend"]?.TrimEnd('/') ?? "") + "/chathub";
    }

    <script>

         // --- Cập nhật tổng tin nhắn chưa đọc (Provider) ---
          async function updateProviderChatUnreadCount() {
          try {
            const url = '@Url.Action("UnreadTotal", "ChatProvider", new { area = "Provider" })';
            const resp = await fetch(url, { credentials: 'same-origin' });

            // Nếu bị redirect về trang login, resp.redirected sẽ true
            if (!resp.ok || resp.redirected) return;

            const contentType = resp.headers.get('content-type') || '';
            if (!contentType.includes('application/json')) return;

            const data = await resp.json();
            const badge = document.querySelector('[data-chat-count]');

            if (badge) {
              const total = Number(data?.total ?? 0);
              badge.textContent = total;
              // Hiển thị badge khi có tin nhắn chưa đọc, ẩn khi = 0
              if (total > 0) {
                badge.style.display = 'inline-flex';
                badge.classList.remove('is-empty');
              } else {
                badge.style.display = 'none';
                badge.classList.add('is-empty');
              }
            }

          } catch (e) {
            console.error('Không thể tải số tin nhắn chưa đọc (Provider):', e);
          }
        }


  document.addEventListener('DOMContentLoaded', () => {
    updateProviderChatUnreadCount();            // gọi ngay khi load
    setInterval(updateProviderChatUnreadCount, 30000); // 30s/lần
  });
        // =========================
        // Sidebar: giữ trạng thái + chống giật khi load + Mobile support
        // =========================
        (function () {
          const SIDEBAR_KEY = 'vhs-sidebar';
          const btn = document.getElementById('btnSidebarToggle');

          function isMobile() {
            return window.matchMedia('(max-width: 768px)').matches;
          }

          function applySidebarState(state) {
            const collapsed = state === 'collapsed';
            const mobile = isMobile();
            
            if (mobile) {
              // Trên mobile: dùng class sidebar-open để hiện/ẩn
              document.body.classList.toggle('sidebar-open', !collapsed);
              document.body.classList.remove('sidebar-collapsed');
            } else {
              // Trên desktop: dùng class sidebar-collapsed
              document.body.classList.toggle('sidebar-collapsed', collapsed);
              document.body.classList.remove('sidebar-open');
            }
            
            if (btn) {
              btn.setAttribute('aria-pressed', collapsed ? 'true' : 'false');
              btn.classList.toggle('is-active', collapsed);
            }
          }

          function currentState() {
            const mobile = isMobile();
            if (mobile) {
              return document.body.classList.contains('sidebar-open') ? 'expanded' : 'collapsed';
            }
            return document.body.classList.contains('sidebar-collapsed') ? 'collapsed' : 'expanded';
          }

          // Khởi tạo theo localStorage (fallback expanded)
          document.addEventListener('DOMContentLoaded', () => {
            // Trên mobile: mặc định ẩn sidebar
            const mobile = isMobile();
            const saved = mobile ? 'collapsed' : (localStorage.getItem(SIDEBAR_KEY) || 'expanded');
            applySidebarState(saved);

            // Bỏ .preload sau khi frame đầu đã áp xong trạng thái → không giật
            requestAnimationFrame(() => {
              requestAnimationFrame(() => {
                document.documentElement.classList.remove('preload');
              });
            });
          });

          // Toggle + lưu
          if (btn) {
            btn.addEventListener('click', () => {
              const next = currentState() === 'collapsed' ? 'expanded' : 'collapsed';
              
              // Chỉ lưu state trên desktop
              if (!isMobile()) {
                localStorage.setItem(SIDEBAR_KEY, next);
              }
              
              applySidebarState(next);
            });
          }

          // Đóng sidebar khi click bên ngoài trên mobile
          document.addEventListener('click', (e) => {
            if (!isMobile()) return;
            
            const sidebar = document.getElementById('sidebar');
            const isClickInsideSidebar = sidebar && sidebar.contains(e.target);
            const isClickOnToggle = btn && btn.contains(e.target);
            
            if (!isClickInsideSidebar && !isClickOnToggle && document.body.classList.contains('sidebar-open')) {
              document.body.classList.remove('sidebar-open');
            }
          });
        })();

        // =========================
        // Theme sync + toggle
        // =========================
        (function () {
          const KEY = "vhs-theme";
          const root = document.documentElement;
          const icon = document.querySelector(".theme-icon");

          const apply = (t) => {
            root.classList.toggle("dark", t === "dark");
            if (icon) {
              icon.innerHTML = root.classList.contains("dark")
                ? '<i class="bi bi-moon-stars-fill fs-5"></i>'
                : '<i class="bi bi-brightness-high-fill fs-5"></i>';
            }
          };

          const saved = localStorage.getItem(KEY);
          if (saved === "light" || saved === "dark") apply(saved);
          else apply(matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

          window.__toggleTheme = () => {
            const next = root.classList.contains("dark") ? "light" : "dark";
            localStorage.setItem(KEY, next);
            apply(next);
          };
        })();

        // =========================
        // Notifications - Sử dụng API thật
        // =========================
        (function () {
          const notifBtn   = document.getElementById('notificationBtn');
          const notifMenu  = document.getElementById('notificationMenu');
          const notifBadge = document.getElementById('notificationBadge');

          async function loadUnreadCount() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetUnreadCount');
              const dto = await res.json();
              if (dto.count > 0) {
                notifBadge.textContent = dto.count;
                notifBadge.style.display = 'inline-flex';
              } else {
                notifBadge.style.display = 'none';
              }
            } catch (e) {
              console.error('Error loading unread count:', e);
              notifBadge.style.display = 'none';
            }
          }

          async function loadNotifications() {
            try {
              const res = await fetch('/Provider/ProviderNotification/GetNotificationsPartial');
              const html = await res.text();
              notifMenu.innerHTML = html;
            } catch (e) {
              console.error('Error loading notifications:', e);
              notifMenu.innerHTML = '<li class="text-center text-muted py-2">Không thể tải thông báo</li>';
            }
          }

          // Function để cập nhật trang notification nếu đang mở
          function updateNotificationPage(notificationId, action) {
            // Kiểm tra xem có đang ở trang notification không
            const notificationPage = document.querySelector('.notification-page');
            if (!notificationPage) return;

            // Sử dụng setTimeout để đảm bảo function đã được load
            setTimeout(() => {
              if (action === 'read' && typeof window.markNotificationRead === 'function' && notificationId) {
                // Gọi function từ trang notification
                window.markNotificationRead(notificationId);
              } else if (action === 'delete' && typeof window.deleteNotification === 'function' && notificationId) {
                // Gọi function từ trang notification
                window.deleteNotification(notificationId);
              } else if (action === 'readAll' && typeof window.markAllNotificationsRead === 'function') {
                // Gọi function từ trang notification
                window.markAllNotificationsRead();
              }
            }, 100);
          }

          async function markProviderRead(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/MarkAsRead/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                // Cập nhật UI dropdown ngay lập tức (không reload)
                const notificationItem = document.querySelector(`.notification-item[data-notification-id="${id}"]`);
                if (notificationItem) {
                  notificationItem.classList.remove('unread');
                  notificationItem.classList.add('read');
                  const dot = notificationItem.querySelector('.notification-dot');
                  if (dot) {
                    dot.style.transition = 'opacity 0.3s ease';
                    dot.style.opacity = '0';
                    setTimeout(() => dot.remove(), 300);
                  }
                }
                
                // Cập nhật unread count
                await loadUnreadCount();
                
                // Thông báo cho trang notification nếu đang mở
                notifyProviderNotificationPage('markRead', { id: id });
              }
            } catch (e) {
              console.error('Error marking as read:', e);
            }
          }

          async function markProviderAllRead() {
            try {
              const res = await fetch('/Provider/ProviderNotification/MarkAllAsRead', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                // Cập nhật UI dropdown - đánh dấu tất cả là read ngay lập tức
                const unreadItems = document.querySelectorAll('.notification-item.unread');
                unreadItems.forEach((item, index) => {
                  setTimeout(() => {
                    item.classList.remove('unread');
                    item.classList.add('read');
                    const dot = item.querySelector('.notification-dot');
                    if (dot) {
                      dot.style.transition = 'opacity 0.3s ease';
                      dot.style.opacity = '0';
                      setTimeout(() => dot.remove(), 300);
                    }
                  }, index * 50); // Stagger animation
                });

                // Cập nhật unread count
                await loadUnreadCount();
                
                // Thông báo cho trang notification nếu đang mở
                notifyProviderNotificationPage('markAllRead', {});
              }
            } catch (e) {
              console.error('Error marking all as read:', e);
            }
          }
          
          // Function để thông báo cho trang notification khi có thay đổi
          function notifyProviderNotificationPage(action, data) {
            console.log('[ProviderLayout] Notifying notification page:', action, data);
            
            // Nếu đang ở trang notification, trigger custom event để trang notification lắng nghe
            if (window.location.pathname.includes('/Provider/ProviderNotification')) {
              console.log('[ProviderLayout] Same page, dispatching custom event');
              window.dispatchEvent(new CustomEvent('notificationMarkedRead', {
                detail: { action: action, data: data }
              }));
            }
            
            // Sử dụng BroadcastChannel để sync giữa các tabs/windows
            try {
              const channel = new BroadcastChannel('provider_notification_sync');
              channel.postMessage({
                action: action,
                data: data,
                timestamp: Date.now()
              });
              console.log('[ProviderLayout] Sent via BroadcastChannel');
              channel.close();
            } catch (e) {
              console.log('[ProviderLayout] BroadcastChannel not supported, using localStorage fallback');
              // Fallback: sử dụng localStorage event
              localStorage.setItem('provider_notification_update', JSON.stringify({
                action: action,
                data: data,
                timestamp: Date.now()
              }));
              localStorage.removeItem('provider_notification_update');
            }
          }

          // Gắn vào window để onclick trong HTML dùng được
          window.markProviderRead = markProviderRead;
          window.markProviderAllRead = markProviderAllRead;
          window.deleteProviderNotification = async function(id) {
            try {
              const res = await fetch(`/Provider/ProviderNotification/Delete/${id}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });
              const result = await res.json();
              if (result.success) {
                // Xóa item khỏi dropdown với animation
                const notificationItem = document.querySelector(`.notification-item[data-notification-id="${id}"]`);
                if (notificationItem) {
                  notificationItem.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                  notificationItem.style.opacity = '0';
                  notificationItem.style.transform = 'translateX(-20px)';
                  setTimeout(() => {
                    notificationItem.remove();
                  }, 300);
                }

                // Cập nhật dropdown
                await loadUnreadCount();
                await loadNotifications();

                // Cập nhật trang notification nếu đang mở
                updateNotificationPage(id, 'delete');
              }
            } catch (e) {
              console.error('Error deleting notification:', e);
            }
          }

          // Toggle / Hover popup
          function isOpen() {
            return notifMenu.style.display === 'block';
          }
          async function openMenu() {
            if (!isOpen()) {
              // Check if we have latest HTML from real-time update
              const latestHtml = notifMenu.getAttribute('data-latest-html');
              if (latestHtml) {
                notifMenu.innerHTML = latestHtml;
                notifMenu.removeAttribute('data-latest-html');
              } else {
                await loadNotifications();
              }
              notifMenu.style.display = 'block';
              notifBtn.setAttribute('aria-expanded', 'true');
            }
          }
          function closeMenu() {
            if (isOpen()) {
              notifMenu.style.display = 'none';
              notifBtn.setAttribute('aria-expanded', 'false');
            }
          }

          if (notifBtn && notifMenu) {
            // Hover to open/close menu
            let hoverTimer;
            notifBtn.addEventListener('mouseenter', async (e) => {
              clearTimeout(hoverTimer);
              await openMenu();
            });
            notifBtn.addEventListener('mouseleave', () => {
              // Delay nhẹ để cho phép di chuột sang menu mà không đóng ngay
              hoverTimer = setTimeout(() => {
                if (!notifMenu.matches(':hover')) closeMenu();
              }, 120);
            });
            notifMenu.addEventListener('mouseleave', () => {
              closeMenu();
            });
            notifMenu.addEventListener('mouseenter', () => {
              clearTimeout(hoverTimer);
            });

            // Click vào chuông thì chuyển đến trang thông báo
            // (Link sẽ tự động chuyển trang, không cần preventDefault)
            // Chỉ preventDefault khi click vào menu để không chuyển trang
            notifMenu.addEventListener('click', (e) => {
              e.stopPropagation();
            });

            // Click outside để đóng (desktop/mobile)
            document.addEventListener('click', (e) => {
              if (!notifBtn.contains(e.target) && !notifMenu.contains(e.target)) {
                closeMenu();
              }
            });
          }

          // Khởi chạy
          document.addEventListener('DOMContentLoaded', () => {
            loadUnreadCount();
            // Cập nhật mỗi 30 giây
            setInterval(loadUnreadCount, 30000);
          });
        })();

        // ===== SignalR Real-time Notifications for Provider Dropdown =====
        (function() {
          let notificationConnection = null;

          async function initNotificationSignalR() {
            try {
              // Load SignalR if not already loaded
              if (typeof signalR === 'undefined') {
                await new Promise((resolve, reject) => {
                  const script = document.createElement('script');
                  script.src = 'https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js';
                  script.onload = resolve;
                  script.onerror = reject;
                  document.head.appendChild(script);
                });
              }

              // Get backend URL from meta tag or default
              const metaBackendUrl = document.querySelector('meta[name="backend-url"]')?.getAttribute('content');
              const backendUrl = metaBackendUrl || 'https://apivhs.cuahangkinhdoanh.com';
              const hubUrl = `${backendUrl}/hubs/notification`;

              // Create connection
              notificationConnection = new signalR.HubConnectionBuilder()
                .withUrl(hubUrl, {
                  skipNegotiation: false,
                  transport: signalR.HttpTransportType.WebSockets | signalR.HttpTransportType.ServerSentEvents | signalR.HttpTransportType.LongPolling
                })
                .withAutomaticReconnect({
                  nextRetryDelayInMilliseconds: retryContext => {
                    if (retryContext.elapsedMilliseconds < 60000) {
                      return 2000;
                    } else {
                      return 10000;
                    }
                  }
                })
                .configureLogging(signalR.LogLevel.Warning)
                .build();

              // Handle connection events
              notificationConnection.onreconnecting(() => {
                console.log('[NotificationHub] Reconnecting...');
              });

              notificationConnection.onreconnected(() => {
                console.log('[NotificationHub] Reconnected');
              });

              notificationConnection.onclose(() => {
                console.log('[NotificationHub] Connection closed');
              });

              // Listen for new notifications - GỌI NGAY LẬP TỨC
              notificationConnection.on('ReceiveNotification', (notification) => {
                console.log('[NotificationHub] Received notification in Provider dropdown:', notification);
                // Gọi ngay lập tức, không delay
                handleNewNotification(notification);
              });
              
              // Cũng listen cho event khác nếu có
              notificationConnection.on('NewNotification', (notification) => {
                console.log('[NotificationHub] NewNotification event:', notification);
                handleNewNotification(notification);
              });

              // Start connection
              await notificationConnection.start();
              console.log('[NotificationHub] Connected successfully for Provider dropdown');

            } catch (error) {
              console.error('[NotificationHub] Error initializing SignalR for Provider dropdown:', error);
            }
          }

          // Throttle để tránh spam nhưng vẫn update nhanh
          let lastUpdateTime = 0;
          const UPDATE_THROTTLE = 100; // Chỉ 100ms throttle

          // Hàm update từ server (gọi ngay lập tức)
          function updateNotificationsFromServer() {
            const now = Date.now();
            if (now - lastUpdateTime < UPDATE_THROTTLE) {
              // Nếu vừa update gần đây, bỏ qua
              return;
            }
            lastUpdateTime = now;

            const notifMenu = document.getElementById('notificationMenu');
            const notifBadge = document.getElementById('notificationBadge');
            
            // Gọi song song: GetUnreadCount và GetNotificationsPartial
            Promise.all([
              fetch('/Provider/ProviderNotification/GetUnreadCount').then(r => r.json()).catch(() => ({ count: 0 })),
              fetch('/Provider/ProviderNotification/GetNotificationsPartial').then(r => r.text()).catch(() => '')
            ])
            .then(([countData, html]) => {
              // Update badge với số đếm chính xác từ server
              if (notifBadge) {
                const serverCount = countData?.count || 0;
                if (serverCount > 0) {
                  notifBadge.textContent = serverCount;
                  notifBadge.style.setProperty('display', 'inline-flex', 'important');
                  notifBadge.style.setProperty('visibility', 'visible', 'important');
                  notifBadge.style.setProperty('opacity', '1', 'important');
                } else {
                  notifBadge.style.setProperty('display', 'none', 'important');
                }
              }

              // Update notificationMenu với HTML mới nhất
              if (html && notifMenu) {
                if (notifMenu.style.display === 'block' || notifMenu.offsetParent !== null) {
                  notifMenu.innerHTML = html;
                }
                notifMenu.setAttribute('data-latest-html', html);
              }
            })
            .catch(err => {
              console.error('Error updating notifications:', err);
            });
          }

          function handleNewNotification(notification) {
            if (!notification) return;

            // Update unread count badge immediately - KHÔNG CHỜ SERVER
            const notifBadge = document.getElementById('notificationBadge');
            if (notifBadge) {
              const currentCount = parseInt(notifBadge.textContent) || 0;
              const newCount = currentCount + 1;
              notifBadge.textContent = newCount;
              notifBadge.style.setProperty('display', 'inline-flex', 'important');
              notifBadge.style.setProperty('visibility', 'visible', 'important');
              notifBadge.style.setProperty('opacity', '1', 'important');
            }

            // Show toast notification immediately
            showNotificationToast(notification);

            // Gọi server NGAY LẬP TỨC (không debounce)
            updateNotificationsFromServer();
          }

          function showNotificationToast(notification) {
            // Create toast notification
            const toast = document.createElement('div');
            toast.className = 'notification-toast';
            toast.innerHTML = `
              <div class="toast-content">
                <div class="toast-icon">
                  <i class="bi bi-bell-fill"></i>
                </div>
                <div class="toast-body">
                  <div class="toast-title">Thông báo mới</div>
                  <div class="toast-message">${escapeHtml(notification.content || notification.Content || '')}</div>
                </div>
                <button class="toast-close" onclick="this.parentElement.parentElement.remove()">
                  <i class="bi bi-x"></i>
                </button>
              </div>
            `;
            
            document.body.appendChild(toast);
            
            // Animate in
            setTimeout(() => toast.classList.add('show'), 100);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
              toast.classList.remove('show');
              setTimeout(() => toast.remove(), 300);
            }, 3000);
          }

          function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
          }

          // Initialize SignalR when page loads
          document.addEventListener('DOMContentLoaded', () => {
            initNotificationSignalR();
            
            // Polling fallback: Cập nhật mỗi 2 giây để đảm bảo không bỏ sót notification
            // Chạy ngay cả khi SignalR đã kết nối (backup)
            setInterval(() => {
              updateNotificationsFromServer();
            }, 2000); // Mỗi 2 giây
          });

          // Cleanup on page unload
          window.addEventListener('beforeunload', () => {
            if (notificationConnection) {
              notificationConnection.stop();
            }
          });
        })();
    </script>

    <script>
        (function () {
            const hubUrl = '@chatHubUrl';
            const currentAccountId = '@accId';

            // Dùng lại function updateProviderChatUnreadCount() có sẵn của bạn
            async function safeUpdateUnread() {
                if (typeof updateProviderChatUnreadCount === 'function') {
                    try {
                        await updateProviderChatUnreadCount();
                    } catch (e) {
                        console.error('[Provider ChatHub] Lỗi khi gọi updateProviderChatUnreadCount:', e);
                    }
                } else {
                    console.warn('[Provider ChatHub] updateProviderChatUnreadCount chưa sẵn sàng');
                }
            }

            async function initProviderChatHub() {
                if (!currentAccountId) {
                    console.warn('[Provider ChatHub] Không có AccountID → bỏ qua SignalR');
                    return;
                }

                if (!window.signalR) {
                    console.error('[Provider ChatHub] signalR chưa load');
                    return;
                }

                if (!window.__chatHub) {
                    console.error('[Provider ChatHub] __chatHub wrapper chưa load (~/js/chat-hub-signalr.js)');
                    return;
                }

                // tránh init nhiều lần
                if (window.__providerChatHubInitialized) return;
                window.__providerChatHubInitialized = true;

                try {
                    // Kết nối tới /chathub và đăng ký account
                    await window.__chatHub.start(hubUrl, currentAccountId);
                    console.log('[Provider ChatHub] ✅ Connected & Registered');

                    const conn =
                        (window.__chatHub.getConnection && window.__chatHub.getConnection()) || null;

                    const handleTotalUnread = async payload => {
                        const total =
                            (payload && typeof payload.total === 'number')
                                ? payload.total
                                : (typeof payload === 'number' ? payload : 0);

                        console.log('[Provider ChatHub] totalUnread:update =', total);
                        // Gọi lại API để đảm bảo đồng bộ
                        await safeUpdateUnread();
                    };

                    const handleConversationListUpdate = async item => {
                        console.log('[Provider ChatHub] conversationList:update', item);
                        await safeUpdateUnread();
                    };

                    if (conn) {
                        conn.on('totalUnread:update', handleTotalUnread);
                        conn.on('conversationList:update', handleConversationListUpdate);
                    } else {
                        // fallback dùng wrapper nếu không lấy được conn
                        window.__chatHub.on('totalUnread:update', handleTotalUnread);
                        window.__chatHub.on('conversationList:update', handleConversationListUpdate);
                    }
                } catch (e) {
                    console.error('[Provider ChatHub] Không thể khởi tạo SignalR:', e);
                }
            }

            document.addEventListener('DOMContentLoaded', () => {
                // Polling cũ của bạn vẫn chạy
                // Bây giờ thêm realtime qua SignalR
                initProviderChatHub();
            });
        })();
    </script>

