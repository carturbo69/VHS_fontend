@model List<VHS_frontend.Areas.Provider.Models.Notification.ProviderNotificationItemDTO>
@{
    ViewData["Title"] = "Thông báo";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/provider-notification.css" asp-append-version="true" />
}

<div class="notification-page">
    <!-- Header Stats -->
    <div class="notification-stats">
        <div class="stat-card stat-total">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="bi bi-bell-fill"></i>
                </div>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@(ViewBag.Total ?? 0)</h3>
                <p class="stat-label">Tổng thông báo</p>
            </div>
        </div>
        <div class="stat-card stat-unread">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="bi bi-exclamation-circle-fill"></i>
                </div>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@(ViewBag.Unread ?? 0)</h3>
                <p class="stat-label">Chưa đọc</p>
            </div>
        </div>
        <div class="stat-card stat-read">
            <div class="stat-icon-wrapper">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">@(ViewBag.Read ?? 0)</h3>
                <p class="stat-label">Đã đọc</p>
            </div>
        </div>
    </div>

    <!-- Notifications Card -->
    <div class="notification-page-card">
        <div class="card-header-wrapper">
            <div class="card-header">
                <div class="header-left">
                    <div class="header-icon">
                        <i class="bi bi-inbox-fill"></i>
                    </div>
                    <div>
                        <h4 class="card-title">Hộp thư đến</h4>
                        <p class="card-subtitle">Quản lý tất cả thông báo của bạn</p>
                    </div>
                </div>
                @if (ViewBag.Unread > 0 && Model != null && Model.Any())
                {
                    <button class="btn-mark-all-read" onclick="markAllNotificationsRead(); return false;" title="Đánh dấu tất cả đã đọc">
                        <i class="bi bi-check-all"></i>
                        <span>Đánh dấu tất cả</span>
                    </button>
                }
            </div>
        </div>
        <div class="card-body-wrapper">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h5>Không có thông báo nào</h5>
                    <p>Bạn chưa có thông báo nào trong hộp thư đến</p>
                </div>
            }
            else
            {
                <div class="notifications-list">
                    @foreach (var notification in Model)
                    {
                        <div class="notification-card @(notification.IsRead == true ? "read" : "unread") notification-type-@(notification.NotificationType?.ToLower() ?? "system")" data-notification-id="@notification.NotificationId">
                            @if (notification.IsRead != true)
                            {
                                <span class="notification-indicator"></span>
                            }
                            <div class="notification-card-content">
                                <div class="notification-card-header">
                                    <div class="notification-badges">
                                        @if (notification.IsRead != true)
                                        {
                                            <span class="badge badge-new">
                                                <i class="bi bi-circle-fill"></i> Mới
                                            </span>
                                        }
                                        @if (!string.IsNullOrEmpty(notification.NotificationType))
                                        {
                                            <span class="badge badge-@(notification.NotificationType.ToLower())">
                                                @notification.NotificationType
                                            </span>
                                        }
                                    </div>
                                    <span class="notification-time-text">
                                        <i class="bi bi-clock"></i>
                                        @{
                                            var timeAgo = "";
                                            if (notification.CreatedAt.HasValue)
                                            {
                                                var diff = DateTime.Now - notification.CreatedAt.Value;
                                                if (diff.TotalMinutes < 1) timeAgo = "Vừa xong";
                                                else if (diff.TotalMinutes < 60) timeAgo = $"{(int)diff.TotalMinutes} phút trước";
                                                else if (diff.TotalHours < 24) timeAgo = $"{(int)diff.TotalHours} giờ trước";
                                                else if (diff.TotalDays < 7) timeAgo = $"{(int)diff.TotalDays} ngày trước";
                                                else timeAgo = notification.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm");
                                            }
                                            else
                                            {
                                                timeAgo = "N/A";
                                            }
                                        }
                                        @timeAgo
                                    </span>
                                </div>
                                <div class="notification-card-text">
                                    <p>@notification.Content</p>
                                </div>
                            </div>
                            <div class="notification-card-actions">
                                @if (notification.IsRead != true)
                                {
                                    <button class="btn-action btn-mark-read"
                                            onclick="markNotificationRead('@notification.NotificationId'); return false;"
                                            title="Đánh dấu đã đọc">
                                        <i class="bi bi-check2"></i>
                                    </button>
                                }
                                <button class="btn-action btn-delete"
                                        onclick="deleteNotification('@notification.NotificationId'); return false;"
                                        title="Xóa">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Lưu scroll position
        let scrollPosition = 0;

        // Function để tính toán stats từ DOM
        function calculateStatsFromDOM() {
            const allCards = document.querySelectorAll('.notification-card');
            const unreadCards = document.querySelectorAll('.notification-card.unread');
            const readCards = document.querySelectorAll('.notification-card.read');
            
            return {
                total: allCards.length,
                unread: unreadCards.length,
                read: readCards.length
            };
        }

        // Function để cập nhật stats
        function updateStats(total, unread, read) {
            const totalElement = document.querySelector('.stat-total .stat-number');
            const unreadElement = document.querySelector('.stat-unread .stat-number');
            const readElement = document.querySelector('.stat-read .stat-number');

            if (totalElement && total !== undefined) totalElement.textContent = total;
            if (unreadElement && unread !== undefined) unreadElement.textContent = unread;
            if (readElement && read !== undefined) readElement.textContent = read;

            // Ẩn/hiện button "Đánh dấu tất cả"
            const markAllBtn = document.querySelector('.btn-mark-all-read');
            if (markAllBtn) {
                const currentUnread = unread !== undefined ? unread : calculateStatsFromDOM().unread;
                if (currentUnread > 0) {
                    markAllBtn.style.display = 'flex';
                } else {
                    markAllBtn.style.display = 'none';
                }
            }
        }

        // Function để xóa notification card
        function removeNotificationCard(id) {
            const card = document.querySelector(`.notification-card[data-notification-id="${id}"]`);
            if (card) {
                // Animation fade out
                card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                card.style.opacity = '0';
                card.style.transform = 'translateX(-20px)';
                setTimeout(() => {
                    card.remove();
                }, 300);
            }
        }

        // Function để đánh dấu notification là đã đọc
        function markNotificationAsRead(id) {
            const card = document.querySelector(`.notification-card[data-notification-id="${id}"]`);
            if (card) {
                // Remove unread classes và thêm read class
                card.classList.remove('unread');
                card.classList.add('read');

                // Remove indicator dot với animation
                const indicator = card.querySelector('.notification-indicator');
                if (indicator) {
                    indicator.style.transition = 'opacity 0.3s ease';
                    indicator.style.opacity = '0';
                    setTimeout(() => indicator.remove(), 300);
                }

                // Remove "Mới" badge với animation
                const newBadge = card.querySelector('.badge-new');
                if (newBadge) {
                    newBadge.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    newBadge.style.opacity = '0';
                    newBadge.style.transform = 'scale(0.8)';
                    setTimeout(() => newBadge.remove(), 300);
                }

                // Remove mark-read button với animation
                const markReadBtn = card.querySelector('.btn-mark-read');
                if (markReadBtn) {
                    markReadBtn.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    markReadBtn.style.opacity = '0';
                    markReadBtn.style.transform = 'scale(0.8)';
                    setTimeout(() => markReadBtn.remove(), 300);
                }
            }
        }

        // Function để giữ scroll position
        function saveScrollPosition() {
            scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
        }

        function restoreScrollPosition() {
            window.scrollTo(0, scrollPosition);
        }

        // Đánh dấu đã đọc
        async function markNotificationRead(id) {
            saveScrollPosition();
            
            try {
                const res = await fetch(`/Provider/ProviderNotification/MarkAsRead/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                
                if (result.success) {
                    // Cập nhật UI
                    markNotificationAsRead(id);
                    
                    // Cập nhật stats từ response hoặc tính từ DOM
                    if (result.total !== undefined && result.unread !== undefined && result.read !== undefined) {
                        updateStats(result.total, result.unread, result.read);
                    } else {
                        // Tính toán từ DOM nếu backend không trả về stats
                        const stats = calculateStatsFromDOM();
                        updateStats(stats.total, stats.unread, stats.read);
                    }
                    
                    // Khôi phục scroll position
                    requestAnimationFrame(() => {
                        restoreScrollPosition();
                    });
                } else {
                    alert(result.message || 'Không thể đánh dấu đã đọc');
                    restoreScrollPosition();
                }
            } catch (e) {
                console.error('Error marking as read:', e);
                alert('Có lỗi xảy ra');
                restoreScrollPosition();
            }
        }

        // Xóa notification
        async function deleteNotification(id) {
            saveScrollPosition();
            const card = document.querySelector(`.notification-card[data-notification-id="${id}"]`);
            
            try {
                const res = await fetch(`/Provider/ProviderNotification/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                
                if (result.success) {
                    // Xóa card với animation
                    removeNotificationCard(id);
                    
                    // Cập nhật stats từ response hoặc tính từ DOM
                    if (result.total !== undefined && result.unread !== undefined && result.read !== undefined) {
                        updateStats(result.total, result.unread, result.read);
                    } else {
                        // Tính toán từ DOM sau khi xóa (delay để đợi animation)
                        setTimeout(() => {
                            const stats = calculateStatsFromDOM();
                            updateStats(stats.total, stats.unread, stats.read);
                        }, 350);
                    }
                    
                    // Kiểm tra nếu không còn notification nào
                    setTimeout(() => {
                        const remainingCards = document.querySelectorAll('.notification-card');
                        if (remainingCards.length === 0) {
                            const listContainer = document.querySelector('.notifications-list');
                            if (listContainer) {
                                listContainer.innerHTML = `
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="bi bi-inbox"></i>
                                        </div>
                                        <h5>Không có thông báo nào</h5>
                                        <p>Bạn chưa có thông báo nào trong hộp thư đến</p>
                                    </div>
                                `;
                                // Cập nhật stats về 0
                                updateStats(0, 0, 0);
                            }
                        }
                    }, 350);
                    
                    // Khôi phục scroll position
                    requestAnimationFrame(() => {
                        restoreScrollPosition();
                    });
                } else {
                    alert(result.message || 'Không thể xóa thông báo');
                    restoreScrollPosition();
                }
            } catch (e) {
                console.error('Error deleting notification:', e);
                alert('Có lỗi xảy ra');
                restoreScrollPosition();
            }
        }

        // Đánh dấu tất cả đã đọc
        async function markAllNotificationsRead() {
            if (!confirm('Bạn có chắc muốn đánh dấu tất cả thông báo đã đọc?')) return;

            saveScrollPosition();
            
            try {
                const res = await fetch('/Provider/ProviderNotification/MarkAllAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                
                if (result.success) {
                    // Đánh dấu tất cả cards là đã đọc
                    const unreadCards = document.querySelectorAll('.notification-card.unread');
                    unreadCards.forEach(card => {
                        const id = card.getAttribute('data-notification-id');
                        if (id) {
                            markNotificationAsRead(id);
                        }
                    });
                    
                    // Cập nhật stats từ response hoặc tính từ DOM
                    if (result.total !== undefined && result.unread !== undefined && result.read !== undefined) {
                        updateStats(result.total, result.unread, result.read);
                    } else {
                        // Tính toán từ DOM sau khi đánh dấu
                        setTimeout(() => {
                            const stats = calculateStatsFromDOM();
                            updateStats(stats.total, stats.unread, stats.read);
                        }, 100);
                    }
                    
                    // Khôi phục scroll position
                    requestAnimationFrame(() => {
                        restoreScrollPosition();
                    });
                } else {
                    alert(result.message || 'Không thể đánh dấu tất cả đã đọc');
                    restoreScrollPosition();
                }
            } catch (e) {
                console.error('Error marking all as read:', e);
                alert('Có lỗi xảy ra');
                restoreScrollPosition();
            }
        }

        // Expose functions để dropdown có thể gọi
        window.markNotificationRead = markNotificationRead;
        window.deleteNotification = deleteNotification;
        window.markAllNotificationsRead = markAllNotificationsRead;

        // ===== SignalR Real-time Notifications =====
        let notificationConnection = null;

        async function initNotificationSignalR() {
            try {
                // Load SignalR if not already loaded
                if (typeof signalR === 'undefined') {
                    await new Promise((resolve, reject) => {
                        const script = document.createElement('script');
                        script.src = 'https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js';
                        script.onload = resolve;
                        script.onerror = reject;
                        document.head.appendChild(script);
                    });
                }

                // Get backend URL from meta tag or default
                const metaBackendUrl = document.querySelector('meta[name="backend-url"]')?.getAttribute('content');
                const backendUrl = metaBackendUrl || 'http://apivhs.cuahangkinhdoanh.com';
                const hubUrl = `${backendUrl}/hubs/notification`;

                // Create connection
                notificationConnection = new signalR.HubConnectionBuilder()
                    .withUrl(hubUrl, {
                        skipNegotiation: false,
                        transport: signalR.HttpTransportType.WebSockets | signalR.HttpTransportType.ServerSentEvents | signalR.HttpTransportType.LongPolling
                    })
                    .withAutomaticReconnect({
                        nextRetryDelayInMilliseconds: retryContext => {
                            if (retryContext.elapsedMilliseconds < 60000) {
                                return 2000;
                            } else {
                                return 10000;
                            }
                        }
                    })
                    .configureLogging(signalR.LogLevel.Warning)
                    .build();

                // Handle connection events
                notificationConnection.onreconnecting(() => {
                    console.log('[NotificationHub] Reconnecting...');
                });

                notificationConnection.onreconnected(() => {
                    console.log('[NotificationHub] Reconnected');
                });

                notificationConnection.onclose(() => {
                    console.log('[NotificationHub] Connection closed');
                });

                // Listen for new notifications
                notificationConnection.on('ReceiveNotification', (notification) => {
                    console.log('[NotificationHub] Received notification:', notification);
                    handleNewNotification(notification);
                });

                // Start connection
                await notificationConnection.start();
                console.log('[NotificationHub] Connected successfully');

            } catch (error) {
                console.error('[NotificationHub] Error initializing SignalR:', error);
            }
        }

        function handleNewNotification(notification) {
            if (!notification) return;

            // Show toast notification
            showNotificationToast(notification);

            // Reload page to show new notification (after a delay to show toast)
            setTimeout(() => {
                window.location.reload();
            }, 3000);
        }

        function showNotificationToast(notification) {
            // Create toast notification
            const toast = document.createElement('div');
            toast.className = 'notification-toast';
            toast.innerHTML = `
                <div class="toast-content">
                    <div class="toast-icon">
                        <i class="bi bi-bell-fill"></i>
                    </div>
                    <div class="toast-body">
                        <div class="toast-title">Thông báo mới</div>
                        <div class="toast-message">${escapeHtml(notification.content || notification.Content || '')}</div>
                    </div>
                    <button class="toast-close" onclick="this.parentElement.parentElement.remove()">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            `;
            
            document.body.appendChild(toast);
            
            // Animate in
            setTimeout(() => toast.classList.add('show'), 100);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Initialize SignalR when page loads
        document.addEventListener('DOMContentLoaded', () => {
            initNotificationSignalR();
            
            // Lắng nghe event từ dropdown khi đánh dấu đã đọc
            setupProviderNotificationSync();
        });
        
        // ===== Sync với dropdown khi đánh dấu đã đọc =====
        function setupProviderNotificationSync() {
            console.log('[ProviderNotificationSync] Setting up sync listeners');
            
            // Lắng nghe custom event từ layout
            window.addEventListener('notificationMarkedRead', function(event) {
                console.log('[ProviderNotificationSync] Received custom event:', event.detail);
                const { action, data } = event.detail;
                handleProviderNotificationMarkedRead(action, data);
            });
            
            // Lắng nghe BroadcastChannel để sync giữa các tabs
            try {
                const channel = new BroadcastChannel('provider_notification_sync');
                channel.addEventListener('message', function(event) {
                    console.log('[ProviderNotificationSync] Received BroadcastChannel message:', event.data);
                    const { action, data } = event.data;
                    handleProviderNotificationMarkedRead(action, data);
                });
                console.log('[ProviderNotificationSync] BroadcastChannel listener set up');
            } catch (e) {
                console.log('[ProviderNotificationSync] BroadcastChannel not supported');
            }
            
            // Lắng nghe localStorage event (fallback)
            window.addEventListener('storage', function(event) {
                if (event.key === 'provider_notification_update') {
                    console.log('[ProviderNotificationSync] Received storage event');
                    try {
                        const update = JSON.parse(event.newValue);
                        if (update) {
                            handleProviderNotificationMarkedRead(update.action, update.data);
                        }
                    } catch (e) {
                        console.error('[ProviderNotificationSync] Error parsing notification update:', e);
                    }
                }
            });
        }
        
        // Xử lý khi notification được đánh dấu đã đọc từ dropdown
        async function handleProviderNotificationMarkedRead(action, data) {
            console.log('[ProviderNotificationSync] Received:', action, data);
            
            if (action === 'markRead' && data.id) {
                // Cập nhật UI cho notification cụ thể
                const notificationCard = document.querySelector(`.notification-card[data-notification-id="${data.id}"]`);
                if (notificationCard) {
                    console.log('[ProviderNotificationSync] Found card, updating UI');
                    
                    // Xóa indicator dot
                    const indicator = notificationCard.querySelector('.notification-indicator');
                    if (indicator) {
                        indicator.style.transition = 'opacity 0.3s ease';
                        indicator.style.opacity = '0';
                        setTimeout(() => indicator.remove(), 300);
                    }
                    
                    // Xóa badge "Mới"
                    const newBadge = notificationCard.querySelector('.badge-new');
                    if (newBadge) {
                        newBadge.style.transition = 'opacity 0.3s ease';
                        newBadge.style.opacity = '0';
                        setTimeout(() => newBadge.remove(), 300);
                    }
                    
                    // Cập nhật class
                    notificationCard.classList.remove('unread');
                    notificationCard.classList.add('read');
                    
                    // Ẩn nút "Đánh dấu đã đọc" nếu có
                    const markReadBtn = notificationCard.querySelector('.btn-mark-read');
                    if (markReadBtn) {
                        markReadBtn.style.transition = 'opacity 0.3s ease';
                        markReadBtn.style.opacity = '0';
                        setTimeout(() => markReadBtn.remove(), 300);
                    }
                    
                    // Cập nhật số lượng unread trong stats
                    updateNotificationStats();
                } else {
                    console.log('[ProviderNotificationSync] Card not found, will reload page');
                    // Nếu không tìm thấy, reload trang sau một chút
                    setTimeout(() => {
                        window.location.reload();
                    }, 500);
                }
            } else if (action === 'markAllRead') {
                console.log('[ProviderNotificationSync] Marking all as read');
                
                // Cập nhật tất cả notifications thành "Đã đọc"
                const unreadCards = document.querySelectorAll('.notification-card.unread');
                unreadCards.forEach((card, index) => {
                    setTimeout(() => {
                        // Xóa indicator dot
                        const indicator = card.querySelector('.notification-indicator');
                        if (indicator) {
                            indicator.style.transition = 'opacity 0.3s ease';
                            indicator.style.opacity = '0';
                            setTimeout(() => indicator.remove(), 300);
                        }
                        
                        // Xóa badge "Mới"
                        const newBadge = card.querySelector('.badge-new');
                        if (newBadge) {
                            newBadge.style.transition = 'opacity 0.3s ease';
                            newBadge.style.opacity = '0';
                            setTimeout(() => newBadge.remove(), 300);
                        }
                        
                        // Cập nhật class
                        card.classList.remove('unread');
                        card.classList.add('read');
                        
                        // Ẩn nút "Đánh dấu đã đọc" nếu có
                        const markReadBtn = card.querySelector('.btn-mark-read');
                        if (markReadBtn) {
                            markReadBtn.style.transition = 'opacity 0.3s ease';
                            markReadBtn.style.opacity = '0';
                            setTimeout(() => markReadBtn.remove(), 300);
                        }
                    }, index * 50);
                });
                
                // Ẩn nút "Đánh dấu tất cả đã đọc"
                const markAllReadBtn = document.querySelector('.btn-mark-all-read');
                if (markAllReadBtn) {
                    markAllReadBtn.style.display = 'none';
                }
                
                // Cập nhật số lượng unread trong stats
                updateNotificationStats();
            }
        }
        
        // Function để cập nhật stats
        function updateNotificationStats() {
            const unreadCards = document.querySelectorAll('.notification-card.unread');
            const readCards = document.querySelectorAll('.notification-card.read');
            const totalCards = document.querySelectorAll('.notification-card');
            
            // Cập nhật số lượng trong stats cards
            const unreadStat = document.querySelector('.stat-unread .stat-number');
            const readStat = document.querySelector('.stat-read .stat-number');
            const totalStat = document.querySelector('.stat-total .stat-number');
            
            if (unreadStat) {
                unreadStat.textContent = unreadCards.length;
            }
            if (readStat) {
                readStat.textContent = readCards.length;
            }
            if (totalStat) {
                totalStat.textContent = totalCards.length;
            }
            
            // Ẩn/hiện nút "Đánh dấu tất cả đã đọc"
            const markAllReadBtn = document.querySelector('.btn-mark-all-read');
            if (markAllReadBtn) {
                markAllReadBtn.style.display = unreadCards.length > 0 ? 'flex' : 'none';
            }
        }

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (notificationConnection) {
                notificationConnection.stop();
            }
        });
    </script>
}

