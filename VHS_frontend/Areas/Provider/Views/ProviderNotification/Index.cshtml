@model List<VHS_frontend.Areas.Provider.Models.Notification.ProviderNotificationItemDTO>
@{
    ViewData["Title"] = "Thông báo";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

<div class="notification-page">
    <!-- Header Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, var(--primary), var(--primary-light));">
                    <i class="bi bi-bell-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.Total</h3>
                    <p>Tổng thông báo</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, var(--warning), #fb923c);">
                    <i class="bi bi-exclamation-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.Unread</h3>
                    <p>Chưa đọc</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: linear-gradient(135deg, var(--success), #34d399);">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.Read</h3>
                    <p>Đã đọc</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Notifications Card -->
    <div class="card notification-page-card">
        <div class="card-header">
            <h4 class="mb-0">
                <i class="bi bi-inbox-fill"></i>
                Hộp thư đến
            </h4>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <p class="mt-3 mb-0">Không có thông báo nào</p>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item @(notification.IsRead == true ? "" : "list-group-item-info") notification-type-@(notification.NotificationType?.ToLower() ?? "system")">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="notification-detail">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            @if (notification.IsRead != true)
                                            {
                                                <span class="badge badge-new">
                                                    <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i> Mới
                                                </span>
                                            }
                                            @if (!string.IsNullOrEmpty(notification.NotificationType))
                                            {
                                                <span class="badge badge-@(notification.NotificationType.ToLower())">
                                                    @notification.NotificationType
                                                </span>
                                            }
                                            <small class="text-muted ms-auto">
                                                <i class="bi bi-clock"></i>
                                                @(notification.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                                            </small>
                                        </div>
                                        <h6>@notification.Content</h6>
                                    </div>
                                </div>
                                <div class="ms-3 d-flex gap-2">
                                    @if (notification.IsRead != true)
                                    {
                                        <button class="btn btn-sm btn-outline-success" 
                                                onclick="markNotificationRead('@notification.NotificationId')" 
                                                title="Đánh dấu đã đọc">
                                            <i class="bi bi-check2"></i>
                                        </button>
                                    }
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deleteNotification('@notification.NotificationId')" 
                                            title="Xóa">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                @if (ViewBag.Unread > 0)
                {
                    <div class="text-center mt-4">
                        <button class="btn btn-primary" onclick="markAllNotificationsRead()">
                            <i class="bi bi-check-all me-2"></i>Đánh dấu tất cả đã đọc
                        </button>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function markNotificationRead(id) {
            try {
                const res = await fetch(`/Provider/ProviderNotification/MarkAsRead/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Không thể đánh dấu đã đọc');
                }
            } catch (e) {
                console.error('Error marking as read:', e);
                alert('Có lỗi xảy ra');
            }
        }

        async function deleteNotification(id) {
            if (!confirm('Bạn có chắc muốn xóa thông báo này?')) return;
            
            try {
                const res = await fetch(`/Provider/ProviderNotification/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Không thể xóa thông báo');
                }
            } catch (e) {
                console.error('Error deleting notification:', e);
                alert('Có lỗi xảy ra');
            }
        }

        async function markAllNotificationsRead() {
            try {
                const res = await fetch('/Provider/ProviderNotification/MarkAllAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const result = await res.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || 'Không thể đánh dấu tất cả đã đọc');
                }
            } catch (e) {
                console.error('Error marking all as read:', e);
                alert('Có lỗi xảy ra');
            }
        }
    </script>
}

