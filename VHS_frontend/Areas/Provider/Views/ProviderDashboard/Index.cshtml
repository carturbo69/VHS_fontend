@model VHS_frontend.Areas.Provider.Models.Dashboard.ProviderDashboardViewModel
@{
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
    ViewData["Title"] = "Tổng quan";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section mb-4">
        @{
            var username = Context.Session.GetString("Username");
            var displayName = !string.IsNullOrEmpty(username) && username.Contains("@") 
                ? username.Split('@')[0] 
                : username ?? "";
        }
        <h2 class="mb-2">Chào mừng nhà cung cấp, @displayName!</h2>
        <p class="text-muted">Tổng quan hoạt động kinh doanh của bạn</p>
    </div>

    <!-- Stats Cards Section -->
    <div class="stats-section mb-4">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-tools"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.TotalServices</h3>
                        <p>Dịch vụ</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.ActiveOrders</h3>
                        <p>Đơn hàng đang thực hiện</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.CompletedOrders</h3>
                        <p>Đơn hàng đã hoàn thành</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.PendingBookings</h3>
                        <p>Lịch hẹn chờ xử lý</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue and Recent Orders -->
    <div class="row g-4">
        <!-- Monthly Revenue -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Doanh thu theo tháng
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var totalYearRevenue = Model.MonthlyStats.January + Model.MonthlyStats.February + 
                                               Model.MonthlyStats.March + Model.MonthlyStats.April + 
                                               Model.MonthlyStats.May + Model.MonthlyStats.June + 
                                               Model.MonthlyStats.July + Model.MonthlyStats.August + 
                                               Model.MonthlyStats.September + Model.MonthlyStats.October + 
                                               Model.MonthlyStats.November + Model.MonthlyStats.December;
                    }
                    
                    <!-- Revenue Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="revenue-summary p-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <div class="revenue-icon me-3">
                                        <i class="bi bi-cash-coin" style="font-size: 2.5rem; color: #d97706;"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-calendar3"></i> Tháng @DateTime.Now.Month/@DateTime.Now.Year
                                        </p>
                                        <h2 class="mb-0 fw-bold" style="color: #d97706;">@Model.MonthlyRevenue.ToString("N0") VNĐ</h2>
                                        <small class="text-muted">Doanh thu tháng này</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="revenue-summary p-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <div class="revenue-icon me-3">
                                        <i class="bi bi-graph-up-arrow" style="font-size: 2.5rem; color: #d97706;"></i>
                                    </div>
                                    <div>
                                        <p class="text-muted mb-1 small">
                                            <i class="bi bi-calendar-range"></i> Năm @DateTime.Now.Year
                                        </p>
                                        <h2 class="mb-0 fw-bold" style="color: #d97706;">@totalYearRevenue.ToString("N0") VNĐ</h2>
                                        <small class="text-muted">Tổng doanh thu năm</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Chart Container -->
                    @if (totalYearRevenue == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-graph-up text-muted" style="font-size: 4rem;"></i>
                            <h5 class="text-muted mt-3">Chưa có dữ liệu doanh thu</h5>
                            <p class="text-muted">Biểu đồ sẽ hiển thị khi bạn có đơn hàng hoàn thành</p>
                        </div>
                    }
                    else
                    {
                        <div style="height: 300px;">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Đơn hàng gần đây
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="recent-orders">
                            @foreach (var order in Model.RecentOrders)
                            {
                                <div class="order-item">
                                    <div class="order-info">
                                        <h6 class="mb-1">@order.OrderId</h6>
                                        <p class="text-muted small mb-1">@order.CustomerName</p>
                                        <p class="text-muted small mb-2">@order.ServiceName</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-@(GetStatusColor(order.Status))">@order.Status</span>
                                            <span class="fw-bold">@order.Amount.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                    <div class="order-time">
                                        <small class="text-muted">@order.OrderDate.ToString("dd/MM HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3 mb-0">Chưa có đơn hàng nào</p>
                            <small class="text-muted">Đơn hàng mới sẽ hiển thị ở đây</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Create", "ServiceManagement", new { area = "Provider" })" class="quick-action-btn">
                                <i class="bi bi-plus-circle"></i>
                                <span>Thêm dịch vụ mới</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Index", "StaffManagement", new { area = "Provider" })" class="quick-action-btn">
                                <i class="bi bi-people"></i>
                                <span>Quản lý nhân viên</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Index", "Order", new { area = "Provider" })" class="quick-action-btn">
                                <i class="bi bi-calendar-plus"></i>
                                <span>Quản lý đặt lịch</span>
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <a href="@Url.Action("Index", "RevenueReport", new { area = "Provider" })" class="quick-action-btn">
                                <i class="bi bi-bar-chart"></i>
                                <span>Báo cáo doanh thu</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/provider-dashboard.css" asp-append-version="true" />
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('revenueChart');
            
            // Function to detect dark mode
            function isDarkMode() {
                return document.documentElement.classList.contains('dark') || 
                       document.body.classList.contains('dark');
            }
            
            // Get colors based on theme
            function getChartColors() {
                const dark = isDarkMode();
                return {
                    backgroundColor: dark ? 'rgba(245, 158, 11, 0.15)' : 'rgba(217, 119, 6, 0.08)',
                    borderColor: dark ? 'rgba(245, 158, 11, 1)' : 'rgba(217, 119, 6, 1)',
                    pointBackgroundColor: dark ? 'rgba(245, 158, 11, 1)' : 'rgba(217, 119, 6, 1)',
                    pointBorderColor: dark ? '#121212' : '#fff',
                    pointHoverBackgroundColor: dark ? '#121212' : '#fff',
                    pointHoverBorderColor: dark ? 'rgba(245, 158, 11, 1)' : 'rgba(217, 119, 6, 1)',
                    textColor: dark ? '#f1f5f9' : '#374151',
                    gridColor: dark ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.05)',
                    tooltipBg: dark ? 'rgba(18, 18, 18, 0.95)' : 'rgba(0, 0, 0, 0.8)'
                };
            }
            
            // Chỉ khởi tạo chart nếu canvas element tồn tại (nghĩa là có dữ liệu)
            if (ctx) {
                console.log('Initializing revenue chart with data...');
                
                // Dữ liệu doanh thu từ server
                const revenueData = [
                    @Model.MonthlyStats.January,
                    @Model.MonthlyStats.February,
                    @Model.MonthlyStats.March,
                    @Model.MonthlyStats.April,
                    @Model.MonthlyStats.May,
                    @Model.MonthlyStats.June,
                    @Model.MonthlyStats.July,
                    @Model.MonthlyStats.August,
                    @Model.MonthlyStats.September,
                    @Model.MonthlyStats.October,
                    @Model.MonthlyStats.November,
                    @Model.MonthlyStats.December
                ];
                
                console.log('Revenue data:', revenueData);
                
                const colors = getChartColors();
                
                const monthlyData = {
                    labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 
                             'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: revenueData,
                        backgroundColor: colors.backgroundColor,
                        borderColor: colors.borderColor,
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        pointBackgroundColor: colors.pointBackgroundColor,
                        pointBorderColor: colors.pointBorderColor,
                        pointBorderWidth: 2,
                        pointHoverBackgroundColor: colors.pointHoverBackgroundColor,
                        pointHoverBorderColor: colors.pointHoverBorderColor,
                        pointHoverBorderWidth: 3
                    }]
                };

                const config = {
                    type: 'line',
                    data: monthlyData,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        interaction: {
                            mode: 'index',
                            intersect: false,
                        },
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top',
                                labels: {
                                    font: {
                                        size: 13,
                                        weight: '600'
                                    },
                                    padding: 15,
                                    usePointStyle: true,
                                    pointStyle: 'circle',
                                    color: colors.textColor
                                }
                            },
                            tooltip: {
                                backgroundColor: colors.tooltipBg,
                                titleColor: isDarkMode() ? '#f1f5f9' : '#fff',
                                bodyColor: isDarkMode() ? '#f1f5f9' : '#fff',
                                borderColor: isDarkMode() ? 'rgba(245, 158, 11, 0.3)' : 'rgba(217, 119, 6, 0.3)',
                                borderWidth: 1,
                                titleFont: {
                                    size: 15,
                                    weight: 'bold'
                                },
                                bodyFont: {
                                    size: 13
                                },
                                padding: 12,
                                cornerRadius: 8,
                                displayColors: true,
                                callbacks: {
                                    label: function(context) {
                                        let label = context.dataset.label || '';
                                        if (label) {
                                            label += ': ';
                                        }
                                        if (context.parsed.y !== null) {
                                            label += new Intl.NumberFormat('vi-VN').format(context.parsed.y) + ' VNĐ';
                                        }
                                        return label;
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                grid: {
                                    display: false
                                },
                                ticks: {
                                    font: {
                                        size: 12,
                                        weight: '500'
                                    },
                                    color: colors.textColor
                                }
                            },
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: colors.gridColor,
                                    lineWidth: 1
                                },
                                ticks: {
                                    font: {
                                        size: 12,
                                        weight: '500'
                                    },
                                    color: colors.textColor,
                                    padding: 8,
                                    callback: function(value) {
                                        if (value >= 1000000) {
                                            return (value / 1000000).toFixed(1) + 'tr';
                                        } else if (value >= 1000) {
                                            return (value / 1000).toFixed(0) + 'k';
                                        }
                                        return new Intl.NumberFormat('vi-VN').format(value);
                                    }
                                },
                                title: {
                                    display: true,
                                    text: 'Doanh thu (VNĐ)',
                                    font: {
                                        size: 13,
                                        weight: 'bold'
                                    },
                                    color: colors.textColor,
                                    padding: 8
                                }
                            }
                        }
                    }
                };

                const chart = new Chart(ctx, config);
                console.log('Chart initialized successfully');
                
                // Update chart colors when theme changes
                function updateChartTheme() {
                    const newColors = getChartColors();
                    chart.data.datasets[0].backgroundColor = newColors.backgroundColor;
                    chart.data.datasets[0].borderColor = newColors.borderColor;
                    chart.data.datasets[0].pointBackgroundColor = newColors.pointBackgroundColor;
                    chart.data.datasets[0].pointBorderColor = newColors.pointBorderColor;
                    chart.data.datasets[0].pointHoverBackgroundColor = newColors.pointHoverBackgroundColor;
                    chart.data.datasets[0].pointHoverBorderColor = newColors.pointHoverBorderColor;
                    chart.options.plugins.legend.labels.color = newColors.textColor;
                    chart.options.plugins.tooltip.backgroundColor = newColors.tooltipBg;
                    chart.options.plugins.tooltip.titleColor = isDarkMode() ? '#f1f5f9' : '#fff';
                    chart.options.plugins.tooltip.bodyColor = isDarkMode() ? '#f1f5f9' : '#fff';
                    chart.options.plugins.tooltip.borderColor = isDarkMode() ? 'rgba(245, 158, 11, 0.3)' : 'rgba(217, 119, 6, 0.3)';
                    chart.options.scales.x.ticks.color = newColors.textColor;
                    chart.options.scales.y.ticks.color = newColors.textColor;
                    chart.options.scales.y.grid.color = newColors.gridColor;
                    chart.options.scales.y.title.color = newColors.textColor;
                    chart.update();
                }
                
                // Listen for theme changes
                const observer = new MutationObserver(function(mutations) {
                    mutations.forEach(function(mutation) {
                        if (mutation.attributeName === 'class') {
                            updateChartTheme();
                        }
                    });
                });
                
                observer.observe(document.documentElement, {
                    attributes: true,
                    attributeFilter: ['class']
                });
                
                observer.observe(document.body, {
                    attributes: true,
                    attributeFilter: ['class']
                });
            } else {
                console.log('No revenue chart canvas found - no data to display');
            }
        });
    </script>
}

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Đang thực hiện" => "warning",
            "Hoàn thành" => "success",
            "Đã thanh toán" => "info",
            "Chờ xử lý" => "secondary",
            _ => "secondary"
        };
    }
}
