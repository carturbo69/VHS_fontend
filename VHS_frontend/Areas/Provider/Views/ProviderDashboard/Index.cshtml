@model VHS_frontend.Areas.Provider.Models.Dashboard.ProviderDashboardViewModel
@{
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
    ViewData["Title"] = "Tổng quan";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section mb-4">
        <h2 class="mb-2">Chào mừng, @Context.Session.GetString("Username")!</h2>
        <p class="text-muted">Tổng quan hoạt động kinh doanh của bạn</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-tools"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.TotalServices</h3>
                    <p>Dịch vụ</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-receipt"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.ActiveOrders</h3>
                    <p>Đơn hàng đang thực hiện</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.CompletedOrders</h3>
                    <p>Đơn hàng đã hoàn thành</p>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.PendingBookings</h3>
                    <p>Lịch hẹn chờ xử lý</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue and Recent Orders -->
    <div class="row g-4">
        <!-- Monthly Revenue -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Doanh thu tháng này
                    </h5>
                </div>
                <div class="card-body">
                    <div class="revenue-display">
                        <h2 class="text-primary mb-0">@Model.MonthlyRevenue.ToString("N0") VND</h2>
                        <p class="text-success mb-3">
                            <i class="bi bi-arrow-up"></i> +15.2% so với tháng trước
                        </p>
                    </div>
                    
                    <!-- Simple Chart Placeholder -->
                    <div class="chart-placeholder">
                        <canvas id="revenueChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Đơn hàng gần đây
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="recent-orders">
                        @foreach (var order in Model.RecentOrders)
                        {
                            <div class="order-item">
                                <div class="order-info">
                                    <h6 class="mb-1">@order.OrderId</h6>
                                    <p class="text-muted small mb-1">@order.CustomerName</p>
                                    <p class="text-muted small mb-2">@order.ServiceName</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-@(GetStatusColor(order.Status))">@order.Status</span>
                                        <span class="fw-bold">@order.Amount.ToString("N0") VND</span>
                                    </div>
                                </div>
                                <div class="order-time">
                                    <small class="text-muted">@order.OrderDate.ToString("dd/MM HH:mm")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch làm việc & Quick Actions -->
    <div class="row g-4 mt-3">
        @if (Model.ScheduleOverview != null)
        {
            <!-- Lịch làm việc tuần -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-week me-2"></i>
                            Lịch làm việc tuần
                        </h5>
                        <a asp-area="Provider" asp-controller="ProviderSchedule" asp-action="Index" class="btn btn-sm btn-outline-primary">
                            Quản lý lịch <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        @if (Model.ScheduleOverview != null && Model.ScheduleOverview.Schedules != null && Model.ScheduleOverview.Schedules.Any())
                        {
                            <div class="schedule-grid">
                                @foreach (var schedule in Model.ScheduleOverview.Schedules)
                                {
                                    <div class="schedule-item">
                                        <div class="schedule-day">@schedule.DayName</div>
                                        <div class="schedule-time">
                                            <i class="bi bi-clock me-1"></i>
                                            @schedule.StartTime.ToString("HH:mm") - @schedule.EndTime.ToString("HH:mm")
                                        </div>
                                        <div class="schedule-duration">
                                            <small class="text-muted">@schedule.WorkDuration.ToString("0.0")h</small>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="mt-3 d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-clock-history"></i>
                                        Tổng: <strong>@Model.ScheduleOverview?.TotalWeeklyHours.ToString("0.0")</strong> giờ/tuần
                                    </small>
                                </div>
                                <div>
                                    @if (Model.ScheduleOverview?.IsAvailableToday == true)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Đang làm việc hôm nay
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Nghỉ hôm nay
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">Chưa có lịch làm việc</p>
                                <a asp-area="Provider" asp-controller="ProviderSchedule" asp-action="Index" class="btn btn-primary btn-sm">
                                    <i class="bi bi-plus-circle"></i> Tạo lịch làm việc
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="quick-action-btn">
                            <i class="bi bi-plus-circle"></i>
                            <span>Thêm dịch vụ mới</span>
                        </a>
                        <a href="#" class="quick-action-btn">
                            <i class="bi bi-people"></i>
                            <span>Quản lý nhân viên</span>
                        </a>
                        <a asp-area="Provider" asp-controller="ProviderSchedule" asp-action="Index" class="quick-action-btn">
                            <i class="bi bi-calendar-plus"></i>
                            <span>Đặt lịch làm việc</span>
                        </a>
                        <a href="#" class="quick-action-btn">
                            <i class="bi bi-chat-dots"></i>
                            <span>Xem phản hồi</span>
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.ScheduleOverview != null && Model.ScheduleOverview.UpcomingTimeOffs != null && Model.ScheduleOverview.UpcomingTimeOffs.Any())
            {
                <!-- Ngày nghỉ sắp tới -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-x me-2"></i>
                            Ngày nghỉ sắp tới
                        </h5>
                    </div>
                    <div class="card-body p-2">
                        @foreach (var timeOff in Model.ScheduleOverview.UpcomingTimeOffs.Take(3))
                        {
                            <div class="timeoff-item mb-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong class="d-block">@timeOff.Date.ToString("dd/MM/yyyy")</strong>
                                        @if (!timeOff.IsFullDay)
                                        {
                                            <small class="text-muted">
                                                @timeOff.StartTime?.ToString("HH:mm") - @timeOff.EndTime?.ToString("HH:mm")
                                            </small>
                                        }
                                    </div>
                                    <span class="badge bg-info">Nghỉ</span>
                                </div>
                            </div>
                        }
                        @if (Model.ScheduleOverview.UpcomingTimeOffs.Count > 3)
                        {
                            <a asp-area="Provider" asp-controller="ProviderSchedule" asp-action="Index" class="btn btn-sm btn-outline-primary w-100">
                                Xem thêm...
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
<link rel="stylesheet" href="~/css/provider-dashboard.css" asp-append-version="true" />
}

@section Scripts {
<script>
    // Simple revenue chart using Chart.js (you can replace with your preferred charting library)
    document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('revenueChart');
        if (ctx) {
            // This is a placeholder - you would implement actual chart here
            ctx.style.display = 'flex';
            ctx.style.alignItems = 'center';
            ctx.style.justifyContent = 'center';
            ctx.style.color = 'var(--muted-fg)';
            ctx.innerHTML = '<div class="text-center"><i class="bi bi-bar-chart fs-1 mb-2"></i><br><small>Biểu đồ doanh thu<br>(Tích hợp thư viện chart)</small></div>';
        }
    });
</script>
}

@functions {
    string GetStatusColor(string status)
    {
        return status switch
        {
            "Đang thực hiện" => "warning",
            "Hoàn thành" => "success", 
            "Đã thanh toán" => "info",
            "Chờ xử lý" => "secondary",
            _ => "secondary"
        };
    }
}
