@model VHS_frontend.Areas.Provider.Models.Profile.ProviderProfileDTO
@{
    ViewData["Title"] = "Thông tin Profile";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile-buttons.css" asp-append-version="true" />
}

@functions {
    string GetStatusText(string status)
    {
        var statusLower = status?.ToLower() ?? "";
        return statusLower switch
        {
            "approved" => "Đã duyệt",
            "pending" => "Chờ duyệt",
            "rejected" => "Từ chối",
            _ => status ?? "Chưa xác định"
        };
    }
}

<div class="provider-profile">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-8">
                <div class="profile-card">
                    <div class="profile-header">
                        <h3 class="card-title">
                            <i class="bi bi-person-circle me-2"></i>
                            Thông tin Profile Provider
                        </h3>
                    </div>
                    <div class="profile-info">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Provider ID:</strong></label>
                                <p class="form-control-plaintext">@Model.ProviderId</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Trạng thái:</strong></label>
                                <span class="badge bg-@(Model.Status == "Approved" ? "success" : "warning")">
                                    @GetStatusText(Model.Status)
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Tên tài khoản:</strong></label>
                                <p class="form-control-plaintext">@Model.AccountName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Email:</strong></label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Tên nhà cung cấp:</strong></label>
                                <p class="form-control-plaintext">@Model.ProviderName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label"><strong>Số điện thoại:</strong></label>
                                <p class="form-control-plaintext">@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label"><strong>Mô tả:</strong></label>
                                <p class="form-control-plaintext">@Model.Description</p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Images))
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label"><strong>Hình ảnh:</strong></label>
                                    <div>
                                        <img src="@Model.Images" alt="Provider Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                        <div class="row">
                            <div class="col-12">
                                <div class="profile-action-buttons">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", "ProviderProfile")" class="btn btn-primary">
                                            <i class="bi bi-pencil-square"></i> 
                                            Chỉnh sửa Profile
                                        </a>
                                        <a href="@Url.Action("ChangePassword", "ProviderProfile")" class="btn btn-outline-secondary">
                                            <i class="bi bi-shield-lock"></i> 
                                            Thay đổi mật khẩu
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>