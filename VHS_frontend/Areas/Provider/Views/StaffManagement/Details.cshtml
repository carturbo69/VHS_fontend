@using VHS_frontend.Areas.Provider.Models.Staff
@using VHS_frontend.Helpers
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
    var staff = ViewBag.Staff as StaffDTO;
    var weekStart = (DateTime)ViewBag.WeekStart;
    var weekEnd = (DateTime)ViewBag.WeekEnd;
    var schedule = ViewBag.Schedule as List<StaffScheduleDTO> ?? new List<StaffScheduleDTO>();
}

@section Styles {
    <link rel="stylesheet" href="~/css/staff-management-details.css" asp-append-version="true" />
}

<div class="staff-details-container">
<div class="container-fluid px-4">
        <!-- Thông tin nhân viên -->
        <div class="row mb-3">
        <div class="col-md-12">
                <div class="card staff-info-card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                                <i class="bi bi-person-badge"></i> Thông tin nhân viên: @staff?.StaffName
                    </h4>
                            <a href="@Url.Action("Index", "StaffManagement")" class="btn btn-light btn-sm">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                        </div>
                </div>
                <div class="card-body">
                        <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                                <div class="staff-info-image">
                            @if (!string.IsNullOrEmpty(staff?.FaceImage))
                            {
                                        <img src="@ImageHelper.GetImageUrl(staff.FaceImage, Configuration)" 
                                             alt="@staff?.StaffName" 
                                             class="staff-avatar-img"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        <div class="img-placeholder" style="display: none;">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                            }
                            else
                            {
                                        <div class="img-placeholder">
                                            <i class="bi bi-person-circle"></i>
                                </div>
                            }
                                </div>
                        </div>
                        <div class="col-md-9">
                                <dl class="row mb-0">
                                    <dt class="col-sm-3">
                                        <i class="bi bi-person-vcard"></i> Mã nhân viên:
                                    </dt>
                                <dd class="col-sm-9">@staff?.StaffId</dd>

                                    <dt class="col-sm-3">
                                        <i class="bi bi-person"></i> Họ tên:
                                    </dt>
                                <dd class="col-sm-9">@staff?.StaffName</dd>

                                    <dt class="col-sm-3">
                                        <i class="bi bi-card-text"></i> CCCD/CMND:
                                    </dt>
                                <dd class="col-sm-9">@staff?.CitizenID</dd>

                                    @if (!string.IsNullOrEmpty(staff?.Address))
                                    {
                                        <dt class="col-sm-3">
                                            <i class="bi bi-geo-alt"></i> Địa chỉ:
                                        </dt>
                                        <dd class="col-sm-9">@staff.Address</dd>
                                    }

                                    @if (!string.IsNullOrEmpty(staff?.PhoneNumber))
                                    {
                                        <dt class="col-sm-3">
                                            <i class="bi bi-telephone"></i> Số điện thoại:
                                        </dt>
                                        <dd class="col-sm-9">@staff.PhoneNumber</dd>
                                    }

                                    <dt class="col-sm-3">
                                        <i class="bi bi-info-circle"></i> Trạng thái:
                                    </dt>
                                <dd class="col-sm-9">
                                    @if (staff?.IsLocked == false)
                                    {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Đang hoạt động
                                            </span>
                                    }
                                    else
                                    {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-lock-fill me-1"></i>Đã khóa
                                            </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <!-- LỊCH LÀM VIỆC TUẦN -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                    <div class="card-header schedule-header-amber">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <h4 class="mb-0">
                                    <i class="bi bi-calendar-week"></i> Lịch làm việc tuần
                            </h4>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Details", "StaffManagement", new { id = staff?.StaffId, weekStart = weekStart.AddDays(-7).ToString("yyyy-MM-dd") })" 
                                   class="btn btn-light btn-sm">
                                        <i class="bi bi-chevron-left"></i>
                                </a>
                                <button type="button" class="btn btn-light btn-sm" disabled>
                                    <strong>@weekStart.ToString("dd/MM/yyyy") - @weekEnd.AddDays(-1).ToString("dd/MM/yyyy")</strong>
                                </button>
                                <a href="@Url.Action("Details", "StaffManagement", new { id = staff?.StaffId, weekStart = weekStart.AddDays(7).ToString("yyyy-MM-dd") })" 
                                   class="btn btn-light btn-sm">
                                       <i class="bi bi-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Details", "StaffManagement", new { id = staff?.StaffId })" 
                                   class="btn btn-amber btn-sm">
                                    <i class="bi bi-calendar-day"></i> Tuần hiện tại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive calendar-scroll">
                        <table class="table table-bordered table-sm staff-calendar mb-0">
                            <thead class="table-light sticky-header">
                                <tr>
                                    <th class="time-header">Giờ</th>
                                    <th>Thứ 2<br/><small>@weekStart.AddDays(1).ToString("dd/MM")</small></th>
                                    <th>Thứ 3<br/><small>@weekStart.AddDays(2).ToString("dd/MM")</small></th>
                                    <th>Thứ 4<br/><small>@weekStart.AddDays(3).ToString("dd/MM")</small></th>
                                    <th>Thứ 5<br/><small>@weekStart.AddDays(4).ToString("dd/MM")</small></th>
                                    <th>Thứ 6<br/><small>@weekStart.AddDays(5).ToString("dd/MM")</small></th>
                                    <th>Thứ 7<br/><small>@weekStart.AddDays(6).ToString("dd/MM")</small></th>
                                    <th>Chủ nhật<br/><small>@weekStart.ToString("dd/MM")</small></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    // Đếm số booking unique trong tuần này
                                    // Backend đã filter chỉ lấy booking có StartTime trong tuần [weekStart, weekEnd)
                                    // Nên chỉ cần đếm unique booking (theo BookingId) để tránh duplicate
                                    var uniqueBookings = schedule
                                        .GroupBy(b => b.BookingId) // Loại bỏ duplicate nếu có (theo BookingId)
                                        .Select(g => g.First())
                                        .ToList();
                                    var totalBookingCount = uniqueBookings.Count;
                                }
                                @for (int hour = 6; hour <= 23; hour++)
                                {
                                    <tr>
                                        <td class="text-center align-middle time-cell sticky-time">
                                            <strong>@hour.ToString("00"):00</strong>
                                        </td>
                                        @for (int day = 1; day <= 7; day++)
                                        {
                                            var cellTime = weekStart.AddDays(day == 7 ? 0 : day);
                                            var cellHour = cellTime.AddHours(hour);
                                            var cellHourEnd = cellHour.AddHours(1);
                                            
                                            // CHỈ hiển thị booking ở đúng giờ bắt đầu (StartTime), không hiển thị ở các giờ tiếp theo
                                            // Tìm booking có StartTime trong khoảng [cellHour, cellHourEnd)
                                            var booking = schedule.FirstOrDefault(b => 
                                                b.StartTime.Date == cellTime.Date && 
                                                b.StartTime >= cellHour && 
                                                b.StartTime < cellHourEnd);

                                            if (booking != null)
                                            {
                                                var cellClass = booking.Status switch
                                                {
                                                    "Completed" => "table-secondary", // Xám - Đã hoàn thành
                                                    "InProgress" => "table-primary",  // Xanh dương - Đang thực hiện
                                                    "Confirmed" => "table-warning",   // Vàng - Đã xác nhận
                                                    _ => "table-danger"               // Đỏ - Mặc định
                                                };
                                                
                                                var badgeClass = booking.Status switch
                                                {
                                                    "Completed" => "bg-secondary",
                                                    "InProgress" => "bg-info",
                                                    "Confirmed" => "bg-warning",
                                                    _ => "bg-danger"
                                                };
                                                
                                                var statusText = booking.Status switch
                                                {
                                                    "Completed" => "Đã hoàn thành",
                                                    "InProgress" => "Đang thực hiện",
                                                    "Confirmed" => "Đã xác nhận",
                                                    _ => "Không xác định"
                                                };
                                                
                                                <td class="@cellClass p-2" 
                                                    title="@booking.ServiceName - @(string.IsNullOrEmpty(booking.CustomerName) || booking.CustomerName == "N/A" ? "Chưa có thông tin" : booking.CustomerName)">
                                                    <div class="booking-cell">
                                                        <div><strong>@booking.ServiceName</strong></div>
                                                        @if (!string.IsNullOrEmpty(booking.CustomerName) && booking.CustomerName != "N/A")
                                                        {
                                                            <small><i class="bi bi-person"></i> @booking.CustomerName</small>
                                                        }
                                                        else
                                                        {
                                                            <small><i class="bi bi-person"></i> <span class="text-muted">Chưa có thông tin</span></small>
                                                        }
                                                        @if (!string.IsNullOrEmpty(booking.Address) && booking.Address != "N/A")
                                                        {
                                                            <small><i class="bi bi-geo-alt"></i> @booking.Address</small>
                                                        }
                                                        <small class="badge @badgeClass">@statusText</small>
                                                    </div>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="table-success text-center align-middle">
                                                    <span class="text-muted">-</span>
                                                </td>
                                            }
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <!-- Tổng số đơn hàng nằm trên -->
                    <div class="total-orders-wrapper">
                        <div class="total-orders-box">
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-calendar-check"></i>
                                <strong>Tổng số đơn hàng: @totalBookingCount</strong>
                            </div>
                        </div>
                    </div>
                    <!-- Trạng thái nằm dưới cùng -->
                    <div class="status-legend">
                        <div class="d-flex gap-3 flex-wrap align-items-center justify-content-center">
                            <div class="status-item">
                                <span class="badge bg-success me-2">Rảnh</span>
                                    <small>Có thể nhận đơn</small>
                                </div>
                                <div class="vr"></div>
                            <div class="status-item">
                                <span class="badge bg-warning me-2">Đã xác nhận</span>
                                <small>Đơn đã được xác nhận</small>
                                </div>
                            <div class="status-item">
                                <span class="badge bg-info me-2">Đang thực hiện</span>
                                <small>Đang làm việc</small>
                                </div>
                            <div class="status-item">
                                <span class="badge bg-secondary me-2">Đã hoàn thành</span>
                                <small>Đã hoàn tất</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

