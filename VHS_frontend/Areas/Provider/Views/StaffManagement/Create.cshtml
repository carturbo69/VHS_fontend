@model VHS_frontend.Areas.Provider.Models.Staff.StaffCreateDTO
@{
    ViewData["Title"] = "Thêm nhân viên mới";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/staff-management-create.css" asp-append-version="true" />
}

<div class="staff-management">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="staff-form">
                    <div class="staff-header">
                        <h3 class="staff-title">
                            <i class="bi bi-person-plus me-2"></i>
                            Thêm nhân viên mới
                        </h3>
                        <a href="@Url.Action("Index", "StaffManagement")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>
                    
                    <div class="staff-content">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form id="createStaffForm" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            
                            <!-- Tên nhân viên -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="StaffName" class="form-label">
                                            <i class="bi bi-person me-2"></i>
                                            Tên nhân viên <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="StaffName" class="form-control" id="StaffName" name="StaffName" placeholder="Nhập tên nhân viên" maxlength="100" />
                                        <span asp-validation-for="StaffName" class="text-danger field-validation-error d-block" id="StaffNameValidationError"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Mật khẩu -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">
                                            <i class="bi bi-key me-2"></i>
                                            Mật khẩu <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)" maxlength="100" />
                                        <span asp-validation-for="Password" class="text-danger field-validation-error d-block" id="PasswordValidationError"></span>
                                        <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự</div>
                                    </div>
                                </div>
                            </div>

                            <!-- CCCD/CMND -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="CitizenID" class="form-label">
                                            <i class="bi bi-card-text me-2"></i>
                                            CCCD/CMND <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="CitizenID" class="form-control" id="CitizenID" name="CitizenID" placeholder="Nhập 9-12 số CCCD/CMND" maxlength="12" />
                                        <span asp-validation-for="CitizenID" class="text-danger field-validation-error d-block" id="CitizenIDValidationError"></span>
                                        <div class="form-text">Nhập đúng 9-12 chữ số CCCD/CMND (sẽ dùng làm username đăng nhập)</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Địa chỉ -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Address" class="form-label">
                                            <i class="bi bi-geo-alt me-2"></i>
                                            Địa chỉ <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Address" class="form-control" id="Address" name="Address" placeholder="Nhập địa chỉ nhân viên" maxlength="500" />
                                        <span asp-validation-for="Address" class="text-danger field-validation-error d-block" id="AddressValidationError"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Số điện thoại -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber" class="form-label">
                                            <i class="bi bi-telephone me-2"></i>
                                            Số điện thoại
                                        </label>
                                        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Nhập số điện thoại (10-11 số)" maxlength="11" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger field-validation-error d-block" id="PhoneNumberValidationError"></span>
                                        <div class="form-text">Nhập số điện thoại (10-11 chữ số)</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Face Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-camera me-2"></i>Ảnh chân dung chính diện
                                        </label>
                                        <input asp-for="FaceImage" type="file" class="form-control d-none" accept="image/*" id="faceImageInput" name="FaceImage" />
                                        <span asp-validation-for="FaceImage" class="text-danger field-validation-error d-block" id="FaceImageValidationError"></span>
                                        <div class="form-text">Click vào khung bên dưới để chọn ảnh (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-3">
                                            <div class="placeholder-container" 
                                                 data-target-input="faceImageInput"
                                                 style="width: 300px; height: 300px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-camera placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                    <small class="d-block mt-2" style="font-size: 0.75rem; opacity: 0.7;">Click để chọn ảnh</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CCCD Front Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-card-image me-2"></i>Ảnh CCCD mặt trước
                                        </label>
                                        <input asp-for="CitizenIDFrontImage" type="file" class="form-control d-none" accept="image/*" id="cccdFrontInput" name="CitizenIDFrontImage" />
                                        <span asp-validation-for="CitizenIDFrontImage" class="text-danger field-validation-error d-block" id="CitizenIDFrontImageValidationError"></span>
                                        <div class="form-text">Click vào khung bên dưới để chọn ảnh (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-3">
                                            <div class="placeholder-container" 
                                                 data-target-input="cccdFrontInput"
                                                 style="width: 280px; height: 200px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-card-image placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                    <small class="d-block mt-2" style="font-size: 0.75rem; opacity: 0.7;">Click để chọn ảnh</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CCCD Back Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-card-image me-2"></i>Ảnh CCCD mặt sau
                                        </label>
                                        <input asp-for="CitizenIDBackImage" type="file" class="form-control d-none" accept="image/*" id="cccdBackInput" name="CitizenIDBackImage" />
                                        <span asp-validation-for="CitizenIDBackImage" class="text-danger field-validation-error d-block" id="CitizenIDBackImageValidationError"></span>
                                        <div class="form-text">Click vào khung bên dưới để chọn ảnh (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-3">
                                            <div class="placeholder-container" 
                                                 data-target-input="cccdBackInput"
                                                 style="width: 280px; height: 200px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-card-image placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                    <small class="d-block mt-2" style="font-size: 0.75rem; opacity: 0.7;">Click để chọn ảnh</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-person-plus me-2"></i>
                                            Tạo nhân viên
                                        </button>
                                        <a href="@Url.Action("Index", "StaffManagement")" class="btn btn-outline-secondary btn-lg ms-3">
                                            <i class="bi bi-x-circle me-2"></i>
                                            Hủy
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mark fields with server-side validation errors
            markServerSideValidationErrors();
            
            // Setup image upload functionality
            setupImageUpload('faceImageInput', 300, 300);
            setupImageUpload('cccdFrontInput', 280, 200);
            setupImageUpload('cccdBackInput', 280, 200);
            
            // Setup real-time validation for all fields
            setupValidation();
            
            // Show error from TempData if exists
            const errorAlert = document.querySelector('.alert-danger');
            if (errorAlert && errorAlert.textContent.trim() !== '') {
                // Scroll to error alert
                setTimeout(() => {
                    errorAlert.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
                
                // Also show toast for better visibility
                const errorMessage = errorAlert.textContent.trim();
                if (errorMessage.includes('CCCD/CMND') && errorMessage.includes('đã được sử dụng')) {
                    // Highlight CitizenID field
                    const citizenIdInput = document.getElementById('CitizenID');
                    const citizenIdError = findErrorElement('CitizenID');
                    if (citizenIdInput && citizenIdError) {
                        citizenIdInput.classList.add('is-invalid');
                        // Remove "Lỗi: " prefix if exists
                        let cleanMessage = errorMessage.replace(/^Lỗi:\s*/i, '').trim();
                        citizenIdError.textContent = cleanMessage;
                        citizenIdError.style.display = 'block';
                        citizenIdError.classList.add('d-block');
                    }
                    showToast('error', 'Lỗi CCCD/CMND', errorMessage);
                } else {
                    showToast('error', 'Lỗi', errorMessage);
                }
            }
        });
        
        // Mark fields with server-side validation errors
        function markServerSideValidationErrors() {
            // Find all validation error spans and mark corresponding inputs
            document.querySelectorAll('.field-validation-error').forEach(function(span) {
                if (span.textContent.trim() !== '') {
                    // Find input in the same form-group (most reliable method)
                    const formGroup = span.closest('.form-group');
                    if (formGroup) {
                        const input = formGroup.querySelector('input, textarea, select');
                        if (input) {
                            input.classList.add('is-invalid');
                            
                            // For file inputs, mark placeholder container
                            if (input.type === 'file' && input.classList.contains('d-none')) {
                                const placeholder = document.querySelector(`div[data-target-input="${input.id}"]`);
                                if (placeholder) {
                                    placeholder.classList.add('has-error');
                                }
                            }
                        }
                    }
                    
                    // Ensure error is visible
                    span.style.display = 'block';
                    span.classList.add('d-block');
                }
            });
        }
        
        // Helper function to find error element for a given input
        function findErrorElement(inputId) {
            const inputEl = document.getElementById(inputId);
            if (!inputEl) return null;
            
            // Method 1: Find by ID with ValidationError suffix
            let errorEl = document.getElementById(inputId + 'ValidationError');
            
            // Method 2: Find in the same form-group
            if (!errorEl && inputEl.closest('.form-group')) {
                errorEl = inputEl.closest('.form-group').querySelector('.field-validation-error');
            }
            
            // Method 3: Find by data-valmsg-for attribute
            if (!errorEl) {
                const fieldName = inputEl.getAttribute('name');
                if (fieldName) {
                    errorEl = document.querySelector(`span[data-valmsg-for="${fieldName}"]`);
                }
            }
            
            return errorEl;
        }
        
        // Validation functions - Use validation spans from ASP.NET Core
        function validateStaffName(value) {
            const inputEl = document.getElementById('StaffName');
            const errorEl = findErrorElement('StaffName');
            
            if (!value || value.trim() === '') {
                if (errorEl) showFieldError(inputEl, errorEl, 'Tên nhân viên không được để trống');
                return false;
            }
            
            if (value.length > 100) {
                if (errorEl) showFieldError(inputEl, errorEl, 'Tên nhân viên không được vượt quá 100 ký tự');
                return false;
            }
            
            if (errorEl) clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validatePassword(value) {
            const inputEl = document.getElementById('Password');
            const errorEl = findErrorElement('Password');
            
            if (!value || value.trim() === '') {
                if (errorEl) showFieldError(inputEl, errorEl, 'Mật khẩu không được để trống');
                return false;
            }
            
            if (value.length < 6) {
                if (errorEl) showFieldError(inputEl, errorEl, 'Mật khẩu phải có ít nhất 6 ký tự');
                return false;
            }
            
            if (value.length > 100) {
                if (errorEl) showFieldError(inputEl, errorEl, 'Mật khẩu không được vượt quá 100 ký tự');
                return false;
            }
            
            if (errorEl) clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validateCitizenID(value) {
            const inputEl = document.getElementById('CitizenID');
            const errorEl = findErrorElement('CitizenID');
            
            if (!inputEl) return true;
            
            if (!value || value.trim() === '') {
                if (errorEl) showFieldError(inputEl, errorEl, 'CCCD/CMND là bắt buộc');
                return false;
            }
            
            if (!/^\d{9,12}$/.test(value)) {
                if (errorEl) showFieldError(inputEl, errorEl, 'CCCD/CMND phải là 9-12 chữ số');
                return false;
            }
            
            if (errorEl) clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validateAddress(value) {
            const inputEl = document.getElementById('Address');
            const errorEl = findErrorElement('Address');
            
            // Address is required
            if (!value || value.trim() === '') {
                if (errorEl) showFieldError(inputEl, errorEl, 'Địa chỉ không được để trống');
                return false;
            }
            
            // Check max length
            if (value.length > 500) {
                if (errorEl) showFieldError(inputEl, errorEl, 'Địa chỉ không được vượt quá 500 ký tự');
                return false;
            }
            
            // Clear error if valid
            if (errorEl) clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validatePhoneNumber(value) {
            const inputEl = document.getElementById('PhoneNumber');
            const errorEl = findErrorElement('PhoneNumber');
            
            // PhoneNumber is optional, only validate if provided
            if (value && value.trim() !== '') {
                // Value should already be cleaned (only numbers), but double-check
                const cleanedValue = value.replace(/\D/g, '');
                
                if (cleanedValue.length > 0 && (cleanedValue.length < 10 || cleanedValue.length > 11)) {
                    if (errorEl) showFieldError(inputEl, errorEl, 'Số điện thoại phải là 10-11 chữ số');
                    return false;
                }
                
                if (cleanedValue.length > 0 && !/^[0-9]{10,11}$/.test(cleanedValue)) {
                    if (errorEl) showFieldError(inputEl, errorEl, 'Số điện thoại phải là 10-11 chữ số');
                    return false;
                }
            }
            
            // Clear error if valid or empty (optional field)
            if (errorEl) clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validateFaceImage() {
            const errorEl = document.getElementById('FaceImageValidationError');
            const inputEl = document.getElementById('faceImageInput');
            
            if (!inputEl.files || inputEl.files.length === 0) {
                showFieldError(inputEl, errorEl, 'Ảnh chân dung chính diện là bắt buộc');
                return false;
            }
            
            clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validateCitizenIDFrontImage() {
            const errorEl = document.getElementById('CitizenIDFrontImageValidationError');
            const inputEl = document.getElementById('cccdFrontInput');
            
            if (!inputEl.files || inputEl.files.length === 0) {
                showFieldError(inputEl, errorEl, 'Phải tải lên ảnh mặt trước CCCD');
                return false;
            }
            
            clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function validateCitizenIDBackImage() {
            const errorEl = document.getElementById('CitizenIDBackImageValidationError');
            const inputEl = document.getElementById('cccdBackInput');
            
            if (!inputEl.files || inputEl.files.length === 0) {
                showFieldError(inputEl, errorEl, 'Phải tải lên ảnh mặt sau CCCD');
                return false;
            }
            
            clearFieldError(inputEl, errorEl);
            return true;
        }
        
        function showFieldError(inputEl, errorEl, message) {
            if (inputEl) {
                inputEl.classList.add('is-invalid');
                
                // For file inputs, also add error class to placeholder/image container
                if (inputEl.type === 'file' && inputEl.classList.contains('d-none')) {
                    const placeholder = document.querySelector(`div[data-target-input="${inputEl.id}"]`);
                    if (placeholder) {
                        placeholder.classList.add('has-error');
                    }
                }
            }
            if (errorEl) {
                errorEl.textContent = message;
                errorEl.style.display = 'block';
                errorEl.classList.add('d-block');
            }
        }
        
        function clearFieldError(inputEl, errorEl) {
            if (!errorEl) return;
            
            // Check if this is a server-side error (ASP.NET Core generates these with data-valmsg-for)
            const isServerError = errorEl.hasAttribute('data-valmsg-for') || 
                                errorEl.classList.contains('field-validation-valid') === false;
            
            // Only clear client-side errors, preserve server-side errors
            if (!isServerError || errorEl.textContent.trim() === '') {
                if (errorEl) {
                    errorEl.textContent = '';
                    errorEl.style.display = 'none';
                    errorEl.classList.remove('d-block');
                }
                if (inputEl) {
                    inputEl.classList.remove('is-invalid');
                    
                    // For file inputs, also remove error class from placeholder/image container
                    if (inputEl.type === 'file' && inputEl.classList.contains('d-none')) {
                        const placeholder = document.querySelector(`div[data-target-input="${inputEl.id}"]`);
                        if (placeholder) {
                            placeholder.classList.remove('has-error');
                        }
                    }
                }
            }
        }
        
        function setupValidation() {
            // StaffName validation
            const staffNameInput = document.getElementById('StaffName');
            if (staffNameInput) {
                staffNameInput.addEventListener('blur', function() {
                    validateStaffName(this.value);
                });
                staffNameInput.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid')) {
                        validateStaffName(this.value);
                    }
                });
            }
            
            // Password validation
            const passwordInput = document.getElementById('Password');
            if (passwordInput) {
                passwordInput.addEventListener('blur', function() {
                    validatePassword(this.value);
                });
                passwordInput.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid')) {
                        validatePassword(this.value);
                    }
                });
            }
            
            // CitizenID validation
            const citizenIDInput = document.getElementById('CitizenID');
            if (citizenIDInput) {
                citizenIDInput.addEventListener('input', function(e) {
                    // Only allow numbers
                    e.target.value = e.target.value.replace(/\D/g, '');
                    
                    // Limit to 12 digits
                    if (e.target.value.length > 12) {
                        e.target.value = e.target.value.substring(0, 12);
                    }
                    
                    // Validate on input
                    if (this.classList.contains('is-invalid') || this.value.length === 12 || this.value.length === 9) {
                        validateCitizenID(this.value);
                    }
                });
                citizenIDInput.addEventListener('blur', function() {
                    validateCitizenID(this.value);
                });
            }
            
            // Address validation - Real-time validation
            const addressInput = document.getElementById('Address');
            if (addressInput) {
                addressInput.addEventListener('input', function() {
                    validateAddress(this.value);
                });
                addressInput.addEventListener('blur', function() {
                    validateAddress(this.value);
                });
            }
            
            // PhoneNumber validation - Real-time validation
            const phoneNumberInput = document.getElementById('PhoneNumber');
            if (phoneNumberInput) {
                phoneNumberInput.addEventListener('input', function(e) {
                    // Only allow numbers
                    e.target.value = e.target.value.replace(/\D/g, '');
                    
                    // Limit to 11 digits
                    if (e.target.value.length > 11) {
                        e.target.value = e.target.value.substring(0, 11);
                    }
                    
                    // Real-time validation
                    validatePhoneNumber(this.value);
                });
                phoneNumberInput.addEventListener('blur', function() {
                    validatePhoneNumber(this.value);
                });
            }
            
            // Image validation - validate on file change
            const faceImageInput = document.getElementById('faceImageInput');
            if (faceImageInput) {
                faceImageInput.addEventListener('change', function() {
                    validateFaceImage();
                });
            }
            
            const cccdFrontInput = document.getElementById('cccdFrontInput');
            if (cccdFrontInput) {
                cccdFrontInput.addEventListener('change', function() {
                    validateCitizenIDFrontImage();
                });
            }
            
            const cccdBackInput = document.getElementById('cccdBackInput');
            if (cccdBackInput) {
                cccdBackInput.addEventListener('change', function() {
                    validateCitizenIDBackImage();
                });
            }
        }
        
        // Validate all fields before form submission
        function validateForm() {
            let isValid = true;
            
            isValid = validateStaffName(document.getElementById('StaffName').value) && isValid;
            isValid = validatePassword(document.getElementById('Password').value) && isValid;
            isValid = validateCitizenID(document.getElementById('CitizenID').value) && isValid;
            isValid = validateAddress(document.getElementById('Address').value) && isValid;
            isValid = validatePhoneNumber(document.getElementById('PhoneNumber').value) && isValid;
            isValid = validateFaceImage() && isValid;
            isValid = validateCitizenIDFrontImage() && isValid;
            isValid = validateCitizenIDBackImage() && isValid;
            
            return isValid;
        }
        
        function setupImageUpload(inputId, width, height) {
            const fileInput = document.getElementById(inputId);
            const placeholder = document.querySelector(`div[data-target-input="${inputId}"]`);
            
            if (!fileInput || !placeholder) return;
            
            // Helper function to ensure click handler is added to container
            function ensureClickHandler(container) {
                if (container) {
                    // Remove old listener by cloning (this removes all event listeners)
                    const hasParent = container.parentNode !== null;
                    const newContainer = container.cloneNode(true);
                    if (hasParent) {
                        container.parentNode.replaceChild(newContainer, container);
                    }
                    // Add click handler
                    newContainer.addEventListener('click', function() {
                        fileInput.click();
                    });
                    return newContainer;
                }
                return container;
            }
            
            // Click handler for placeholder (initial)
            placeholder.addEventListener('click', function() {
                fileInput.click();
            });
            
            // File change handler
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (!file) {
                    // Clear validation if file is removed
                    const inputEl = document.getElementById(inputId);
                    let errorEl = null;
                    if (inputId === 'faceImageInput') {
                        errorEl = findErrorElement('faceImageInput') || document.getElementById('FaceImageValidationError');
                    } else if (inputId === 'cccdFrontInput') {
                        errorEl = findErrorElement('cccdFrontInput') || document.getElementById('CitizenIDFrontImageValidationError');
                    } else if (inputId === 'cccdBackInput') {
                        errorEl = findErrorElement('cccdBackInput') || document.getElementById('CitizenIDBackImageValidationError');
                    }
                    if (inputEl && errorEl) {
                        clearFieldError(inputEl, errorEl);
                    }
                    return;
                }
                
                // Validate file
                if (file.size > 5 * 1024 * 1024) {
                    showToast('error', 'Lỗi', 'Ảnh không được vượt quá 5MB');
                    fileInput.value = '';
                    // Show validation error
                    const inputEl = document.getElementById(inputId);
                    let errorEl = null;
                    if (inputId === 'faceImageInput') {
                        errorEl = findErrorElement('faceImageInput') || document.getElementById('FaceImageValidationError');
                    } else if (inputId === 'cccdFrontInput') {
                        errorEl = findErrorElement('cccdFrontInput') || document.getElementById('CitizenIDFrontImageValidationError');
                    } else if (inputId === 'cccdBackInput') {
                        errorEl = findErrorElement('cccdBackInput') || document.getElementById('CitizenIDBackImageValidationError');
                    }
                    if (inputEl && errorEl) {
                        showFieldError(inputEl, errorEl, 'Ảnh không được vượt quá 5MB');
                    }
                    return;
                }
                
                if (!file.type.startsWith('image/')) {
                    showToast('error', 'Lỗi', 'Chỉ chấp nhận file hình ảnh (JPG, PNG, GIF)');
                    fileInput.value = '';
                    // Show validation error
                    const inputEl = document.getElementById(inputId);
                    let errorEl = null;
                    if (inputId === 'faceImageInput') {
                        errorEl = findErrorElement('faceImageInput') || document.getElementById('FaceImageValidationError');
                    } else if (inputId === 'cccdFrontInput') {
                        errorEl = findErrorElement('cccdFrontInput') || document.getElementById('CitizenIDFrontImageValidationError');
                    } else if (inputId === 'cccdBackInput') {
                        errorEl = findErrorElement('cccdBackInput') || document.getElementById('CitizenIDBackImageValidationError');
                    }
                    if (inputEl && errorEl) {
                        showFieldError(inputEl, errorEl, 'Chỉ chấp nhận file hình ảnh (JPG, PNG, GIF)');
                    }
                    return;
                }
                
                // Create preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Tìm container hiện tại (có thể là placeholder hoặc image-container)
                    let currentContainer = document.querySelector(`div[data-target-input="${inputId}"]`);
                    
                    // Nếu chưa có container hoặc là placeholder, tạo mới
                    if (!currentContainer || currentContainer.classList.contains('placeholder-container')) {
                        // Create new image container
                        const newContainer = document.createElement('div');
                        newContainer.className = 'image-container';
                        newContainer.setAttribute('data-target-input', inputId);
                        newContainer.style.cssText = `width: ${width}px; height: ${height}px; cursor: pointer;`;
                        
                        newContainer.innerHTML = `
                            <img src="${e.target.result}" alt="Preview" 
                                 style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                            <div class="edit-overlay">
                                <div class="edit-overlay-content">
                                    <i class="bi bi-pencil-square edit-icon"></i>
                                    <div class="edit-text">Click để thay đổi</div>
                                </div>
                            </div>
                        `;
                        
                        // Replace placeholder with new container
                        if (currentContainer && currentContainer.parentNode) {
                            currentContainer.parentNode.replaceChild(newContainer, currentContainer);
                            currentContainer = newContainer;
                        } else if (placeholder && placeholder.parentNode) {
                            placeholder.parentNode.replaceChild(newContainer, placeholder);
                            currentContainer = newContainer;
                        }
                        
                        // Add click handler to new element
                        currentContainer = ensureClickHandler(currentContainer);
                    } else {
                        // Đã có image-container, chỉ cập nhật ảnh bên trong
                        const img = currentContainer.querySelector('img');
                        if (img) {
                            img.src = e.target.result;
                        } else {
                            // Nếu không tìm thấy img, tạo lại HTML
                            currentContainer.innerHTML = `
                                <img src="${e.target.result}" alt="Preview" 
                                     style="width: 100%; height: 100%; object-fit: cover; border-radius: 12px;" />
                                <div class="edit-overlay">
                                    <div class="edit-overlay-content">
                                        <i class="bi bi-pencil-square edit-icon"></i>
                                        <div class="edit-text">Click để thay đổi</div>
                                    </div>
                                </div>
                            `;
                            // Thêm lại click handler sau khi thay đổi innerHTML
                            currentContainer.addEventListener('click', function() {
                                fileInput.click();
                            });
                        }
                    }
                    
                    // Clear validation errors and validate
                    const inputEl = document.getElementById(inputId);
                    if (inputId === 'faceImageInput') {
                        const errorEl = findErrorElement('faceImageInput') || document.getElementById('FaceImageValidationError');
                        if (inputEl && errorEl) clearFieldError(inputEl, errorEl);
                        validateFaceImage();
                    } else if (inputId === 'cccdFrontInput') {
                        const errorEl = findErrorElement('cccdFrontInput') || document.getElementById('CitizenIDFrontImageValidationError');
                        if (inputEl && errorEl) clearFieldError(inputEl, errorEl);
                        validateCitizenIDFrontImage();
                    } else if (inputId === 'cccdBackInput') {
                        const errorEl = findErrorElement('cccdBackInput') || document.getElementById('CitizenIDBackImageValidationError');
                        if (inputEl && errorEl) clearFieldError(inputEl, errorEl);
                        validateCitizenIDBackImage();
                    }
                    
                    // Show success message
                    showToast('success', 'Thành công', 'Ảnh đã được cập nhật thành công');
                };
                reader.readAsDataURL(file);
            });
        }
        
        // Toast notification helper - Scoped to staff-management-create
        function showToast(type, title, message) {
            // Create toast container if not exists - Use unique ID and class
            let toastContainer = document.getElementById('staffManagementCreateToastContainer');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.id = 'staffManagementCreateToastContainer';
                toastContainer.className = 'staff-management-create-toast-container';
                document.body.appendChild(toastContainer);
            }
            
            // Create toast
            const toastId = 'toast-' + Date.now();
            const toast = document.createElement('div');
            toast.id = toastId;
            toast.className = 'toast';
            toast.setAttribute('role', 'alert');
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            // Set icon and colors
            let iconClass = 'bi-info-circle';
            let headerClass = '';
            
            switch(type) {
                case 'success':
                    iconClass = 'bi-check-circle-fill text-success';
                    headerClass = 'bg-success text-white';
                    break;
                case 'error':
                case 'danger':
                    iconClass = 'bi-x-circle-fill text-danger';
                    headerClass = 'bg-danger text-white';
                    break;
                case 'warning':
                    iconClass = 'bi-exclamation-triangle-fill text-warning';
                    headerClass = 'bg-warning text-dark';
                    break;
                case 'info':
                default:
                    iconClass = 'bi-info-circle-fill text-info';
                    headerClass = 'bg-info text-white';
                    break;
            }
            
            toast.innerHTML = `
                <div class="toast-header ${headerClass}">
                    <i class="bi ${iconClass} me-2"></i>
                    <strong class="me-auto">${title}</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Show toast
            const bsToast = new bootstrap.Toast(toast, {
                autohide: true,
                delay: 2500  // Tự động tắt sau 2.5 giây
            });
            bsToast.show();
            
            // Remove toast element after hidden
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }
        
        // Form submission handler
        const createForm = document.getElementById('createStaffForm');
        if (createForm) {
            createForm.addEventListener('submit', function(e) {
                // Validate all fields before submission
                if (!validateForm()) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Scroll to first error
                    const firstError = document.querySelector('.is-invalid');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        firstError.focus();
                    }
                    
                    showToast('warning', 'Cảnh báo', 'Vui lòng kiểm tra và sửa các lỗi trong form');
                    return false;
                }
                
                // Add loading state
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.disabled = true;
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang tạo nhân viên...';
                    
                    // Re-enable after 30 seconds as fallback (in case of error)
                    setTimeout(() => {
                        if (submitBtn.disabled) {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalText;
                        }
                    }, 30000);
                }
            });
        }
        
    </script>
