@model VHS_frontend.Areas.Provider.Models.Staff.StaffCreateDTO
@{
    ViewData["Title"] = "Thêm nhân viên mới";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/staff-management-create.css" />
}

<div class="staff-management">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="staff-form">
                    <div class="staff-header">
                        <h3 class="staff-title">
                            <i class="bi bi-person-plus me-2"></i>
                            Thêm nhân viên mới
                        </h3>
                        <a href="@Url.Action("Index", "StaffManagement")" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>
                            Quay lại
                        </a>
                    </div>
                    
                    <div class="staff-content">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form id="createStaffForm" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="StaffName" class="form-label">
                                            Tên nhân viên <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="StaffName" class="form-control" placeholder="Nhập tên nhân viên" />
                                        <span asp-validation-for="StaffName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Password" class="form-label">
                                            Mật khẩu <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="CitizenID" class="form-label">
                                            CCCD/CMND <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="CitizenID" class="form-control" placeholder="Nhập 9-12 số CCCD/CMND" maxlength="12" />
                                        <span asp-validation-for="CitizenID" class="text-danger"></span>
                                        <div class="form-text">Nhập đúng 9-12 chữ số CCCD/CMND (sẽ dùng làm username đăng nhập)</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Address" class="form-label">
                                            Địa chỉ
                                        </label>
                                        <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ nhân viên" maxlength="500" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber" class="form-label">
                                            Số điện thoại
                                        </label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại (10-11 số)" maxlength="20" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        <div class="form-text">Nhập số điện thoại (10-11 chữ số)</div>
                                    </div>
                                </div>
                            </div>

                            <!-- Face Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-camera me-2"></i>Ảnh chân dung chính diện
                                        </label>
                                        <input asp-for="FaceImage" type="file" class="form-control d-none" accept="image/*" id="faceImageInput" />
                                        <span asp-validation-for="FaceImage" class="text-danger"></span>
                                        <div class="form-text">Click vào ảnh để thay đổi (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-4">
                                            <div class="placeholder-container" 
                                                 data-target-input="faceImageInput"
                                                 style="width: 300px; height: 300px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-camera placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CCCD Front Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-card-image me-2"></i>Ảnh CCCD mặt trước
                                        </label>
                                        <input asp-for="CitizenIDFrontImage" type="file" class="form-control d-none" accept="image/*" id="cccdFrontInput" />
                                        <span asp-validation-for="CitizenIDFrontImage" class="text-danger"></span>
                                        <div class="form-text">Click vào ảnh để thay đổi (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-4">
                                            <div class="placeholder-container" 
                                                 data-target-input="cccdFrontInput"
                                                 style="width: 280px; height: 200px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-card-image placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- CCCD Back Image Upload -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="form-label">
                                            <i class="bi bi-card-image me-2"></i>Ảnh CCCD mặt sau
                                        </label>
                                        <input asp-for="CitizenIDBackImage" type="file" class="form-control d-none" accept="image/*" id="cccdBackInput" />
                                        <span asp-validation-for="CitizenIDBackImage" class="text-danger"></span>
                                        <div class="form-text">Click vào ảnh để thay đổi (JPG, PNG, GIF - tối đa 5MB)</div>
                                        
                                        <div class="d-flex justify-content-center mt-4">
                                            <div class="placeholder-container" 
                                                 data-target-input="cccdBackInput"
                                                 style="width: 280px; height: 200px; cursor: pointer;">
                                                <div class="placeholder-content">
                                                    <i class="bi bi-card-image placeholder-icon"></i>
                                                    <div class="placeholder-text">Chưa có ảnh</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="bi bi-person-plus me-2"></i>
                                            Tạo nhân viên
                                        </button>
                                        <a href="@Url.Action("Index", "StaffManagement")" class="btn btn-outline-secondary btn-lg ms-3">
                                            <i class="bi bi-x-circle me-2"></i>
                                            Hủy
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Setup image upload functionality
            setupImageUpload('faceImageInput', 300, 300);
            setupImageUpload('cccdFrontInput', 280, 200);
            setupImageUpload('cccdBackInput', 280, 200);
            
            // CCCD input validation
            const citizenIDInput = document.querySelector('input[name="CitizenID"]');
            if (citizenIDInput) {
                citizenIDInput.addEventListener('input', function(e) {
                    // Only allow numbers
                    e.target.value = e.target.value.replace(/\D/g, '');
                    
                    // Limit to 12 digits
                    if (e.target.value.length > 12) {
                        e.target.value = e.target.value.substring(0, 12);
                    }
                });
            }
            
            // PhoneNumber input validation
            const phoneNumberInput = document.querySelector('input[name="PhoneNumber"]');
            if (phoneNumberInput) {
                phoneNumberInput.addEventListener('input', function(e) {
                    // Only allow numbers
                    e.target.value = e.target.value.replace(/\D/g, '');
                    
                    // Limit to 11 digits
                    if (e.target.value.length > 11) {
                        e.target.value = e.target.value.substring(0, 11);
                    }
                });
            }
        });
        
        function setupImageUpload(inputId, width, height) {
            const fileInput = document.getElementById(inputId);
            const placeholder = document.querySelector(`div[data-target-input="${inputId}"]`);
            
            if (!fileInput || !placeholder) return;
            
            // Click handler for placeholder
            placeholder.addEventListener('click', function() {
                fileInput.click();
            });
            
            // File change handler
            fileInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (!file) return;
                
                // Validate file
                if (file.size > 5 * 1024 * 1024) {
                    alert('Ảnh không được vượt quá 5MB');
                    return;
                }
                
                if (!file.type.startsWith('image/')) {
                    alert('Chỉ chấp nhận file hình ảnh');
                    return;
                }
                
                // Create preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    placeholder.outerHTML = `<div class="image-container" style="width: ${width}px; height: ${height}px; cursor: pointer;" data-target-input="${inputId}">
                        <img src="${e.target.result}" alt="Preview" 
                             style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;" />
                        <div class="edit-overlay">
                            <div class="edit-overlay-content">
                                <i class="bi bi-pencil-square edit-icon"></i>
                                <div class="edit-text">Click để thay đổi</div>
                            </div>
                        </div>
                    </div>`;
                    
                    // Re-add click handler to new element
                    const newContainer = document.querySelector(`div[data-target-input="${inputId}"]`);
                    if (newContainer) {
                        newContainer.addEventListener('click', function() {
                            fileInput.click();
                        });
                    }
                };
                reader.readAsDataURL(file);
            });
        }
    </script>
}