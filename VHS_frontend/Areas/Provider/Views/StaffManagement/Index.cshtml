                // Get AntiForgeryToken
                const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                console.log('Locking staff:', staffId, 'Token:', antiForgeryToken);
                
                fetch(`/Provider/StaffManagement/${staffId}/lock`, {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'RequestVerificationToken': antiForgeryToken || ''
                    }
                })
                .then(response => {
                    console.log('Lock response status:', response.status);
                    console.log('Lock response headers:', response.headers);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    const contentType = response.headers.get('content-type');
                    if (!contentType || !contentType.includes('application/json')) {
                        return response.text().then(text => {
                            console.error('Non-JSON response:', text);
                            throw new Error('Server tr·∫£ v·ªÅ d·ªØ li·ªáu kh√¥ng ph·∫£i JSON');
                        });
                    }
                    
                    return response.json();
                })
                .then(data => {
                    console.log('Lock response data:', data);
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('L·ªói: ' + (data.error || 'Kh√¥ng x√°c ƒë·ªãnh'));
                    }
                })
                .catch(error => {
                    console.error('Lock error:', error);
