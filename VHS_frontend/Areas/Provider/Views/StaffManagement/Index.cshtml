                        throw new Error('Server tr·∫£ v·ªÅ d·ªØ li·ªáu kh√¥ng ph·∫£i JSON');
                    });
                }
                
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('updatePasswordModal'));
                    modal.hide();
                } else {
