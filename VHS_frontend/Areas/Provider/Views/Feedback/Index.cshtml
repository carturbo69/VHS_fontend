@model List<VHS_frontend.Areas.Provider.Models.Review.ProviderReviewReadDTO>
@{
    ViewData["Title"] = "Phản hồi khách hàng";
    Layout = "~/Areas/Provider/Views/Shared/_ProviderLayout.cshtml";
    var statistics = ViewBag.Statistics as List<VHS_frontend.Areas.Provider.Models.Review.ReviewStatisticsDTO>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/feedback-reviews.css" asp-append-version="true" />
}

<div class="feedback-reviews">
    <div class="container-fluid">
        
        <!-- Header & Statistics -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="page-header">
                    <h3 class="page-title">
                        <i class="bi bi-chat-dots me-2"></i>
                        Phản hồi khách hàng
                    </h3>
                    <p class="text-muted">Xem và phản hồi đánh giá từ khách hàng</p>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        @if (statistics != null && statistics.Any())
        {
            <div class="row mb-4">
                @foreach (var stat in statistics)
                {
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="bi bi-star-fill"></i>
                            </div>
                            <div class="stat-content">
                                <h6 class="stat-title">@stat.ServiceName</h6>
                                <div class="stat-details">
                                    <div class="rating-badge">
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <span>@stat.AverageRating.ToString("0.0")</span>
                                    </div>
                                    <div class="stat-numbers">
                                        <span class="text-muted">@stat.TotalReviews đánh giá</span>
                                        <span class="divider">|</span>
                                        <span class="text-success">@stat.TotalReplied đã phản hồi</span>
                                        <span class="divider">|</span>
                                        <span class="text-danger">@stat.TotalNotReplied chưa phản hồi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Filter Tabs -->
        <div class="row mb-3">
            <div class="col-12">
                <ul class="nav nav-pills filter-tabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="all-tab" data-filter="all" type="button">
                            <i class="bi bi-list-ul"></i> Tất cả (@Model.Count)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="replied-tab" data-filter="replied" type="button">
                            <i class="bi bi-check-circle"></i> Đã phản hồi (@Model.Count(r => r.HasReplied))
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="not-replied-tab" data-filter="not-replied" type="button">
                            <i class="bi bi-exclamation-circle"></i> Chưa phản hồi (@Model.Count(r => !r.HasReplied))
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Reviews List -->
        <div class="row">
            <div class="col-12">
                @if (!Model.Any())
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>Chưa có đánh giá nào</h5>
                        <p class="text-muted">Các đánh giá từ khách hàng sẽ hiển thị ở đây</p>
                    </div>
                }
                else
                {
                    <div class="reviews-container">
                        @foreach (var review in Model.OrderByDescending(r => r.CreatedAt))
                        {
                            <div class="review-card" data-replied="@(review.HasReplied ? "replied" : "not-replied")">
                                <!-- Review Header -->
                                <div class="review-header">
                                    <div class="review-user">
                                        <div class="user-avatar">
                                            @if (!string.IsNullOrEmpty(review.UserImage))
                                            {
                                                <img src="@review.UserImage" alt="@review.UserName" />
                                            }
                                            else
                                            {
                                                <i class="bi bi-person-circle"></i>
                                            }
                                        </div>
                                        <div class="user-info">
                                            <h6 class="user-name">@review.UserName</h6>
                                            <div class="review-meta">
                                                <span class="service-name">
                                                    <i class="bi bi-tag"></i>
                                                    @review.ServiceName
                                                </span>
                                                <span class="review-date">
                                                    <i class="bi bi-clock"></i>
                                                    @review.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="review-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= (review.Rating ?? 0))
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                        <span class="rating-text">(@(review.Rating ?? 0)/5)</span>
                                    </div>
                                </div>

                                <!-- Review Content -->
                                <div class="review-content">
                                    <p class="review-comment">@review.Comment</p>
                                    @if (!string.IsNullOrEmpty(review.Images))
                                    {
                                        <div class="review-images">
                                            @foreach (var img in review.Images.Split(','))
                                            {
                                                <img src="@img.Trim()" alt="Review image" class="review-img" />
                                            }
                                        </div>
                                    }
                                </div>

                                <!-- Reply Section -->
                                @if (review.HasReplied)
                                {
                                    <div class="reply-section replied">
                                        <div class="reply-header">
                                            <i class="bi bi-reply-fill"></i>
                                            <span class="reply-label">Phản hồi của bạn</span>
                                            <span class="reply-date">@review.RepliedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                        <p class="reply-content">@review.Reply</p>
                                    </div>
                                }
                                else
                                {
                                    <div class="reply-section not-replied" id="reply-section-@review.ReviewId">
                                        <button class="btn btn-reply" onclick="showReplyForm('@review.ReviewId')">
                                            <i class="bi bi-reply"></i>
                                            Phản hồi
                                        </button>
                                        
                                        <div class="reply-form" id="reply-form-@review.ReviewId" style="display: none;">
                                            <textarea 
                                                class="form-control reply-textarea" 
                                                id="reply-text-@review.ReviewId" 
                                                placeholder="Nhập phản hồi của bạn (tối đa 1000 ký tự)..." 
                                                maxlength="1000"
                                                rows="3"></textarea>
                                            <div class="reply-actions">
                                                <button class="btn btn-secondary btn-sm" onclick="cancelReply('@review.ReviewId')">
                                                    <i class="bi bi-x"></i> Hủy
                                                </button>
                                                <button class="btn btn-primary btn-sm" onclick="submitReply('@review.ReviewId')">
                                                    <i class="bi bi-send"></i> Gửi phản hồi
                                                </button>
                                            </div>
                                            <div class="char-count">
                                                <span id="char-count-@review.ReviewId">0</span>/1000
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filter functionality
        document.querySelectorAll('.filter-tabs .nav-link').forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active state
                document.querySelectorAll('.filter-tabs .nav-link').forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // Filter reviews
                const filter = this.dataset.filter;
                document.querySelectorAll('.review-card').forEach(card => {
                    if (filter === 'all') {
                        card.style.display = 'block';
                    } else if (filter === 'replied' && card.dataset.replied === 'replied') {
                        card.style.display = 'block';
                    } else if (filter === 'not-replied' && card.dataset.replied === 'not-replied') {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Show reply form
        function showReplyForm(reviewId) {
            document.getElementById('reply-form-' + reviewId).style.display = 'block';
            document.querySelector('#reply-section-' + reviewId + ' .btn-reply').style.display = 'none';
            document.getElementById('reply-text-' + reviewId).focus();
        }

        // Cancel reply
        function cancelReply(reviewId) {
            document.getElementById('reply-form-' + reviewId).style.display = 'none';
            document.querySelector('#reply-section-' + reviewId + ' .btn-reply').style.display = 'block';
            document.getElementById('reply-text-' + reviewId).value = '';
            document.getElementById('char-count-' + reviewId).textContent = '0';
        }

        // Character counter
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.reply-textarea').forEach(textarea => {
                textarea.addEventListener('input', function() {
                    const reviewId = this.id.replace('reply-text-', '');
                    const charCount = this.value.length;
                    document.getElementById('char-count-' + reviewId).textContent = charCount;
                });
            });
        });

        // Submit reply
        async function submitReply(reviewId) {
            const replyText = document.getElementById('reply-text-' + reviewId).value.trim();
            
            if (!replyText) {
                alert('Vui lòng nhập nội dung phản hồi');
                return;
            }

            if (replyText.length > 1000) {
                alert('Nội dung phản hồi không được vượt quá 1000 ký tự');
                return;
            }

            try {
                const formData = new FormData();
                formData.append('reviewId', reviewId);
                formData.append('reply', replyText);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Action("Reply", "Feedback")', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    alert('Phản hồi đã được gửi thành công!');
                    location.reload();
                } else {
                    alert('Lỗi: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi gửi phản hồi');
            }
        }
    </script>
}

<!-- Anti-forgery token -->
<form>
    @Html.AntiForgeryToken()
</form>

