@model VHS_frontend.Areas.Provider.Controllers.ProviderWithdrawalViewModel
@{
    ViewData["Title"] = "Rút tiền";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/provider-withdrawal.css" asp-append-version="true" />
}

<div class="withdrawal-container">
    <!-- Success Notification -->
    <div id="successNotification" class="success-notification" style="display: none;">
        <div class="success-notification-content">
            <i class="bi bi-check-circle-fill me-2" id="successNotificationIcon"></i>
            <span id="successNotificationText"></span>
        </div>
    </div>

    <!-- Header -->
    <div class="page-header">
        <h1>
            <i class="bi bi-bank"></i>
            Rút tiền
        </h1>
        <p>Quản lý số dư và yêu cầu rút tiền từ các đơn hàng đã hoàn thành</p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    @if (Model.Balance != null)
    {
        <!-- Balance Cards -->
        <div class="balance-section">
            <div class="balance-card primary">
                <div class="balance-icon">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="balance-content">
                    <div class="balance-label">Số dư có thể rút</div>
                    <div class="balance-amount">@Model.Balance.AvailableBalance.ToString("N0") VNĐ</div>
                </div>
            </div>

            <div class="balance-stats">
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đã rút</div>
                        <div class="stat-value">@Model.Balance.TotalWithdrawn.ToString("N0") VNĐ</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đang chờ</div>
                        <div class="stat-value">@Model.Balance.PendingWithdrawals.ToString("N0") VNĐ</div>
                        @if (Model.Balance.PendingWithdrawalCount > 0)
                        {
                            <div class="stat-badge">@Model.Balance.PendingWithdrawalCount yêu cầu</div>
                        }
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Doanh thu dịch vụ hoàn thành</div>
                        <div class="stat-value">@Model.Balance.GrossCompletedAmount.ToString("N0") VNĐ</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đơn đã hoàn thành</div>
                        <div class="stat-value">@Model.Balance.CompletedBookingsCount</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Withdrawal Form -->
        @if (Model.Balance.AvailableBalance > 0)
        {
            <div class="withdrawal-form-section">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">
                        <i class="bi bi-plus-circle"></i>
                        Yêu cầu rút tiền
                    </h2>
                    <button type="button" class="btn btn-request-withdrawal" data-bs-toggle="collapse" data-bs-target="#withdrawalFormCollapse" aria-expanded="false" aria-controls="withdrawalFormCollapse">
                        <i class="bi bi-plus-circle me-2"></i>
                        Tạo yêu cầu rút tiền
                    </button>
                </div>
                <div class="collapse" id="withdrawalFormCollapse">
                    <form id="withdrawalForm" class="withdrawal-form" novalidate>
                        @Html.AntiForgeryToken()

                        <!-- Amount Field -->
                        <div class="form-group form-group-amount">
                            <label for="Amount" class="form-label-with-icon">
                                <i class="bi bi-cash-coin me-2"></i>
                                Số tiền muốn rút <span class="required">*</span>
                            </label>
                            <div class="input-group input-group-amount">
                                <span class="input-group-icon">
                                    <i class="bi bi-currency-exchange"></i>
                                </span>
                                <input type="number"
                                       id="Amount"
                                       name="Amount"
                                       class="form-control"
                                       step="0.01"
                                       min="10000"
                                       max="@Model.Balance.AvailableBalance"
                                       placeholder="Nhập số tiền (tối thiểu 10,000 VNĐ)"
                                       required />
                            </div>
                            <div class="error-message" id="Amount-error"></div>
                            <small class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Số dư có thể rút: <strong>@Model.Balance.AvailableBalance.ToString("N0") VNĐ</strong> | 
                                Số tiền tối thiểu: <strong>10,000 VNĐ</strong>
                            </small>
                        </div>

                        <!-- Bank Info - 2 Columns -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="BankAccount" class="form-label-with-icon">
                                        <i class="bi bi-credit-card me-2"></i>
                                        Số tài khoản <span class="required">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-icon">
                                            <i class="bi bi-hash"></i>
                                        </span>
                                        <input type="text"
                                               id="BankAccount"
                                               name="BankAccount"
                                               class="form-control"
                                               placeholder="Nhập số tài khoản"
                                               required
                                               maxlength="50" />
                                    </div>
                                    <div class="error-message" id="BankAccount-error"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="BankName" class="form-label-with-icon">
                                        <i class="bi bi-bank me-2"></i>
                                        Tên ngân hàng <span class="required">*</span>
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-icon">
                                            <i class="bi bi-building"></i>
                                        </span>
                                        <input type="text"
                                               id="BankName"
                                               name="BankName"
                                               class="form-control"
                                               placeholder="Ví dụ: Vietcombank, Techcombank..."
                                               required
                                               maxlength="100" />
                                    </div>
                                    <div class="error-message" id="BankName-error"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Note Field -->
                        <div class="form-group">
                            <label for="Note" class="form-label-with-icon">
                                <i class="bi bi-sticky me-2"></i>
                                Ghi chú <span class="text-muted small">(tùy chọn)</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-icon">
                                    <i class="bi bi-chat-left-text"></i>
                                </span>
                                <textarea id="Note"
                                          name="Note"
                                          class="form-control"
                                          rows="2"
                                          placeholder="Thông tin bổ sung (nếu có)"
                                          maxlength="500"></textarea>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-submit">
                                <i class="bi bi-send me-2"></i>
                                Gửi yêu cầu rút tiền
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                Bạn hiện không có số dư để rút tiền. Hãy hoàn thành các đơn hàng để nhận thanh toán.
            </div>
        }

        <!-- Withdrawal History -->
        @if (Model.Withdrawals.Any())
        {
            <div class="withdrawal-history-section">
                <h2>
                    <i class="bi bi-clock-history"></i>
                    Lịch sử rút tiền
                </h2>
                <div class="withdrawals-list">
                    @foreach (var withdrawal in Model.Withdrawals.OrderByDescending(w => w.RequestDate))
                    {
                        <div class="withdrawal-item status-@withdrawal.Status.ToLower()">
                            <div class="withdrawal-header">
                                <div class="withdrawal-id">
                                    <span class="badge">#@withdrawal.WithdrawalId.ToString().Substring(0, 8)</span>
                                </div>
                                <div class="withdrawal-status">
                                    @switch (withdrawal.Status)
                                    {
                                        case "Pending":
                                            <span class="status-badge status-pending">
                                                <i class="bi bi-hourglass-split"></i> Chờ phê duyệt
                                            </span>
                                            break;
                                        case "Completed":
                                            <span class="status-badge status-completed">
                                                <i class="bi bi-check-circle"></i> Đã phê duyệt
                                            </span>
                                            break;
                                        case "Rejected":
                                            <span class="status-badge status-rejected">
                                                <i class="bi bi-x-circle"></i> Đã từ chối
                                            </span>
                                            break;
                                        default:
                                            <span class="status-badge">@withdrawal.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            <div class="withdrawal-content">
                                <div class="withdrawal-amount">
                                    <span class="amount-label">Số tiền:</span>
                                    <span class="amount-value">@withdrawal.Amount.ToString("N0") VNĐ</span>
                                </div>

                                <div class="withdrawal-details">
                                    <div class="detail-item">
                                        <i class="bi bi-bank"></i>
                                        <span><strong>Ngân hàng:</strong> @withdrawal.BankName</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-credit-card"></i>
                                        <span><strong>STK:</strong> @withdrawal.BankAccount</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-calendar3"></i>
                                        <span><strong>Ngày yêu cầu:</strong> @withdrawal.RequestDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                    @if (withdrawal.ProcessedDate.HasValue)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-check-circle"></i>
                                            <span><strong>Ngày xử lý:</strong> @withdrawal.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(withdrawal.AdminNote))
                                    {
                                        <div class="detail-item note">
                                            <i class="bi bi-chat-left-text"></i>
                                            <span><strong>Ghi chú từ admin:</strong> @withdrawal.AdminNote</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(withdrawal.QrCode))
                                    {
                                        <div class="detail-item qrcode">
                                            <i class="bi bi-qr-code"></i>
                                            <span>
                                                <strong>Mã QR:</strong>
                                                <a href="@withdrawal.QrCode" target="_blank" class="qr-link">Xem QR code</a>
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Không thể tải thông tin số dư. Vui lòng thử lại sau.
        </div>
    }
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const formEl = document.getElementById('withdrawalForm');
            if (!formEl) {
                console.warn('withdrawalForm not found - form is hidden when available balance is 0');
                return;
            }

            // Clear error messages
            function clearErrors() {
                document.querySelectorAll('.error-message').forEach(el => {
                    el.textContent = '';
                    el.style.display = 'none';
                });
                document.querySelectorAll('.form-control.is-invalid').forEach(el => {
                    el.classList.remove('is-invalid');
                });
            }

            // Show error message
            function showError(fieldId, message) {
                const errorEl = document.getElementById(fieldId + '-error');
                const inputEl = document.getElementById(fieldId);
                if (errorEl) {
                    errorEl.textContent = message;
                    errorEl.style.display = 'block';
                }
                if (inputEl) {
                    inputEl.classList.add('is-invalid');
                }
            }

            // Validate form
            function validateForm() {
                clearErrors();
                let isValid = true;

                // Validate Amount
                const amountEl = document.getElementById('Amount');
                const amountValue = amountEl.value.trim();
                const minAmount = 10000;
                if (!amountValue) {
                    showError('Amount', 'Vui lòng nhập số tiền');
                    isValid = false;
                } else {
                    const amount = parseFloat(amountValue.replace(/,/g, '.'));
                    if (isNaN(amount) || amount <= 0) {
                        showError('Amount', 'Số tiền phải là số và lớn hơn 0');
                        isValid = false;
                    } else if (amount < minAmount) {
                        showError('Amount', 'Số tiền tối thiểu là ' + minAmount.toLocaleString('vi-VN') + ' VNĐ');
                        isValid = false;
                    } else {
                        const maxAmount = @(Model.Balance?.AvailableBalance ?? 0);
                        if (amount > maxAmount) {
                            showError('Amount', 'Số tiền không được vượt quá số dư có sẵn: ' + maxAmount.toLocaleString('vi-VN') + ' VNĐ');
                            isValid = false;
                        }
                    }
                }

                // Validate BankAccount
                const bankAccountEl = document.getElementById('BankAccount');
                const bankAccount = bankAccountEl.value.trim();
                if (!bankAccount) {
                    showError('BankAccount', 'Vui lòng nhập số tài khoản ngân hàng');
                    isValid = false;
                }

                // Validate BankName
                const bankNameEl = document.getElementById('BankName');
                const bankName = bankNameEl.value.trim();
                if (!bankName) {
                    showError('BankName', 'Vui lòng nhập tên ngân hàng');
                    isValid = false;
                }

                return isValid;
            }

            // Real-time validation
            document.getElementById('Amount')?.addEventListener('blur', function() {
                const amountValue = this.value.trim();
                const errorEl = document.getElementById('Amount-error');
                const minAmount = 10000;
                if (!amountValue) {
                    showError('Amount', 'Vui lòng nhập số tiền');
                } else {
                    const amount = parseFloat(amountValue.replace(/,/g, '.'));
                    if (isNaN(amount) || amount <= 0) {
                        showError('Amount', 'Số tiền phải là số và lớn hơn 0');
                    } else if (amount < minAmount) {
                        showError('Amount', 'Số tiền tối thiểu là ' + minAmount.toLocaleString('vi-VN') + ' VNĐ');
                    } else {
                        const maxAmount = @(Model.Balance?.AvailableBalance ?? 0);
                        if (amount > maxAmount) {
                            showError('Amount', 'Số tiền không được vượt quá số dư có sẵn: ' + maxAmount.toLocaleString('vi-VN') + ' VNĐ');
                        } else {
                            if (errorEl) {
                                errorEl.style.display = 'none';
                            }
                            this.classList.remove('is-invalid');
                        }
                    }
                }
            });

            document.getElementById('BankAccount')?.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    showError('BankAccount', 'Vui lòng nhập số tài khoản ngân hàng');
                } else {
                    const errorEl = document.getElementById('BankAccount-error');
                    if (errorEl) {
                        errorEl.style.display = 'none';
                    }
                    this.classList.remove('is-invalid');
                }
            });

            document.getElementById('BankName')?.addEventListener('blur', function() {
                if (!this.value.trim()) {
                    showError('BankName', 'Vui lòng nhập tên ngân hàng');
                } else {
                    const errorEl = document.getElementById('BankName-error');
                    if (errorEl) {
                        errorEl.style.display = 'none';
                    }
                    this.classList.remove('is-invalid');
                }
            });

            // Clear error on input
            document.querySelectorAll('#Amount, #BankAccount, #BankName').forEach(el => {
                el.addEventListener('input', function() {
                    const errorEl = document.getElementById(this.id + '-error');
                    if (errorEl && errorEl.style.display === 'block') {
                        errorEl.style.display = 'none';
                        this.classList.remove('is-invalid');
                    }
                });
            });

            // Show success notification function
            function showSuccessNotification(message) {
                const notification = document.getElementById('successNotification');
                const notificationText = document.getElementById('successNotificationText');
                const notificationIcon = document.getElementById('successNotificationIcon');
                if (notification && notificationText && notificationIcon) {
                    notificationText.textContent = message;
                    notificationIcon.className = 'bi bi-hourglass-split me-2';
                    notification.className = 'success-notification pending-notification';
                    notification.style.display = 'block';
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    
                    // Auto hide after 5 seconds
                    setTimeout(() => {
                        notification.style.display = 'none';
                        notification.className = 'success-notification';
                        notificationIcon.className = 'bi bi-check-circle-fill me-2';
                    }, 5000);
                }
            }

            // Show error notification function
            function showErrorNotification(message) {
                const notification = document.getElementById('successNotification');
                const notificationText = document.getElementById('successNotificationText');
                const notificationIcon = document.getElementById('successNotificationIcon');
                if (notification && notificationText && notificationIcon) {
                    notificationText.textContent = message;
                    notificationIcon.className = 'bi bi-exclamation-circle-fill me-2';
                    notification.className = 'success-notification error-notification';
                    notification.style.display = 'block';
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    
                    // Auto hide after 5 seconds
                    setTimeout(() => {
                        notification.style.display = 'none';
                        notification.className = 'success-notification';
                        notificationIcon.className = 'bi bi-check-circle-fill me-2';
                    }, 5000);
                }
            }

            formEl.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                if (!validateForm()) {
                    // Scroll to first error
                    const firstError = document.querySelector('.error-message[style*="block"]');
                    if (firstError) {
                        firstError.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                    }
                    return;
                }

                const formData = new FormData(this);

                // Parse amount
                let rawAmount = formData.get('Amount');
                if (typeof rawAmount === 'string') {
                    rawAmount = rawAmount.replace(/,/g, '.').trim();
                }
                const amountValue = parseFloat(rawAmount);

                // Parse bank account
                const bankAccountValue = formData.get('BankAccount');
                const bankAccount = (bankAccountValue != null ? String(bankAccountValue).trim() : '');

                // Parse bank name
                const bankNameValue = formData.get('BankName');
                const bankName = (bankNameValue != null ? String(bankNameValue).trim() : '');

                // Parse optional fields
                const qrCodeValue = formData.get('QrCode');
                const qrCode = (qrCodeValue != null && qrCodeValue !== '') ? String(qrCodeValue).trim() : null;

                const noteValue = formData.get('Note');
                const note = (noteValue != null && noteValue !== '') ? String(noteValue).trim() : null;

                const data = {
                    Amount: amountValue,
                    BankAccount: bankAccount,
                    BankName: bankName,
                    QrCode: qrCode,
                    Note: note
                };
                console.log('Data gửi BE:', data); // <== LOG DEBUG FE

                // Validation đã được thực hiện ở trên, chỉ kiểm tra amount với maxAmount

                const minAmount = 10000;
                const maxAmount = @(Model.Balance?.AvailableBalance ?? 0);
                
                if (data.Amount < minAmount) {
                    showError('Amount', 'Số tiền tối thiểu là ' + minAmount.toLocaleString('vi-VN') + ' VNĐ');
                    return;
                }
                
                if (data.Amount > maxAmount) {
                    showError('Amount', 'Số tiền không được vượt quá số dư có sẵn: ' + maxAmount.toLocaleString('vi-VN') + ' VNĐ');
                    return;
                }

                const submitBtn = this.querySelector('.btn-submit');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i> Đang xử lý...';

                try {
                    const response = await fetch('@Url.Action("RequestWithdrawal")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': this.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(data)
                    });
                    
                    let result;
                    const contentType = response.headers.get('content-type');
                    
                    if (!response.ok) {
                        // Handle HTTP errors
                        if (contentType && contentType.includes('application/json')) {
                            result = await response.json();
                        } else {
                            const text = await response.text();
                            try {
                                result = JSON.parse(text);
                            } catch (e) {
                                throw new Error('Lỗi ' + response.status + ': ' + (text || 'Đã có lỗi xảy ra'));
                            }
                        }
                    } else {
                        // Handle successful response
                        if (contentType && contentType.includes('application/json')) {
                            result = await response.json();
                        } else {
                            const text = await response.text();
                            try {
                                result = JSON.parse(text);
                            } catch (e) {
                                // If not JSON, assume success
                                result = { success: true, message: 'Yêu cầu rút tiền đã được gửi thành công!' };
                            }
                        }
                    }
                    
                    console.log('BE trả về:', result);
                    
                    // Luôn hiển thị thông báo "Đang có yêu cầu rút tiền cần xử lý"
                    showSuccessNotification('Đang có yêu cầu rút tiền cần xử lý');
                    
                    if (result.success) {
                        // Reset form
                        this.reset();
                        clearErrors();
                        // Reload after 2 seconds
                        setTimeout(() => {
                            location.reload();
                        }, 2000);
                    } else {
                        // Vẫn reset form và reload ngay cả khi có lỗi
                        this.reset();
                        clearErrors();
                        setTimeout(() => {
                            location.reload();
                        }, 2000);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    // Luôn hiển thị thông báo "Đang có yêu cầu rút tiền cần xử lý" ngay cả khi có lỗi
                    showSuccessNotification('Đang có yêu cầu rút tiền cần xử lý');
                    // Reset form và reload
                    this.reset();
                    clearErrors();
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                }
            });
        });
    </script>
}


