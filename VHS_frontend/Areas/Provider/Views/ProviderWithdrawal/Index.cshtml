@model VHS_frontend.Areas.Provider.Controllers.ProviderWithdrawalViewModel
@{
    ViewData["Title"] = "Rút tiền";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/provider-withdrawal.css" asp-append-version="true" />
}

<div class="withdrawal-container">
    <!-- Header -->
    <div class="page-header">
        <h1>
            <i class="bi bi-bank"></i>
            Rút tiền
        </h1>
        <p>Quản lý số dư và yêu cầu rút tiền từ các đơn hàng đã hoàn thành</p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    @if (Model.Balance != null)
    {
        <!-- Balance Cards -->
        <div class="balance-section">
            <div class="balance-card primary">
                <div class="balance-icon">
                    <i class="bi bi-wallet2"></i>
                </div>
                <div class="balance-content">
                    <div class="balance-label">Số dư có thể rút</div>
                    <div class="balance-amount">@Model.Balance.AvailableBalance.ToString("N0") VNĐ</div>
                </div>
            </div>

            <div class="balance-stats">
                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Tổng thu nhập</div>
                        <div class="stat-value">@Model.Balance.TotalEarnings.ToString("N0") VNĐ</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đã rút</div>
                        <div class="stat-value">@Model.Balance.TotalWithdrawn.ToString("N0") VNĐ</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đang chờ</div>
                        <div class="stat-value">@Model.Balance.PendingWithdrawals.ToString("N0") VNĐ</div>
                        @if (Model.Balance.PendingWithdrawalCount > 0)
                        {
                            <div class="stat-badge">@Model.Balance.PendingWithdrawalCount yêu cầu</div>
                        }
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Doanh thu booking hoàn thành</div>
                        <div class="stat-value">@Model.Balance.GrossCompletedAmount.ToString("N0") VNĐ</div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-label">Đơn đã hoàn thành</div>
                        <div class="stat-value">@Model.Balance.CompletedBookingsCount</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Withdrawal Form -->
        @if (Model.Balance.AvailableBalance > 0)
        {
            <div class="withdrawal-form-section">
                <h2>
                    <i class="bi bi-plus-circle"></i>
                    Yêu cầu rút tiền
                </h2>
                <form id="withdrawalForm" class="withdrawal-form">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label for="Amount">
                            Số tiền muốn rút <span class="required">*</span>
                        </label>
                        <div class="input-group">
                            <input type="number" 
                                   id="Amount" 
                                   name="Amount" 
                                   class="form-control" 
                                   step="0.01" 
                                   min="0.01" 
                                   max="@Model.Balance.AvailableBalance"
                                   placeholder="Nhập số tiền"
                                   required />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <small class="form-text">Số dư có thể rút: <strong>@Model.Balance.AvailableBalance.ToString("N0") VNĐ</strong></small>
                    </div>

                    <div class="form-group">
                        <label for="BankAccount">
                            Số tài khoản ngân hàng <span class="required">*</span>
                        </label>
                        <input type="text" 
                               id="BankAccount" 
                               name="BankAccount" 
                               class="form-control" 
                               placeholder="Nhập số tài khoản"
                               required 
                               maxlength="50" />
                    </div>

                    <div class="form-group">
                        <label for="BankName">
                            Tên ngân hàng <span class="required">*</span>
                        </label>
                        <input type="text" 
                               id="BankName" 
                               name="BankName" 
                               class="form-control" 
                               placeholder="Ví dụ: Vietcombank, Techcombank, ..."
                               required 
                               maxlength="100" />
                    </div>

                    <div class="form-group">
                        <label for="QrCode">
                            Mã QR thanh toán (nếu có)
                        </label>
                        <textarea id="QrCode" 
                                  name="QrCode" 
                                  class="form-control" 
                                  rows="3" 
                                  placeholder="Dán mã QR hoặc URL hình ảnh QR code ở đây"
                                  maxlength="500"></textarea>
                        <small class="form-text">Bạn có thể dán mã QR hoặc URL hình ảnh QR code để admin dễ dàng xác minh</small>
                    </div>

                    <div class="form-group">
                        <label for="Note">Ghi chú (tùy chọn)</label>
                        <textarea id="Note" 
                                  name="Note" 
                                  class="form-control" 
                                  rows="2" 
                                  placeholder="Thông tin bổ sung (nếu có)"
                                  maxlength="500"></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-submit">
                            <i class="bi bi-send"></i>
                            Gửi yêu cầu rút tiền
                        </button>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                Bạn hiện không có số dư để rút tiền. Hãy hoàn thành các đơn hàng để nhận thanh toán.
            </div>
        }

        <!-- Withdrawal History -->
        @if (Model.Withdrawals.Any())
        {
            <div class="withdrawal-history-section">
                <h2>
                    <i class="bi bi-clock-history"></i>
                    Lịch sử rút tiền
                </h2>
                <div class="withdrawals-list">
                    @foreach (var withdrawal in Model.Withdrawals.OrderByDescending(w => w.RequestDate))
                    {
                        <div class="withdrawal-item status-@withdrawal.Status.ToLower()">
                            <div class="withdrawal-header">
                                <div class="withdrawal-id">
                                    <span class="badge">#@withdrawal.WithdrawalId.ToString().Substring(0, 8)</span>
                                </div>
                                <div class="withdrawal-status">
                                    @switch (withdrawal.Status)
                                    {
                                        case "Pending":
                                            <span class="status-badge status-pending">
                                                <i class="bi bi-hourglass-split"></i> Chờ phê duyệt
                                            </span>
                                            break;
                                        case "Completed":
                                            <span class="status-badge status-completed">
                                                <i class="bi bi-check-circle"></i> Đã phê duyệt
                                            </span>
                                            break;
                                        case "Rejected":
                                            <span class="status-badge status-rejected">
                                                <i class="bi bi-x-circle"></i> Đã từ chối
                                            </span>
                                            break;
                                        default:
                                            <span class="status-badge">@withdrawal.Status</span>
                                            break;
                                    }
                                </div>
                            </div>

                            <div class="withdrawal-content">
                                <div class="withdrawal-amount">
                                    <span class="amount-label">Số tiền:</span>
                                    <span class="amount-value">@withdrawal.Amount.ToString("N0") VNĐ</span>
                                </div>

                                <div class="withdrawal-details">
                                    <div class="detail-item">
                                        <i class="bi bi-bank"></i>
                                        <span><strong>Ngân hàng:</strong> @withdrawal.BankName</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-credit-card"></i>
                                        <span><strong>STK:</strong> @withdrawal.BankAccount</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-calendar3"></i>
                                        <span><strong>Ngày yêu cầu:</strong> @withdrawal.RequestDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                    @if (withdrawal.ProcessedDate.HasValue)
                                    {
                                        <div class="detail-item">
                                            <i class="bi bi-check-circle"></i>
                                            <span><strong>Ngày xử lý:</strong> @withdrawal.ProcessedDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(withdrawal.AdminNote))
                                    {
                                        <div class="detail-item note">
                                            <i class="bi bi-chat-left-text"></i>
                                            <span><strong>Ghi chú từ admin:</strong> @withdrawal.AdminNote</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(withdrawal.QrCode))
                                    {
                                        <div class="detail-item qrcode">
                                            <i class="bi bi-qr-code"></i>
                                            <span><strong>Mã QR:</strong> 
                                                <a href="@withdrawal.QrCode" target="_blank" class="qr-link">Xem QR code</a>
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            Không thể tải thông tin số dư. Vui lòng thử lại sau.
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const formEl = document.getElementById('withdrawalForm');
            if (!formEl) {
                console.warn('withdrawalForm not found - form is hidden when available balance is 0');
                return;
            }

            formEl.addEventListener('submit', async function(e) {
                e.preventDefault();
                const formData = new FormData(this);
                let rawAmount = formData.get('Amount');
                if (typeof rawAmount === 'string') rawAmount = rawAmount.replace(/,/g, '.');
                const data = {
                    Amount: parseFloat(rawAmount),
                    BankAccount: (formData.get('BankAccount')+"").trim(),
                    BankName: (formData.get('BankName')+"").trim(),
                    QrCode: formData.get('QrCode')?.trim() || null,
                    Note: formData.get('Note')?.trim() || null
                };
                console.log('Data gửi BE:', data); // <== LOG DEBUG FE

                // Kiem tra truoc FE cho UX dep
                if (!data.BankAccount || data.BankAccount === '0') {
                    alert('Vui lòng nhập số tài khoản ngân hàng hợp lệ (không phải 0)');
                    return;
                }
                if (!data.BankName) {
                    alert('Vui lòng nhập tên ngân hàng!');
                    return;
                }
                if (isNaN(data.Amount) || data.Amount <= 0) {
                    alert('Số tiền phải lớn hơn 0');
                    return;
                }

                const maxAmount = @(Model.Balance?.AvailableBalance ?? 0);
                if (data.Amount > maxAmount) {
                    alert('Số tiền không được vượt quá số dư có sẵn: ' + maxAmount.toLocaleString('vi-VN') + ' VNĐ');
                    return;
                }

                if (!confirm('Bạn có chắc chắn muốn gửi yêu cầu rút tiền?')) return;

                const submitBtn = this.querySelector('.btn-submit');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Đang xử lý...';

                try {
                    const response = await fetch('@Url.Action("RequestWithdrawal")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': formData.get('__RequestVerificationToken')
                        },
                        body: JSON.stringify(data)
                    });
                    const result = await response.json();
                    console.log('BE trả về:', result); // <== LOG DEBUG FE nhan response
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        // Nếu có mảng lỗi, hiển thị tất cả lỗi cho user
                        if (result.errors && Array.isArray(result.errors)) {
                            alert(result.errors.join('\n'));
                        } else if (result.message) {
                            alert('Lỗi: ' + result.message);
                        } else {
                            alert('Đã có lỗi xảy ra!');
                        }
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="bi bi-send"></i> Gửi yêu cầu rút tiền';
                    }
                } catch (error) {
                    console.error(error);
                    alert('Đã có lỗi xảy ra. Vui lòng thử lại.');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-send"></i> Gửi yêu cầu rút tiền';
                }
            });
        });
    </script>
}


