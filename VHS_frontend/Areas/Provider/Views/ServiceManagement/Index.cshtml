@model List<VHS_frontend.Areas.Provider.Models.Service.ServiceProviderReadDTO>
@{
    ViewData["Title"] = "Quản lý Dịch vụ";
    Layout = "~/Areas/Provider/Views/_ProviderLayout.cshtml";
    
    // Helper function để chuyển đổi UnitType sang tiếng Việt
    string GetUnitTypeVietnamese(string unitType)
    {
        return unitType switch
        {
            "Hour" => "Giờ",
            "Day" => "Ngày",
            "Visit" => "Lần",
            "Apartment" => "Căn",
            "Room" => "Phòng",
            "SquareMeter" => "Mét vuông",
            "Person" => "Người",
            "Package" => "Gói",
            "Event" => "Sự kiện",
            _ => unitType
        };
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-management.css" asp-append-version="true" />
}

<div class="service-management-container">
    <!-- Header Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
            <i class="bi bi-briefcase me-2"></i>
            Quản lý Dịch vụ
        </h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            Tạo dịch vụ mới
        </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @* Removed Error alert display - Error messages are handled by redirects *@

    <!-- Filter Section -->
    <div class="filter-card card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-search me-1"></i>Tìm kiếm
                    </label>
                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm theo tên dịch vụ...">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-tags me-1"></i>Danh mục
                    </label>
                    <select id="categoryFilter" class="form-select">
                        <option value="">Tất cả</option>
                        @if (Model != null && Model.Any())
                        {
                            var categories = Model.Select(s => s.CategoryName).Distinct().OrderBy(c => c);
                            @foreach (var category in categories)
                            {
                                <option value="@category">@category</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-info-circle me-1"></i>Trạng thái
                    </label>
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="Active">Hoạt động</option>
                        <option value="Inactive">Tạm dừng</option>
                        <option value="Pending">Chờ duyệt</option>
                        <option value="PendingUpdate">Chờ duyệt chỉnh sửa</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-sort-down me-1"></i>Sắp xếp
                    </label>
                    <select id="sortFilter" class="form-select">
                        <option value="name-asc">Tên A-Z</option>
                        <option value="name-desc">Tên Z-A</option>
                        <option value="price-asc">Giá tăng dần</option>
                        <option value="price-desc">Giá giảm dần</option>
                        <option value="date-desc">Mới nhất</option>
                        <option value="date-asc">Cũ nhất</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="button" id="resetFilter" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>
                        Đặt lại
                    </button>
                </div>
            </div>
        </div>
        </div>

    <!-- Service Table (No Card Wrapper) -->
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Hình ảnh</th>
                                <th>Tên dịch vụ</th>
                                <th>Danh mục</th>
                                <th>Giá</th>
                                <th>Đơn vị</th>
                                <th>Tags</th>
                                <th>Options</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(service.Images))
                                        {
                                            var first = service.Images.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).FirstOrDefault();
                                            var imageUrl = (first ?? string.Empty).StartsWith("http")
                                                ? first
                                                : $"https://apivhs.cuahangkinhdoanh.com{first}";

                                            if (!string.IsNullOrEmpty(first))
                                            {
                                                <img src="@imageUrl"
                                                     alt="@service.Title"
                                                     class="service-thumbnail"
                                                     data-original-path="@first"
                                                     data-full-url="@imageUrl"
                                                     onerror="console.error('Image load error:', this.dataset.fullUrl); this.onerror=null; this.parentElement.innerHTML='<div class=\'no-image-placeholder\'><i class=\'bi bi-image\'></i><small class=\'text-danger\'>Lỗi</small></div>';"
                                                     onload="console.log('Image loaded:', this.dataset.fullUrl);" />
                                            }
                                            else
                                            {
                                                <div class="no-image-placeholder">
                                                    <i class="bi bi-image"></i>
                                                    <small class="text-muted d-block mt-1" style="font-size: 0.7rem;">Chưa có ảnh</small>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="no-image-placeholder">
                                                <i class="bi bi-image"></i>
                                                <small class="text-muted d-block mt-1" style="font-size: 0.7rem;">Chưa có ảnh</small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <strong>@service.Title</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@service.CategoryName</span>
                                    </td>
                                    <td class="price-cell">@service.Price.ToString("N0") VNĐ</td>
                                    <td>@GetUnitTypeVietnamese(service.UnitType) (@service.BaseUnit)</td>
                                    <td>
                                        @if (service.Tags.Any())
                                        {
                                            @foreach (var tag in service.Tags)
                                            {
                                                <span class="badge bg-info me-1">@tag.Name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có</span>
                                        }
                                    </td>
                                    <td>
                                        @if (service.Options.Any())
                                        {
                                            @foreach (var option in service.Options)
                                            {
                                                <span class="badge bg-warning text-dark me-1">@option.OptionName</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Không có</span>
                                        }
                                    </td>
                                    <td>
                                        @if (service.Status == "Active")
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else if (service.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                        }
                                        else if (service.Status == "PendingUpdate")
                                        {
                                            <span class="badge bg-info">Chờ duyệt chỉnh sửa</span>
                                        }
                                        else if (service.Status == "Inactive")
                                        {
                                            <span class="badge bg-secondary">Tạm dừng</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@service.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="actions-stack" role="group">
                                            <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-action btn-action--lg btn-edit" title="Chỉnh sửa" data-bs-toggle="tooltip" data-bs-placement="top">
                                                <i class="bi bi-pencil-square"></i>
                                                <span class="label d-none d-xl-inline">Sửa</span>
                                            </a>
                                            @if (service.Status == "Active")
                                            {
                                                <form asp-action="ToggleStatus" method="post" class="d-inline" data-bs-toggle="tooltip" data-bs-placement="top" title="Tạm dừng dịch vụ">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@service.ServiceId" />
                                                    <input type="hidden" name="targetStatus" value="Inactive" />
                                                    <button type="submit" class="btn btn-action btn-action--lg btn-toggle-pause" title="Tạm dừng">
                                                        <i class="bi bi-pause-circle"></i>
                                                        <span class="label d-none d-xl-inline">Dừng</span>
                                                    </button>
                                                </form>
                                            }
                                            else if (service.Status == "Inactive")
                                            {
                                                <form asp-action="ToggleStatus" method="post" class="d-inline" data-bs-toggle="tooltip" data-bs-placement="top" title="Bật hoạt động">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@service.ServiceId" />
                                                    <input type="hidden" name="targetStatus" value="Active" />
                                                    <button type="submit" class="btn btn-action btn-action--lg btn-toggle-play" title="Bật hoạt động">
                                                        <i class="bi bi-play-circle"></i>
                                                        <span class="label d-none d-xl-inline">Bật</span>
                                                    </button>
                                                </form>
                                            }
                                            @* Pending và PendingUpdate không có nút bật/tắt vì đang chờ admin duyệt *@
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">Chưa có dịch vụ nào. Hãy tạo dịch vụ đầu tiên của bạn!</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>
                        Tạo dịch vụ mới
                    </a>
                </div>
            }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" id="deleteForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa dịch vụ <strong id="serviceName"></strong>?</p>
                    <p class="text-muted">Hành động này không thể hoàn tác.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable Bootstrap tooltips for action buttons
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Filter functionality
            const searchInput = document.getElementById('searchInput');
            const categoryFilter = document.getElementById('categoryFilter');
            const statusFilter = document.getElementById('statusFilter');
            const sortFilter = document.getElementById('sortFilter');
            const resetFilter = document.getElementById('resetFilter');
            const tableRows = document.querySelectorAll('tbody tr');

            if (!searchInput || !categoryFilter || !statusFilter || !sortFilter || !resetFilter) {
                return; // Exit if filter elements don't exist
            }

            function filterTable() {
                if (tableRows.length === 0) return; // No rows to filter
                const searchTerm = searchInput.value.toLowerCase().trim();
                const categoryValue = categoryFilter.value.toLowerCase();
                const statusValue = statusFilter.value.toLowerCase();
                const sortValue = sortFilter.value;

                let visibleRows = Array.from(tableRows).filter(row => {
                    const title = row.querySelector('td:nth-child(2) strong')?.textContent.toLowerCase() || '';
                    const category = row.querySelector('td:nth-child(3) .badge')?.textContent.toLowerCase() || '';
                    const status = row.querySelector('td:nth-child(8) .badge')?.textContent.toLowerCase() || '';
                    
                    // Map Vietnamese status to English
                    let statusMatch = '';
                    if (status.includes('hoạt động')) statusMatch = 'active';
                    else if (status.includes('tạm dừng')) statusMatch = 'inactive';
                    else if (status.includes('chờ duyệt chỉnh sửa')) statusMatch = 'pendingupdate';
                    else if (status.includes('chờ duyệt')) statusMatch = 'pending';

                    const matchesSearch = !searchTerm || title.includes(searchTerm);
                    const matchesCategory = !categoryValue || category.includes(categoryValue);
                    const matchesStatus = !statusValue || statusMatch === statusValue;

                    return matchesSearch && matchesCategory && matchesStatus;
                });

                // Hide all rows first
                tableRows.forEach(row => {
                    row.style.display = 'none';
                });

                // Sort rows
                if (sortValue) {
                    visibleRows.sort((a, b) => {
                        switch (sortValue) {
                            case 'name-asc':
                                const nameA = a.querySelector('td:nth-child(2) strong')?.textContent || '';
                                const nameB = b.querySelector('td:nth-child(2) strong')?.textContent || '';
                                return nameA.localeCompare(nameB, 'vi');
                            case 'name-desc':
                                const nameA2 = a.querySelector('td:nth-child(2) strong')?.textContent || '';
                                const nameB2 = b.querySelector('td:nth-child(2) strong')?.textContent || '';
                                return nameB2.localeCompare(nameA2, 'vi');
                            case 'price-asc':
                                const priceA = parseInt(a.querySelector('td:nth-child(4)')?.textContent.replace(/[^\d]/g, '') || '0');
                                const priceB = parseInt(b.querySelector('td:nth-child(4)')?.textContent.replace(/[^\d]/g, '') || '0');
                                return priceA - priceB;
                            case 'price-desc':
                                const priceA2 = parseInt(a.querySelector('td:nth-child(4)')?.textContent.replace(/[^\d]/g, '') || '0');
                                const priceB2 = parseInt(b.querySelector('td:nth-child(4)')?.textContent.replace(/[^\d]/g, '') || '0');
                                return priceB2 - priceA2;
                            default:
                                return 0;
                        }
                    });
                }

                // Show filtered and sorted rows
                const tbody = document.querySelector('tbody');
                visibleRows.forEach(row => {
                    row.style.display = '';
                    tbody.appendChild(row);
                });

                // Show message if no results
                const noResultsMsg = document.getElementById('noResultsMessage');
                if (visibleRows.length === 0) {
                    if (!noResultsMsg) {
                        const msg = document.createElement('tr');
                        msg.id = 'noResultsMessage';
                        msg.innerHTML = '<td colspan="9" class="text-center py-4"><i class="bi bi-search text-muted me-2"></i>Không tìm thấy dịch vụ nào phù hợp</td>';
                        tbody.appendChild(msg);
                    }
                } else if (noResultsMsg) {
                    noResultsMsg.remove();
                }
            }

            // Event listeners
            searchInput.addEventListener('input', filterTable);
            categoryFilter.addEventListener('change', filterTable);
            statusFilter.addEventListener('change', filterTable);
            sortFilter.addEventListener('change', filterTable);

            resetFilter.addEventListener('click', function() {
                searchInput.value = '';
                categoryFilter.value = '';
                statusFilter.value = '';
                sortFilter.value = 'name-asc';
                filterTable();
            });
        });

        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var serviceId = button.getAttribute('data-service-id');
            var serviceName = button.getAttribute('data-service-name');

            var modalServiceName = deleteModal.querySelector('#serviceName');
            var deleteForm = deleteModal.querySelector('#deleteForm');

            modalServiceName.textContent = serviceName;
            deleteForm.action = '@Url.Action("Delete", "ServiceManagement", new { area = "Provider" })?id=' + serviceId;
        });
        }
    </script>
}

