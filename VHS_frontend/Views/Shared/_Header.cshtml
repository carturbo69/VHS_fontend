@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var tk = HttpContextAccessor.HttpContext?.Session.GetString("JWToken");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    bool isLoggedIn = !string.IsNullOrEmpty(tk);
    
    // Cắt email để chỉ hiển thị phần trước dấu @
    var displayUsername = username;
    if (!string.IsNullOrEmpty(username) && username.Contains("@"))
    {
        displayUsername = username.Split('@')[0];
    }
    
    // Lấy controller và action hiện tại để highlight menu
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
}

<header class="site-header">
    <div class="glass-bar">
        <div class="container-xl nav-row">

            <!-- Brand + logo -->
            <div class="brand">
                <img src="~/images/vhs_logo.png" alt="VHS Logo" class="brand-logo" />
                <a class="brand-text" asp-area="" asp-controller="Home" asp-action="Index">Viet Home Service</a>
            </div>

            <!-- Mobile menu toggle button -->
            <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu" aria-expanded="false">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <!-- Desktop nav -->
            <nav class="nav-links" id="navLinks">
                <a asp-area="" asp-controller="Home" asp-action="Index" 
                   class="nav-link @(currentController == "Home" && currentAction == "Index" && string.IsNullOrEmpty(currentArea) ? "active" : "")">
                    Trang chủ
                </a>
                <a asp-area="" asp-controller="Services" asp-action="Index" 
                   class="nav-link @(currentController == "Services" ? "active" : "")">
                    Dịch vụ
                </a>
                <a asp-area="" asp-controller="Home" asp-action="About" 
                   class="nav-link @(currentController == "Home" && currentAction == "About" ? "active" : "")">
                    Thông tin
                </a>
                @* <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="Contact"  *@
                @*    class="nav-link"> *@
                @*     Liên hệ *@
                @* </a> *@

                <!-- <a asp-area="" asp-controller="ServiceShop" asp-action="Index" 
                   class="nav-link @(currentController == "ServiceShop" ? "active" : "")">
                    Shop dịch vụ
                </a> -->
                @if (isLoggedIn)
                {
                    <!-- Nếu đã đăng nhập: cho phép đăng ký Provider -->
                    <a asp-area="Customer" asp-controller="RegisterProvider" asp-action="Register" 
                       class="nav-link @(currentController == "RegisterProvider" && currentArea == "Customer" ? "active" : "")">
                        Đăng ký nhà cung cấp
                    </a>
                }
                else
                {
                    <!-- Nếu chưa đăng nhập: đưa đến trang Login -->
                    <a asp-area="" asp-controller="Account" asp-action="Login"
                       asp-route-returnUrl="@Url.Action("Register","RegisterProvider", new { area="Customer" })"
                       class="nav-link">
                        Đăng ký nhà cung cấp
                    </a>
                }
            </nav>

            <!-- Actions -->
            <div class="nav-actions">

                @if (isLoggedIn)
                {
                    <!-- Desktop: Individual icons -->
                    <div class="nav-actions-desktop">
                        <!-- Notifications -->
                        <a asp-area="Customer" asp-controller="Notification" asp-action="Index"
                           id="notificationBtn" class="icon-btn" aria-label="Thông báo">
                            <i class="bi bi-bell"></i>
                            <span id="notificationBadge"
                                  class="notification-badge"
                                  style="display:none">0</span>
                            <ul id="notificationMenu"
                                class="notification-menu list-unstyled bg-white border shadow p-2"
                                style="display:none">
                                <li class="text-center text-muted py-2">Loading…</li>
                            </ul>
                        </a>

                        <!-- Chat -->
                        <a asp-area="Customer" asp-controller="ChatCustomer" asp-action="Index"
                           class="icon-btn chat-btn" aria-label="Chat">
                            <i id="chatIcon" class="bi bi-chat-dots-fill"></i>
                            <span id="chatUnreadBadge"
                                  class="chat-badge"
                                  data-chat-count
                                  style="display:none">
                                0
                            </span>
                        </a>

                        <!-- Cart -->
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Index"
                           class="icon-btn cart-btn" aria-label="Giỏ hàng">
                            <svg class="cart-icon" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M6 6h15l-1.5 9h-12z" />
                                <circle cx="9" cy="20" r="1.5" />
                                <circle cx="18" cy="20" r="1.5" />
                            </svg>
                            <span class="cart-badge" data-cart-count>0</span>
                        </a>

                        <!-- Settings dropdown (Theme + Translate) -->
                        <div class="settings-dropdown">
                            <button type="button" class="icon-btn settings-btn" id="settingsBtn" aria-label="Cài đặt">
                                <i class="bi bi-gear-fill"></i>
                            </button>
                            <div class="settings-menu" id="settingsMenu" style="display: none;">
                                <!-- Theme toggle -->
                                <button type="button" class="settings-item" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                                    <span class="theme-icon"></span>
                                    <span class="settings-text">Chế độ sáng tối</span>
                                </button>
                                <!-- Translate toggle -->
                                <button type="button" class="settings-item" id="translateToggleBtn" aria-label="Dịch">
                                    <i class="bi bi-translate"></i>
                                    <span class="settings-text">Tiếng Anh / Tiếng Việt</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile: More menu (gom các icons) -->
                    <div class="nav-actions-mobile">
                        <div class="more-menu-dropdown">
                            <button type="button" class="icon-btn more-menu-btn" id="moreMenuBtn" aria-label="Thêm">
                                <i class="bi bi-three-dots-vertical"></i>
                                <!-- Badge tổng hợp -->
                                <span class="more-menu-badge" id="moreMenuBadge" style="display:none">0</span>
                            </button>
                            <div class="more-menu" id="moreMenu" style="display: none;">
                                <a asp-area="Customer" asp-controller="Notification" asp-action="Index" class="more-menu-item">
                                    <i class="bi bi-bell"></i>
                                    <span>Thông báo</span>
                                    <span id="mobileNotificationBadge" class="more-menu-badge-item" style="display:none">0</span>
                                </a>
                                <a asp-area="Customer" asp-controller="ChatCustomer" asp-action="Index" class="more-menu-item">
                                    <i class="bi bi-chat-dots-fill"></i>
                                    <span>Tin nhắn</span>
                                    <span id="mobileChatBadge" class="more-menu-badge-item" style="display:none">0</span>
                                </a>
                                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="more-menu-item">
                                    <i class="bi bi-cart"></i>
                                    <span>Giỏ hàng</span>
                                    <span id="mobileCartBadge" class="more-menu-badge-item" style="display:none">0</span>
                                </a>
                                <div class="more-menu-divider"></div>
                                <button type="button" class="more-menu-item" onclick="window.__toggleTheme()">
                                    <i class="bi bi-moon-stars"></i>
                                    <span>Chế độ sáng tối</span>
                                </button>
                                <button type="button" class="more-menu-item" id="mobileTranslateToggleBtn">
                                    <i class="bi bi-translate"></i>
                                    <span>Tiếng Anh / Tiếng Việt</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- User dropdown -->
                    <div class="dropdown">
                        <button class="dropdown-toggle">👤 @displayUsername</button>
                        <div class="dropdown-menu">
                            <a asp-area="Customer" asp-controller="Profile" asp-action="Index" class="dropdown-item">
                                <i class="bi bi-person me-2"></i>Thông tin cá nhân
                            </a>
                            <a asp-area="Customer" asp-controller="BookingService" asp-action="ListHistoryBooking" class="dropdown-item">
                                <i class="bi bi-clock-history me-2"></i>Lịch sử dịch vụ
                            </a>
                            <a asp-area="Customer" asp-controller="ReviewCustomer" asp-action="Index" class="dropdown-item">
                                <i class="bi bi-star me-2"></i>Đánh giá dịch vụ
                            </a>
                            <div class="dropdown-divider"></div>
                            <a asp-area="" asp-controller="Account" asp-action="Logout" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Desktop: Individual icons -->
                    <div class="nav-actions-desktop">
                        <!-- Nếu chưa đăng nhập -->
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Index"
                           class="icon-btn cart-btn" aria-label="Giỏ hàng">
                            <svg class="cart-icon" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M6 6h15l-1.5 9h-12z" />
                                <circle cx="9" cy="20" r="1.5" />
                                <circle cx="18" cy="20" r="1.5" />
                            </svg>
                            <span class="cart-badge" data-cart-count>0</span>
                        </a>

                        <!-- Settings dropdown (Theme + Translate) -->
                        <div class="settings-dropdown">
                            <button type="button" class="icon-btn settings-btn" id="settingsBtn" aria-label="Cài đặt">
                                <i class="bi bi-gear-fill"></i>
                            </button>
                            <div class="settings-menu" id="settingsMenu" style="display: none;">
                                <!-- Theme toggle -->
                                <button type="button" class="settings-item" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                                    <span class="theme-icon"></span>
                                    <span class="settings-text">Chế độ sáng tối</span>
                                </button>
                                <!-- Translate toggle -->
                                <button type="button" class="settings-item" id="translateToggleBtn" aria-label="Dịch">
                                    <i class="bi bi-translate"></i>
                                    <span class="settings-text">Tiếng Anh / Tiếng Việt</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Mobile: More menu -->
                    <div class="nav-actions-mobile">
                        <div class="more-menu-dropdown">
                            <button type="button" class="icon-btn more-menu-btn" id="moreMenuBtn" aria-label="Thêm">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <div class="more-menu" id="moreMenu" style="display: none;">
                                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="more-menu-item">
                                    <i class="bi bi-cart"></i>
                                    <span>Giỏ hàng</span>
                                    <span id="mobileCartBadge" class="more-menu-badge-item" style="display:none">0</span>
                                </a>
                                <div class="more-menu-divider"></div>
                                <button type="button" class="more-menu-item" onclick="window.__toggleTheme()">
                                    <i class="bi bi-moon-stars"></i>
                                    <span>Chế độ sáng tối</span>
                                </button>
                                <button type="button" class="more-menu-item" id="mobileTranslateToggleBtn">
                                    <i class="bi bi-translate"></i>
                                    <span>Tiếng Anh / Tiếng Việt</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-ghost btn-sm">Đăng nhập</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm">Đăng ký</a>
                }
            </div>
        </div>
    </div>
</header>

<script>

     // --- 📨 Cập nhật tổng tin nhắn chưa đọc ---
    async function updateChatUnreadCount() {
        try {
            const resp = await fetch('/Customer/ChatCustomer/UnreadTotal');
            if (!resp.ok) return;

            const data = await resp.json();
            const badge = document.querySelector('[data-chat-count]');
            if (badge) {
                const total = data.total ?? 0;
                badge.textContent = total;
                badge.style.display = total > 0 ? 'inline-flex' : 'none';
            }
        } catch (e) {
            console.error('Không thể tải số tin nhắn chưa đọc:', e);
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        updateCartCount();         // có sẵn rồi
        updateChatUnreadCount();   // 👈 thêm dòng này
        setInterval(updateCartCount, 30000);
        setInterval(updateChatUnreadCount, 30000); // 30 giây cập nhật 1 lần
    });

    // Hàm gọi API lấy tổng số dịch vụ trong giỏ hàng
    async function updateCartCount() {
        try {
            const response = await fetch('/Customer/Cart/GetCartTotalCount');
            if (response.ok) {
                const data = await response.json();
                const badge = document.querySelector('[data-cart-count]');
                if (badge) {
                    badge.innerText = data.total || 0;
                }
            } else {
                console.warn('Lỗi khi tải số lượng giỏ hàng:', response.status);
            }
        } catch (e) {
            console.error('Không thể tải số lượng giỏ hàng:', e);
        }
    }

    // 👉 Gọi hàm khi trang vừa load
    document.addEventListener('DOMContentLoaded', () => {
        updateCartCount();

        // 👉 Tự động refresh mỗi 30 giây (30000 ms)
        setInterval(updateCartCount, 30000);

        // 👉 FIX: Force chat icon visibility and color - LUÔN MÀU TRẮNG
        const chatIcon = document.getElementById('chatIcon');
        const chatBtn = document.querySelector('.chat-btn');
        
        if (chatIcon) {
            // Function to apply chat icon styles - LUÔN MÀU TRẮNG
            function applyChatIconStyles() {
                // Luôn dùng màu trắng vì nền header là xanh
                const color = '#ffffff';
                
                // Fix icon itself - LUÔN MÀU TRẮNG
                chatIcon.style.setProperty('color', color, 'important');
                chatIcon.style.setProperty('opacity', '1', 'important');
                chatIcon.style.setProperty('visibility', 'visible', 'important');
                chatIcon.style.setProperty('display', 'inline-block', 'important');
                chatIcon.style.setProperty('filter', 'none', 'important');
                chatIcon.style.setProperty('font-size', '1rem', 'important');
                chatIcon.style.setProperty('width', 'auto', 'important');
                chatIcon.style.setProperty('height', 'auto', 'important');
                chatIcon.style.setProperty('text-shadow', '0 1px 3px rgba(0, 0, 0, 0.3)', 'important');
                
                // Fix chat button container
                if (chatBtn) {
                    chatBtn.style.setProperty('opacity', '1', 'important');
                    chatBtn.style.setProperty('visibility', 'visible', 'important');
                    chatBtn.style.setProperty('display', 'grid', 'important');
                    chatBtn.style.setProperty('pointer-events', 'auto', 'important');
                }
            }
            
            // Apply immediately
            applyChatIconStyles();
            
            // Re-apply on theme change
            const observer = new MutationObserver(() => {
                applyChatIconStyles();
            });
            observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
            
            // Re-apply on page visibility change
            document.addEventListener('visibilitychange', () => {
                if (!document.hidden) {
                    applyChatIconStyles();
                }
            });
            
            // Re-apply after a short delay to ensure it overrides any other styles
            setTimeout(() => {
                applyChatIconStyles();
            }, 100);
            
            // Re-apply multiple times to ensure it sticks
            setTimeout(() => {
                applyChatIconStyles();
            }, 500);
        }
    });

    // Settings dropdown toggle
    (function() {
        const settingsBtn = document.getElementById('settingsBtn');
        const settingsMenu = document.getElementById('settingsMenu');
        
        if (settingsBtn && settingsMenu) {
            // Toggle menu khi click vào settings button
            settingsBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                const isOpen = settingsMenu.style.display !== 'none';
                settingsMenu.style.display = isOpen ? 'none' : 'block';
            });
            
            // Đóng menu khi click bên ngoài
            document.addEventListener('click', function(e) {
                if (!settingsBtn.contains(e.target) && !settingsMenu.contains(e.target)) {
                    settingsMenu.style.display = 'none';
                }
            });
            
            // Đóng menu khi click vào item trong menu
            settingsMenu.addEventListener('click', function(e) {
                if (e.target.closest('.settings-item')) {
                    // Không đóng menu ngay, để user có thể thấy feedback
                    setTimeout(() => {
                        settingsMenu.style.display = 'none';
                    }, 200);
                }
            });
        }
    })();

    // Mobile menu toggle
    (function() {
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const navLinks = document.getElementById('navLinks');
        
        if (mobileMenuToggle && navLinks) {
            console.log('Mobile menu toggle initialized');
            
            mobileMenuToggle.addEventListener('click', function(e) {
                e.stopPropagation();
                e.preventDefault();
                
                const isOpen = navLinks.classList.contains('mobile-open');
                console.log('Menu toggle clicked, isOpen:', isOpen);
                
                if (isOpen) {
                    navLinks.classList.remove('mobile-open');
                    mobileMenuToggle.classList.remove('active');
                    mobileMenuToggle.setAttribute('aria-expanded', 'false');
                    navLinks.style.display = 'none';
                } else {
                    navLinks.style.display = 'block';
                    // Force reflow
                    navLinks.offsetHeight;
                    navLinks.classList.add('mobile-open');
                    mobileMenuToggle.classList.add('active');
                    mobileMenuToggle.setAttribute('aria-expanded', 'true');
                }
            });
            
            // Đóng menu khi click bên ngoài
            document.addEventListener('click', function(e) {
                if (navLinks && mobileMenuToggle && 
                    !mobileMenuToggle.contains(e.target) && 
                    !navLinks.contains(e.target)) {
                    navLinks.classList.remove('mobile-open');
                    mobileMenuToggle.classList.remove('active');
                    mobileMenuToggle.setAttribute('aria-expanded', 'false');
                    if (window.innerWidth <= 767) {
                        navLinks.style.display = 'none';
                    }
                }
            });
            
            // Đóng menu khi click vào nav link
            if (navLinks) {
                navLinks.addEventListener('click', function(e) {
                    if (e.target.closest('.nav-link')) {
                        setTimeout(() => {
                            navLinks.classList.remove('mobile-open');
                            mobileMenuToggle.classList.remove('active');
                            mobileMenuToggle.setAttribute('aria-expanded', 'false');
                            if (window.innerWidth <= 767) {
                                navLinks.style.display = 'none';
                            }
                        }, 200);
                    }
                });
            }
        } else {
            console.warn('Mobile menu elements not found:', { mobileMenuToggle, navLinks });
        }
    })();

    // More menu toggle (mobile)
    (function() {
        const moreMenuBtn = document.getElementById('moreMenuBtn');
        const moreMenu = document.getElementById('moreMenu');
        
        if (moreMenuBtn && moreMenu) {
            moreMenuBtn.addEventListener('click', function(e) {
                e.stopPropagation();
                const isOpen = moreMenu.style.display !== 'none';
                moreMenu.style.display = isOpen ? 'none' : 'block';
            });
            
            // Đóng menu khi click bên ngoài
            document.addEventListener('click', function(e) {
                if (!moreMenuBtn.contains(e.target) && !moreMenu.contains(e.target)) {
                    moreMenu.style.display = 'none';
                }
            });
            
            // Đóng menu khi click vào item
            moreMenu.addEventListener('click', function(e) {
                if (e.target.closest('.more-menu-item')) {
                    setTimeout(() => {
                        moreMenu.style.display = 'none';
                    }, 200);
                }
            });
        }

        // Đồng bộ badges giữa desktop và mobile
        function syncBadges() {
            // Notification badge
            const desktopNotifBadge = document.getElementById('notificationBadge');
            const mobileNotifBadge = document.getElementById('mobileNotificationBadge');
            if (desktopNotifBadge && mobileNotifBadge) {
                const count = desktopNotifBadge.textContent || '0';
                mobileNotifBadge.textContent = count;
                mobileNotifBadge.style.display = count > 0 && desktopNotifBadge.style.display !== 'none' ? 'inline-flex' : 'none';
            }

            // Chat badge
            const desktopChatBadge = document.getElementById('chatUnreadBadge');
            const mobileChatBadge = document.getElementById('mobileChatBadge');
            if (desktopChatBadge && mobileChatBadge) {
                const count = desktopChatBadge.textContent || '0';
                mobileChatBadge.textContent = count;
                mobileChatBadge.style.display = count > 0 && desktopChatBadge.style.display !== 'none' ? 'inline-flex' : 'none';
            }

            // Cart badge
            const desktopCartBadge = document.querySelector('.cart-badge[data-cart-count]');
            const mobileCartBadge = document.getElementById('mobileCartBadge');
            if (desktopCartBadge && mobileCartBadge) {
                const count = desktopCartBadge.textContent || '0';
                mobileCartBadge.textContent = count;
                mobileCartBadge.style.display = count > 0 ? 'inline-flex' : 'none';
            }

            // More menu badge tổng hợp
            const moreMenuBadge = document.getElementById('moreMenuBadge');
            if (moreMenuBadge) {
                const notifCount = parseInt(desktopNotifBadge?.textContent || '0');
                const chatCount = parseInt(desktopChatBadge?.textContent || '0');
                const cartCount = parseInt(desktopCartBadge?.textContent || '0');
                const total = notifCount + chatCount + cartCount;
                if (total > 0) {
                    moreMenuBadge.textContent = total > 9 ? '9+' : total;
                    moreMenuBadge.style.display = 'inline-flex';
                } else {
                    moreMenuBadge.style.display = 'none';
                }
            }
        }

        // Sync badges khi load và mỗi 2 giây
        document.addEventListener('DOMContentLoaded', () => {
            syncBadges();
            setInterval(syncBadges, 2000);
        });

        // Sync khi badges thay đổi
        const observer = new MutationObserver(syncBadges);
        const badgeElements = [
            document.getElementById('notificationBadge'),
            document.getElementById('chatUnreadBadge'),
            document.querySelector('.cart-badge[data-cart-count]')
        ].filter(Boolean);
        badgeElements.forEach(el => observer.observe(el, { childList: true, attributes: true, attributeFilter: ['style'] }));
    })();

    // Mobile translate toggle
    (function() {
        const mobileTranslateBtn = document.getElementById('mobileTranslateToggleBtn');
        const desktopTranslateBtn = document.getElementById('translateToggleBtn');
        
        if (mobileTranslateBtn && desktopTranslateBtn) {
            mobileTranslateBtn.addEventListener('click', function() {
                desktopTranslateBtn.click();
            });
        }
    })();
</script>

