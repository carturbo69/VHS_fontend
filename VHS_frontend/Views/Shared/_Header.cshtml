@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var tk = HttpContextAccessor.HttpContext?.Session.GetString("JWToken");
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
    bool isLoggedIn = !string.IsNullOrEmpty(tk);
}

<header class="site-header">
    <div class="glass-bar">
        <div class="container-xl nav-row">

            <!-- Brand + logo -->
            <div class="brand">
                <img src="~/images/logo.png" alt="VHS Logo" class="brand-logo" />
                <a class="brand-text" asp-area="" asp-controller="Home" asp-action="Index">Viet Home Service</a>
            </div>

            <!-- Desktop nav -->
            <nav class="nav-links">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                <a asp-area="" asp-controller="Services" asp-action="Index" class="nav-link">Dịch vụ</a>
                <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">Thông tin</a>
                <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="Contact" class="nav-link">Liên hệ</a>
                <a asp-area="" asp-controller="ServiceShop" asp-action="Index" class="nav-link">Shop dịch vụ</a>
                @if (isLoggedIn)
                {
                    <!-- Nếu đã đăng nhập: cho phép đăng ký Provider -->
                    <a asp-area="Customer" asp-controller="RegisterProvider" asp-action="Register" class="nav-link">
                        Đăng ký Provider
                    </a>
                }
                else
                {
                    <!-- Nếu chưa đăng nhập: đưa đến trang Login -->
                    <a asp-area="" asp-controller="Account" asp-action="Login"
                       asp-route-returnUrl="@Url.Action("Register","RegisterProvider", new { area="Customer" })"
                       class="nav-link">
                        Đăng ký Provider
                    </a>
                }
            </nav>

            <!-- Actions -->
            <div class="nav-actions">

                @if (isLoggedIn)
                {
                    <!-- Notifications -->
                    <div class="notification-container">
                        <div class="notify-btn-wrapper">
                            <a asp-area="Customer" asp-controller="Notification" asp-action="Index" class="icon-btn notify-btn" aria-label="Thông báo">
                                <svg class="notify-icon" viewBox="0 0 24 24" aria-hidden="true">
                                    <path d="M12 2a7 7 0 00-7 7v4.5l-1.5 3h17l-1.5-3V9a7 7 0 00-7-7z" />
                                    <path d="M9 21h6a3 3 0 01-6 0z" />
                                </svg>
                                <span class="notify-badge" data-notify-count style="display: none;">0</span>
                            </a>
                            <!-- Dropdown sẵn trong HTML -->
                            <div class="notification-dropdown" id="notificationDropdown">
                                <div class="dropdown-header">
                                    <h3>Thông báo</h3>
                                    <button onclick="document.getElementById('notificationDropdown').style.display='none'" style="background:red;color:white;border:none;padding:5px;">X</button>
                                </div>
                                <div class="dropdown-content">
                                    <div class="empty-dropdown">
                                        <div class="empty-icon">
                                            <i class="icon-bell-off"></i>
                                        </div>
                                        <p>Đang tải thông báo...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Cart -->
                    <a asp-area="Customer" asp-controller="Cart" asp-action="Index"
                       class="icon-btn cart-btn" aria-label="Giỏ hàng">
                        <svg class="cart-icon" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M6 6h15l-1.5 9h-12z" />
                            <circle cx="9" cy="20" r="1.5" />
                            <circle cx="18" cy="20" r="1.5" />
                        </svg>
                        <span class="cart-badge" data-cart-count>0</span>
                    </a>

                    <!-- Theme toggle -->
                    <button type="button" class="icon-btn" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                        <span class="theme-icon"></span>
                    </button>

                    <!-- User dropdown -->
                    <div class="dropdown">
                        <button class="dropdown-toggle">👤 @username</button>
                        <div class="dropdown-menu">
                            <a asp-area="" asp-controller="Account" asp-action="Profile" class="dropdown-item">Thông tin cá nhân</a>
                            <a asp-area="" asp-controller="Account" asp-action="History" class="dropdown-item">Lịch sử dịch vụ</a>
                            <a asp-area="" asp-controller="Account" asp-action="Logout" class="dropdown-item">Đăng xuất</a>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Nếu chưa đăng nhập -->
                    <a asp-area="Customer" asp-controller="Cart" asp-action="Index"
                       class="icon-btn cart-btn" aria-label="Giỏ hàng">
                        <svg class="cart-icon" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M6 6h15l-1.5 9h-12z" />
                            <circle cx="9" cy="20" r="1.5" />
                            <circle cx="18" cy="20" r="1.5" />
                        </svg>
                        <span class="cart-badge" data-cart-count>0</span>
                    </a>

                    <!-- Theme -->
                    <button type="button" class="icon-btn" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                        <span class="theme-icon"></span>
                    </button>

                    <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-ghost btn-sm">Đăng nhập</a>
                    <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm">Đăng ký</a>
                }
            </div>
        </div>
    </div>
</header>
