@{
    ViewData["Title"] = "Trang chủ";
}

<main id="main" role="main" aria-labelledby="home-title">

    <!-- ===== HERO (BoldHero) ===== -->
    <section class="section-hero hero-x" aria-label="Giới thiệu nền tảng">
        <div class="hero-bg" aria-hidden="true">
            <div class="hero-blob blob-a"></div>
            <div class="hero-blob blob-b"></div>
            <div class="hero-grid"></div>
        </div>

        <div class="container hero-inner">
            <span class="hero-badge">Minh bạch • Thuận tiện • An toàn</span>

            <h1 id="home-title" class="hero-title">
                Nền tảng dịch vụ gia đình <span class="grad-text">chuyên nghiệp</span>
            </h1>

            <p class="hero-sub">
                Tập trung 3 dịch vụ cốt lõi: <strong>Vệ sinh</strong> · <strong>Nội trợ</strong> · <strong>Sự kiện nhỏ tại nhà</strong>.
                Đặt lịch & giám sát dễ dàng, giá rõ ràng, chất lượng bảo chứng.
            </p>

            <div class="hero-actions">
                <a asp-controller="Order" asp-action="Create" class="btn btn-primary btn-lg" aria-label="Đặt lịch ngay">Đặt lịch ngay</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-ghost btn-lg" aria-label="Tư vấn miễn phí">Tư vấn miễn phí</a>
            </div>

            <div class="hero-stats glass" role="list" aria-label="Chỉ số tin cậy">
                <div class="kpi" role="listitem"><div class="kpi-num">1000+</div><div class="kpi-label">Khách hàng hài lòng</div></div>
                <div class="kpi" role="listitem"><div class="kpi-num">50+</div><div class="kpi-label">Đối tác chuyên nghiệp</div></div>
                <div class="kpi" role="listitem"><div class="kpi-num">4.9/5</div><div class="kpi-label">Điểm đánh giá</div></div>
            </div>

            <ul class="usp-row" role="list" aria-label="Ưu điểm nổi bật">
                <li class="usp" role="listitem"><span class="dot"></span>Giá & phạm vi minh bạch</li>
                <li class="usp" role="listitem"><span class="dot"></span>Theo dõi tiến độ — ảnh trước/sau</li>
                <li class="usp" role="listitem"><span class="dot"></span>Bảo hành chất lượng 72 giờ</li>
            </ul>

            <a href="#split" class="scroll-hint" aria-label="Cuộn xuống xem thêm"><span class="dot" aria-hidden="true"></span></a>
        </div>

        <div class="hero-divider" aria-hidden="true"></div>
    </section>

    <!-- ===== SPLIT VISUAL (SplitVisual) ===== -->
    <section id="split" class="section split-x" aria-label="Tổng quan tính năng">
        <div class="container-xl split-in">
            <div class="split-left">
                <h2 class="split-title">Đơn giản <span class="text-soft">hơn bao giờ</span></h2>
                <p class="split-sub">Không cần gọi điện, không cần chờ đợi. Chỉ vài thao tác là mọi thứ đã được sắp xếp.</p>

                <ul class="split-list">
                    <li>
                        <span class="split-ic" aria-hidden="true">🕒</span>
                        <div><div class="split-li-t">Đặt lịch 24/7</div><div class="split-li-s">Bất cứ lúc nào bạn cần</div></div>
                    </li>
                    <li>
                        <span class="split-ic" aria-hidden="true">🛡️</span>
                        <div><div class="split-li-t">Bảo đảm chất lượng</div><div class="split-li-s">Cam kết hoàn tiền 100%</div></div>
                    </li>
                    <li>
                        <span class="split-ic" aria-hidden="true">⭐</span>
                        <div><div class="split-li-t">Chuyên gia hàng đầu</div><div class="split-li-s">Được kiểm duyệt kỹ lưỡng</div></div>
                    </li>
                </ul>
            </div>

            <div class="split-right card">
                <div class="badge-soft">Bắt đầu ngay</div>
                <h3 class="split-cta-title">Sẵn sàng cho không gian hoàn hảo?</h3>
                <p class="split-cta-sub">Hàng nghìn khách hàng đã tin tưởng. Giờ đến lượt bạn trải nghiệm sự khác biệt.</p>
                <a asp-controller="Order" asp-action="Create" class="btn btn-primary btn-lg w-100">Đặt lịch miễn phí</a>
                <p class="split-cta-note">Không cần thẻ tín dụng • Hủy bất cứ lúc nào</p>
            </div>
        </div>
    </section>

    <!-- ===== INTERACTIVE SHOWCASE (InteractiveShowcase) ===== -->
    <section class="section ishow-x" aria-label="Các ưu điểm nổi bật">
        <div class="container-xl">
            <div class="section-head section-head--emph">
                <h2 class="section-title section-title--xl">Tại sao chọn <span class="text-primary">chúng tôi?</span></h2>
                <p class="section-sub section-sub--lg">Trải nghiệm dịch vụ khác biệt với những giá trị vượt trội</p>
            </div>

            <div class="ishow-grid">
                <article class="ishow-card" onmouseenter="this.classList.add('is-active')" onmouseleave="this.classList.remove('is-active')">
                    <div class="ishow-grad" aria-hidden="true"></div>
                    <div class="ishow-ic">✨</div>
                    <h3 class="ishow-title">Chất lượng đảm bảo</h3>
                    <p class="ishow-desc">Đội ngũ chuyên nghiệp được đào tạo bài bản</p>
                    <span class="ishow-dot"></span>
                </article>

                <article class="ishow-card">
                    <div class="ishow-grad is-blue" aria-hidden="true"></div>
                    <div class="ishow-ic">⚡</div>
                    <h3 class="ishow-title">Nhanh chóng</h3>
                    <p class="ishow-desc">Phản hồi trong vòng 5 phút</p>
                    <span class="ishow-dot"></span>
                </article>

                <article class="ishow-card">
                    <div class="ishow-grad is-purple" aria-hidden="true"></div>
                    <div class="ishow-ic">🛡️</div>
                    <h3 class="ishow-title">An toàn</h3>
                    <p class="ishow-desc">Bảo hiểm toàn diện cho mọi dịch vụ</p>
                    <span class="ishow-dot"></span>
                </article>

                <article class="ishow-card">
                    <div class="ishow-grad is-orange" aria-hidden="true"></div>
                    <div class="ishow-ic">⏱️</div>
                    <h3 class="ishow-title">Linh hoạt</h3>
                    <p class="ishow-desc">Đặt lịch theo nhu cầu của bạn</p>
                    <span class="ishow-dot"></span>
                </article>
            </div>
        </div>
    </section>

    <!-- ===== BENTO GRID (BentoGrid) ===== -->
    <section class="section bento-x" aria-label="Tính năng chính">
        <div class="container-xl">
            <div class="section-head">
                <h2 class="section-title section-title--xl">Mọi thứ bạn cần <span class="text-primary">trong một nền tảng</span></h2>
            </div>

            <div class="bento-grid">
                <article class="bento bento-lg bento-primary">
                    <div class="bento-blob" aria-hidden="true"></div>
                    <div class="bento-ic">🗓️</div>
                    <h3 class="bento-title">Đặt lịch thông minh</h3>
                    <p class="bento-desc">AI gợi ý thời gian phù hợp nhất dựa trên lịch trình & thói quen của bạn.</p>
                </article>

                <article class="bento">
                    <div class="bento-ic bento-ic--small">💬</div>
                    <h3 class="bento-title">Chat trực tiếp</h3>
                    <p class="bento-desc">Kết nối ngay với chuyên gia qua tin nhắn thời gian thực.</p>
                </article>

                <article class="bento">
                    <div class="bento-ic bento-ic--small">⚡</div>
                    <h3 class="bento-title">Xác nhận tức thì</h3>
                    <p class="bento-desc">Nhận phản hồi trong vòng 2 phút.</p>
                </article>

                <article class="bento bento-lg">
                    <div class="bento-blob-lite" aria-hidden="true"></div>
                    <div class="bento-ic">💳</div>
                    <h3 class="bento-title">Thanh toán an toàn</h3>
                    <p class="bento-desc">Hỗ trợ thẻ, ví điện tử, chuyển khoản; mã hóa TLS end-to-end & xác thực giao dịch.</p>
                </article>
            </div>
        </div>
    </section>

    <!-- ===== EXPERIENCE (ExperienceSection) ===== -->
    <section class="section section-muted" aria-label="Trải nghiệm dịch vụ">
        <div class="container-xl">
            <div class="section-head">
                <h2 class="section-title section-title--xl">Trải nghiệm <span class="text-primary">khác biệt</span></h2>
                <p class="section-sub">An tâm – chất lượng – tối ưu chi phí</p>
            </div>

            <div class="benefit-grid">
                <div class="benefit"><span class="benefit-bullet">✓</span>Chuyên gia được đào tạo bài bản</div>
                <div class="benefit"><span class="benefit-bullet">✓</span>Linh hoạt thời gian theo nhu cầu</div>
                <div class="benefit"><span class="benefit-bullet">✓</span>Giá cả minh bạch, không phí ẩn</div>
                <div class="benefit"><span class="benefit-bullet">✓</span>Bảo hiểm toàn diện cho mọi dịch vụ</div>
                <div class="benefit"><span class="benefit-bullet">✓</span>Đánh giá và phản hồi thực tế</div>
                <div class="benefit"><span class="benefit-bullet">✓</span>Thanh toán an toàn và tiện lợi</div>
            </div>
        </div>
    </section>

    <!-- ===== TRUST (TrustSection) ===== -->
    <section class="section trustcards-x" aria-label="Niềm tin khách hàng">
        <div class="container-xl">
            <div class="trust-grid">
                <div class="trust-card">
                    <div class="trust-ic">⭐</div>
                    <div class="trust-t">4.9/5.0</div>
                    <div class="trust-s">Đánh giá trung bình</div>
                </div>
                <div class="trust-card">
                    <div class="trust-ic">🛡️</div>
                    <div class="trust-t">Bảo hiểm</div>
                    <div class="trust-s">Toàn diện 100%</div>
                </div>
                <div class="trust-card">
                    <div class="trust-ic">🎖️</div>
                    <div class="trust-t">Chứng nhận</div>
                    <div class="trust-s">Chuyên nghiệp</div>
                </div>
            </div>

            <div class="trust-cta">
                <div class="trust-cta-bg" aria-hidden="true"></div>
                <h3 class="trust-cta-title">Sẵn sàng bắt đầu?</h3>
                <p class="trust-cta-sub">Hàng nghìn khách hàng đã tin tưởng. Đến lượt bạn trải nghiệm sự khác biệt.</p>
                <a asp-controller="Order" asp-action="Create" class="btn btn-primary btn-lg">Đặt lịch miễn phí ngay</a>
            </div>
        </div>
    </section>

    <!-- ===== FLOATING CTA (FloatingCTA) ===== -->
    <section class="section fcta-x" aria-label="Kêu gọi hành động">
        <div class="fcta-bg" aria-hidden="true"></div>
        <div class="container fcta-in">
            <div class="fcta-badge"><span class="dot"></span> Đặt lịch nhanh chóng & dễ dàng</div>
            <h2 class="fcta-title">Sẵn sàng trải nghiệm?</h2>
            <p class="fcta-sub">Đặt lịch hôm nay để cảm nhận dịch vụ chuyên nghiệp, đáng tin cậy.</p>

            <div class="fcta-actions">
                <a asp-controller="Order" asp-action="Create" class="btn btn-primary btn-lg">Đặt lịch ngay</a>
                <a asp-controller="Order" asp-action="Support" class="btn btn-ghost btn-lg">Gọi ngay: 1900 xxxx</a>
            </div>

            <div class="fcta-bullets">
                <span>Thanh toán trước bảo đảm</span>
                <span>Cam kết chất lượng</span>
                <span>Đúng giờ, chuyên nghiệp</span>
            </div>
        </div>
    </section>

</main>
