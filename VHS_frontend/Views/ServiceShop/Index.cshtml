@model VHS_frontend.Models.ServiceShop.ServiceShopViewModel
@{
    ViewData["Title"] = "Shop Dịch Vụ Vệ Sinh";
}

<link rel="stylesheet" href="~/css/service-shop.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="service-shop-container">
    <!-- Shop Profile Section -->
    <div class="shop-profile-section">
        <div class="shop-info">
            <div class="shop-logo">
                <img src="@Model.ShopInfo.Logo" alt="Shop Logo" class="logo-img">
                <div class="favorite-btn">
                    <i class="fas fa-heart"></i>
                    <span>Yêu Thích</span>
                </div>
            </div>
            <div class="shop-details">
                <h2 class="shop-name">@Model.ShopInfo.Name</h2>
                <p class="shop-status">
                    <span class="status-dot @(Model.ShopInfo.Status == "Online" ? "online" : "offline")"></span>
                    @Model.ShopInfo.Status @Model.ShopInfo.LastOnline
                </p>
                <div class="shop-actions">
                    <button class="btn-follow @(Model.ShopInfo.IsFollowed ? "followed" : "")">
                        <i class="fas fa-plus"></i> @(Model.ShopInfo.IsFollowed ? "Đang Theo" : "Theo Dõi")
                    </button>
                    <button class="btn-chat">
                        <i class="fas fa-comments"></i> Chat
                    </button>
                </div>
            </div>
        </div>
        <div class="shop-stats">
            <div class="stat-item">
                <span class="stat-label">Dịch Vụ:</span>
                <span class="stat-value">@Model.ShopInfo.TotalServices</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Đang Theo:</span>
                <span class="stat-value">@Model.ShopInfo.Following</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Tỉ Lệ Phản Hồi Chat:</span>
                <span class="stat-value">@Model.ShopInfo.ResponseRate% (Trong Vài Giờ)</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Người Theo Dõi:</span>
                <span class="stat-value">@Model.ShopInfo.Followers.ToString("N0")</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Đánh Giá:</span>
                <span class="stat-value">@Model.ShopInfo.Rating (@Model.ShopInfo.TotalRatings.ToString("N0") Đánh Giá)</span>
            </div>
            <div class="stat-item">
                <span class="stat-label">Tham Gia:</span>
                <span class="stat-value">@Model.ShopInfo.JoinDate</span>
            </div>
        </div>
    </div>

    <!-- Shop Navigation Tabs -->
    <div class="shop-nav-tabs">
        <div class="nav-tabs">
            <a href="#" class="nav-tab active">Dạo</a>
            <a href="#" class="nav-tab">Dịch Vụ</a>
            <a href="#" class="nav-tab">Vệ Sinh Máy Tính</a>
            <a href="#" class="nav-tab">Vệ Sinh Laptop</a>
            <a href="#" class="nav-tab">Vệ Sinh Máy Chủ</a>
            <a href="#" class="nav-tab">Vệ Sinh Thiết Bị Mạng</a>
            <a href="#" class="nav-tab">Bảo Trì Hệ Thống</a>
            <a href="#" class="nav-tab">Thêm <i class="fas fa-chevron-down"></i></a>
        </div>
    </div>

    <!-- Bestselling Services Section -->
    <div class="bestselling-section">
        <div class="section-header">
            <h3 class="section-title">DỊCH VỤ BÁN CHẠY</h3>
            <a href="#" class="view-all-link">Xem Tất Cả ></a>
        </div>
        <div class="bestselling-carousel">
            @for (int i = 0; i < Model.BestsellingServices.Count; i++)
            {
                var service = Model.BestsellingServices[i];
                <div class="bestselling-item">
                    <div class="rank-badge">@(i + 1)</div>
                    <div class="shop-logo-small">
                        <img src="@Model.ShopInfo.Logo" alt="Shop Logo">
                    </div>
                    <div class="product-tag">@service.Category</div>
                    <div class="product-image">
                        <img src="@service.Image" alt="@service.Name">
                    </div>
                    <div class="product-info">
                        <div class="favorite-tag">Yêu thích</div>
                        <h4 class="product-name">@service.Name</h4>
                        <p class="product-description">@service.Description</p>
                        <div class="product-price">@service.Price.ToString("N0")₫</div>
                        <div class="commission-tag">HOA HỒNG XTRA</div>
                        <div class="product-rating">
                            <span class="rating">@service.Rating</span>
                            <span class="sales">Đã bán @service.SalesCount</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Shop Categories Section -->
    <div class="shop-categories-section">
        <div class="section-header">
            <h3 class="section-title">DANH MỤC CỦA SHOP</h3>
            <a href="#" class="view-all-link">Xem Tất Cả ></a>
        </div>
        <div class="categories-carousel">
            @foreach (var category in Model.ShopCategories)
            {
                <div class="category-item">
                    <div class="category-icon">
                        <img src="@category.Icon" alt="@category.Name">
                    </div>
                    <span class="category-name">@category.Name</span>
                </div>
            }
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Left Sidebar -->
        <div class="left-sidebar">
            <div class="categories-sidebar">
                <h4 class="sidebar-title">Danh Mục</h4>
                <div class="category-list">
                    <div class="category-group">
                        <div class="category-header">
                            <span>• Dịch Vụ</span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="category-items">
                            @foreach (var category in Model.AllCategories)
                            {
                                <a href="#" class="category-link" data-category-id="@category.Id">
                                    @category.Name
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Product Area -->
        <div class="main-product-area">
            <!-- Sort and Pagination Bar -->
            <div class="sort-pagination-bar">
                <div class="sort-options">
                    <span class="sort-label">Sắp xếp theo:</span>
                    <a href="#" class="sort-option @(Model.SortBy == "popular" ? "active" : "")" data-sort="popular">Phổ Biến</a>
                    <a href="#" class="sort-option @(Model.SortBy == "newest" ? "active" : "")" data-sort="newest">Mới Nhất</a>
                    <a href="#" class="sort-option @(Model.SortBy == "bestselling" ? "active" : "")" data-sort="bestselling">Bán Chạy</a>
                    <a href="#" class="sort-option @(Model.SortBy == "price" ? "active" : "")" data-sort="price">Giá <i class="fas fa-chevron-down"></i></a>
                </div>
                <div class="pagination-info">
                    <span>@Model.CurrentPage/@Model.TotalPages</span>
                    <button class="page-btn prev-btn"><i class="fas fa-chevron-left"></i></button>
                    <button class="page-btn next-btn"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="product-grid">
                @foreach (var service in Model.Services)
                {
                    <div class="product-card">
                        <div class="shop-logo-small">
                            <img src="@Model.ShopInfo.Logo" alt="Shop Logo">
                        </div>
                        <div class="product-tag">@service.Category</div>
                        <div class="product-image">
                            <img src="@service.Image" alt="@service.Name">
                        </div>
                        <div class="favorite-tag">Yêu thích</div>
                        <div class="product-info">
                            <h4 class="product-name">@service.Name</h4>
                            <p class="product-description">@service.Description</p>
                            <div class="product-price">@service.Price.ToString("N0")₫</div>
                            <div class="product-rating">
                                <span class="rating">@service.Rating</span>
                                <span class="sales">Đã bán @service.SalesCount</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle category filtering
        document.querySelectorAll('.category-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const categoryId = this.dataset.categoryId;
                // Implement category filtering logic
                console.log('Filter by category:', categoryId);
            });
        });

        // Handle sorting
        document.querySelectorAll('.sort-option').forEach(option => {
            option.addEventListener('click', function(e) {
                e.preventDefault();
                const sortBy = this.dataset.sort;
                // Implement sorting logic
                console.log('Sort by:', sortBy);
            });
        });

        // Handle pagination
        document.querySelectorAll('.page-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Implement pagination logic
                console.log('Page navigation');
            });
        });
    </script>
}
