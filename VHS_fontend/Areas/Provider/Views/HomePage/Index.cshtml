@{
    ViewData["Title"] = "Provider Dashboard";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Tổng quan</h2>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 text-center p-3">
            <i class="bi bi-people text-primary" style="font-size:2rem;"></i>
            <h5 class="mt-2">Staff</h5>
            <p class="text-muted">3 nhân viên</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 text-center p-3">
            <i class="bi bi-tools text-success" style="font-size:2rem;"></i>
            <h5 class="mt-2">Services</h5>
            <p class="text-muted">5 dịch vụ</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 text-center p-3">
            <i class="bi bi-bag-check text-warning" style="font-size:2rem;"></i>
            <h5 class="mt-2">Orders</h5>
            <p class="text-muted">12 đơn hàng đang xử lý</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 text-center p-3">
            <i class="bi bi-bar-chart text-danger" style="font-size:2rem;"></i>
            <h5 class="mt-2">Revenue</h5>
            <p class="text-muted">15,000,000 VND</p>
        </div>
    </div>
</div>

<!-- Notifications -->
<div class="mt-5">
    <h4>Thông báo mới</h4>
    <ul class="list-group">
        <li class="list-group-item">Đơn #1023 đã được xác nhận</li>
        <li class="list-group-item">Nhân viên A vừa check-in tại đơn #1021</li>
        <li class="list-group-item">Khách hàng B vừa đánh giá 5⭐ cho dịch vụ dọn dẹp</li>
    </ul>
</div>
