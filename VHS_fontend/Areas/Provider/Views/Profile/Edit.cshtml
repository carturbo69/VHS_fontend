@model VHS_frontend.Areas.Provider.Models.ProviderProfileUpdateViewModel
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Chỉnh sửa hồ sơ</h2>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Tên nhà cung cấp</label>
        <input name="ProviderName" value="@Model.ProviderName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Số điện thoại</label>
        <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea name="Description" class="form-control">@Model.Description</textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh đại diện</label>
        <input type="file" name="ImageFile" class="form-control" accept="image/*" />

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="mt-2">
                <img src="@Model.Image" class="img-thumbnail" style="max-width:150px;" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    <a asp-area="Provider" asp-controller="Profile" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại hồ sơ
    </a>
</form>
