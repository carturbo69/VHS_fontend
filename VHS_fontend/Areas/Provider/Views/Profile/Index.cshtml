@model VHS_frontend.Areas.Provider.Models.ProviderProfileReadViewModel
@{
    ViewData["Title"] = "Provider Profile";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";

    // ⚠️ Nhập đúng port Backend API của bạn ở đây (ví dụ 5102 hoặc 5154)
    var backendBaseUrl = "http://localhost:5154";

    // Nếu Model.Images có giá trị => gắn domain BE vào trước đường dẫn
    var imageUrl = string.IsNullOrEmpty(Model.Images)
        ? "/images/default-avatar.png"
        : $"{backendBaseUrl}{Model.Images}";
}

<h2 class="fw-bold mb-4">Hồ sơ Provider</h2>

<div class="card shadow-sm p-4">
    <div class="row align-items-center">
        <!-- Cột bên trái: Avatar + Tên + Trạng thái -->
        <div class="col-md-3 text-center">
            <img src="@imageUrl"
                 alt="Provider Avatar"
                 class="img-fluid rounded-circle border mb-3"
                 style="max-width:150px; height:150px; object-fit:cover;" />

            <h5 class="fw-bold mt-2">@Model.ProviderName</h5>
            <span class="badge bg-success">@Model.Status</span>
        </div>

        <!-- Cột bên phải: Thông tin chi tiết -->
        <div class="col-md-9">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Account</dt>
                <dd class="col-sm-9">@Model.AccountName</dd>

                <dt class="col-sm-3 fw-semibold">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-semibold">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <div class="mt-3">
                <a href="/Provider/Profile/Edit" class="btn btn-primary btn-sm">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div>
