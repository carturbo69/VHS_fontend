@model VHS_frontend.Areas.Provider.Models.ProviderProfileReadViewModel
@{
    ViewData["Title"] = "Provider Profile";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Hồ sơ Provider</h2>

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-3 text-center">
            <img src="@(!string.IsNullOrEmpty(Model.Images) ? Model.Images : "/images/default-avatar.png")"
                 class="img-fluid rounded-circle border mb-2"
                 style="max-width:150px;" />
            <h5>@Model.ProviderName</h5>
            <span class="badge bg-success">@Model.Status</span>
        </div>
        <div class="col-md-9">
            <dl class="row">
                <dt class="col-sm-3">Account</dt>
                <dd class="col-sm-9">@Model.AccountName</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>
                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
            <a href="/Provider/Profile/Edit" class="btn btn-primary btn-sm">Chỉnh sửa</a>
        </div>
    </div>
</div>
