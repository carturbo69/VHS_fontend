@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Provider Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="Provider" asp-controller="HomePage" asp-action="Index">
                Provider Dashboard
            </a>
            <div class="d-flex">
                <span class="text-white me-3"><i class="bi bi-person-circle"></i> @Context.Session.GetString("Username")</span>
                <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light min-vh-100 p-3 border-end">
                <h6 class="text-uppercase text-muted">Menu</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Profile" asp-action="Index">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Staff" asp-action="Index">
                            <i class="bi bi-people"></i> Manage Staff
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Service" asp-action="Index">
                            <i class="bi bi-tools"></i> Manage Services
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Orders" asp-action="Index">
                            <i class="bi bi-bag-check"></i> Manage Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Schedule" asp-action="Index">
                            <i class="bi bi-calendar-check"></i> Schedule
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Reports" asp-action="Index">
                            <i class="bi bi-bar-chart"></i> Reports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Chat" asp-action="Index">
                            <i class="bi bi-chat"></i> Chat
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Provider" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell"></i> Notifications
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
