@model VHS_frontend.Areas.Provider.Models.ServiceViewModel
@{
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thêm Dịch vụ";
}

<h2 class="fw-bold mb-4">Thêm Dịch vụ mới</h2>

<form asp-action="Create"
      asp-controller="Service"
      asp-area="Provider"
      method="post"
      enctype="multipart/form-data"
      class="form-service">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Tên Dịch vụ</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="row">
        <div class="col">
            <label class="form-label">Giá (VNĐ)</label>
            <input asp-for="Price" class="form-control" type="number" step="1000" required />
        </div>
        <div class="col">
            <label class="form-label">Đơn vị</label>
            <select asp-for="UnitType" class="form-select">
                <option value="Hour">Giờ</option>
                <option value="Day">Ngày</option>
                <option value="Unit">Lần</option>
            </select>
        </div>
        <div class="col">
            <label class="form-label">Thời lượng (BaseUnit)</label>
            <input asp-for="BaseUnit" class="form-control" type="number" min="1" />
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label">Hình ảnh</label>
        <input type="file" name="Images" class="form-control" accept="image/*" />
    </div>

    <!-- Category must be provided. Replace this with a populated dropdown when you have categories. -->
    <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />

    <div class="text-end">
        <button type="submit" class="btn btn-success px-4">
            <i class="bi bi-plus-circle"></i> Thêm dịch vụ
        </button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
