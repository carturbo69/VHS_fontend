@model IEnumerable<VHS_frontend.Areas.Provider.Models.ServiceViewModel>

@{
    ViewData["Title"] = "Quản lý dịch vụ";
    var apiRoot = (string)ViewBag.ApiRoot ?? "http://localhost:5154";
}

<h2 class="fw-bold mb-3">Quản lý dịch vụ</h2>

<div class="alert alert-info">
    <strong>Session Debug:</strong><br />
    @Html.Raw(ViewBag.DebugSession)
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="text-end mb-3">
    <a asp-action="Create" asp-controller="Service" asp-area="Provider" class="btn btn-primary shadow">
        <i class="bi bi-plus-circle"></i> Thêm dịch vụ
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center p-4">Hiện tại bạn chưa có dịch vụ nào.</div>
}
else
{
    <table class="table table-striped table-hover align-middle shadow-sm border">
        <thead class="table-primary text-center">
            <tr>
                <th>Ảnh</th>
                <th>Tên dịch vụ</th>
                <th>Mô tả</th>
                <th>Giá (VNĐ)</th>
                <th>Đơn vị</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @if (!string.IsNullOrEmpty(item.Images))
                        {
                            <img src="@(item.Images.StartsWith("http") ? item.Images : $"{apiRoot}{item.Images}")"
                                 class="rounded border" style="width:80px;height:80px;object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td class="fw-semibold text-start">@item.Title</td>
                    <td class="text-start">@item.Description</td>
                    <td>@item.Price.ToString("N0")</td>
                    <td>@item.UnitType</td>
                    <td>
                        <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-secondary")">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-warning me-1" title="Chỉnh sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-danger me-1"
                           onclick="return confirm('Bạn có chắc muốn xóa dịch vụ này không?')" title="Xóa">
                            <i class="bi bi-trash"></i>
                        </a>
                        <a asp-action="Unlock" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-success" title="Mở khóa">
                            <i class="bi bi-unlock"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
