@model VHS_frontend.Areas.Provider.Models.Staff.StaffCreateViewModel

@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2>Thêm nhân viên mới</h2>

<form asp-area="Provider" asp-controller="Staff" asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label>Tên nhân viên</label>
        <input asp-for="StaffName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mật khẩu</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>CMND / CCCD</label>
        <input asp-for="CitizenID" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Ảnh chân dung (tối đa 3 ảnh)</label>
        <input asp-for="FaceImages" type="file" class="form-control" multiple />
    </div>
    <div class="mb-3">
        <label>Ảnh CCCD (tối đa 2 ảnh)</label>
        <input asp-for="CitizenIDImages" type="file" class="form-control" multiple />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-area="Provider" asp-controller="Staff" asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
