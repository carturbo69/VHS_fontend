@model VHS_frontend.Areas.Provider.Models.Staff.StaffCreateViewModel

<h2>Thêm nhân viên mới</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Tên nhân viên</label>
        <input asp-for="StaffName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mật khẩu</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>CMND</label>
        <input asp-for="CitizenID" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Ảnh chân dung (URL)</label>
        <input asp-for="FaceImage" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
