@model IEnumerable<VHS_frontend.Areas.Provider.Models.Staff.StaffReadViewModel>
@{
    ViewData["Title"] = "Quản lý nhân viên";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold mb-4">Danh sách nhân viên</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Thêm nhân viên</a>

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <th>Tên nhân viên</th>
            <th>CMND</th>
            <th>Ngày tạo</th>
            <th>Ảnh chân dung</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.StaffName</td>
                <td>@s.CitizenID</td>
                <td>@s.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(s.FaceImage))
                    {
                        <img src="@s.FaceImage" width="60" class="rounded-circle border" />
                    }
                    else
                    {
                        <span class="text-muted">Không có</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.StaffId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@s.StaffId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
