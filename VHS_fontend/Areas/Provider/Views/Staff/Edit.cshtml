@model VHS_frontend.Areas.Provider.Models.Staff.StaffUpdateViewModel

@{
    ViewData["Title"] = "Cập nhật nhân viên";
    Layout = "~/Areas/Provider/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật nhân viên</h2>

<form asp-area="Provider" asp-controller="Staff" asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="StaffId" />

    <div class="mb-3">
        <label>Tên nhân viên</label>
        <input asp-for="StaffName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>CMND / CCCD</label>
        <input asp-for="CitizenID" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Ảnh chân dung mới</label>
        <input asp-for="FaceImages" type="file" class="form-control" multiple />
        @if (!string.IsNullOrEmpty(Model.FaceImage))
        {
            <p class="mt-2">Ảnh hiện tại:</p>
            <img src="@Model.FaceImage.Split(';')[0]" width="100" class="rounded border" />
        }
    </div>

    <div class="mb-3">
        <label>Ảnh CCCD mới</label>
        <input asp-for="CitizenIDImages" type="file" class="form-control" multiple />
        @if (!string.IsNullOrEmpty(Model.CitizenIDImage))
        {
            <p class="mt-2">Ảnh hiện tại:</p>
            <img src="@Model.CitizenIDImage.Split(';')[0]" width="100" class="rounded border" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-area="Provider" asp-controller="Staff" asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
