@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero full-screen -->
<section class="section-hero">
    <div class="hero-bg">
        <div class="hero-blob"></div>
        <div class="hero-grid"></div>
    </div>

    <div class="container hero-inner">
        <div class="hero-badge">Dịch vụ gia đình #1 Việt Nam</div>
        <h1 class="hero-title">
            Dịch vụ gia đình <span class="text-primary">chuyên nghiệp</span>
        </h1>
        <p class="hero-sub">
            Vệ sinh – sửa chữa – bảo trì nhà cửa với quy trình minh bạch, đội ngũ chuyên nghiệp và chi phí rõ ràng.
        </p>

         <div class="hero-actions"> 
           <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">Đăng nhập</a> 
          <a asp-controller="Account" asp-action="Register" class="btn btn-ghost btn-lg">Đăng ký</a> 
        </div> 

        <div class="hero-stats">
            <div class="kpi"><div class="kpi-num">1000+</div><div class="kpi-label">Khách hàng hài lòng</div></div>
            <div class="kpi"><div class="kpi-num">50+</div><div class="kpi-label">Thợ chuyên nghiệp</div></div>
            <div class="kpi"><div class="kpi-num">4.9/5</div><div class="kpi-label">Điểm đánh giá</div></div>
        </div>
    </div>
</section>

<!-- Services -->
<section id="services" class="section">
    <div class="container-xl">
        <div class="section-head section-head--emph">
            <h2 class="section-title section-title--xl">Dịch vụ của chúng tôi</h2>
            <p class="section-sub section-sub--lg">Đa dạng gói dịch vụ, linh hoạt theo nhu cầu và lịch của bạn.</p>
        </div>

        <div class="cards">
            <article class="card lift">
                <div class="card-icon icon-bg-primary"></div>
                <h3 class="card-title">Vệ sinh nhà cửa</h3>
                <p class="card-desc">Làm sạch tổng thể, chi tiết mọi ngóc ngách, theo giờ hoặc định kỳ.</p>
                <ul class="card-list">
                    <li>Vệ sinh theo giờ</li>
                    <li>Vệ sinh định kỳ</li>
                    <li>Vệ sinh sau xây dựng</li>
                </ul>
            </article>

            <article class="card lift">
                <div class="card-icon icon-bg-primary"></div>
                <h3 class="card-title">Sửa chữa điện nước</h3>
                <p class="card-desc">Xử lý sự cố điện, nước; lắp đặt, bảo trì máy lạnh bởi thợ có chứng chỉ.</p>
                <ul class="card-list">
                    <li>Sửa chữa điện</li>
                    <li>Sửa chữa nước</li>
                    <li>Bảo trì máy lạnh</li>
                </ul>
            </article>

            <article class="card lift">
                <div class="card-icon icon-bg-primary"></div>
                <h3 class="card-title">Bảo trì nhà cửa</h3>
                <p class="card-desc">Sơn sửa, cải tạo, khắc phục hư hỏng nhỏ đến nâng cấp tổng thể.</p>
                <ul class="card-list">
                    <li>Sơn nhà</li>
                    <li>Sửa chữa nội thất</li>
                    <li>Cải tạo không gian</li>
                </ul>
            </article>
        </div>
    </div>
</section>

<!-- Why Us -->
<section class="section section-muted">
    <div class="container-xl">
        <div class="section-head">
            <h2 class="section-title section-title--xl">Tại sao chọn chúng tôi?</h2>
        </div>

        <div class="features">
            <div class="feature">
                <div class="feature-icon icon-bg-accent"></div>
                <h3 class="feature-title">Chất lượng & minh bạch</h3>
                <p class="feature-desc">Quy trình chuẩn, ảnh trước–sau, báo giá rõ ràng, không phụ phí ẩn.</p>
            </div>
            <div class="feature">
                <div class="feature-icon icon-bg-accent"></div>
                <h3 class="feature-title">Lịch linh hoạt</h3>
                <p class="feature-desc">Khung giờ 7:00–17:00 (giai đoạn đầu), đặt lịch theo nhu cầu.</p>
            </div>
            <div class="feature">
                <div class="feature-icon icon-bg-accent"></div>
                <h3 className="feature-title">Đội ngũ chuyên nghiệp</h3>
                <p class="feature-desc">Hồ sơ xác thực, đào tạo bài bản, dịch vụ hậu mãi chu đáo.</p>
            </div>
        </div>
    </div>
</section>

<!-- About -->
<section id="about" class="section">
    <div class="container-xl narrow">
        <div class="about">
            <h2 class="section-title section-title--xl">Về Viet Home Service</h2>
            <p class="section-sub section-sub--lg">
                Hơn 10 năm kinh nghiệm trong lĩnh vực dịch vụ gia đình tại Việt Nam. Chúng tôi đặt tiêu chí an toàn – minh bạch – hiệu quả lên hàng đầu.
            </p>
            <div class="about-grid">
                <div class="about-item"><div class="about-kpi">30+</div><div class="about-label">Danh mục dịch vụ</div></div>
                <div class="about-item"><div class="about-kpi">10k+</div><div class="about-label">Giờ thi công</div></div>
                <div class="about-item"><div class="about-kpi">98%</div><div class="about-label">Tỉ lệ hài lòng</div></div>
            </div>
        </div>
    </div>
</section>
