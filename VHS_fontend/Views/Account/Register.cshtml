@model VHS_fontend.Models.Account.RegisterDTO
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<section class="auth-wrap">
    <div class="container-xl">
        <div class="auth-grid">
            <aside class="auth-side" aria-hidden="true">
                <div class="auth-side-inner">
                    <img src="~/images/vhs-logo.png" alt="VHS" class="auth-logo" />
                    <h2 class="auth-heading">Tạo tài khoản <span class="text-primary">VHS</span></h2>
                    <p class="auth-sub">Bắt đầu đặt dịch vụ & quản lý thông tin chỉ trong vài bước.</p>
                    <ul class="auth-usp">
                        <li>• Lưu địa chỉ & lịch sử dịch vụ</li>
                        <li>• Nhận ưu đãi thành viên</li>
                        <li>• Thanh toán nhanh gọn</li>
                    </ul>
                </div>
            </aside>

            <div class="auth-card" role="form">
                <h1 class="auth-title">Đăng ký</h1>
                <p class="auth-desc">
                    Đã có tài khoản?
                    <a asp-controller="Account" asp-action="Login" class="link">Đăng nhập</a>
                </p>

                <form asp-controller="Account" asp-action="Register" method="post" class="form" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="field">
                        <label class="label" for="Username">Tên đăng nhập</label>
                        <input asp-for="Username" class="input" placeholder="yourusername" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label class="label" for="Email">Email</label>
                        <input asp-for="Email" class="input" placeholder="you@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label class="label" for="Password">Mật khẩu</label>
                        <div class="input-pass">
                            <input asp-for="Password" class="input" placeholder="Tối thiểu 6 ký tự" />
                            <button type="button" class="pass-toggle" aria-label="Hiện/ẩn mật khẩu" onclick="togglePass('Password', this)">👁</button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label class="label" for="ConfirmPassword">Xác nhận mật khẩu</label>
                        <div class="input-pass">
                            <input asp-for="ConfirmPassword" class="input" placeholder="Nhập lại mật khẩu" />
                            <button type="button" class="pass-toggle" aria-label="Hiện/ẩn mật khẩu" onclick="togglePass('ConfirmPassword', this)">👁</button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <label class="check">
                            <input type="checkbox" required /> Tôi đồng ý với <a href="#" class="link">Điều khoản</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-full">Tạo tài khoản</button>

                    <div class="or"><span>hoặc</span></div>

                    <div class="socials">
                        <button type="button" class="btn btn-ghost w-full">Đăng ký bằng Google</button>
                        <button type="button" class="btn btn-ghost w-full">Đăng ký bằng Facebook</button>
                    </div>
                </form>

                <p class="terms">
                    Thông tin của bạn được bảo vệ theo
                    <a href="#" class="link">Chính sách bảo mật</a>.
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePass(id, btn){
          const i = document.getElementById(id);
          if(!i) return;
          i.type = i.type === "password" ? "text" : "password";
          btn.classList.toggle("on");
        }
    </script>
}
