@model VHS_fontend.Models.Account.LoginDTO
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";   // <-- giữ layout auth
}

<section class="auth-wrap">
    <div class="container-xl">
        <div class="auth-grid">
            <!-- Cột trái: USP / thương hiệu -->
            <aside class="auth-side" aria-hidden="true">
                <div class="auth-side-inner">
                    <img src="~/images/logo.png" alt="VHS" class="auth-logo" />
                    <h2 class="auth-heading">Chào mừng <span class="text-primary">trở lại</span> 👋</h2>
                    <p class="auth-sub">Đăng nhập để quản lý lịch hẹn, theo dõi đơn dịch vụ và lưu địa chỉ.</p>
                    <ul class="auth-usp">
                        <li>• Đặt lịch nhanh trong 30 giây</li>
                        <li>• Theo dõi tiến độ & đánh giá</li>
                        <li>• Hỗ trợ 1-1 khi cần</li>
                    </ul>
                </div>
            </aside>

            <!-- Cột phải: form -->
            <div class="auth-card" role="form">
                <h1 class="auth-title">Đăng nhập</h1>
                <p class="auth-desc">
                    Chưa có tài khoản?
                    <a asp-controller="Account" asp-action="Register" class="link">Đăng ký</a>
                </p>

                <form asp-controller="Account" asp-action="Login" method="post" class="form" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Hiện lỗi tổng hợp -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="field">
                        <label class="label" for="Username">Tên đăng nhập</label>
                        <input asp-for="Username" class="input" placeholder="yourusername" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label class="label" for="Password">Mật khẩu</label>
                        <div class="input-pass">
                            <input asp-for="Password" class="input" type="password" id="Password" placeholder="••••••••" />
                            <button type="button" class="pass-toggle" aria-label="Hiện/ẩn mật khẩu" onclick="togglePass('Password', this)">👁</button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <!-- đổi name để không map vào model -->
                        <label class="check"><input type="checkbox" name="remember" /> Ghi nhớ đăng nhập</label>
                        <a href="#" class="link">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-full">Đăng nhập</button>

                    <div class="or"><span>hoặc</span></div>

                    <div class="socials">
                        <button type="button" class="btn btn-ghost w-full">Tiếp tục với Google</button>
                        <button type="button" class="btn btn-ghost w-full">Tiếp tục với Facebook</button>
                    </div>
                </form>

                <p class="terms">
                    Khi tiếp tục, bạn đồng ý với
                    <a href="#" class="link">Điều khoản</a> & <a href="#" class="link">Chính sách</a>.
                </p>
            </div>
        </div>
    </div>
</section>

<script>
    function togglePass(id, btn) {
      const input = document.getElementById(id);
      if (!input) return;
      if (input.type === "password") {
        input.type = "text";
        btn.classList.add("on");
      } else {
        input.type = "password";
        btn.classList.remove("on");
      }
    }
</script>

