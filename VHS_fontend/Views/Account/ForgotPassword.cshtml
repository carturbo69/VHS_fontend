@model VHS_fontend.Models.Account.ForgotPasswordDTO
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-polish.css.css" />
}

<section class="auth-wrap">
    <div class="container-xl">
        <div class="auth-grid">
            <!-- Panel trái -->
            <aside class="auth-side" aria-hidden="true">
                <div class="auth-side-inner">
                    <img src="~/images/logo.png" alt="VHS" class="auth-logo" />
                    <h2 class="auth-heading">Quên mật khẩu? 🔒</h2>
                    <p class="auth-sub">
                        Đừng lo, chỉ cần nhập email đã đăng ký, chúng tôi sẽ gửi liên kết đặt lại mật khẩu ngay cho bạn.
                    </p>
                    <ul class="auth-usp">
                        <li>✔ Nhanh chóng, chỉ mất vài giây</li>
                        <li>✔ Hướng dẫn chi tiết qua email</li>
                        <li>✔ An toàn, bảo mật tuyệt đối</li>
                    </ul>
                </div>
            </aside>

            <!-- Panel phải -->
            <div class="auth-card" role="form">
                <h1 class="auth-title">Khôi phục mật khẩu</h1>
                <p class="auth-desc">Nhập email để nhận liên kết đặt lại mật khẩu.</p>

                <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="field">
                        <label class="label" for="Email">Email</label>
                        <input asp-for="Email" class="input" placeholder="you@email.com" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-full btn-glow">
                        Gửi liên kết đặt lại
                    </button>

                    <p class="terms" style="margin-top:12px">
                        Nhớ lại mật khẩu?
                        <a asp-controller="Account" asp-action="Login" class="link">Quay lại đăng nhập</a>.
                    </p>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
