<header class="site-header">
    <div class="glass-bar">
        <div class="container-xl nav-row">
            <!-- Brand + logo -->
            <div class="brand">
                <img src="~/images/logo.png" alt="VHS Logo" class="brand-logo" />
                <a class="brand-text" asp-controller="Home" asp-action="Index">Viet Home Service</a>
            </div>

            <!-- Desktop nav -->
            <nav class="nav-links" aria-label="Điều hướng chính">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                <a href="#services" class="nav-link">Dịch vụ</a>
                <a href="#about" class="nav-link">Thông tin</a>
                <a href="#Contact" class="nav-link">Liên hệ</a>
                <a href="#Register" class="nav-link">Đăng kí provider</a>
            </nav>

            <!-- Actions: theme + cart + auth -->
            <div class="nav-actions">
                <!-- Theme -->
                <button type="button" class="icon-btn" onclick="window.__toggleTheme()" aria-label="Đổi giao diện">
                    <span class="theme-icon"></span>
                </button>

                <!-- Cart -->
                <a href="/cart" class="icon-btn cart-btn" aria-label="Giỏ hàng">
                    <svg class="cart-icon" viewBox="0 0 24 24" aria-hidden="true">
                        <path d="M6 6h15l-1.5 9h-12z" />
                        <circle cx="9" cy="20" r="1.5" />
                        <circle cx="18" cy="20" r="1.5" />
                    </svg>
                    <span class="cart-badge" data-cart-count>0</span>
                </a>

                @if (Context.Session.GetString("JWToken") is { } tk && !string.IsNullOrEmpty(tk))
                {
                    <span style="font-size:.9rem;opacity:.7">
                        Xin chào, @Context.Session.GetString("Username") !!!
                    </span>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-ghost btn-sm">Đăng xuất</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-ghost btn-sm">Đăng nhập</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm">Đăng ký</a>
                }


            </div>
        </div>
    </div>
</header>
